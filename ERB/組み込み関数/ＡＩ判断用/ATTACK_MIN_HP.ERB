;-----------------------------------------------------------
;최저HPターゲッティング関数　@ATTACK_MIN_HP, ARG,ARG:1
;ARGのターゲットを아군のうちHPがもっとも少ないキャラにする
;ARG:1が真の場合、적キャラの中から探す。つまり회복用
;-----------------------------------------------------------
@ATTACK_MIN_HP, ARG, ARG:1
LOCAL:1 = -1
LOCAL:2 = -1
LOCAL:3 = ARG:1 ? 7 # 1
LOCAL:4 = ARG:1 ? 17 # 7
FOR LOCAL, LOCAL:3, LOCAL:4
	IF POS(LOCAL) >= 0 && GET_STATE(CFLAG:(POS(LOCAL)):ステート) != "DYING"
		IF LOCAL:1 == -1
			LOCAL:1 = BASE:(POS(LOCAL)):ＨＰ
			LOCAL:2 = LOCAL
		ENDIF
		IF BASE:(POS(LOCAL)):ＨＰ <= LOCAL:1
			 LOCAL:1 = BASE:(POS(LOCAL)):ＨＰ
			 LOCAL:2 = LOCAL
		ENDIF
	ENDIF
NEXT
CFLAG:ARG:ターゲット = LOCAL:2