
;-------------------------------------------------
;	同一の이벤트번호や의뢰번호中で進行した際
;   MENU화면で次のタイトルが出る様、
;   それぞれの등록フラグを리셋する
;	それぞれのフラグがONの場合、クリアしてOFFに변경
;-------------------------------------------------
;던전출현のフラグを리셋
;ARG＝번호、ARG:1＝0：던전、1：闘技場、2：이벤트、3：의뢰
@FLAG_RESET,ARG,ARG:1
#DIM DYNAMIC C_NO
#DIM DYNAMIC B_NO
B_NO = ARG
C_NO = ARG:1
IF C_NO == 0
	IF B_NO <= 63
		SIF GETBIT(FLAG:던전출현1,B_NO)
			CLEARBIT  FLAG:던전출현1,B_NO
	ELSE
		SIF GETBIT(FLAG:던전출현2,B_NO - 64)
			CLEARBIT  FLAG:던전출현2,B_NO - 64
	ENDIF
;-------------------------------------------------
;투기장출현のフラグを리셋

ELSEIF C_NO == 1
	IF B_NO <= 63
		SIF GETBIT(FLAG:투기장출현1,B_NO)
			CLEARBIT  FLAG:투기장출현1,B_NO
	ELSE
		SIF GETBIT(FLAG:투기장출현2,B_NO - 64)
			CLEARBIT  FLAG:투기장출현2,B_NO - 64
	ENDIF


;-------------------------------------------------
;이벤트출현のフラグを리셋
ELSEIF C_NO == 2
	IF B_NO <= 63
		SIF GETBIT(FLAG:이벤트출현1,B_NO)
			CLEARBIT FLAG:이벤트출현1, B_NO
	ELSE
		SIF GETBIT(FLAG:이벤트출현2,B_NO - 64)
			CLEARBIT FLAG:이벤트출현2, B_NO - 64
	ENDIF

;-------------------------------------------------

;의뢰출현のフラグを리셋
ELSEIF C_NO == 3
	IF B_NO <= 63
		SIF GETBIT(FLAG:의뢰출현1,B_NO)
			CLEARBIT  FLAG:의뢰출현1,B_NO
	ELSE
		SIF GETBIT(FLAG:의뢰출현2,B_NO - 64)
			CLEARBIT  FLAG:의뢰출현2,B_NO - 64
	ENDIF
ENDIF
