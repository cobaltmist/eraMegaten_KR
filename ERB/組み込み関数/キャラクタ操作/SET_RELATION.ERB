@SET_RELATION, ARG
FOR LOCAL, GETNUM(CFLAG, "캐릭터상성치1"), GETNUM(CFLAG, "상성치20") + 1, 2
	IF (NO:ARG == 3501 || NO:ARG == 3502) && (CFLAG:ARG:딸의친부모캐릭터번호딸 >= 0 || CFLAG:ARG:딸의부친캐릭터번호딸 >= 0)
		IF CFLAG:ARG:딸의친부모캐릭터번호딸 >= 0
			CFLAG:ARG:LOCAL = CSVCFLAG((CFLAG:ARG:딸의친부모캐릭터번호딸), LOCAL, 0)
		ELSE
			CFLAG:ARG:LOCAL = CSVCFLAG((CFLAG:ARG:딸의부친캐릭터번호딸), LOCAL, 0)
		ENDIF
	ELSE
		CFLAG:ARG:LOCAL = CSVCFLAG(NO:ARG, LOCAL, 0)
	ENDIF
	IF CFLAG:ARG:LOCAL == 0
		CFLAG:ARG:LOCAL = 100
		CFLAG:ARG:(LOCAL - 1) = -1
	ENDIF
NEXT