#DIM 가슴サイズ指定
	;가슴のサイズが설정されて無いなら랜덤
	IF CFLAG:ARG:元가슴サイズ == 0
		IF TALENT:ARG:남자
			SELECTCASE RAND:100
				CASE IS < 40
					CFLAG:ARG:元가슴サイズ = 3
				CASE IS < 60
					CFLAG:ARG:元가슴サイズ = 2
				CASE IS < 80
					CFLAG:ARG:元가슴サイズ = 4
				CASE IS < 90
					CFLAG:ARG:元가슴サイズ = 5
				CASE IS < 98
					CFLAG:ARG:元가슴サイズ = 1
				CASEELSE
					CFLAG:ARG:元가슴サイズ = 6
			ENDSELECT
		ELSE
			CFLAG:ARG:元가슴サイズ = 1
		ENDIF
	ENDIF
	SIF !EXP:ARG:ＴＳ경험
		CALL 初ＴＳ処理,ARG
	;性転換の処理
	TALENT:ARG:남자 = !TALENT:ARG:남자
