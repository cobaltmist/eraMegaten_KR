	;SWAP TALENT:ARG:Ｖ민감,CFLAG:ARG:元Ｖ민감
	;SWAP TALENT:ARG:Ｖ둔감,CFLAG:ARG:元Ｖ둔감
	SIF CFLAG:ARG:元Ｖ민감
		TALENT:ARG:Ｖ민감 = 1
	SIF CFLAG:ARG:元Ｖ둔감
		TALENT:ARG:Ｖ둔감 = 1
	SWAP ABL:ARG:회화타입,CFLAG:ARG:ＴＳ時회화타입
	SWAP CFLAG:ARG:인간화時회화타입,CFLAG:ARG:ＴＳ인간화時회화타입
	SWAP ABL:ARG:Ｖ감각,CFLAG:ARG:元Ｖ감각
	SWAP CSTR:ARG:16,CSTR:ARG:11
	SWAP CSTR:ARG:17,CSTR:ARG:12
	;가슴の処理
	;現在の가슴のサイズを保存
	CFLAG:ARG:現가슴サイズ = BUST(ARG)
	SWAP CFLAG:ARG:現가슴サイズ,CFLAG:ARG:元가슴サイズ
	TALENT:ARG:절벽 = 0
	TALENT:ARG:빈유 = 0
	TALENT:ARG:거유 = 0
	TALENT:ARG:폭유 = 0
	IF 가슴サイズ指定
		SELECTCASE 가슴サイズ指定
			CASE 1
				TALENT:ARG:절벽 = 1
			CASE 2
				TALENT:ARG:빈유 = 1
			CASE 3
			CASE 4
				TALENT:ARG:거유 = 1
			CASE 5
				TALENT:ARG:폭유 = 1
			CASE 6
				TALENT:ARG:마유 = 1
		ENDSELECT
	ELSE
		SELECTCASE CFLAG:ARG:現가슴サイズ
			CASE 1
				TALENT:ARG:절벽 = 1
			CASE 2
				TALENT:ARG:빈유 = 1
			CASE 3
			CASE 4
				TALENT:ARG:거유 = 1
			CASE 5
				TALENT:ARG:폭유 = 1
			CASE 6
				TALENT:ARG:마유 = 1
		ENDSELECT
	ENDIF
	
	;오토코노코を入れ替え
	SWAP TALENT:ARG:오토코노코 , CFLAG:ARG:元오토코노코
