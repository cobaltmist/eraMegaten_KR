@BASE_INCENSE,ARG
#LOCALSSIZE 2
#DIMS 選択肢リスト,1
$INPUT_LOOP
選択肢リスト = 
FOR LOCAL,1,FLAG:기본능력수
	LOCALS = %GET_BASESTATUS(LOCAL)%
	LOCALS:1 = %LOCALS,4,LEFT% {BASE:ARG:LOCALS,3}({MAXBASE:ARG:LOCALS,3})
	LOCALS:1 = %LOCALS:1%　　　%ITEMNAME:(LOCAL+1009),8,LEFT% 잔여 {ITEM:(LOCAL+1009),2}개
	選択肢リスト = %選択肢リスト%%LOCALS:1%
	SIF LOCAL != FLAG:기본능력수-1
		選択肢リスト = %選択肢リスト%_
NEXT
CALL INPUT_SPLIT("가지고 있는 향을 "+CALLNAME:ARG+"에게 사용합니다",選択肢リスト,"_","종료")
SIF RESULT == 0
	RETURN
LOCALS = %GET_BASESTATUS(RESULT)%
LOCAL  = RESULT+1009
SIF ITEM:LOCAL == 0
	GOTO INPUT_LOOP
BASE:ARG:LOCALS ++
ITEM:LOCAL --
PRINTFORMW TARGET:[{CPOS(ARG),2}] %CALLNAME:ARG,20,LEFT%　>>>>>>　%LOCALS%＋１
CALL SYNC_STATUS,ARG
GOTO INPUT_LOOP