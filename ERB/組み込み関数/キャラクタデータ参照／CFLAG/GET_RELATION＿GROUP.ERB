;========================================
;相性判定関数
;TARGETのグループARGSにおけるARG:1（PLAYER）→ARG（TARGET）に対する相性を返す
;
;========================================
@GET_RELATION_GROUP(ARG = -1, ARG:1 = -1 , ARGS)
#FUNCTION
SIF ARG == -1
	ARG = TARGET
SIF ARG:1 == -1
	ARG:1 =PLAYER
SELECTCASE ARGS
	CASE "타카마가하라"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "이자나미"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "이자나기"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "아마테라스"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "스사노오"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "타카마가하라")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "토요아시하라")
			RETURNF 75
	CASE "토요아시하라"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "이자나미"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "이자나기"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "스사노오"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "아마테라스"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "토요아시하라")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "타카마가하라")
			RETURNF 75
	CASE "헤브라이천사"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "YHVH"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "루시퍼"
			RETURNF 50
		IF IS_RELATION_GROUP(ARG:1, "헤브라이천사")
			;天使は自分より上から抜群、下から良好
			IF CSVBASE(NO:ARG, GETNUM(BASE, "LV"), 0) < CSVBASE(NO:(ARG:1), GETNUM(BASE, "LV"), 0)
				RETURNF 150
			ELSE
				RETURNF 125
			ENDIF
		ENDIF
		SIF IS_RELATION_GROUP(ARG:1, "솔로몬72주")
			RETURNF 75
	CASE "솔로몬72주"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "YHVH"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "솔로몬72주")
			RETURNF 75
		SIF IS_RELATION_GROUP(ARG:1, "헤브라이천사")
			RETURNF 75
		
	CASE "아메샤・스펜타"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "아후라마즈다" ;KR판 임의수정, 일판은 アフラ・マズダー로 실제 아후라마즈다의 CALLNAME에 대응 못하고 있음
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "주르반"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "아메샤・스펜타")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "조로아스터악신")
			RETURNF 75
	CASE "조로아스터악신"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "주르반"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "아후라마즈다" ;KR판 임의수정, 일판은 アフラ・マズダー로 실제 아후라마즈다의 CALLNAME에 대응 못하고 있음
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "조로아스터악신")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "아메샤・스펜타")
			RETURNF 75
	CASE "아스가르드"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "오딘"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "로키"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "아스가르드")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "라그나로크")
			RETURNF 75
	CASE "라그나로크"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "로키"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "오딘"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "라그나로크")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "아스가르드")
			RETURNF 75
		
	CASE "고양이"
		SIF IS_RELATION_GROUP(ARG:1, "고양이")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "개")
			RETURNF 75
	CASE "개"
		IF IS_RELATION_GROUP(ARG:1, "개")
			;天使は自分より上から抜群、下から良好
			IF CSVBASE(NO:ARG, GETNUM(BASE, "LV"), 0) < CSVBASE(NO:(ARG:1), GETNUM(BASE, "LV"), 0)
				RETURNF 150
			ELSE
				RETURNF 125
			ENDIF
		ENDIF
		SIF IS_RELATION_GROUP(ARG:1, "원숭이")
			RETURNF 75
	CASE "원숭이"
		SIF IS_RELATION_GROUP(ARG:1, "원숭이")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "개")
			RETURNF 75
	;エリンはマイナスがなくて数も多いのでとりあえず125に
	CASE "에린"
		SIF IS_RELATION_GROUP(ARG:1, "에린")
			RETURNF 125
	CASE "ジャック一家"
		SIF IS_RELATION_GROUP(ARG:1, "ジャックシリーズ")
			RETURNF 150
	CASE "흡혈귀"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "크르스니크"
			RETURNF 75
		
ENDSELECT
