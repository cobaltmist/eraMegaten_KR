;相性に合わせた色変更
;【急募】カラーコーディネイトのセンス
@SET_AISYOU_COLOR, ARG
SELECTCASE ARG
	CASE 999
		;반사
		LOCAL = GETNUM(FLAG, "반사컬러")
	CASE IS > 100
		;약점
		LOCAL = GETNUM(FLAG, "약점컬러")
	CASE 100
		;普通
		LOCAL = GETNUM(FLAG, "통상컬러")
	CASE IS > 0
		;내성
		LOCAL = GETNUM(FLAG, "내성컬러")
	CASE 0
		;무효
		LOCAL = GETNUM(FLAG, "무효컬러")
	CASEELSE
		;흡수
		LOCAL = GETNUM(FLAG, "흡수컬러")
ENDSELECT
CALL GETCOLOR_9(FLAG:LOCAL)
SETCOLOR RESULT, RESULT:1, RESULT:2
RETURN ARG