;-------------------------------------------------
;マルフーシャ個別イベント
;
;CFLAG:800～998 = 口上テンプレにおける自由領域
;
;CFLAG:ARG:900　カード番号（@カード購入_CARD_NAMEを参照）
;CFLAG:ARG:901　代払い額（0～5000*n）
;CFLAG:ARG:994　前イベント読破の日付
;CFLAG:ARG:995　前イベント読破の時間
;CFLAG:ARG:996　0:何も起こらない　1:チャレンジモードクリア
;CFLAG:ARG:997　0:何も起こらない　1:個人イベントクリア
;CFLAG:ARG:998　0:専用技を使えない　1:専用技を使える　2:防衛戦モード
;
;FLAG:개별이벤트캐릭 = NO:CAST
;FLAG:진행중개별이벤트 = LOCAL
;
;;好感度以外は後に上昇値が表示される
;CFLAG:ARG:(MASTER + 2100) += A
;CFLAG:ARG:의존도 += B
;TCVAR:ARG:획득의존도 = B
;BASE:ARG:충성도 += C
;TCVAR:ARG:획득충성도 = C
;BASE:ARG:ＭＡＧ += D
;TCVAR:ARG:획득ＭＡＧ = D
;CALL ADDS_EXP("○○経験", E, ARG)
;-------------------------------------------------
@INDIVIDUAL_EVENT_K5371, ARG, ARG:1 = 0, ARG:2 = -1
#DIM 現個人イベントバージョン = 130
#DIM フェリセットを採用した
#DIM ベルカを採用した
#DIM ストレルカを採用した
#DIM ビオンを採用した
#DIM アリビナを採用した
#DIM エノスを採用した
#DIM ライカを採用した
#DIM スネジンカを連れてこさせた
#DIM 戦力として扱う
#DIM 既存キャラ
#DIM ストーリースキップ
#DIM 敵レベル
;ARG:0　キャラ番号
;ARG:1　関数種類　1,開放条件　2,タイトル　3,イベント
;ARG:2　イベント番号（0～63まで）

IF ARG:1 == 1
	IF 마르푸샤개인이벤트버전 < 10
		SIF !TALENT:ARG:꿋꿋함
			TALENT:ARG:꿋꿋함 = 1
		마르푸샤개인이벤트버전 = 10
	ENDIF
	IF 마르푸샤개인이벤트버전 < 20
		FOR LOCAL, 1, 21
			;気合を覚えている場合、チェーンアップに差し替え
			IF ABL:ARG:@"스킬{LOCAL}" == [[스킬:기합]]
				PRINTFORML ※%CALLNAME:ARG%の習得スキル変更を反映します
				PRINTFORML 気合　→　チェーンアップ
				ABL:ARG:@"스킬{LOCAL}" = [[스킬:체인업]]
			ENDIF
			;気合を覚える予定の場合、チェーンアップに差し替え
			IF ABL:ARG:@"습득스킬{LOCAL}" == [[스킬:기합]]
				PRINTFORML ※%CALLNAME:ARG%の習得スキル変更を反映します
				PRINTFORML 気合　→　チェーンアップ
				ABL:ARG:@"습득스킬{LOCAL}" = [[스킬:체인업]]
			ENDIF
		NEXT
		마르푸샤개인이벤트버전 = 20
	ENDIF
	IF 마르푸샤개인이벤트버전 < 30
		CFLAG:ARG:800 = 0
		CFLAG:ARG:801 = 0
		마르푸샤개인이벤트버전 = 30
	ENDIF
	IF 마르푸샤개인이벤트버전 < 40
		;一時的にアンロック
		CFLAG:ARG:998 = 1
		마르푸샤개인이벤트버전 = 40
	ENDIF
	IF 마르푸샤개인이벤트버전 < 90
		;義妹
		CSTR:ARG:근친판정_자매 = 
		마르푸샤개인이벤트버전 = 90
	ENDIF
ENDIF

SELECTCASE ARG:2
;個別イベント0
CASE 0
	;解放条件
	IF ARG:1 == 1
		SIF HAVE_SKILL(ARG, PU_SKILLNUM_GET(ARG,"リラックス"))
			RETURN 0
		RETURN 1
	ELSEIF ARG:1 == 2
	;タイトル
		IF GETBIT(CFLAG:ARG:개별이벤트개방,ARG:2)
			;タイトル
			RESULTS = リラックスは大事
		ELSE
			;必要のないときはこのイベントを非表示にする
		ENDIF
	;イベント
	ELSEIF ARG:1 == 3
		CALL ANIMATION_LOAD_SHORT( "Now loading" )
		
		CALL LEARN_PU_SKILL(ARG,"リラックス")
		PRINTFORMW ＞%CALLNAME:ARG%は自分に合ったリラックス方法を見つけた！
		
		RETURN 1
	ENDIF

;個別イベント１
CASE 1
	;解放条件
	IF ARG:1 == 1
		;夜以外だとダメ
		SIF TIME != 3
			RETURN 0
		SIF CFLAG:ARG:이자리에없는플래그 > 0
			RETURN 0
		FOR LOCAL, 1, 7
			;LOCALSにポジションにいる人を入れる
			LOCALS = 포지션{LOCAL}
			;中に誰もいないならループ離脱
			SIF FLAG:LOCALS < 0
				CONTINUE
			;PTにマルフーシャはいるか？
			SIF NO:(FLAG:LOCALS) == [[キャラ:마르푸샤]]
				RETURN 1
		NEXT
		RETURN 0
	ELSEIF ARG:1 == 2
	;タイトル
		IF GETBIT(CFLAG:ARG:개별이벤트개방, ARG:2)
			;タイトル
			RESULTS = 胡蝶の梦－Reason－（推奨LV10～）
		ELSE
			;未開放時のタイトル（解放条件を入れておく）
			RESULTS = (①%CALLNAME:ARG%がパーティにいる　②時刻が夜　で解放　※戦闘あり)
		ENDIF
	;イベント
	ELSEIF ARG:1 == 3
		CUSTOMDRAWLINE =
		PRINTFORMW 嫌な気配を感じる……
		PRINTFORMW 準備は万全だろうか？
		PRINTFORML 
		PRINTFORML （注意：一対多の連戦
		PRINTFORMW 　報酬：なし…？）
		PRINTFORML 
		PRINTFORML [0] 問題ない
		PRINTFORML [1] 不安が残る
		CALL INPUTINT, 0, 1
		IF RESULT == 1
			PRINTFORMW 装備を見直すことにした。
			RETURN 0
		ENDIF
		CLEARLINE 9
		
		;ポジション1-6に存在する味方をすべてポイする
		FOR LOCAL, 1, 7
			; LOCALSにポジションにいるキャラを取得
			LOCALS = 포지션{LOCAL}
			LOCAL:1 = FLAG:LOCALS
			
			; 誰もいない、もしくはマルフーシャだったらCONTINUE
			SIF LOCAL:1 < 0 || LOCAL:1 == ARG
				CONTINUE
			
			; ポジションを外す（リターン同等処理）
			CALL REMOVE_POSITION, CFLAG:(LOCAL:1):포지션
		NEXT
		
		IF RAND:100 == 0
			CALL ANIMATION_LOAD_MIDDLE_Marufusha_2( "Now loading", "歩き_敵", 8 )
		ELSE
			CALL ANIMATION_LOAD_MIDDLE_Marufusha( "Now loading", "歩き_マルフーシャ", 8 )
		ENDIF
		
		PRINTFORML [0] ストーリーをスキップしない
		PRINTFORML [1] ストーリーをスキップする
		CALL INPUTINT, 0, 1
		ストーリースキップ = RESULT
		CLEARLINE 3
		
		;専用技、封印解除
		SIF CFLAG:ARG:998 < 2
			CFLAG:ARG:998 = 2
		
		IF !ストーリースキップ
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "は過去の、" + CALLNAME:ARG + "の夢を見ていた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "これが夢だとわかったのは、" + CALLNAME:MASTER + "は夢の中で" + CALLNAME:ARG + "になっていたからだ。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "そして、過去だとわかったのは、ラグの店で引き取った" + CALLNAME:ARG + "の", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "右手にあった痛々しい銃創が、まだないからだ。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "とはいえ、体の主導権は" + CALLNAME:MASTER + "にあるわけではないらしい。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "一人称視点で撮影された映画のように、視界は勝手に動き、手足は勝手に動いていく。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……" + CALLNAME:MASTER + "は、幼い事以外は" + CALLNAME:ARG + "そっくりの少女と一緒に、家の玄関に来た幾人もの男。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "その一人から差し出された紙を見ている。", 1, 1, 600
			SETCOLOR 0xFF0000
			CALL ANIMATION_ROLL_TEXT, "……『召集令状』。『赤紙』とも呼ばれるそれを。", 1, 1, 600
			RESETCOLOR
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "堅苦しい下りで書かれていたその令状は、要約すると", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "『" + CALLNAME:ARG + "を、国境門防衛部隊に配属する』", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "そういう内容だった。", 1, 1, 600

			PRINTFORML 
			SETCOLOR 0xFFA500
			CALL ANIMATION_ROLL_TEXT, "「大丈夫。心配しないで、スネジンカ」", 1, 1, 600
			RESETCOLOR
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "視界が令状から横の少女に移り、幼い子ども特有のサラサラした茶髪を撫でる感触と、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "自身のものだろう、妹を落ち着かせる声が脳裏に響く。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "招集を受け入れたのか、あるいは拒否する権利がないのか", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "それすら" + CALLNAME:MASTER + "にはわからない。" + CALLNAME:MASTER + "は" + CALLNAME:ARG + "の祖国の人間ではないからだ。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "家に妹を置いて、男たちとどこかへ向かおうとする" + CALLNAME:ARG + "。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "一歩家を出た途端、視界がぼやけていく…………。", 1, 1, 600
			
			CALL EVENT_K5371_DAY_TITLE, "1 日目"
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「あなたが今日から配属された" + CALLNAME:ARG + "ね」", 1, 1, 600, 5372, 101
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "…………声と共に、ぼやけていた視界がはっきりしてきた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「私は監督官。無能な低級国民たちを国へ貢献させるのが私の仕事よ」", 1, 1, 600, 5372, 201
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "平均的な少女の身長より、少し低めな" + CALLNAME:ARG + "よりは背丈の高い、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "金髪というには少しくすんだ色のブロンドをした監督官と名乗る女性が、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "――正確には、" + CALLNAME:MASTER + "と共有している" + CALLNAME:ARG + "だが――に仕事の内容の説明をしている。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "『国境門へ近づく敵兵を、全て撃破しろ』ということだ。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "監督官は前線を抜けてきた少数の敵兵を叩くだけだという。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……詭弁であることは、すぐにわかった。", 1, 1, 600
		ENDIF
		
		;5日目 + 10日目
		CALL マルフーシャ個別イベント_防衛戦_SOLO, ARG, 1
		CALL HEALTH_CHARA, ARG
		
		IF !ストーリースキップ
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "国境門をたった一人が担当するという、" + CALLNAME:MASTER + "からすればありえない兵士の運用法に加え、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "『前線を抜けてきた敵兵』とは思えない物量の敵兵……それも、全て機械兵器だ。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "それらが毎日毎日、群れをなして国境門へ攻撃を仕掛けてくるのだ。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "幸いというべきか、敵兵器達は" + CALLNAME:ARG + "には目もくれず", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "国境門だけを狙っている為に、戦火に直接さらされるよりはまだマシではあるが", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "それでも流れ弾、爆弾処理の遅れ、撃墜した敵機の爆発……", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "多少運がない程度でも大怪我は間違いなしの、絶望的な『部隊』だった。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "次に" + CALLNAME:MASTER + "の目を引いたのは、控除という名の搾取だ。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "住民税、消費税、介護保険料、門の維持費、所得税、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "厚生年金、雇用保険、学生ローン、光熱費通信費……", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "所得が一定以下の国民から更に搾取する、低級国民税なるものまであった。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "基本給が上がるに連れそれらの控除が山のように上乗せされ、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "結果的に手取りは基本給額面の1/10以下だ。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "仮に門の防衛に失敗し、修理費を徴収されていたら手取り皆無になる日すらあった。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "は……その中で、文字通り孤軍奮闘していた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "少ない給金から銃器を買う金を捻出し、壊れるまで酷使し、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "ある時は使い捨ての銃器、あるときはバリケード、あるときは空爆要請権利を買いとり", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "一人では到底護りきれないだろう量の門に押し寄せてくる敵兵器を", 1, 1, 300
			
			PRINTFORML 
			SETCOLOR 0x5090FF
			CALL ANIMATION_ROLL_TEXT, "全て破壊し、護り通してきた。", 1, 1, 800
			RESETCOLOR
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "の知る" + CALLNAME:ARG + "の、あの銃器の扱い方、そして器用さは", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "この戦いが培った……いや、一人で何もかもやらねばならないがために、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "何でも出来るように成長せざるをえなかったから、なのだ。", 1, 1, 600
		ENDIF
		
		;20日目 + 30日目
		CALL マルフーシャ個別イベント_防衛戦_SOLO, ARG, 2
		CALL HEALTH_CHARA, ARG
		
		IF !ストーリースキップ
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "1日……3日……5日……10日……", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "20日……30日……", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "40日目。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "この日も、無数の機械兵器が、なだれ込んできた。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "攻め込んできた兵器を応戦する" + CALLNAME:ARG + "。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……この日、国境門に立った時点で、" + CALLNAME:MASTER + "はある予感がしていた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "は気づいていないようだが", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "国境……連合国の側から、『重い』地響きを感じる。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "ようやく、敵の影がまばらになってきた頃", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "小型機械兵器を引き連れて現れたのは", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "3人分はあろうかという背丈と、", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "銃弾を弾く回転式のミラーシールドを備えた、", 1, 1, 300
			
			PRINTFORML 
			SETCOLOR 0xFF0000
			CALL ANIMATION_ROLL_TEXT, "とても巨（おお）きな、攻城兵器だった。", 1, 1, 600
			RESETCOLOR
		ENDIF
		
		;40日目
		CALL マルフーシャ個別イベント_防衛戦_SOLO, ARG, 3
		CALL HEALTH_CHARA, ARG
		
		IF !ストーリースキップ
		
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……どうにか、門を破壊されるのは阻止できたようだ。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "コアを撃ち抜かれた巨大兵器が、火花を散らして断続的に爆発し", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "やがて動かなくなった。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "肩で息をする" + CALLNAME:ARG + "の、荒い声が" + CALLNAME:MASTER + "の脳裏にも響く。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "それでも、まだ動いている敵機が居ないかを確認し", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "1体も居ないことを確認した" + CALLNAME:ARG + "は、仰向けに倒れ込んだ……。", 1, 1, 600
			
			CALL EVENT_K5371_DAY_TITLE, "？ 日目"
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "次に目を覚ますと、監督官が説明をしていた宿舎だった。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「……見事な、戦果だったわね。あなた宛に令状が届いてるわ」", 1, 1, 600, 5372, 301
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "受け取った" + CALLNAME:ARG + "が目を通すと", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "【" + CALLNAME:ARG + "・並びにライカ　あなたの能力を高く評価し、内門防衛任務への移動を命ず。】", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "と書かれていた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「！！！！！！！！」", 1, 1, 600, 5372, 501
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "これまで部下だと思っていた少女が急に同僚に昇進し", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "目に見えて狼狽する監督官――ライカというらしい――を尻目に", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "は視線を令状に向け、目を閉じた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……考え込んでいるようだ。心中のつぶやきが漏れている。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "（ここ最近、門を襲う敵兵は、前線から抜けてきたと言うには数が多すぎた）", 1, 1, 600, 5371, 301
			CALL ANIMATION_ROLL_TEXT, "（これはきっと栄転なんかじゃない。嫌な予感がする……）", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "から見ても、この異動にはきな臭い……", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "直球で言えば人材の使い捨てのような、真っ当な人材運用ではない意図を感じていた。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……なにせ、書状に誤字があるぐらいだ。まともな所ならこういう物で誤字などほぼありえない。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「ねぇ、マ、マルフーシャ……」", 1, 1, 600, 5372, 501
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "考え事に浸っていた" + CALLNAME:ARG + "と" + CALLNAME:MASTER +"を、ライカの声が引き戻した。", 1, 1, 600
			
