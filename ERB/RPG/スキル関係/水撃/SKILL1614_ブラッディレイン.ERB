@ACTION_1614,ARG,ARG:1
#LOCALSIZE 3
#DIM 前HP
#DIM 被弾フラグ

IF ARG:1 == 17
	LOCAL:1 = 1
	LOCAL:2 = 4
ELSEIF ARG:1 == 18
	LOCAL:1 = 4
	LOCAL:2 = 7
ELSEIF ARG:1 == 20
	LOCAL:1 = 7
	LOCAL:2 = 12
ELSEIF ARG:1 == 21
	LOCAL:1 = 12
	LOCAL:2 = 17
ENDIF

FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0 || CFLAG:POS(LOCAL):ステート == GET_STATE_NUM("DYING")
		CONTINUE
	前HP = BASE:POS(LOCAL):ＨＰ
	CALL ATTACK_SINGLE,ARG,POS(LOCAL),1614
	IF POS(LOCAL) > -1 && BASE:POS(LOCAL):ＨＰ < 前HP && CFLAG:POS(LOCAL):ステート != GET_STATE_NUM("DYING")
		CFLAG:POS(LOCAL):마법효과강화 = MAX(-16, CFLAG:POS(LOCAL):마법효과강화 - 4)
		PRINTFORML 　　TARGET:[{LOCAL,2}] %CALLNAME:POS(LOCAL),20,LEFT%　>>>>>>　마법효과가 내려갔다!
	ENDIF
NEXT

