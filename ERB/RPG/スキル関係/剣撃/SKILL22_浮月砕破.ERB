;====================================================
;스킬 및 행동의 실행
;====================================================
@ACTION_22, ARG, ARG:1
#LOCALSIZE 3
#DIM 生存数
IF SKILL_CHANGE(ARG, [[キャラ:블레이드(X)]]) && EQUIP:ARG:악세서리 == 5349
	FLAG:확산플래그 = 0
	IF CFLAG:ARG:포지션 < 7
		LOCAL:1 = 7
		LOCAL:2 = 12
	ELSE
		LOCAL:1 = 1
		LOCAL:2 = 4
	ENDIF

	FOR LOCAL, LOCAL:1, LOCAL:2
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
			CONTINUE
		CFLAG:ARG:타겟 = LOCAL
		CALL SKILL_TYPE_22, ARG
		PRINT 상성판정：
		SELECTCASE RESULT
			CASE 0
				PRINT 검격
			CASE 6
				PRINT 전격
		ENDSELECT
		PRINTL ！
		CALL ATTACK_SINGLE, ARG, FLAG:LOCALS, 22
	NEXT
	
	生存数 = 0
	IF CFLAG:ARG:포지션 < 7
		LOCAL:1 = 12
		LOCAL:2 = 17
	ELSE
		LOCAL:1 = 4
		LOCAL:2 = 7
	ENDIF
	;敵/味方後列の生存者をチェック
	FOR LOCAL, LOCAL:1, LOCAL:2
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
			CONTINUE
		生存数 += 1
	NEXT
	;生存者がいたら追撃します
	IF 生存数 > 0
		FLAG:확산플래그 = 1
		PRINTW ＞사복검에서 뇌구가 발사되었다！
		IF CFLAG:ARG:포지션 < 7
			LOCAL = 21
		ELSE
			LOCAL = 18
		ENDIF
		CALL ATTACK_FIELD, ARG, LOCAL, 22
	ENDIF
	FLAG:확산플래그 = 0

	CFLAG:ARG:타겟 = CFLAG:ARG:포지션 < 7 ? 20 # 17
ELSE
	CALL ATTACK_FIELD, ARG, ARG:1, 22
ENDIF





