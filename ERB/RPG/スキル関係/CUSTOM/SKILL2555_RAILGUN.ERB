;　상성
@SKILL_TYPE_2555,ARG
#LOCALSSIZE 3
#LOCALSIZE 4
IF SKILL_CHANGE(ARG, [[キャラ:이슈타르]])
	RETURN GET_TYPE_NUM("충격")
ELSEIF SKILL_CHANGE(ARG, [[キャラ:린Fate]])
	RETURN GET_TYPE_NUM("충격")
ELSEIF SKILL_CHANGE(ARG, [[キャラ:파르바티]])
	RETURN GET_TYPE_NUM("빙결")
ELSEIF SKILL_CHANGE(ARG, [[キャラ:사쿠라]])
	RETURN GET_TYPE_NUM("빙결")
ELSEIF SKILL_CHANGE(ARG, [[キャラ:이리야]])
	RETURN GET_TYPE_NUM("만능")
ELSE
	SIF ARG < 0 || 스킬속성표시중
		RETURN GET_TYPE_NUM("전격")
	SIF CFLAG:ARG:타겟 > 16 || CFLAG:ARG:타겟 < 1
		RETURN GET_TYPE_NUM("전격")
	LOCAL = POS(CFLAG:ARG:타겟)
	SIF LOCAL < 0
		RETURN GET_TYPE_NUM("전격")
	LOCAL:2 = -300
	LOCALS = 전격
	LOCALS:1 = 비구
	LOCALS:2 = 전격
	FOR LOCAL:1, 1, 3
		;판정用に数値を仕舞う。반사は-200扱い
		LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
		LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"무효화횟수") ? 0 # LOCAL:3
		IF LOCAL:3 > LOCAL:2
			LOCAL:2 = LOCAL:3
			LOCALS = %LOCALS:(LOCAL:1)%
		ENDIF
	NEXT
	RETURN GET_TYPE_NUM(LOCALS)
ENDIF

