;　相性 지변・神聖・정신のうち、もっとも데미지が高くなるものになる
@SKILL_TYPE_1520,ARG
#LOCALSSIZE 4
#LOCALSIZE 4
SIF ARG < 0 || 스킬속성표시中
	RETURN GET_TYPE_NUM("지변")
SIF CFLAG:ARG:ターゲット > 16 || CFLAG:ARG:ターゲット < 1
	RETURN GET_TYPE_NUM("지변")
LOCAL = POS(CFLAG:ARG:ターゲット)
SIF LOCAL < 0
	RETURN GET_TYPE_NUM("지변")
LOCAL:2 = -1000
;全部-1000よりしたとかないとおもうけど、あったらあれなんで、지변をいれとく
LOCALS = 지변
LOCALS:1 = 지변
LOCALS:2 = 정신
LOCALS:3 = 파마
FOR LOCAL:1, 1, 4
	;판정用に数値を仕舞う。반사は-200扱い
	LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"무효화횟수") ? -5 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"가드킬") && LOCAL:3 < 100 ? 100 # LOCAL:3
	IF LOCAL:3 > LOCAL:2
		LOCAL:2 = LOCAL:3
		LOCALS = %LOCALS:(LOCAL:1)%
	ENDIF
NEXT
RETURN GET_TYPE_NUM(LOCALS)

