@ACTION_1516,ARG,ARG:1
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
D = 0

CALL 상성소질체크, ARG, GET_TYPE_NUM("지변"), 1, 1
IF RESULT == 1 && CFLAG:ARG:기합플래그 > 0
	IF (MAXBASE:LOCAL:지변 < 100 || MAXBASE:LOCAL:지변 == 999) && CFLAG:LOCAL:지변가드킬 < 1
		CFLAG:LOCAL:지변가드킬 = 1
		A = 1
	ENDIF
	IF CFLAG:LOCAL:마법반사플래그 == 1
		B = CFLAG:LOCAL:마법반사플래그
		CFLAG:LOCAL:마법반사플래그 = 0
	ENDIF
	IF CFLAG:LOCAL:무효플래그 > 0
		C = CFLAG:LOCAL:무효플래그
		CFLAG:LOCAL:무효플래그 = 0
	ENDIF
	IF CFLAG:LOCAL:지변무효화횟수 > 0
		D = CFLAG:LOCAL:지변무효화횟수
		CFLAG:LOCAL:지변무효화횟수 = 0
	ENDIF
	IF A + B + C + D > 0
		PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다!
		CFLAG:ARG:기합플래그 = 0
	ENDIF
ENDIF
CALL ATTACK_SINGLE,ARG,LOCAL,1516

SIF A == 1
	CFLAG:LOCAL:지변가드킬 = 0
SIF B > 0
	CFLAG:LOCAL:마법반사플래그 = B
SIF C > 0
	CFLAG:LOCAL:무효플래그 = C
SIF D > 0
	CFLAG:LOCAL:지변무효화횟수 = D

