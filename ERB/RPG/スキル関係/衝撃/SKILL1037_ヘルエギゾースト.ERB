	CASE 17
		LOCAL:1 = 1
		LOCAL:2 = 4
	CASE 18
		LOCAL:1 = 4
		LOCAL:2 = 7
	CASE 20
		LOCAL:1 = 7
		LOCAL:2 = 12
	CASE 21
		LOCAL:1 = 12
		LOCAL:2 = 17
ENDSELECT
LOCAL:4 = 0
FOR LOCAL, LOCAL:1, LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	SIF GET_STATE(CFLAG:POS(LOCAL):상태이상) == "DYING"
		CONTINUE
	LOCAL:4 = 1
	CFLAG:ARG:타겟 = LOCAL
	LOCAL:3 = BASE:POS(LOCAL):ＨＰ
	CALL ATTACK_SINGLE, ARG, POS(LOCAL), 1037, 1
	IF POS(LOCAL) > 0 && LOCAL:3 > BASE:POS(LOCAL):ＨＰ && GET_STATE(CFLAG:POS(LOCAL):상태이상) != "DYING"
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = MIN(0, CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화"))
		NEXT
		PRINTFORML 　　TARGET:[{LOCAL,2}] %CALLNAME:POS(LOCAL),20,LEFT%　>>>>>>　강화된 능력이 원래대로 돌아왔다!
	ENDIF
NEXT




