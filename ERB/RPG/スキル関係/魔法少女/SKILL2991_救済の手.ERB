	ELSE
		PRINTL DYING
		PRINTL 마법소녀는 구제되었다！
		CALL DEAD_CHARA, POS(ARG:1)
	ENDIF
ELSEIF GROUPMATCH(NO:(POS(ARG:1)), 3392, 3393, 3394, 3395, 3396, 3397, 3398, 3399)
	PRINTFORML 마녀에게 공격！
	CALL MESSAGE_B(1, "구제의손")
