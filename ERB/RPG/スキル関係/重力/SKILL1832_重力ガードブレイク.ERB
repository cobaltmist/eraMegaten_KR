;====================================================
;스킬 및 행동의 실행
;====================================================
@ACTION_1832,ARG,ARG:1

IF ARG:1 == 19
	LOCAL:2 = 1
	LOCAL:3 = 7
ELSE
	LOCAL:2 = 7
	LOCAL:3 = 17
ENDIF

FOR LOCAL, LOCAL:2, LOCAL:3
	SIF POS(LOCAL) == -1 || CFLAG:POS(LOCAL):상태이상 == GET_STATE_NUM("DYING")
		CONTINUE
	LOCAL:1 = 2
	SIF CFLAG:ARG:PT플래그 == 0
		LOCAL:1 = 4
	IF LOCAL:1 > CFLAG:POS(LOCAL):중력무효화횟수
		LOCAL:1 -= CFLAG:POS(LOCAL):중력무효화횟수
		CFLAG:POS(LOCAL):중력무효화횟수 = 0
		IF LOCAL:1 >= CFLAG:POS(LOCAL):중력가드킬
			CFLAG:POS(LOCAL):중력가드킬 = LOCAL:1
			PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> {LOCAL:1}턴동안 중력속성 내성이 사라졌다!
		ENDIF
	ELSE
		CFLAG:POS(LOCAL):중력무효화횟수 -= LOCAL:1
		PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> 중력속성 무효화횟수가 감소했다!
	ENDIF
NEXT
WAIT


