	SIF POS(LOCAL) < 0
		CONTINUE
		
	IF SKILL_CHANGE(ARG, [[キャラ:코우메]])
		CFLAG:POS(LOCAL):방어강화 = MIN(32, CFLAG:POS(LOCAL):방어강화 - ((SKILLGAGE_H_GET(ARG,3622)/5)+1)*4)
	ELSE
	CFLAG:POS(LOCAL):방어강화 = MAX(-16, CFLAG:POS(LOCAL):방어강화 - 4)
	ENDIF
