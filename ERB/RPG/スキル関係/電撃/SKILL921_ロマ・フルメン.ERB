	RETURN 1
IF 스킬속성표시중
	LOCAL:1 = FLAG:확산플래그
	FLAG:확산플래그 = 현HP비율(ARG)
ENDIF
SELECTCASE FLAG:확산플래그
	CASE IS > 75
		LOCAL:0 = 1 + 225 * (100 - FLAG:확산플래그) / 100
	CASE IS > 50
		LOCAL:0 = 1 + 350 * (100 - FLAG:확산플래그) / 100
	CASE IS > 5
		LOCAL:0 = 1 + 500 * (100 - FLAG:확산플래그) / 100
	CASEELSE
		LOCAL:0 = 1 + 650 * (100 - FLAG:확산플래그) / 100
ENDSELECT
SIF 스킬속성표시중
	FLAG:확산플래그 = LOCAL:1
RETURN LOCAL:0


