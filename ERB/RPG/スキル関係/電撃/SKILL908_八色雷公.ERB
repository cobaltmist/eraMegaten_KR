@ACTION_908,ARG,ARG:1
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
D = 0

IF SKILL_CHANGE(ARG, [[キャラ:GV]]) && EQUIP:ARG:악세사리 == 5349
	IF CFLAG:ARG:기합플래그 > 0
		IF (MAXBASE:LOCAL:전격 < 100 || MAXBASE:LOCAL:전격 == 999) && CFLAG:LOCAL:전격가드킬 < 1
			CFLAG:LOCAL:전격가드킬 = 1
			A = 1
		ENDIF
		IF CFLAG:LOCAL:마법반사플래그 == 1
			B = CFLAG:LOCAL:마법반사플래그
			CFLAG:LOCAL:마법반사플래그 = 0
		ENDIF
		IF CFLAG:LOCAL:무효플래그 > 0
			C = CFLAG:LOCAL:무효플래그
			CFLAG:LOCAL:무효플래그 = 0
		ENDIF
		IF CFLAG:LOCAL:전격무효화횟수 > 0
			D = CFLAG:LOCAL:전격무효화횟수
			CFLAG:LOCAL:전격무효화횟수 = 0
		ENDIF
		IF A + B + C + D > 0
			PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다！
			CFLAG:ARG:기합플래그 = 0
		ENDIF
	ENDIF
	CALL ATTACK_SINGLE,ARG,LOCAL,908
ELSE
	CALL 상성소질체크, ARG, GET_TYPE_NUM("전격"), 1, 1
	IF RESULT == 1 && CFLAG:ARG:기합플래그 > 0
		IF (MAXBASE:LOCAL:전격 < 100 || MAXBASE:LOCAL:전격 == 999) && CFLAG:LOCAL:전격가드킬 < 1
			CFLAG:LOCAL:전격가드킬 = 1
			A = 1
		ENDIF
		IF CFLAG:LOCAL:마법반사플래그 == 1
			B = CFLAG:LOCAL:마법반사플래그
			CFLAG:LOCAL:마법반사플래그 = 0
		ENDIF
		IF CFLAG:LOCAL:무효플래그 > 0
			C = CFLAG:LOCAL:무효플래그
			CFLAG:LOCAL:무효플래그 = 0
		ENDIF
		IF CFLAG:LOCAL:전격무효화횟수 > 0
			D = CFLAG:LOCAL:전격무효화횟수
			CFLAG:LOCAL:전격무효화횟수 = 0
		ENDIF
		IF A + B + C + D > 0
			PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다！
			CFLAG:ARG:기합플래그 = 0
		ENDIF
	ENDIF
	CALL ATTACK_SINGLE,ARG,LOCAL,908
ENDIF

SIF A == 1
	CFLAG:LOCAL:전격가드킬 = 0
SIF B > 0
	CFLAG:LOCAL:마법반사플래그 = B
SIF C > 0
