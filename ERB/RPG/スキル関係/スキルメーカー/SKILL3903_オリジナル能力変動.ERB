	IF 이벤트플래그:45:(LOCAL:3) == 3903
		;全体の場合
		IF INRANGE(ARG:1, 1, 16)
			LOCAL:1 = ARG:1
			LOCAL:2 = ARG:1 + 1
		ELSEIF ARG:1 == 17
			LOCAL:1 = 1
			LOCAL:2 = 4
		ELSEIF ARG:1 == 18
			LOCAL:1 = 4
			LOCAL:2 = 7
		ELSEIF ARG:1 == 19
			LOCAL:1 = 1
			LOCAL:2 = 7
		ELSEIF ARG:1 == 20
			LOCAL:1 = 7
			LOCAL:2 = 12
		ELSEIF ARG:1 == 21
			LOCAL:1 = 12
			LOCAL:2 = 17
		ELSEIF ARG:1 == 22
			LOCAL:1 = 7
			LOCAL:2 = 17
		ELSEIF ARG:1 == 23
			LOCAL:1 = 1
			LOCAL:2 = 17
		ELSE
			PRINTW ※타겟값이 부정합니다
			RETURN
		ENDIF
;		이벤트플래그:45:19 = 1

		FOR LOCAL,LOCAL:1,LOCAL:2
			SIF POS(LOCAL) < 0
				CONTINUE
			IF 이벤트플래그:45:13 == 2
				SIF 이벤트플래그:45:8 > 0
