;스킬 및 행동의 실행
;====================================================
@ACTION_2514,ARG,ARG:1
IF SKILL_CHANGE(ARG, 1513) && CFLAG:ARG:보스플래그 && FLAG:현던전 == 13
	LOCAL:1 = 1
	LOCAL:2 = 7
	FOR LOCAL, LOCAL:1, LOCAL:2
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
			CONTINUE
		CFLAG:ARG:타겟 = LOCAL
		IF MAXBASE:(FLAG:LOCALS):(44 + CFLAG:ARG:801) <= 0 || MAXBASE:(FLAG:LOCALS):(44 + CFLAG:ARG:801) == 999
			FLAG:확산플래그 = 100
		ELSEIF MAXBASE:(FLAG:LOCALS):(44 + CFLAG:ARG:801) <= 99
			FLAG:확산플래그 = 100 - MAXBASE:(FLAG:LOCALS):(44 + CFLAG:ARG:801)
		ELSE
			FLAG:확산플래그 = 0
		ENDIF
		CALL ATTACK_SINGLE, ARG, FLAG:LOCALS, 2514
	NEXT
	FLAG:확산플래그 = 0
ELSE
	CALL ATTACK_FIELD,ARG,ARG:1,2514
ENDIF


