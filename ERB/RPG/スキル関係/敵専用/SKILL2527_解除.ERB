	SIF CFLAG:ARG:802 < 1
		RETURN 0
	;SIF (CFLAG:ARG:803 - BASE:ARG:ＨＰ) > CFLAG:ARG:804
	;	RETURN 1
	;SIF BASE:ARG:ＨＰ < 1
	;	RETURN 1
	;RETURN 0
	LOCAL:3 = 0
	FOR LOCAL:2,0,10
		LOCALS = 포지션{LOCAL:2+7}
		SIF FLAG:LOCALS < 0
			CONTINUE
		SIF BASE:(FLAG:LOCALS):ＨＰ < 1
			CONTINUE
		LOCAL:3 ++
	NEXT
	SIF LOCAL:3 < 2
		CFLAG:ARG:804 = 0
