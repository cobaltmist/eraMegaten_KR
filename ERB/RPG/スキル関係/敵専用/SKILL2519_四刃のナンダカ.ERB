IF FLAG:行動順1 > -1 && FLAG:行動順1 == ARG && CFLAG:ARG:ターゲット < 17 && CFLAG:ARG:ターゲット > 0 && POS(CFLAG:ARG:ターゲット) >= 0
	LOCAL:1 = 0
	LOCAL:2 = 17
	LOCAL:3 = 0
	SIF CFLAG:ARG:PTフラグ < 1
		LOCAL:3 = CFLAG:ARG:820
	LOCAL:7 = -1000
	L_T = POS(CFLAG:ARG:ターゲット)
	
	FOR LCOUNT, 1, 4
		LOCALS = %GET_TYPE(LOCAL:LCOUNT)%
		LOCAL:6 = MAXBASE:L_T:LOCALS == 999 ? -200 # MAXBASE:L_T:LOCALS
		SIF CFLAG:L_T:독각フラグ == 2 && LOCAL:6 > 100
			LOCAL:6 = -LOCAL:6
		SIF CFLAG:L_T:(LOCALS+"가드킬") && LOCAL:6 < 100
			LOCAL:6 = 100
		LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 2 ? -50 # LOCAL:6
		LOCAL:6 = CFLAG:L_T:(LOCALS +"무효화횟수") ? 0 # LOCAL:6
		LOCAL:6 = CFLAG:L_T:무효フラグ ? 0 # LOCAL:6
		LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 1 ? 0 # LOCAL:6
		LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 2 ? -50 # LOCAL:6
		SIF LOCAL:LCOUNT < 4
			LOCAL:6 = CFLAG:L_T:물리반사フラグ ? -200 # LOCAL:6
		SIF LOCAL:LCOUNT < 17 && LOCAL:LCOUNT > 3
			LOCAL:6 = CFLAG:L_T:마법반사フラグ ? -200 # LOCAL:6
		LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 3 ? -200 # LOCAL:6
		IF LOCAL:7 < LOCAL:6
			LOCAL:7 = LOCAL:6
			LOCAL:0 = LCOUNT
		ENDIF
	NEXT
	RETURN LOCAL:LOCAL
ELSE
	RETURN 17
ENDIF


