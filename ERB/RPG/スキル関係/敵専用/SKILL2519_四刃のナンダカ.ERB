@ACTION_2519,ARG,ARG:1

#LOCALSSIZE 1
#LOCALSIZE 17
#DIM 対象リスト , 16
#DIM 攻撃済み回数 , 17
#DIM 最大単体攻撃回数 , 17
#DIM 対象人数
#DIM ループ , 2
VARSET 攻撃済み回数 , 0

FLAG:확산플래그 = 0
LOCAL:5 = 2519
IF ARG:1 == 17
	LOCAL:7 = 1
	LOCAL:8 = 4
ELSEIF ARG:1 == 18
	LOCAL:7 = 4
	LOCAL:8 = 7
ELSEIF ARG:1 == 19
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSEIF ARG:1 == 20
	LOCAL:7 = 7
	LOCAL:8 = 12
ELSEIF ARG:1 == 21
	LOCAL:7 = 12
	LOCAL:8 = 17
ELSEIF ARG:1 == 22
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF

;各々の最大単体攻撃回数を設定
VARSET 最大単体攻撃回数, -1
FOR ループ, LOCAL:7, LOCAL:8
	SIF POS(ループ) == -1
		CONTINUE
	SIF GET_STATE(CFLAG:POS(ループ):상태이상) == "DYING"
		CONTINUE
	
	TRYCCALLFORM SKILL_MAXATK_PER_{LOCAL:5},ARG
		最大単体攻撃回数:ループ = RESULT
		;スキルに最低回数の設定がある場合、最大回数の調整を行う
		TRYCCALLFORM SKILL_MINATK_PER_{LOCAL:5},ARG
			最大単体攻撃回数:ループ = RAND(RESULT, 最大単体攻撃回数:ループ+1)
		CATCH
		ENDCATCH
	CATCH
		CALLFORM SKILL_MAXATTACKNUMBER_{LOCAL:5},ARG
		最大単体攻撃回数:ループ = RESULT
	ENDCATCH
	
NEXT

;最大値が-1なら、攻撃が当たる条件を満たしたキャラが0なので関数を抜ける
SIF MAXARRAY(最大単体攻撃回数) == -1
	RETURN 0
;最大値が0なら、対象全員が0回になってしまったので1回を誰かに与える
WHILE !MAXARRAY(最大単体攻撃回数)
	ループ = RAND(LOCAL:7, LOCAL:8)
	SIF POS(ループ) == -1
		CONTINUE
	SIF GET_STATE(CFLAG:POS(ループ):상태이상) == "DYING"
		CONTINUE
	最大単体攻撃回数:ループ = 1
WEND

;攻撃回数算出
CALLFORM SKILL_MAXATTACKNUMBER_{LOCAL:5},ARG
LOCAL = RESULT + 1
CALLFORM SKILL_MINATTACKNUMBER_{LOCAL:5},ARG
LOCAL -= RESULT
LOCAL:1 = RESULT + RAND:LOCAL
;LOCAL:1 攻撃回数


FLAG:확산플래그 = 1
LOCAL = 0
$対象リスト作成
VARSET 対象リスト , 0
対象人数 = 0
FOR ループ , LOCAL:7 , LOCAL:8
	SIF POS(ループ) == -1
		CONTINUE
	SIF GET_STATE(CFLAG:POS(ループ):상태이상) == "DYING"
		CONTINUE
	SIF 攻撃済み回数:ループ >= 最大単体攻撃回数:ループ
		CONTINUE
	対象リスト:対象人数 = ループ
	対象人数 ++
NEXT
IF 対象人数 == 0
	FLAG:확산플래그 = 0
	RETURN 0
ENDIF
SIF LOCAL
	GOTO IN_FOR
	

FOR LOCAL,0,LOCAL:1

	$IN_FOR
	LOCAL:3 = 対象リスト:(RAND:対象人数)
	LOCAL:4 = POS(LOCAL:3)
	LOCALS = 포지션{LOCAL:3}
	SIF FLAG:LOCALS < 0
		GOTO 対象リスト作成
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
		GOTO 対象リスト作成
	SIF 攻撃済み回数:(CPOS(FLAG:LOCALS)) >= 最大単体攻撃回数:CPOS(FLAG:LOCALS)
		GOTO 対象リスト作成
	攻撃済み回数:(CPOS(FLAG:LOCALS)) ++
	
	CFLAG:ARG:타겟 = (LOCAL:3)
	CALL ATTACK_SINGLE,ARG,(LOCAL:4),(LOCAL:5),1
	
NEXT

FLAG:확산플래그 = 0
IF CFLAG:ARG:PT플래그 < 1
	FOR LOCAL, 8, 12
		CFLAG:ARG:물리피데미지보정 = -70
		CFLAG:ARG:마법피데미지보정 = -70
		LOCALS = %GET_TYPE(LOCAL)%
		MAXBASE:ARG:LOCALS = 999
		BASE:ARG:LOCALS = 999
		IF CFLAG:ARG:822 == LOCAL
			BASE:ARG:LOCALS = 150
			MAXBASE:ARG:LOCALS = 150
			PRINTFORMW 약점이 %조사처리(LOCALS,"로")% 변했다
		ENDIF
	NEXT
ENDIF




