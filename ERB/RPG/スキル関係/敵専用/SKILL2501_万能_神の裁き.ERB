@ACTION_2501,ARG,ARG:1
#DIM CHARA
#DIM L_TARGET,6
#DIM L_COUNT
L_TARGET = -1
L_COUNT = 0
FOR LOCAL,1,7
	CHARA = POS(LOCAL)
	SIF CHARA < 0
		CONTINUE
	SIF GROUPMATCH(GET_STATE(CFLAG:CHARA:상태이상),"STONE","DYING")
		CONTINUE
	IF L_TARGET == -1 || MAXBASE:CHARA:마력 < MAXBASE:L_TARGET:마력
		L_COUNT = 0
		L_TARGET:(L_COUNT++) = CHARA
	ELSEIF MAXBASE:CHARA:마력 == BASE:CHARA:마력
		L_TARGET:(L_COUNT++) = CHARA
	ENDIF
NEXT
CHARA = L_TARGET:(RAND:L_COUNT)
IF EQUIP:CHARA:악세사리 == 5499
	PRINTFORMW [{LOCAL,2}] %CALLNAME:CHARA,20,LEFT%  >>>>>>  DEBUG-BLOCK
	RETURN
ENDIF
PRINTFORMW     TARGET:[{CPOS(CHARA),2}] %CALLNAME:CHARA,20,LEFT%  >>>>>>  DYING
CALL DEAD_CHARA,CHARA






