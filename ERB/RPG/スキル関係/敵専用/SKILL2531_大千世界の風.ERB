@SKILL_TYPE_2531,ARG
#LOCALSSIZE 3
#LOCALSIZE 4
SIF ARG < 0 || 스킬속성표시中
	RETURN GET_TYPE_NUM("충격")
SIF CFLAG:ARG:타겟 > 16 || CFLAG:ARG:타겟 < 1
	RETURN GET_TYPE_NUM("충격")
LOCAL = POS(CFLAG:ARG:타겟)
SIF LOCAL < 0
	RETURN GET_TYPE_NUM("충격")
LOCAL:2 = -1000
LOCALS = 충격
LOCALS:1 = 질풍
LOCALS:2 = 충격
FOR LOCAL:1, 1, 3
	;판정用に数値を仕舞う。반사は-200扱い
	LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
	SIF CFLAG:LOCAL:독각플래그 == 2 && LOCAL:3 > 100
			LOCAL:3 = -LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"무효화횟수") ? 0 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1) +"웨이트") == 1 ? 0 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1) +"웨이트") == 2 ? -50 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:마법반사플래그 ? -200 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1) +"웨이트") == 3 ? -200 # LOCAL:3
	IF LOCAL:3 > LOCAL:2
		LOCAL:2 = LOCAL:3
		LOCALS = %LOCALS:(LOCAL:1)%
	ENDIF
NEXT
RETURN GET_TYPE_NUM(LOCALS)
