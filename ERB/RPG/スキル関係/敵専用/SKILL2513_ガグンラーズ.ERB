@ACTION_2513,ARG,ARG:1
#LOCALSIZE 3

IF SKILL_CHANGE(ARG, 1513) && CFLAG:ARG:ボスフラグ && FLAG:現던전 == 13
	FOR LOCAL,1,7
		SIF POS(LOCAL) < 0
			CONTINUE
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = -16
		NEXT
	NEXT
	FOR LOCAL,0,6
		CFLAG:ARG:(GET_BATTLESTATUS(LOCAL) + "강화") = 32
	NEXT
	PRINTFORML 아군전체의 모든 능력이 최대까지 내려갔다！
	PRINTFORMW %CALLNAME:ARG%의 모든 능력이 최대까지 올라갔다！
ELSEIF SKILL_CHANGE(ARG, 4220) && CFLAG:ARG:ボスフラグ
	FOR LOCAL,1,7
		SIF POS(LOCAL) < 0
			CONTINUE
		PRINTFORM 　　TARGET:[{LOCAL,2}] %CALLNAME:POS(LOCAL),20,LEFT%　>>>>>>　
		LOCAL:1 = BASE:POS(LOCAL):ＨＰ * 20/100
		PRINTFORML {LOCAL:1}데미지
		CALL VAR_HP(POS(LOCAL), -LOCAL:1, 0)
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = MAX(-16, CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") - 4)
		NEXT
	NEXT
	PRINTFORMW 아군전체의 모든 능력이 내려갔다！
ELSEIF SKILL_CHANGE(ARG, 4219) && CFLAG:ARG:ボスフラグ
	FOR LOCAL,0,6
		CFLAG:ARG:(GET_BATTLESTATUS(LOCAL) + "강화") = MIN(32, CFLAG:ARG:(GET_BATTLESTATUS(LOCAL) + "강화") + 4)
	NEXT
	CFLAG:ARG:무효フラグ = 1
	PRINTFORML %CALLNAME:ARG%의 모든 능력이 오르고、모든공격이 무효화됐다！
ELSEIF SKILL_CHANGE(ARG, [[キャラ:미카엘]]) && CFLAG:ARG:ボスフラグ && FLAG:現던전 == 96
	FOR LOCAL,0,6
		CFLAG:ARG:(GET_BATTLESTATUS(LOCAL) + "강화") = MIN(32, CFLAG:ARG:(GET_BATTLESTATUS(LOCAL) + "강화") + 4)
	NEXT
	FOR LOCAL , 0 , FLAG:相性数
		CALL SKILL_WALL , ARG , GET_TYPE(LOCAL) , CPOS(ARG) , 1 , "非표시"
	NEXT
	PRINTFORML %CALLNAME:ARG%의 모든 능력이 오르고、모든 속성이 무효화됐다！
ELSEIF SKILL_CHANGE(ARG, [[キャラ:아수라왕]]) && CFLAG:ARG:ボスフラグ && FLAG:現던전 == 96
	FOR LOCAL,1,7
		SIF POS(LOCAL) < 0
			CONTINUE
		PRINTFORM 　　TARGET:[{LOCAL,2}] %CALLNAME:POS(LOCAL),20,LEFT%　>>>>>>　
		LOCAL:1 = MAXBASE:POS(LOCAL):ＨＰ * 25/100
		PRINTFORML {LOCAL:1}데미지
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = MAX(-16, CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") - 4)
		NEXT
		CALL VAR_HP(POS(LOCAL), -LOCAL:1, 0)
	NEXT
	PRINTFORMW 아군전체의 모든 능력이 내려갔다！
	
ELSEIF SKILL_CHANGE(ARG, [[キャラ:카마조츠]]) && CFLAG:ARG:ボスフラグ && FLAG:現던전 == 13
	CALL ACTION_1032,ARG,19
	CALL ACTION_1732,ARG,19
ELSE
	CFLAG:ARG:クリティカル강화 = 8
	FOR LOCAL, 1, 7
		SIF POS(LOCAL) < 0
			CONTINUE
		CFLAG:POS(LOCAL):검격무효화횟수 = 0
		CFLAG:POS(LOCAL):전격무효화횟수 = 0
		CFLAG:POS(LOCAL):물리반사フラグ = 0
		CFLAG:POS(LOCAL):마법반사フラグ = 0
		CFLAG:POS(LOCAL):무효フラグ = 0
		CFLAG:POS(LOCAL):방어강화 = MAX(-16, CFLAG:POS(LOCAL):방어강화 - 4)
	NEXT
	PRINTFORMW 아군전체의 모든 능력이 내려갔다！
ENDIF



