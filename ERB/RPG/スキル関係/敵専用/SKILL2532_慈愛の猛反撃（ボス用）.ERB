	SIF POS(ループ用) < 0 || POS(ループ用) == ARG
		CONTINUE
	;아군のうち誰かが피탄していたら반격フラグを立てる
	IF GETBIT(CFLAG:(POS(ループ用)):받음플래그,18) || GETBIT(CFLAG:(POS(ループ用)):받음플래그,19)
		ぶん殴りスイッチ = 1
		BREAK
	ENDIF
NEXT

