@SKILL_COUNTER_ACTIONABLE_2532,ARG,ARG:1
#DIM ループ用
#DIM ぶん殴りスイッチ

ぶん殴りスイッチ = 0
 
FOR ループ用, 7, 16
	SIF POS(ループ用) < 0 || POS(ループ用) == ARG
		CONTINUE
	;味方のうち誰かが被弾していたら反撃フラグを立てる
	IF GETBIT(CFLAG:(POS(ループ用)):받음플래그,18) || GETBIT(CFLAG:(POS(ループ用)):받음플래그,19)
		ぶん殴りスイッチ = 1
		BREAK
	ENDIF
NEXT

SIF ぶん殴りスイッチ < 1
	RETURN 0
SIF ARG:1 < 0 || GET_STATE(CFLAG:(ARG:1):상태이상) == "DYING"
	RETURN 0
RETURN 1

