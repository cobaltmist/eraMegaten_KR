	RETURN 0
;攻撃スキルじゃなければNG
RESULT = 1
TRYCALLFORM SKILL_EFECT_{CFLAG:(ARG:1):입력행동}
SIF RESULT != 1
	RETURN 0
;単体攻撃じゃなければNG
