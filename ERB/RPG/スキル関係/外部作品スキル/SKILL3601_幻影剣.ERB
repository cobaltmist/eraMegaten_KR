	LOCAL:3 = CFLAG:ARG:타겟
	IF ARG:1 == 19
		LOCAL:1 = 1
		LOCAL:2 = 7
	ELSEIF ARG:1 == 22
		LOCAL:1 = 7
		LOCAL:2 = 17
	ENDIF
	FOR LOCAL, LOCAL:1, LOCAL:2
		SIF POS(LOCAL) < 0
			CONTINUE
		SIF GET_STATE(CFLAG:POS(LOCAL):상태이상) == "DYING"
			CONTINUE
		CFLAG:ARG:타겟 = LOCAL
		CALL ATTACK_SINGLE, ARG, POS(LOCAL),3601,1
	NEXT
	CFLAG:ARG:타겟 = LOCAL:3
ENDIF
