	SIF POS(CFLAG:ARG:타겟) < 0 || GET_STATE(CFLAG:POS(CFLAG:ARG:타겟):상태이상) == "DYING"
		RETURN 0
	CALL SKILLGAGE_H_SET,ARG,3601,2
	RESULT:1 = CFLAG:ARG:타겟
ELSEIF CFLAG:ARG:타겟 < 20
	CALL SKILLGAGE_H_SET,ARG,3601,3
	RESULT:1 = 19
ELSE
	CALL SKILLGAGE_H_SET,ARG,3601,3
