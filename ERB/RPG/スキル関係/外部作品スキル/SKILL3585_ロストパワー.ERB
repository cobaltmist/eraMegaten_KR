;스킬 및 행동의 실행
;====================================================
@ACTION_3585,ARG,ARG:1
#LOCALSSIZE 2
#LOCALSIZE 3
#DIM LCOUNT,2
#DIM HACKING_D
#DIM HACKING_H
HACKING_D = SKILLGAGE_D_GET(ARG,3581)
HACKING_H = SKILLGAGE_H_GET(ARG,3581)
IF HACKING_D > 0 && HACKING_H > -1 && GET_STATE(CFLAG:HACKING_H:상태이상) != "DYING" && CPOS(HACKING_H) > 0
	ARG:1 = CPOS(HACKING_H)
	LOCAL:1 = BASE:HACKING_H:ＨＰ
	CALL ATTACK_SINGLE, ARG, HACKING_H,3585,1
	IF POS(ARG:1) > 0 && LOCAL:1 > BASE:POS(ARG:1):ＨＰ && GET_STATE(CFLAG:POS(ARG:1):상태이상) != "DYING"
		LCOUNT:0 = -1
		LCOUNT:1 = -1
		FOR LOCAL,0,2
			$LP
			LCOUNT:LOCAL = RAND:5
			SIF LCOUNT:LOCAL > 2
				LCOUNT:LOCAL ++
			SIF LOCAL == 1 && LCOUNT:0 == LCOUNT:1
				GOTO LP
			IF LCOUNT:LOCAL == 1
				CFLAG:POS(ARG:1):(GET_BATTLESTATUS(LCOUNT:LOCAL  ) + "강화") = MAX(-16, CFLAG:POS(ARG:1):(GET_BATTLESTATUS(LCOUNT:LOCAL  ) + "강화") - 4)
				CFLAG:POS(ARG:1):(GET_BATTLESTATUS(LCOUNT:LOCAL+2) + "강화") = MAX(-16, CFLAG:POS(ARG:1):(GET_BATTLESTATUS(LCOUNT:LOCAL+2) + "강화") - 4)
				LOCALS:LOCAL= 명중・회피
			ELSE
				CFLAG:POS(ARG:1):(GET_BATTLESTATUS(LCOUNT:LOCAL) + "강화") = MAX(-16, CFLAG:POS(ARG:1):(GET_BATTLESTATUS(LCOUNT:LOCAL) + "강화") - 4)
				LOCALS:LOCAL = %GET_BATTLESTATUS(LCOUNT:LOCAL)%
			ENDIF
		NEXT
		PRINTFORMW 　　　　　　　　　　　　　　　　　　　　　　　　　　　　　 　%조사처리(LOCALS, "와")% %조사처리(LOCALS:1, "를")% 낮췄다
	ENDIF
ELSE
	PRINTW 실패했다！
ENDIF



