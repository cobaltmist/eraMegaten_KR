;====================================================
;トリガー発動条件
;====================================================
@SKILL_TRIGGER_ACTIONABLE_3630, ARG, ARG:1
#DIM ROCK_H
#DIM ループ用
#DIM 攻撃前敵カウント
#DIM 攻撃後敵カウント
#DIM 差分
#DIM 加算クードス

;自分じゃなければNG
SIF ARG != ARG:1
	RETURN 0
;X-ROSS DISASTER,SONG OF DIVA,DARKNESS TRIGGERならNG
SIF CFLAG:(ARG:1):입력행동 == [[스킬:X-ROSS DISASTER]] || CFLAG:(ARG:1):입력행동 == [[스킬:SONG OF DIVA]] || CFLAG:(ARG:1):입력행동 == [[스킬:DARKNESS TRIGGER]]
	RETURN 0
;EXウェポン2番=オービタルエッジじゃないとNG
SIF SKILLGAGE_F_GET(ARG, [[스킬:DARKNESS TRIGGER]]) != 2
	RETURN 0
;ロック状態の敵が健在かつダークネストリガー発動中
IF BLITZ_TARGET_JUDG(ARG) == 1 && SKILLGAGE_H_GET(ARG, [[스킬:DARKNESS TRIGGER]]) == 1
	;1桁は被弾回数,2桁以上はターゲットを割り当てるようにした
	ROCK_H = SKILLGAGE_H_GET(ARG, [[스킬:블리츠대쉬]]) / 10
	攻撃前敵カウント = 0
	攻撃後敵カウント = 0
	IF CFLAG:ARG:PT플래그 > 0
		FOR ループ用, 7, 17
			LOCALS = 포지션{ループ用}
			SIF FLAG:LOCALS == -1
				CONTINUE
			SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
				CONTINUE
			攻撃前敵カウント += 1
		NEXT
	ENDIF
	
	SETCOLOR 0x9933cd
	PRINTFORML ┏>CHARA━━━━━━━━━━┓　┏>ACT━━━━━━━━━━━━━━━━━━┓
	PRINTFORM ┃[{CPOS(ARG), 2}] %"ＲｏＲｏ",21,LEFT%┃　┃
	PRINTFORML %"오비탈에지",40,LEFT%┃
	PRINTFORMW ┗━━━━━━━━━━━━━┛　┗━━━━━━━━━━━━━━━━━━━━┛
	RESETCOLOR
	CALL SKILLGAGE_D_SET, ARG, [[스킬:오비탈에지]], 1
	CALL ATTACK_SINGLE, ARG, ROCK_H, 3630
	
	IF CFLAG:ARG:PT플래그 > 0
		FOR ループ用, 7, 17
			LOCALS = 포지션{ループ用}
			SIF FLAG:LOCALS == -1
				CONTINUE
			SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
				CONTINUE
			攻撃後敵カウント += 1
		NEXT
	ENDIF
	
	差分 = 攻撃前敵カウント - 攻撃後敵カウント
	
	IF 差分 > 0
		加算クードス = 20
		IF EQUIP:ARG:악세서리 == [[아이템:무모함의증거]]
			TIMES 加算クードス, 1.25
		ELSEIF EQUIP:ARG:악세서리 == [[아이템:무기력의부적]]
			TIMES 加算クードス, 0.5
		ENDIF
		PRINTFORMW AERIAL EX　Kudos + {加算クードス}
		CALL SKILLGAGE_F_ADD, ARG, [[스킬:블리츠대쉬]], 加算クードス
	ENDIF
	IF EQUIP:ARG:악세서리 == [[아이템:무기력의부적]]
		;アパシーマンの上限は1200
		SIF SKILLGAGE_F_GET(ARG, [[스킬:블리츠대쉬]]) > 1200
			CALL SKILLGAGE_F_SET, ARG, [[스킬:블리츠대쉬]], 1200
	ELSE
		;上限は99999
		SIF SKILLGAGE_F_GET(ARG, [[스킬:블리츠대쉬]]) > 99999
			CALL SKILLGAGE_F_SET, ARG, [[스킬:블리츠대쉬]], 99999
	ENDIF
ENDIF
RETURN 0

;====================================================
;스킬 및 행동의 실행
;====================================================
@ACTION_3630, ARG, ARG:1
#DIM ROCK_H
#DIM ループ用
#DIM 攻撃前敵カウント
#DIM 攻撃後敵カウント
#DIM 差分
#DIM 加算クードス

SIF ARG < 0
	CALL ATTACK_SINGLE, ARG, POS(ARG:1), 3630

攻撃前敵カウント = 0
攻撃後敵カウント = 0
IF CFLAG:ARG:PT플래그 > 0
	FOR ループ用, 7, 17
		LOCALS = 포지션{ループ用}
		SIF FLAG:LOCALS == -1
			CONTINUE
		SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
			CONTINUE
		攻撃前敵カウント += 1
	NEXT
ENDIF

;ロック中かつロック対象が生存中なら強制的にロック対象へ攻撃
IF ARG:1 == 23
	IF BLITZ_TARGET_JUDG(ARG) == 1
		ROCK_H = SKILLGAGE_H_GET(ARG, [[스킬:블리츠대쉬]]) / 10
		CALL SKILLGAGE_D_SET, ARG, [[스킬:오비탈에지]], 1
		CALL ATTACK_SINGLE, ARG, ROCK_H, 3630
	ENDIF
ELSE
	CALL ATTACK_SINGLE, ARG, POS(ARG:1), 3630
ENDIF

IF CFLAG:ARG:PT플래그 > 0
	FOR ループ用, 7, 17
		LOCALS = 포지션{ループ用}
		SIF FLAG:LOCALS == -1
			CONTINUE
		SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
			CONTINUE
		攻撃後敵カウント += 1
	NEXT
ENDIF

差分 = 攻撃前敵カウント - 攻撃後敵カウント

IF 差分 > 0
	加算クードス = 20
	IF EQUIP:ARG:악세서리 == [[아이템:무모함의증거]]
		TIMES 加算クードス, 1.25
	ELSEIF EQUIP:ARG:악세서리 == [[아이템:무기력의부적]]
		TIMES 加算クードス, 0.5
	ENDIF
	PRINTFORMW AERIAL EX　Kudos + {加算クードス}
	CALL SKILLGAGE_F_ADD, ARG, [[스킬:블리츠대쉬]], 加算クードス
ENDIF
IF EQUIP:ARG:악세서리 == [[아이템:무기력의부적]]
	;アパシーマンの上限は1200
	SIF SKILLGAGE_F_GET(ARG, [[스킬:블리츠대쉬]]) > 1200
		CALL SKILLGAGE_F_SET, ARG, [[스킬:블리츠대쉬]], 1200
ELSE
	;上限は99999
	SIF SKILLGAGE_F_GET(ARG, [[스킬:블리츠대쉬]]) > 99999
		CALL SKILLGAGE_F_SET, ARG, [[스킬:블리츠대쉬]], 99999
ENDIF

;EXウェポン2番=オービタルエッジ
CALL SKILLGAGE_F_SET, ARG, [[스킬:DARKNESS TRIGGER]], 2
