		ELSE
			PRINTFORML [{ARG:1}]%CALLNAME:LOCAL,20% >>>>> 검격무효화횟수소거！
		ENDIF
	ENDIF
ENDSELECT
IF GET_STATE(CFLAG:LOCAL:상태이상) == "DYING"
	IF SKILLGAGE_H_GET(ARG,3539) == 0
		CALL YUCHOGE_SET,ARG,5
	ELSE
		CALL YUCHOGE_SET,ARG,LOCAL
	ENDIF
ENDIF
