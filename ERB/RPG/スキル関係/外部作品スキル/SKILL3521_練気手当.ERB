@ACTION_3521, ARG, ARG:1
#LOCALSIZE 3
ARG:1 = ARG
IF SKILL_CHANGE(ARG, [[キャラ:아큐라(X)]]) && CSTR:ARG:100 == "X2"
	CALL ALL_HEAL, ARG, ARG, 0
ELSE
	IF BASE:ARG:LV >= 24
		CALL SKILL_CURE_STATE_3521, CFLAG:ARG:상태이상
		IF RESULT == 1
			SIF GET_STATE(CFLAG:LOCAL:상태이상) == "PANIC" || GET_STATE(CFLAG:LOCAL:상태이상) == "CHARM"
				CFLAG:LOCAL:혼란매료리커버 = 1
			PRINTFORML 　　TARGET:[{ARG,2}] %CALLNAME:ARG,20,LEFT%　>>>>>>　상태회복！
			CFLAG:ARG:상태이상 = 0
			CFLAG:ARG:상태이상경과턴수 = 0
		ENDIF
	ENDIF
	CALL SKILL_POWER_3521
	LOCAL:1 = RESULT
	LOCAL:2 = LOCAL:1 * (MAXBASE:ARG:마법효과/4+(MAXBASE:ARG:마법위력 / 8+10)) /50
	PRINTFORM 　　TARGET:[{CPOS(ARG),2}] %CALLNAME:(ARG),20,LEFT%　>>>>>>　
	CALL 상성소질체크, ARG, 4, 0
	SIF RESULT == 1
		LOCAL:2 = LOCAL:2 * 2
	SIF CFLAG:(ARG):상태이상 == GET_STATE_NUM("BRAND")
		LOCAL:2 = 1
	SIF CFLAG:(ARG):회복불능플래그
		LOCAL:2 = 0
	PRINTFORML {LOCAL:2}회복
	CALL VAR_HP, (ARG), LOCAL:2, 3
ENDIF


