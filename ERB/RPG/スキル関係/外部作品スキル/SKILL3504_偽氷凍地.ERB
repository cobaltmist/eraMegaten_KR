@SKILL_TYPE_3504,ARG
#LOCALSSIZE 3
#LOCALSIZE 4
SIF ARG < 0 || 스킬속성표시中
	RETURN GET_TYPE_NUM("빙결")
SIF CFLAG:ARG:ターゲット > 16 || CFLAG:ARG:ターゲット < 1
	RETURN GET_TYPE_NUM("전술")
LOCAL = POS(CFLAG:ARG:ターゲット)
SIF LOCAL < 0
	RETURN GET_TYPE_NUM("빙결")
	
LOCAL:2 = -300
;全部-400とかないとおもうけど、あったらあれなんで、핵열をいれとく
LOCALS = 빙결
LOCALS:1 = 전술
LOCALS:2 = 빙결
FOR LOCAL:1, 1, 3
	;판정用に数値を仕舞う。반사は-200扱い
	LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
	SIF CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"가드킬") && LOCAL:3 < 100
		LOCAL:3 = 100
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"무효화횟수") ? 0 # LOCAL:3
	SIF LOCAL:1 == 1
		LOCAL:3 = LOCAL:1 == 1 && CFLAG:LOCAL:물리반사フラグ ? -200 # LOCAL:3
	SIF LOCAL:1 == 2
		LOCAL:3 = LOCAL:1 == 1 && CFLAG:LOCAL:마법반사フラグ ? -200 # LOCAL:3
	IF LOCAL:3 > LOCAL:2
		LOCAL:2 = LOCAL:3
		LOCALS = %LOCALS:(LOCAL:1)%
	ENDIF
NEXT
RETURN GET_TYPE_NUM(LOCALS)
