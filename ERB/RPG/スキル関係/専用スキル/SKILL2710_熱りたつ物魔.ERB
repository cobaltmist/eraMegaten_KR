
;스킬명
@SKILL_NAME_2710,ARG
#LOCALSSIZE 1
#LOCALSIZE 9
#DIM LCOUNT,2
#DIM L_T

LOCAL:3 = 7
LOCAL:4 = 15
LOCAL:5 = 16
RESULTS = 분노의
IF FLAG:행동순1 > -1 && FLAG:행동순1 == ARG && CFLAG:ARG:타겟 < 17 && CFLAG:ARG:타겟 > 0 && POS(CFLAG:ARG:타겟) >= 0
	L_T = POS(CFLAG:ARG:타겟)
	CFLAG:ARG:분노약점부여 = 0
	LOCAL:7 = -1000
	LOCAL:8 = 0
	FOR LCOUNT:1, 0, 2
		FOR LCOUNT, 3, 6
			LOCALS = %GET_TYPE(LOCAL:LCOUNT)%
			LOCAL:6 = MAXBASE:L_T:LOCALS == 999 ? -200 # MAXBASE:L_T:LOCALS
			SIF CFLAG:L_T:(LOCALS+"가드킬") && LOCAL:6 < 100
				LOCAL:6 = 100
			LOCAL:6 = CFLAG:L_T:(LOCALS +"무효화횟수") ? 0 # LOCAL:6
			LOCAL:6 = CFLAG:L_T:무효플래그 ? 0 # LOCAL:6
			LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 1 ? 0 # LOCAL:6
			LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 2 ? -50 # LOCAL:6
			LOCAL:6 = CFLAG:L_T:마법반사플래그 ? -200 # LOCAL:6
			LOCAL:6 = CFLAG:L_T:(LOCALS +"웨이트") == 3 ? -200 # LOCAL:6
			IF LCOUNT:1 == 0
				SIF LOCAL:7 < LOCAL:6
					LOCAL:7 = LOCAL:6
			ELSEIF LOCAL:7 == LOCAL:6
				LOCAL:(LOCAL:8) = LCOUNT
				LOCAL:8 ++
			ENDIF
		NEXT
	NEXT
	IF LOCAL:8 < 1 || LOCAL:8 > 2
		CFLAG:ARG:분노속성 = LOCAL:(RAND:3 + 3)
	ELSEIF LOCAL:8 == 1
		CFLAG:ARG:분노속성 = LOCAL
	ELSE
		CFLAG:ARG:분노속성 = LOCAL:(RAND:(LOCAL:8))
	ENDIF
	IF CFLAG:ARG:분노속성 == 7
		$IKIRI1
		SETBIT CFLAG:ARG:분노약점부여,15
		SETBIT CFLAG:ARG:분노약점부여,16
		RESULTS += "폭풍"
	ELSEIF CFLAG:ARG:분노속성 == 15
		$IKIRI2
		SETBIT CFLAG:ARG:분노약점부여,7
		SETBIT CFLAG:ARG:분노약점부여,16
		RESULTS += "성압"
	ELSEIF CFLAG:ARG:분노속성 == 16
		$IKIRI3
		SETBIT CFLAG:ARG:분노약점부여,7
		SETBIT CFLAG:ARG:분노약점부여,15
		RESULTS += "열핵"
	ELSE
		SIF !RAND:3
			GOTO IKIRI1
		SIF !RAND:2
			GOTO IKIRI2
		GOTO IKIRI3
	ENDIF
ELSE
	SIF ARG > 0
		CFLAG:ARG:분노속성 = LOCAL:(RAND:3 + 3)
	RESULTS += "물마"
ENDIF

