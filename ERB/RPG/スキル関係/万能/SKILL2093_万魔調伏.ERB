SIF LOCAL < 0
	RETURN GET_TYPE_NUM("만능")
SIF LOCAL < 0 || (CFLAG:LOCAL:물리반사フラグ && CFLAG:LOCAL:마법반사フラグ) || CFLAG:LOCAL:무효フラグ
	RETURN GET_TYPE_NUM("만능")
LOCAL:2 = -1000
LOCALS = 만능
LOCALS:1 = 검격
LOCALS:2 = 비구
LOCALS:3 = 타격
LOCALS:4 = 전술
LOCALS:5 = 화염
LOCALS:6 = 빙결
LOCALS:7 = 전격
LOCALS:8 = 충격
LOCALS:9 = 신경
LOCALS:10 = 정신
LOCALS:11 = 파마
LOCALS:12 = 주살
LOCALS:13 = 지변
LOCALS:14 = 수격
LOCALS:15 = 질풍
LOCALS:16 = 중력
LOCALS:17 = 핵열
LOCALS:18 = 만능

FOR LOCAL:1, 1, 19
	;판정用に数値を仕舞う。반사は-200扱い
	LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"무효화횟수") ? -5 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"가드킬") && LOCAL:3 < 100 ? 100 # LOCAL:3
	SELECTCASE LOCAL:1
		CASE 1 TO 4
			LOCAL:3 = CFLAG:LOCAL:물리반사フラグ ? -200 # LOCAL:3
		CASE 2 TO 17
			LOCAL:3 = CFLAG:LOCAL:마법반사フラグ ? -200 # LOCAL:3
		CASEELSE
	ENDSELECT
	IF LOCAL:3 > LOCAL:2
		LOCAL:2 = LOCAL:3
		LOCALS = %LOCALS:(LOCAL:1)%
	ENDIF
NEXT
RETURN GET_TYPE_NUM(LOCALS)

