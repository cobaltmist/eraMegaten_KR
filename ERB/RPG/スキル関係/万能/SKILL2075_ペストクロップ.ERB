@ACTION_2075,ARG,ARG:1
IF CFLAG:(ARG):PT플래그 == 0
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF

FOR LOCAL,LOCAL:7,LOCAL:8
	LOCALS = 포지션{LOCAL}
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF CFLAG:(FLAG:LOCALS):상태이상 == GET_STATE_NUM("DYING")
		CONTINUE
	CALL ATTACK_SINGLE,ARG,FLAG:LOCALS,2075
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF CFLAG:(FLAG:LOCALS):상태이상 != GET_STATE_NUM("POISON")
		CONTINUE
	PRINTFORM 　　TARGET:[{LOCAL,2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
	CALL ATTACK_BADSTATE,ARG,FLAG:LOCALS,GET_STATE_NUM("DYING"),17,200,95
NEXT

