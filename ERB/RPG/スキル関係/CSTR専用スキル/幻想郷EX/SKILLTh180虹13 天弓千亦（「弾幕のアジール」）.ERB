@ACTION_「弾幕のアジール」,ARG,ARG:1,SKILL_NUM
#DIM SKILL_NUM
#DIM アジールリキャスト
アジールリキャスト = PU_SKILLNUM_GET(ARG,"「弾幕のアジール」")

	;デ・クンダ部分
	IF CFLAG:(ARG):PT플래그 == 0
		LOCAL:2 = 7
		LOCAL:3 = 17
	ELSE
		LOCAL:2 = 1
		LOCAL:3 = 7
	ENDIF

	FOR LOCAL,LOCAL:2,LOCAL:3
		SIF POS(LOCAL) < 0
			CONTINUE
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = MAX(0, CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화"))
		NEXT
	NEXT
	PRINTFORML \@ CFLAG:ARG:PT플래그 > 0 ? 아군 # 적 \@의 운다효과를 지워버렸다！
	
	;デ・カジャ部分
	IF CFLAG:(ARG):PT플래그 == 0
		LOCAL:2 = 1
		LOCAL:3 = 7
	ELSE
		LOCAL:2 = 7
		LOCAL:3 = 17
	ENDIF
	FOR LOCAL,LOCAL:2,LOCAL:3
		SIF POS(LOCAL) < 0
			CONTINUE
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = MIN(0, CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화"))
		NEXT
	NEXT
	PRINTFORML \@ CFLAG:ARG:PT플래그 == 2 ? 적 # 아군 \@의 카쟈효과를 지워버렸다！

IF CFLAG:(ARG):PT플래그
	;LOCAL:9に対象者、ARGに使用者、PTフラグ == 2はPTにいる仲間、PTフラグ == 1はPTにいない仲間、PTフラグ == 0は敵
	FOR LOCAL:9, 0, CHARANUM
		;使用者はスルー
		SIF (LOCAL:9) == ARG
			CONTINUE
		;PTに居ない人間は無理
		SIF CFLAG:(LOCAL:9):PT플래그 == 1 && (ABL:(LOCAL:9):종족 == 0 || ABL:(LOCAL:9):종족 > 45)
			CONTINUE
		;レンタル中は排除
		SIF CFLAG:(LOCAL:9):노역플래그 == 3
			CONTINUE
		SIF TALENT:(LOCAL:9):비전투원
			CONTINUE
		;ＣＯＭＰにもPTにもいない悪魔を排除
		SIF CFLAG:(LOCAL:9):소속ＣＯＭＰ == -1 && CFLAG:(LOCAL:9):PT플래그 < 2
			CONTINUE
		SIF CFLAG:(LOCAL:9):이자리에없는플래그 == 1
			CONTINUE
		SIF CFLAG:(LOCAL:9):PT플래그 == 0
			CONTINUE

		IF CFLAG:(LOCAL:9):상태이상 == GET_STATE_NUM("DYING")
			CFLAG:(LOCAL:9):상태이상 = 0
			CFLAG:(LOCAL:9):상태이상경과턴수 = 0
			CALL VAR_HP, (LOCAL:9), MAXBASE:(LOCAL:9):ＨＰ/3
			PRINTFORML %조사처리(CALLNAME:(LOCAL:9),"는")% 되살아났다
		ENDIF
	NEXT
;敵が使った場合
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
	FOR LOCAL:9, LOCAL:7, LOCAL:8
		LOCALS = 포지션{LOCAL:9}
		SIF FLAG:LOCALS < 0
			CONTINUE
		LOCAL = FLAG:LOCALS
		CALL SKILL_CURE_STATE_「弾幕のアジール」, CFLAG:LOCAL:상태이상
		IF RESULT == 1
			PRINTFORML 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>>　되살아났다
			CFLAG:LOCAL:상태이상 = 0
			CFLAG:LOCAL:상태이상경과턴수 = 0
			CALL VAR_HP, (LOCAL), MAXBASE:(LOCAL):ＨＰ/4
		ENDIF
	NEXT
ENDIF
WAIT

