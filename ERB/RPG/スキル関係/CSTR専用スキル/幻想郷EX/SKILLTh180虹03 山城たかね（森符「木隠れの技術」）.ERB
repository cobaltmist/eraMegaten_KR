	LOCAL:1 = 7
	LOCAL:2 = 17
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF

FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	CFLAG:POS(LOCAL):크리티컬강화 = MIN(8, CFLAG:POS(LOCAL):크리티컬강화 + 3)
	CFLAG:POS(LOCAL):회피강화 = MIN(32, CFLAG:POS(LOCAL):회피강화 + 4)
