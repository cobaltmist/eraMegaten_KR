@ACTION_禍星「星火燎原の舞」,ARG,ARG:1,SKILL_NUM
#DIM SKILL_NUM
#LOCALSIZE 3
IF CFLAG:(ARG):PT플래그 == 0
	LOCAL:1 = 7
	LOCAL:2 = 17
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF

FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	IF CFLAG:POS(LOCAL):마법위력강화 == 32
		CFLAG:POS(LOCAL):공격강화 = MIN(32, CFLAG:POS(LOCAL):공격강화 + 4)
	ELSEIF CFLAG:POS(LOCAL):마법위력강화 > 0
		CFLAG:POS(LOCAL):마법위력강화 = MIN(32, CFLAG:POS(LOCAL):마법위력강화 + 8)
	ELSE
		CFLAG:POS(LOCAL):마법위력강화 = MIN(32, CFLAG:POS(LOCAL):마법위력강화 + 4)
	ENDIF
	IF CFLAG:POS(LOCAL):명중강화 == 32
		CFLAG:POS(LOCAL):회피강화 = MIN(32, CFLAG:POS(LOCAL):회피강화 + 4)
	ELSEIF CFLAG:POS(LOCAL):명중강화 > 0
		CFLAG:POS(LOCAL):명중강화 = MIN(32, CFLAG:POS(LOCAL):명중강화 + 8)
	ELSE
		CFLAG:POS(LOCAL):명중강화 = MIN(32, CFLAG:POS(LOCAL):명중강화 + 4)
	ENDIF
	IF CFLAG:POS(LOCAL):마법효과강화 == 32
		CFLAG:POS(LOCAL):방어강화 = MIN(32, CFLAG:POS(LOCAL):방어강화 + 4)
	ELSEIF CFLAG:POS(LOCAL):마법효과강화 > 0
		CFLAG:POS(LOCAL):마법효과강화 = MIN(32, CFLAG:POS(LOCAL):마법효과강화 + 8)
	ELSE
	CFLAG:POS(LOCAL):마법효과강화 = MIN(32, CFLAG:POS(LOCAL):마법효과강화 + 4)
	ENDIF
NEXT

