;====================================================
;스킬 및 행동의 실행
;====================================================
@ACTION_ブルズアイ！, ARG, ARG:1, SKILL_NUM
#LOCALSIZE 4
#DIM SKILL_NUM

;ガードキル処理
IF ARG:1 == 19
	LOCAL:2 = 1
	LOCAL:3 = 7
ELSE
	LOCAL:2 = 7
	LOCAL:3 = 17
ENDIF

FOR LOCAL, LOCAL:2, LOCAL:3
	SIF POS(LOCAL) == -1 || CFLAG:POS(LOCAL):상태이상 == GET_STATE_NUM("DYING")
		CONTINUE
	LOCAL:1 = 1
	SIF CFLAG:ARG:PT플래그 == 0
		LOCAL:1 = 4
	IF LOCAL:1 > CFLAG:POS(LOCAL):비구무효화횟수
		LOCAL:1 -= CFLAG:POS(LOCAL):비구무효화횟수
		CFLAG:POS(LOCAL):비구무효화횟수 = 0
		IF LOCAL:1 >= CFLAG:POS(LOCAL):비구가드킬
			CFLAG:POS(LOCAL):비구가드킬 = LOCAL:1
			PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> {LOCAL:1}ターン、飛具への耐性を無効化！
		ENDIF
	ELSE
		CFLAG:POS(LOCAL):비구무효화횟수 -= LOCAL:1
		PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> 飛具무효화횟수가 감소！
	ENDIF
NEXT

CFLAG:ARG:베어내기플래그 = 1
CALL SKILLGAGE_F_ADD, ARG, SKILL_NUM,1
CALL ATTACK_SINGLE,ARG,POS(ARG:1),SKILL_NUM

