	;소비없음＝1

;　코스트량
@SKILL_COST_死亡告知,ARG
;「出でよ神流五人衆」からコピペしました
#DIM 死亡告知待機
	死亡告知待機 = PU_SKILLNUM_GET(ARG, "死亡告知")

	;敵ボスが使用する場合、待機なしかつMP消費極低
	SIF ARG >= 0 && CFLAG:ARG:보스플래그
		RETURN 1

	;発射準備済み
	IF SKILLGAGE_H_GET(ARG, 死亡告知待機)
		RETURN 0
	;発射準備まだ（準備のときにMPを消費する）
	;使用に２ターンかかる威力750の万能攻撃＝１ターンあたり威力375
	;メギドラが威力295で消費35
	;増加要因：呪殺相性との複合、高い命中率、超高確率即死
	;減少要因：呪殺相性のビミョーさ、準備ターンが発生する取り回しの悪さ、専用スキルである
	;……ということで、消費は40程度に
	ELSE
		RETURN 40
	ENDIF


;　상성
@SKILL_TYPE_死亡告知,ARG
#LOCALSSIZE 3
#LOCALSIZE 4
#DIM 死亡告知待機

死亡告知待機 = PU_SKILLNUM_GET(ARG, "死亡告知")
IF SKILLGAGE_H_GET(ARG, 死亡告知待機)
	;万能、呪殺の複合、基本相性は呪殺
	SIF ARG == -1
		RETURN GET_TYPE_NUM("주살")
	SIF CFLAG:ARG:타겟 > 16 || CFLAG:ARG:타겟 < 1
		RETURN GET_TYPE_NUM("주살")
	LOCAL = POS(CFLAG:ARG:타겟)
	SIF LOCAL < 0
		RETURN GET_TYPE_NUM("주살")
	LOCAL:2 = -1000
	LOCALS = 주살
	LOCALS:1 = 주살
	LOCALS:2 = 만능

	FOR LOCAL:1, 1, 3
		;判定用に数値を仕舞う。反射は-200扱い
		LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
		LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"무효화횟수") ? 0 # LOCAL:3
		IF LOCAL:3 > LOCAL:2
			LOCAL:2 = LOCAL:3
			LOCALS = %LOCALS:(LOCAL:1)%
		ENDIF
	NEXT
	RETURN GET_TYPE_NUM(LOCALS)
ELSE
	RETURN GET_TYPE_NUM("주살")
ENDIF


