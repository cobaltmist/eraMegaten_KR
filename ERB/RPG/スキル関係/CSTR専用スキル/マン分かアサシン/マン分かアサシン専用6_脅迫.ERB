;====================================================
;ダメージ発動時
;====================================================
@SKILL_DAMAGE_EFFECT_脅迫,ARG,ARG:1
PRINTFORML 　{ARG}　{ARG:1}
SIF FLAG:(20000+NO:(ARG:1)) > 999 && SKILLGAGE_D_GET(ARG,PU_SKILLNUM_GET(ARG,"脅迫"))
	PRINTL 　　弱点を暴いた！
	;大嘘
;NP時は威力倍
IF SKILLGAGE_D_GET(ARG,PU_SKILLNUM_GET(ARG,"ノウブル・ファンタズム")) > 0
	CFLAG:(ARG:1):ＣＯＯＰフラグ = FLAG:(20000+NO:(ARG:1)) * FLAG:(20000+NO:(ARG:1)) / 1000
ELSE
	CFLAG:(ARG:1):ＣＯＯＰフラグ = FLAG:(20000+NO:(ARG:1)) * FLAG:(20000+NO:(ARG:1)) / 2000
ENDIF

;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_脅迫,ARG,ARG:1,SKILL_NUM
#DIM SKILL_NUM
PRINTFORML {ARG:1}
IF FLAG:(20000+NO:POS(ARG:1)) > 999 && CFLAG:POS(ARG:1):("精神ガードキル") < 1
	CALL SKILLGAGE_D_SET,ARG,PU_SKILLNUM_GET(ARG,"脅迫"),1
	CFLAG:POS(ARG:1):精神ガードキル = 1
	CALL RATE_ATTACK_SINGLE,ARG,POS(ARG:1),SKILL_NUM;	単体攻撃
	CFLAG:POS(ARG:1):精神ガードキル = 0
ELSE
	CALL RATE_ATTACK_SINGLE,ARG,POS(ARG:1),SKILL_NUM;	単体攻撃
ENDIF

