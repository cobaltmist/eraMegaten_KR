@ACTION_혹란랩소디,ARG,ARG:1,SKILL_NUM
#DIM SKILL_NUM
#LOCALSIZE 2

SKILL_NUM = PU_SKILLNUM_GET(ARG,"혹란랩소디")

CALL ATTACK_FIELD,ARG,ARG:1,SKILL_NUM
IF CFLAG:(ARG):PT플래그 == 0
	FOR LOCAL,1,7
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		CFLAG:(FLAG:LOCALS):공격강화 -= 4
		SIF CFLAG:(FLAG:LOCALS):공격강화 < -16
			CFLAG:(FLAG:LOCALS):공격강화 = -16
