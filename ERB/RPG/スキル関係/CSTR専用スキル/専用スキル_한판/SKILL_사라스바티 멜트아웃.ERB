@ACTION_사라스바티・멜트아웃,ARG,ARG:1,SKILL_NUM
#LOCALSIZE 5
#DIM SKILL_NUM

SKILL_NUM = PU_SKILLNUM_GET(ARG,"사라스바티・멜트아웃")

IF SKILL_CHANGE(ARG, [[キャラ:에레쉬키갈]])
	CFLAG:ARG:공격강화 = MIN(32, CFLAG:ARG:공격강화 + 8)
	PRINTFORMW 공격력이 크게 올라갔다！
	CALL ATTACK_FIELD,ARG,ARG:1,SKILL_NUM
ELSEIF SKILL_CHANGE(ARG, [[キャラ:린Fate]])
	CFLAG:ARG:공격강화 = MIN(32, CFLAG:ARG:공격강화 + 8)
	PRINTFORMW 공격력이 크게 올라갔다！
	CALL ATTACK_FIELD,ARG,ARG:1,SKILL_NUM
ELSEIF SKILL_CHANGE(ARG, [[キャラ:카마]])
	CFLAG:ARG:마법위력강화 = MIN(32, CFLAG:ARG:마법위력강화 + 8)
	PRINTFORMW 마법위력이 크게 올라갔다！
	LOCAL = POS(ARG:1)
	CALL ATTACK_SINGLE,ARG,LOCAL,SKILL_NUM
ELSEIF SKILL_CHANGE(ARG, [[キャラ:사쿠라]])
	CFLAG:ARG:마법위력강화 = MIN(32, CFLAG:ARG:마법위력강화 + 8)
	PRINTFORMW 마법위력이 크게 올라갔다！
	LOCAL = POS(ARG:1)
	CALL ATTACK_SINGLE,ARG,LOCAL,SKILL_NUM
ELSE
	LOCAL = POS(ARG:1)
	CALL ATTACK_SINGLE,ARG,LOCAL,SKILL_NUM

	IF ARG:1 == 19
		LOCAL:2 = 1
		LOCAL:3 = 7
	ELSE
		LOCAL:2 = 7
		LOCAL:3 = 17
	ENDIF

	FOR LOCAL,LOCAL:2,LOCAL:3
		SIF POS(LOCAL) < 0
			CONTINUE
		FOR LOCAL:1,0,6
			CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화") = MIN(0, CFLAG:POS(LOCAL):(GET_BATTLESTATUS(LOCAL:1) + "강화"))
		NEXT
	NEXT
	PRINTFORMW \@ CFLAG:ARG:PT플래그 == 2 ? 적 # 아군 \@의 강화된 능력이 돌아왔다！
ENDIF

