	LOCAL:1 = 7
	LOCAL:2 = 17 
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF
FOR LOCAL, LOCAL:1, LOCAL:2
	LOCALS = 포지션{LOCAL}
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
		CONTINUE
	CFLAG:ARG:타겟 = LOCAL
	CALL ATTACK_SINGLE, ARG, FLAG:LOCALS, SKILL_NUM
NEXT
