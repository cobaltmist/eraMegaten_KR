@SKILL_HIT_EFFECT_プラティーンランツェ,ARG,ARG:1
#DIM ピアッシングチェック
ピアッシングチェック = 0
IF CFLAG:ARG:타인집중플래그 > 0
	IF (MAXBASE:(ARG:1):검격 < 100 || MAXBASE:(ARG:1):검격 == 999) && CFLAG:(ARG:1):검격가드킬 < 1
		CFLAG:(ARG:1):검격가드킬 = 1
		ピアッシングチェック = 1
	ENDIF
	IF CFLAG:(ARG:1):물리반사플래그 == 1
		CFLAG:(ARG:1):마법반사플래그 = 0
		ピアッシングチェック = 1
	ENDIF
	IF CFLAG:(ARG:1):무효플래그 > 0
		CFLAG:(ARG:1):무효플래그 = 0
		ピアッシングチェック = 1
	ENDIF
	IF CFLAG:(ARG:1):검격무효화횟수 > 0
		CFLAG:(ARG:1):검격무효화횟수 = 0
		ピアッシングチェック = 1
	ENDIF
	IF ピアッシングチェック == 1
		PRINTFORML 　　TARGET:[{(ARG:1),2}] %CALLNAME:(ARG:1),20,LEFT%　>>>>>>　상성을 관통했다！
		CFLAG:ARG:타인집중플래그 = 0
	ENDIF
ENDIF

ピアッシングチェック = 0



