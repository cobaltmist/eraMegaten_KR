;스킬 및 행동의 실행
;====================================================
@ACTION_天使の剣舞,ARG,ARG:1,SKILL_NUM
#LOCALSIZE 3
#DIM SKILL_NUM

	IF SKILLGAGE_D_GET(U,3588)
	MAXBASE:ARG:공격 += MAXBASE:ARG:마법위력
	CFLAG:ARG:공격강화 += CFLAG:ARG:마법위력강화

	CALL ATTACK_FIELD,ARG,ARG:1,SKILL_NUM;			範囲攻撃(列、全体)

	MAXBASE:ARG:공격 -= MAXBASE:ARG:마법위력
	CFLAG:ARG:공격강화 -= CFLAG:ARG:마법위력강화
	CALL SKILLGAGE_D_SET,ARG,3588,0
ELSE
	CALL ATTACK_FIELD,ARG,ARG:1,SKILL_NUM;			範囲攻撃(列、全体)
ENDIF

	IF CFLAG:(ARG):PT플래그
		LOCAL:1 = 1
		LOCAL:2 = 7
	ELSE
		LOCAL:1 = 7
		LOCAL:2 = 17
	ENDIF
	FOR LOCAL,LOCAL:1,LOCAL:2
		SIF POS(LOCAL) < 0
			CONTINUE
		SIF GET_STATE(CFLAG:POS(LOCAL):상태이상) == "DYING"
			CONTINUE
		CALL HEAL_SINGLE,ARG,POS(LOCAL),402
	NEXT

		

	
