	;効果時間が終了した際の処理
	PRINTFORMW %CALLNAME:ARG%의 영소・절영의 효과가 종료되었다…。
	CALL SKILLGAGE_F_SET(ARG,SKILL_NUM,-1000)
	CALL SKILLGAGE_H_SET(ARG,SKILL_NUM,-1)
	RETURN 0
ENDIF
