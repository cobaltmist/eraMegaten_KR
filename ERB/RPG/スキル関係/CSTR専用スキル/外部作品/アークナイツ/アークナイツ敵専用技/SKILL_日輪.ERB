		CASE 2
			LOCAL:3 = CFLAG:LOCAL:마법반사플래그 ? -200 # LOCAL:3
		CASEELSE
	ENDSELECT
	IF LOCAL:3 > LOCAL:2
		LOCAL:2 = LOCAL:3
