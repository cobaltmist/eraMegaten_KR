@ACTION_C’est_moi，la_star,ARG,ARG:1,SKILL_NUM
#DIM SKILL_NUM

;0除算回避に+1をつける
LOCAL = MIN(MAXBASE:ARG:힘, MAXBASE:ARG:마력)
SIF LOCAL <= 0
	LOCAL = 1
LOCAL = LOCAL * 64 / (MAXBASE:ARG:힘+MAXBASE:ARG:마력)
CFLAG:ARG:공격강화 += LOCAL
CALL ATTACK_SINGLE, ARG, POS(ARG:1), SKILL_NUM
CFLAG:ARG:공격강화 -= LOCAL


