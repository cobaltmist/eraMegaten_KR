;스킬 및 행동 실행
;====================================================
@ACTION_190,ARG,ARG:1
#LOCALSIZE 5
#LOCALSSIZE 2
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
IF (MAXBASE:LOCAL:비구 < 100 || MAXBASE:LOCAL:비구 == 999) && CFLAG:LOCAL:비구가드킬 < 1 
		CFLAG:LOCAL:비구가드킬 = 1
		A = 1
	ENDIF

IF CFLAG:LOCAL:물리반사플래그 == 1
		B = CFLAG:LOCAL:물리반사플래그
		CFLAG:LOCAL:물리반사플래그 = 0
	ENDIF

IF CFLAG:LOCAL:비구무효화횟수 > 0
		C = CFLAG:LOCAL:비구무효화횟수
		CFLAG:LOCAL:비구무효화횟수 = 0
	ENDIF

IF A + B + C > 0
    ;PRINTFORML 	TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　내성을 관통했다！
ENDIF

CALL SKILL_POWER_190, ARG
LOCAL:1 = RESULT
CALLFORM SKILL_TYPE_190, ARG
LOCAL:2 = RESULT
TRYCCALLFORM SKILL_CRITICAL_RATE_190
	LOCAL:3 = RESULT
CATCH
	LOCAL:3 = 5
ENDCATCH
PRINTFORM 　　TARGET:[{CPOS(LOCAL),2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　
CALL DAMAGE_1,ARG,LOCAL,LOCAL:1,LOCAL:2,LOCAL:3
PRINTL
SIF A == 1
     CFLAG:LOCAL:비구가드킬 = 0
SIF B > 0
     CFLAG:LOCAL:물리반사플래그 = B
SIF C > 0
     CFLAG:LOCAL:비구무효화횟수 = C

