@ACTION_960,ARG,ARG:1
#LOCALSIZE 3
#LOCALSSIZE 2
#DIM 前HP
#DIM 피탄플래그
피탄플래그 = 0
IF CFLAG:(ARG):PT플래그 == 0
	LOCAL:1 = 1
	LOCAL:2 = 4
ELSE
	LOCAL:1 = 7
	LOCAL:2 = 12
ENDIF

FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0 || CFLAG:POS(LOCAL):상태이상 == GET_STATE_NUM("DYING")
		CONTINUE
	前HP = BASE:POS(LOCAL):ＨＰ
	CALL ATTACK_SINGLE,ARG,POS(LOCAL),960
	IF POS(LOCAL) > -1 && BASE:POS(LOCAL):ＨＰ < 前HP
		CFLAG:POS(LOCAL):회피강화 = MAX(-16, CFLAG:POS(LOCAL):회피강화 -8)
		피탄플래그++
	ENDIF
NEXT
SIF 피탄플래그
	PRINTFORMW 공격당한 \@ CFLAG:ARG:PT플래그 == 2 ? 적의 회피율이 내려갔다！ # 아군의 회피율이 내려갔다！ \@

