LOCAL:1 = BASE:LOCAL:ＨＰ
CFLAG:ARG:마법효과강화 = MIN(64, CFLAG:ARG:마법효과강화 + 32)
CFLAG:ARG:마법위력강화 = MIN(64, CFLAG:ARG:마법위력강화 + 32)
CALL ATTACK_SINGLE,ARG,LOCAL,3730
CFLAG:ARG:마법효과강화 = MAX(-64, CFLAG:ARG:마법효과강화 - 32)
CFLAG:ARG:마법위력강화 = MAX(-64, CFLAG:ARG:마법위력강화 - 32)
LOCAL:1 = MAX(0, LOCAL:1 - BASE:LOCAL:ＨＰ)
SIF LOCAL:1 + BASE:ARG:ＨＰ >= MAXBASE:ARG:ＨＰ
	LOCAL:1 = MAXBASE:ARG:ＨＰ - BASE:ARG:ＨＰ

IF LOCAL:1 > 0
	PRINTFORMW 　　TARGET:[{CFLAG:ARG:포지션}] %CALLNAME:ARG,20,LEFT%　>>>>>>　{LOCAL:1}회복
	CALL VAR_HP, ARG , LOCAL:1, 3
