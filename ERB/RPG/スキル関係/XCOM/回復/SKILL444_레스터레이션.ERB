@ACTION_444,ARG,ARG:1
#LOCALSIZE 8
#LOCALSSIZE 2
IF CFLAG:(ARG):PTフラグ == 0
	LOCAL:1 = 7
	LOCAL:2 = 17
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF

	CALL HEAL_FIELD,ARG,ARG:1,444

	FOR LOCAL:3,LOCAL:1,LOCAL:2
		SIF POS(LOCAL:3) < 0
			CONTINUE
		CALL SKILL_CURE_STATE_444,CFLAG:(LOCAL:3):ステート
		IF RESULT == 1
			PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:(LOCAL:3),20,LEFT%　>>>　상태 회복！
			CALL ALL_CURE_STATE,POS(LOCAL:3)
		ELSEIF RESULT == 2
			PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:(LOCAL:3),20,LEFT%　>>> 부활！
			CFLAG:(LOCAL:3):ステート = 0
			CFLAG:(LOCAL:3):ステート経過ターン = 0
			;COMP속 아군은 HP 절반 상태로 회복시킴
			LOCAL:4 = MAXBASE:(LOCAL:3):ＨＰ/2
			CALL VAR_HP,(LOCAL:3),(LOCAL:4)
		ENDIF
	NEXT
WAIT
