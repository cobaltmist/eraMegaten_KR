	RETURN 1
IF 스킬속성표시중
	LOCAL:1 = FLAG:확산플래그
	FLAG:확산플래그 = 現HP割合(ARG)
ENDIF
SELECTCASE FLAG:확산플래그
	CASE IS > 75
		LOCAL:0 = 1 + 220 * (100 - FLAG:확산플래그) / 100
	CASE IS > 50
		LOCAL:0 = 1 + 345 * (100 - FLAG:확산플래그) / 100
	CASE IS > 5
		LOCAL:0 = 1 + 490 * (100 - FLAG:확산플래그) / 100
	CASEELSE
		LOCAL:0 = 1 + 640 * (100 - FLAG:확산플래그) / 100
ENDSELECT
SIF 스킬속성표시중
	FLAG:확산플래그 = LOCAL:1
RETURN LOCAL:0

