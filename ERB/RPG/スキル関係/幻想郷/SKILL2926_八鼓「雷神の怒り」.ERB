SELECTCASE ARG:1
	CASE 17
		LOCAL:1 = 1
		LOCAL:2 = 4
	CASE 18
		LOCAL:1 = 4
		LOCAL:2 = 7
	CASE 20
		LOCAL:1 = 7
		LOCAL:2 = 12
	CASE 21
		LOCAL:1 = 12
		LOCAL:2 = 17
ENDSELECT
FOR LOCAL, LOCAL:1, LOCAL:2
	SIF POS(LOCAL) == -1 || CFLAG:POS(LOCAL):상태이상 == GET_STATE_NUM("DYING")
		CONTINUE
	;SIF CFLAG:ARG:PT플래그 == 0
	;	RETURN 4

	LOCAL:3 = 0
	IF CFLAG:POS(LOCAL):마법반사플래그 == 1
		CFLAG:POS(LOCAL):마법반사플래그 = 0
		PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> 마법 반사 결계를 파괴！
		LOCAL:3 = 1
	ENDIF

	IF CFLAG:POS(LOCAL):전격무효화횟수 > 0
		CFLAG:POS(LOCAL):전격무효화횟수 = 0
		PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> 전격 무효화횟수를 모두 파괴！
	ELSEIF 1 > CFLAG:POS(LOCAL):전격가드킬
		CFLAG:POS(LOCAL):전격가드킬 = 1
		PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> 전격 속성을 관통했다！
	ENDIF
	CALL ATTACK_SINGLE, ARG, POS(LOCAL), 2926,1
NEXT

WAIT



