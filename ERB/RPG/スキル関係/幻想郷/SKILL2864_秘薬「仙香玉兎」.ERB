@SKILL_CURE_STATE_2864,ARG,ARG:1
IF TALENT:ARG:친애
		SELECTCASE GET_STATE(ARG:1)
		CASE "FLY","GOOD","DYING","ORGY","HEAT"
			RETURN 0
		CASEELSE
			RETURN 1
	ENDSELECT
ELSE
	SELECTCASE GET_STATE(ARG:1)
		CASE "PALYZE","HAPPY","BIND","PANIC","SLEEP","BOMB"
			RETURN 1
		CASEELSE
			RETURN 0
	ENDSELECT
ENDIF
