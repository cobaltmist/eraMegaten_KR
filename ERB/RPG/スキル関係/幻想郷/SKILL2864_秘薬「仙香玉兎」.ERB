@SPECIAL_ACTION_2864_ALL,ARG
FOR LOCAL:9,1,7
	LOCALS = 포지션{LOCAL:9}
	SIF FLAG:LOCALS < 0
		CONTINUE
	LOCAL = FLAG:LOCALS
	CALL SKILL_CURE_STATE_2864,ARG,CFLAG:LOCAL:상태이상
	IF RESULT == 1
		PRINTFORMW 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>>　상태회복！
		CFLAG:LOCAL:상태이상 = 0
		CFLAG:LOCAL:상태이상경과턴수 = 0
	ENDIF
NEXT

