SIF ARG == -1
	RETURN GET_TYPE_NUM("만능")
SIF CFLAG:ARG:타겟 > 16 || CFLAG:ARG:타겟 < 1
	RETURN GET_TYPE_NUM("만능")
LOCAL = POS(CFLAG:ARG:타겟)
SIF LOCAL < 0
	RETURN GET_TYPE_NUM("만능")
LOCAL:2 = -1000
LOCALS = 만능
LOCALS:1 = 검격
LOCALS:2 = 비구
LOCALS:3 = 타격
LOCALS:4 = 전술
LOCALS:5 = 화염
LOCALS:6 = 빙결
