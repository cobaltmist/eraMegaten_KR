@ACTION_2865, ARG, ARG:1
;ARG:0…実行者のCHARA Num　ARG:1…대상の포지션Num

;------------------------------------------------
; LOCAL:0 대상Chara Num
; LOCAL:1 効果종별
;	0.아군全員の상태이상を完治,		 20.00%
;	1.아군にタル・마카카쟈効果,	 20.00%
;	2.아군全員のHPを大회복,			 20.00%
;	3.デカジャ版포말의파문,			 20.00%
;	4.아군全員に만능방어壁,			 10.00%
;	5.何も起こらない,				 10.00%
;	6.엘라ー,						 0%
; LOCAL:2 一時計算用
; LOCAL:7 카우ンタ変数
; LOCAL:8 범위Un
; LOCAL:9 범위Up
;------------------------------------------------
; 초기化処理
VARSET LOCAL, 0, 0, 10
LOCAL:1 = RAND:10000
SELECTCASE LOCAL:1
	CASE IS < 1000
		LOCAL:1 = 5
	CASE IS < 2000
		LOCAL:1 = 4
	CASE IS < 4000
		LOCAL:1 = 3
	CASE IS < 6000
		LOCAL:1 = 2
	CASE IS < 8000
		LOCAL:1 = 1
	CASE IS < 10000
		LOCAL:1 = 0
	CASEELSE
		; ここに来ることは無いはずだが……
		LOCAL:1 = 6
ENDSELECT
; 범위설정
IF CFLAG:ARG:PT플래그 == 0
	LOCAL:8 = 7
	LOCAL:9 = 17
ELSE
	LOCAL:8 = 1
	LOCAL:9 = 7
ENDIF

; 오라클本処理
;難題名표시
LOCALS = "EMPTY"
SELECTCASE LOCAL:1
	CASE 0
		LOCALS = 신보「부디스트 다이아몬드」
	CASE 1
		LOCALS = 신보「봉래의 옥의 가지」
	CASE 2
		LOCALS = 신보「라이프스프링 인피니티」
	CASE 3
		LOCALS = 신보「브릴리언트 드래곤 바레트」
	CASE 4
		LOCALS = 신보「샐러맨더 실드」
	CASE 5
		LOCALS = 위작「어설픈 기억의 금각사」
ENDSELECT
CALL MESSAGE_B(1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)

;何も起こらない
IF LOCAL:1 == 5
	PRINTFORMW 아무것도 일어나지 않았다…
ELSEIF LOCAL:1 == 6
	PRINTFORMW 에러：존재하지 않는 선택이 발생
ELSE
	FOR LOCAL:7, LOCAL:8, LOCAL:9
		LOCAL = POS(LOCAL:7)
		; 空き포지션スキップ
		SIF LOCAL < 0
			CONTINUE
		; DYINGスキップ
		SIF GET_STATE(CFLAG:LOCAL:상태이상) == "DYING"
			CONTINUE
		; 分岐
		SELECTCASE LOCAL:1
			CASE 0
				; 암리타から流用
				CALL SKILL_CURE_STATE_2865, CFLAG:LOCAL:상태이상
				IF RESULT == 1
					PRINTFORML 　　TARGET:[{LOCAL:7,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　상태회복！
					CFLAG:LOCAL:상태이상 = 0
					CFLAG:LOCAL:상태이상경과턴수 = 0
				ENDIF
			CASE 1
				; 流用
				CFLAG:LOCAL:공격강화 += 4
				SIF CFLAG:LOCAL:공격강화 > 32
					CFLAG:LOCAL:공격강화 = 32
				CFLAG:LOCAL:마법위력강화 += 4
				SIF CFLAG:LOCAL:마법위력강화 > 32
					CFLAG:LOCAL:마법위력강화 = 32
			CASE 2
				CALL HEAL_SINGLE,ARG, LOCAL, 2865, 1
			CASE 3
				; 포말의파문を改造
				FOR LOCAL:2, GETNUM(CFLAG,"공격강화"), GETNUM(CFLAG,"크리티컬강화")+1
					SIF CFLAG:LOCAL:(LOCAL:2) < 0
						CFLAG:LOCAL:(LOCAL:2) = 0
					CFLAG:LOCAL:(GETNUM(CFLAG,"BS부착률강화")) = 0
				NEXT
			CASE 4
				IF CFLAG:LOCAL:만능가드킬
					CFLAG:LOCAL:만능가드킬 --
				ELSEIF CFLAG:LOCAL:만능무효화횟수 < 1
					CFLAG:LOCAL:만능무효화횟수 = 1
				ENDIF
		ENDSELECT
	NEXT
ENDIF

PRINTL 
SELECTCASE LOCAL:1
	CASE 0
		PRINTFORMW \@ CFLAG:ARG:PT플래그 == 0 ? 적 # 아군 \@전체의 상태이상이 회복했다！
	CASE 1
		PRINTFORMW \@ CFLAG:ARG:PT플래그 == 0 ? 적 # 아군 \@전체의 물리・마법공격력이 올랐다！
	CASE 2
		PRINTFORMW \@ CFLAG:ARG:PT플래그 == 0 ? 적 # 아군 \@전체의 체력이 회복！
	CASE 3
		PRINTFORMW \@ CFLAG:ARG:PT플래그 == 0 ? 적 # 아군 \@전체의 능력 저하를 상쇄했다！
	CASE 4
		PRINTFORMW \@ CFLAG:ARG:PT플래그 == 0 ? 적 # 아군 \@전체에 만능방어벽을 전개！
ENDSELECT
WAIT
