IF CFLAG:ARG:포지션 < 7
	LOCAL:1 = 7
	LOCAL:2 = 17 
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF
FOR LOCAL, LOCAL:1, LOCAL:2
	LOCALS = 포지션{LOCAL}
	;#;PRINTFORML FLAG:LOCALS = {FLAG:LOCALS}
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
		CONTINUE
	CFLAG:ARG:타겟 = LOCAL
	CALL ATTACK_SINGLE, ARG, FLAG:LOCALS, 2943
NEXT
CFLAG:ARG:타겟 = CFLAG:ARG:포지션 < 7 ? 22 # 19
