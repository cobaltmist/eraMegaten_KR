;====================================================
;스킬 및 행동의 실행
;====================================================
@ACTION_2894,ARG,ARG:1
IF CFLAG:(ARG):PT플래그 >= 1
	CALL ATTACK_FIELD,ARG, (22),2894
	FOR (LOCAL:9),1,7
		LOCALS = 포지션{LOCAL:9}
		SIF FLAG:LOCALS < 0
			CONTINUE
		LOCAL = FLAG:LOCALS
		CALL SKILL_CURE_STATE_2894,CFLAG:LOCAL:상태이상
		IF RESULT == 1
		SIF GET_STATE(CFLAG:LOCAL:상태이상) == "PANIC" || GET_STATE(CFLAG:LOCAL:상태이상) == "CHARM" || GET_STATE(CFLAG:LOCAL:상태이상) == "HAPPY"
			CFLAG:LOCAL:혼란매료리커버 = 1
		PRINTFORML 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>>　제정신으로 돌아왔다
		CFLAG:LOCAL:상태이상 = 0
		CFLAG:LOCAL:상태이상경과턴수 = 0
		ENDIF
	NEXT
ELSE
	CALL ATTACK_FIELD,ARG, (19),2894
	FOR (LOCAL:9),7,17
		LOCALS = 포지션{LOCAL:9}
		SIF FLAG:LOCALS < 0
			CONTINUE
		LOCAL = FLAG:LOCALS
		CALL SKILL_CURE_STATE_2894,CFLAG:LOCAL:상태이상
		IF RESULT == 1
		SIF GET_STATE(CFLAG:LOCAL:상태이상) == "PANIC" || GET_STATE(CFLAG:LOCAL:상태이상) == "CHARM" || GET_STATE(CFLAG:LOCAL:상태이상) == "HAPPY"
			CFLAG:LOCAL:혼란매료리커버 = 1
		PRINTFORML 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>>　제정신으로 돌아왔다
		CFLAG:LOCAL:상태이상 = 0
		CFLAG:LOCAL:상태이상경과턴수 = 0
		ENDIF
	NEXT
ENDIF



