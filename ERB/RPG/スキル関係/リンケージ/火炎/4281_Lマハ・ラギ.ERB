	CALL CHECK_ACTIONABLE , ARG , [[스킬:아기]]
	SIF RESULT
		RETURN 1
ENDIF
IF HAVE_SKILL(ARG, [[스킬:아기라오]])
	CALL CHECK_ACTIONABLE , ARG , [[스킬:아기라오]]
	SIF RESULT
		RETURN 1
