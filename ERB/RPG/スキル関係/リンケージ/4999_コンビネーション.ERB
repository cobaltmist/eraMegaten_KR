@참가조건표시_4999, ARG
#LOCALSSIZE 2
VARSET LOCALS
IF U < 0 || CHARANUM >= U || CFLAG:(CHARANUM-1):PT플래그
	PRINTFORM 특정 캐릭터
	RETURN
ENDIF
;発動者がゲイルの場合
IF NO:U == [[キャラ:게일]]
	LOCALS = %CALLNAME:U%
	
	;千枝(特殊友情持ち)
	SIF 특수우정확인(U,GETCHARA([[キャラ:치에]]))
		LOCALS:1 += CALLNAME:GETCHARA([[キャラ:치에]]) + "　"
;発動者が千枝の場合
ELSEIF NO:U == [[キャラ:치에]]
	LOCALS = %CALLNAME:U%
	
	;ゲイル(特殊友情持ち)
	SIF 특수우정확인(U,GETCHARA([[キャラ:게일]]))
		LOCALS:1 += CALLNAME:GETCHARA([[キャラ:게일]]) + "　"
ENDIF

SELECTCASE ARG
	CASE 1
		PRINTFORM %LOCALS:1%
	CASE 2
		PRINTFORM %LOCALS%
ENDSELECT

