SIF ARG < 0
	RETURN
SIF ARG:1 < 0 && CFLAG:ARG:링케이지참가자1 < 0
	RETURN
LOCAL = NO:ARG
IF ARG:1 >= 0
	LOCAL:1 = NO:(ARG:1)
ELSE
	LOCAL:1 = NO:(CFLAG:ARG:링케이지참가자1)
ENDIF
