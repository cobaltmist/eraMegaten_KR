			SIF RESULT
				RETURN 1
		ENDIF
		IF HAVE_SKILL(ARG, [[스킬:사마・카쟈]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:사마・카쟈]]
			SIF RESULT
				RETURN 1
		ENDIF
		RETURN 0
	CASE 2
		;마카・카쟈を使えること
		IF HAVE_SKILL(ARG, [[스킬:마카・카쟈]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:마카・카쟈]]
			SIF RESULT
				RETURN 1
		ENDIF
		RETURN 0
	CASE 3
		;스쿠・카쟈を使えること
