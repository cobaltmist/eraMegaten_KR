			CALL CHECK_ACTIONABLE , ARG , [[스킬:마한마온]]
			SIF RESULT
				RETURN 1
		ENDIF
		;バイコウハを使えること
		IF HAVE_SKILL(ARG, [[스킬:바이코우하]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:바이코우하]]
			SIF RESULT
				RETURN 1
		ENDIF
		;メギドラを使えること
