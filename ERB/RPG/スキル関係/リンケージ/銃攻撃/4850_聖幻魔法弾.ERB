	RETURN 0
CALL CHECK_COST_LINCAGE, ARG, 4850, ARG:1
SIF RESULT == 0
	RETURN 0
SELECTCASE ARG:1
	CASE 1
		;破魔の雷光を使えること
		IF HAVE_SKILL(ARG, [[스킬:파마의뇌광]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:파마의뇌광]]
			SIF RESULT
				RETURN 1
		ENDIF
		;マハンマオンを使えること
