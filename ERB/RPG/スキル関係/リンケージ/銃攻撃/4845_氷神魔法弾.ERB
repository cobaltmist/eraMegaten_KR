SIF RESULT == 0
	RETURN 0
SELECTCASE ARG:1
	CASE 1
		;아쿠아다인か마하・아쿠다인を使えること
		IF HAVE_SKILL(ARG, [[스킬:아쿠아다인]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:아쿠아다인]]
			SIF RESULT
				RETURN 1
		ENDIF
		IF HAVE_SKILL(ARG, [[스킬:마하・아쿠다인]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:마하・아쿠다인]]
			SIF RESULT
				RETURN 1
		ENDIF
		RETURN 0
ENDSELECT

