	CASE 1
		;아쿠아か마하・아쿠아を使えること
		IF HAVE_SKILL(ARG, [[스킬:아쿠아]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:아쿠아]]
			SIF RESULT
				RETURN 1
		ENDIF
