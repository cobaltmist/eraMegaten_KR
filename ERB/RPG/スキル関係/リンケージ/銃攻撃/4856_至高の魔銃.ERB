@참가조건표시_4856,ARG
SELECTCASE ARG
	CASE 1
		PRINTFORM 메기도계 마법 3종중 아무거나
	CASE 2
		PRINTFORM 건슬링거
ENDSELECT

@발동자조건_4856 , ARG
SIF EQUIP:ARG:총 == 0
	RETURN 0
SIF !TALENT:ARG:건슬링거
	RETURN 0
RETURN 1


@참가자조건_4856, ARG , ARG:1
SIF CPOS(ARG) < 1 || CPOS(ARG) > 6
	RETURN 0
CALL CHECK_COST_LINCAGE, ARG, 4856, ARG:1
SIF RESULT == 0
	RETURN 0
SELECTCASE ARG:1
	CASE 1
		;메기도
		IF HAVE_SKILL(ARG, [[스킬:메기도]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:메기도]]
			SIF RESULT
				RETURN 1
		ENDIF
		;메기도라
		IF HAVE_SKILL(ARG, [[스킬:메기도라]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:메기도라]]
			SIF RESULT
				RETURN 1
		ENDIF
		;메기도라온
		IF HAVE_SKILL(ARG, [[스킬:메기도라온]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:메기도라온]]
			SIF RESULT
				RETURN 1
		ENDIF
		
		RETURN 0
ENDSELECT

