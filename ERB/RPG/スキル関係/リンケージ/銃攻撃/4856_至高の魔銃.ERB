@ACTION_4856,ARG,ARG:1
CALL SKILL_SPHERE_4856,ARG
IF RESULT == 1
	LOCAL = POS(ARG:1)
	CALL GUN_SINGLE,ARG,LOCAL,4856
ELSE
	RESULT = 0
	TRYCALLFORM GUN_RANDOMTARGET_{EQUIP:ARG:총}
	IF RESULT == 1
		CALL GUN_RAND,ARG,ARG:1,4856
	ELSE
		CALL GUN_FIELD,ARG,ARG:1,4856
	ENDIF
	
ENDIF






