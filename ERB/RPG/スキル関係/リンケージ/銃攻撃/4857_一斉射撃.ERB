;스킬及び行動の実行
;====================================================
@ACTION_4857,ARG,ARG:1
#DIM L_CHARA,3
#DIM L_DAMAGE,3
#DIM L_POWER,3
#DIM L_COUNT
#LOCALSIZE 3

L_CHARA = ARG, CFLAG:ARG:링케이지참가자1, CFLAG:ARG:링케이지참가자2
FOR L_COUNT,0,3
	LOCAL = L_CHARA:L_COUNT
	CALL BTL_CALC_BASE_DAMAGE(LOCAL, POS(ARG:1), 100, "총")
	L_DAMAGE:L_COUNT = RESULT
	L_POWER:L_COUNT = 100 * L_DAMAGE:L_COUNT / L_DAMAGE:0

	CALLFORM 최저공격횟수_{EQUIP:LOCAL:총},LOCAL
	LOCAL:1 = RESULT
	CALLFORM 최대공격횟수_{EQUIP:LOCAL:총},LOCAL
	LOCAL:2 = RESULT
	L_POWER:L_COUNT = L_POWER:L_COUNT * MAX((LOCAL:1 + LOCAL:2) / 2,1)
	
	RESULT = 0
;	TRYCALLFORM GUN_RANDOMTARGET_{EQUIP:LOCAL:총},LOCAL
	TRYCALLFORM GUN_RANDOMTARGET_{EQUIP:LOCAL:총}
	IF RESULT == 0
		CALLFORM 공격범위_{EQUIP:LOCAL:총},LOCAL
		IF RESULT > 2
			TIMES L_POWER:L_COUNT , 1.50
		ELSEIF RESULT == 2
			TIMES L_POWER:L_COUNT , 1.25
		ENDIF
	ENDIF
NEXT

FLAG:확산플래그 = (L_POWER:0 + L_POWER:1 + L_POWER:2) * 130 / 100

CALL GUN_SINGLE,ARG,POS(ARG:1),4855

