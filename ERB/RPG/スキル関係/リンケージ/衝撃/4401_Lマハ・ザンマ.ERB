SIF RESULT == 0
	RETURN 0
SELECTCASE ARG:1
	CASE 1
		;ジオンガかジオダインを使えること
		IF HAVE_SKILL(ARG, [[스킬:지온가]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:지온가]]
			SIF RESULT
				RETURN 1
		ENDIF
		IF HAVE_SKILL(ARG, [[스킬:지오다인]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:지오다인]]
			SIF RESULT
				RETURN 1
		ENDIF
		RETURN 0
ENDSELECT

