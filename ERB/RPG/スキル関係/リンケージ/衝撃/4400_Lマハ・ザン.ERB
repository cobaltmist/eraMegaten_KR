	CALL CHECK_ACTIONABLE , ARG , [[스킬:잔]]
	SIF RESULT
		RETURN 1
ENDIF
IF HAVE_SKILL(ARG, [[스킬:잔마]])
	CALL CHECK_ACTIONABLE , ARG , [[스킬:잔마]]
	SIF RESULT
		RETURN 1
ENDIF
IF HAVE_SKILL(ARG, [[스킬:잔다인]])
	CALL CHECK_ACTIONABLE , ARG , [[스킬:잔다인]]
	SIF RESULT
		RETURN 1
ENDIF
RETURN 0

@참가자조건_4400, ARG , ARG:1
SIF CPOS(ARG) < 1 || CPOS(ARG) > 6
	RETURN 0
CALL CHECK_COST_LINCAGE, ARG, 4400, ARG:1
SIF RESULT == 0
	RETURN 0
SELECTCASE ARG:1
	CASE 1
		;지오系１체마법を使えること
		IF HAVE_SKILL(ARG, [[스킬:지오]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:지오]]
			SIF RESULT
				RETURN 1
		ENDIF
		IF HAVE_SKILL(ARG, [[스킬:지온가]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:지온가]]
			SIF RESULT
				RETURN 1
		ENDIF
		IF HAVE_SKILL(ARG, [[스킬:지오다인]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:지오다인]]
			SIF RESULT
				RETURN 1
		ENDIF
		RETURN 0
ENDSELECT

