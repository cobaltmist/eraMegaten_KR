@참가자조건_4321, ARG , ARG:1
SIF CPOS(ARG) < 1 || CPOS(ARG) > 6
	RETURN 0
CALL CHECK_COST_LINCAGE, ARG, 4321, ARG:1
SIF RESULT == 0
	RETURN 0
SELECTCASE ARG:1
	CASE 1
		;マグナスかマグダインを使えること
		IF HAVE_SKILL(ARG, [[스킬:마그나스]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:마그나스]]
			SIF RESULT
				RETURN 1
		ENDIF
		IF HAVE_SKILL(ARG, [[스킬:마그다인]])
			CALL CHECK_ACTIONABLE , ARG , [[스킬:마그다인]]
			SIF RESULT
				RETURN 1
		ENDIF
		RETURN 0
ENDSELECT

