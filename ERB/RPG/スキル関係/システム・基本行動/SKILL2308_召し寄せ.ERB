;====================================================
@ACTION_2308, ARG, ARG:1
LOCAL:21 = 0
$START
LOCAL:21++
FOR LOCAL, 1, 21
	LOCAL:LOCAL = 0
NEXT
LOCAL:20 = 1
FOR LOCAL, 7, 17
	SIF POS(LOCAL) >= 0
		CONTINUE
	LOCAL:(LOCAL:20) = LOCAL
	LOCAL:20++
NEXT
IF LOCAL:20 == 1
	PRINTW 그러나、아무것도 나타나지 않았다！
	RETURN -1
ENDIF
LOCAL = LOCAL:(RAND:(LOCAL:20 - 1) + 1)
;前がいない후열に呼び出す場合はこの時点で詰めてしまう
SIF LOCAL > 10 && POS(LOCAL - 5) == -1
	LOCAL -= 5
CALLFORM 증원패턴_%CSTR:ARG:증원패턴%, ARG, LOCAL, LOCAL:21
CFLAG:(CHARANUM-1):입력행동 = -1
IF RESULT == 0
	PRINTFORML %CALLNAME:(CHARANUM-1)%(이)가 나타났다！
	GOTO START
ELSE
	PRINTFORMW %CALLNAME:(CHARANUM-1)%(이)가 나타났다！
ENDIF
