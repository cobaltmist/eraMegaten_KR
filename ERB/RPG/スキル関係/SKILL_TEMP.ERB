	LOCAL:16 = 5
ENDCATCH

LOCAL:17 = CFLAG:ARG:타겟
LOCAL = 0
$대상リスト作成
VARSET 대상リスト , 0
대상人数 = 0
FOR ループ , LOCAL:7 , LOCAL:8
	SIF POS(ループ) == -1
		CONTINUE
	SIF GET_STATE(CFLAG:POS(ループ):ステート) == "DYING"
		CONTINUE
	SIF 공격済み횟수:ループ >= 최대１체공격횟수:ループ
		CONTINUE
	대상リスト:대상人数 = ループ
	대상人数 ++
