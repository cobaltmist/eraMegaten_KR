	LOCAL = POS(LOCAL:1)
	SIF LOCAL < 0
		CONTINUE
	SIF GET_STATE(CFLAG:LOCAL:상태이상) == "DYING"
		CONTINUE
	IF CFLAG:LOCAL:방어플래그
