	LOCAL = POS(LOCAL:1)
	SIF LOCAL < 0
		CONTINUE
	SIF GET_STATE(CFLAG:LOCAL:상태이상) == "DYING"
		CONTINUE
	IF CFLAG:LOCAL:방어플래그
		CFLAG:LOCAL:방어플래그 = 0
		FLAG:확산플래그 = 2
		CALL ATTACK_SINGLE,ARG,LOCAL,209
		FLAG:확산플래그 = 0
	ELSE
		FLAG:확산플래그 = 1
		CALL ATTACK_SINGLE,ARG,LOCAL,209
		FLAG:확산플래그 = 0
	ENDIF
NEXT




