;====================================================
;스킬 및 행동의 실행
;====================================================
@ACTION_230,ARG,ARG:1
#LOCALSIZE 3
IF CFLAG:ARG:포지션 < 7
	LOCAL:1 = 7
	LOCAL:2 = 12 
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 4
ENDIF
FOR LOCAL, LOCAL:1, LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	SIF GET_STATE(CFLAG:POS(LOCAL):상태이상) == "DYING"
		CONTINUE
	FLAG:확산플래그 = POS(LOCAL)
	CALL ATTACK_SINGLE, ARG, POS(LOCAL), 230
NEXT
FLAG:확산플래그 = -1

