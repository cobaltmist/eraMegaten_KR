@ACTION_1415,ARG,ARG:1
SIF CFLAG:ARG:PT플래그 == 2
	TFLAG:아군오메가클러스터 = MAX(1, TFLAG:아군오메가클러스터)
SIF CFLAG:ARG:PT플래그 == 0
	TFLAG:적오메가클러스터 = MAX(1, TFLAG:적오메가클러스터)

;오메가클러스터フラグに전회数値をしまう
@SPECIAL_ACTION_1415
#LOCALSIZE 18
#DIM TEXP,2
VARSET LOCAL
VARSET TEXP
IF TFLAG:아군오메가클러스터
	$START_P
	;経験値登録
	FOR LOCAL, 7, 17
		SIF POS(LOCAL) < 0 || GET_STATE(CFLAG:(POS(LOCAL)):상태이상) == "DYING"
			CONTINUE
		;経験値が전회キャラのEXPより多い
		IF MAXBASE:POS(LOCAL):ＥＸＰ + POS(LOCAL) > TFLAG:아군오메가클러스터
			;はじめはとりあえず登録
			SIF TEXP == 0
				TEXP = MAXBASE:POS(LOCAL):ＥＸＰ + POS(LOCAL)
			;二人눈以降は少ない方を登録(同EXP)
			SIF MAXBASE:POS(LOCAL):ＥＸＰ + POS(LOCAL) < TEXP
				TEXP = MAXBASE:POS(LOCAL):ＥＸＰ + POS(LOCAL)
		ENDIF
	NEXT
	IF TEXP == 0
		TFLAG:아군오메가클러스터 = 1
		GOTO START_P
	ENDIF
	TFLAG:아군오메가클러스터 = TEXP
	FOR LOCAL, 7, 17
		SIF POS(LOCAL) < 0
			CONTINUE
		SIF GET_STATE(CFLAG:(POS(LOCAL)):상태이상) == "DYING"
			CONTINUE
		;経験値が一致してるキャラに叩きこむ
		IF TEXP == MAXBASE:POS(LOCAL):ＥＸＰ+ POS(LOCAL)
			CALL MESSAGE_B(1, "오메가클러스터")
			PRINTFORM 　　TARGET:[{LOCAL,2}] %CALLNAME:POS(LOCAL),20,LEFT%　>>>>>>　
			IF CFLAG:POS(LOCAL):방어플래그
				PRINTW GUARD
			ELSEIF CFLAG:(POS(LOCAL)):보스플래그
				PRINTW BLOCK
			ELSE
				PRINTFORMW DYING
				CALL DEAD_CHARA, POS(LOCAL)
			ENDIF
			BREAK
		ENDIF
	NEXT
ENDIF
TEXP = 0
IF TFLAG:적오메가클러스터
	$START_E
	;経験値登録
	FOR LOCAL, 1, 7
		SIF POS(LOCAL) < 0 || GET_STATE(CFLAG:(POS(LOCAL)):상태이상) == "DYING"
			CONTINUE
		;経験値が전회キャラのEXPより多い
		IF MAXBASE:POS(LOCAL):ＥＸＰ > TFLAG:적오메가클러스터
			;はじめはとりあえず登録
			SIF TEXP == 0
				TEXP = MAXBASE:POS(LOCAL):ＥＸＰ
			;二人눈以降は少ない方を登録(同EXP)
			SIF MAXBASE:POS(LOCAL):ＥＸＰ + POS(LOCAL) < TEXP
				TEXP = MAXBASE:POS(LOCAL):ＥＸＰ
		ENDIF
	NEXT
	IF TEXP == 0
		TFLAG:적오메가클러스터 = 1
		GOTO START_E
	ENDIF
	TFLAG:적오메가클러스터 = TEXP
	FOR LOCAL, 1, 7
		SIF POS(LOCAL) < 0
			CONTINUE
		SIF GET_STATE(CFLAG:(POS(LOCAL)):상태이상) == "DYING"
			CONTINUE
		;経験値が一致してるキャラに叩きこむ
		IF TEXP == MAXBASE:POS(LOCAL):ＥＸＰ
			CALL MESSAGE_B(1, "오메가클러스터")
			PRINTFORM 　　TARGET:[{LOCAL,2}] %CALLNAME:POS(LOCAL),20,LEFT%　>>>>>>　
			IF CFLAG:POS(LOCAL):방어플래그
				PRINTW GUARD
			ELSE
				PRINTFORMW DYING
				CALL DEAD_CHARA, POS(LOCAL)
			ENDIF
			BREAK
		ENDIF
	NEXT
ENDIF

