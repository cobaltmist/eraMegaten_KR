IF CFLAG:(ARG):PT플래그 == 0
	LOCAL:1 = 1
	LOCAL:2 = 7
ELSE
	LOCAL:1 = 7
	LOCAL:2 = 17
ENDIF
FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	HP흡수량 += BASE:POS(LOCAL):ＨＰ
NEXT
CALL ATTACK_FIELD,ARG,ARG:1,1438
FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	HP흡수량 -= BASE:POS(LOCAL):ＨＰ
NEXT
HP흡수량 /= 2
CALL VAR_HP, ARG , MAX(0,HP흡수량), 3
