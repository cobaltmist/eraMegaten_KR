		LOCAL:3 = MAXBASE:ARG:ＨＰ - BASE:ARG:ＨＰ
	PRINTFORMW 　　TARGET:[{CFLAG:ARG:포지션}] %CALLNAME:ARG,20,LEFT%　>>>>>>　{LOCAL:3}회복
	CALL VAR_HP, ARG , LOCAL:3, 3
NEXT
