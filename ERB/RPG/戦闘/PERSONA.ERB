;ARGは페르소나구사자、ARG:1は페르소나番号、기본的に페르소나番号優先
@PRANK_COLLECTION_VALUE(ARG = -1, ARG:1 = -1)
	#FUNCTION
	#LOCALSIZE 2
	;초기페르소나は100%固定
	SIF (ARG >=0 && EQUIP:ARG:장비페르소나 == 0) || ARG:1 >= 50
		RETURNF 100
	;랭크取得
	IF ARG:1 >= 0
		LOCAL = DITEMTYPE:(ARG:1):페르소나("랭크")
		LOCAL:1 = ARG:1
	ELSE
		LOCAL = DITEMTYPE:(EQUIP:ARG:장비페르소나):페르소나("랭크")
		LOCAL:1 = EQUIP:ARG:장비페르소나
		;어져스트먼트기어がある場合は랭크+5
		SIF EQUIP:MASTER:어져스트먼트기어 && NUM_SUMMONER()
			LOCAL = MIN(LOCAL+5, 10)
	ENDIF
	;함락によってステ보정テーブルが変化する
	SELECTCASE DITEMTYPE:(LOCAL:1):페르소나("함락")
		CASE 0
			RETURNF 70 + LOCAL * 3
		CASE 1
			RETURNF 80 + LOCAL * 2
		CASE 2
			RETURNF 90 + LOCAL
		CASE 3
			RETURNF 100
	ENDSELECT

;페르소나の経験値増加
@INCREASE_PERSONA_EXP(ARG, ARG:1, ARG:2, ARG:3)
	;ARG キャラ   ARG:1 기본値   ARG:2 範囲,COOP참가者かどうか   ARG:3 노역플래그
	#LOCALSIZE 10
	#DIM PEXP, 1
	#DIM PERSONA, 1
	#DIM ELV, 1
	SIF TALENT:ARG:페르소나구사자 == 0
		RETURN 0
	PERSONA = EQUIP:ARG:장비페르소나 ? EQUIP:ARG:장비페르소나 # CFLAG:ARG:초기페르소나넘버
	SIF PERSONA == 0
		RETURN 0
	;COOP時は色々すっとばす
	IF ARG:2 > 29
		GOTO RESERVE_COOP
	ENDIF
	;노역時は色々すっとばす
	IF ARG:3
		ELV = BASE:ARG:LV
		GOTO RESERVE
	ENDIF
	;페르소나能力を使ったどうかの판정
	;行動不能な時は加算が発生しない
	CALL ACTIONABLE_CHARA, ARG
	SIF RESULT == 0
		RETURN 0
	;通常攻撃及びGUARDははじく。なお、行動は終了時に-1が代入されてしまうのでリピート行動を見る
	SIF CFLAG:ARG:ＲＥＰＥＡＴ행동 < 1
		RETURN 0
	;방어時も弾く
	SIF CFLAG:ARG:방어플래그
		RETURN 0
	;利用した스킬を소지していない場合も弾く
	SIF !HAVE_SKILL(ARG, CFLAG:(ARG):ＲＥＰＥＡＴ행동)
		RETURN 0
	ELV = 0
	RESULT = 0
	;控えに使う스킬はキャラ番号そのままになる
	TRYCALLFORM SKILL_T_RESERVE_{CFLAG:ARG:입력행동}
	IF RESULT
		ELV = BASE:(CFLAG:ARG:타겟):LV
		GOTO RESERVE
	ENDIF
	;範囲공격は範囲内で最も레벨の高いキャラ
	;COOPはCOOPの대상のうちでもっと레벨の高いキャラ
	SELECTCASE ARG:2
		CASE 1 TO 16
			LOCAL:4 = 0
			LOCAL:6 = 0
			ELV = POS(ARG:2) >= 0 ? BASE:(POS(ARG:2)):LV # BASE:ARG:LV
		CASE 17
			LOCAL:4 = 1
			LOCAL:6 = 4
		CASE 18
			LOCAL:4 = 4
			LOCAL:6 = 7
		CASE 19
			LOCAL:4 = 1
			LOCAL:6 = 7
		CASE 20
			LOCAL:4 = 7
			LOCAL:6 = 12
		CASE 21
			LOCAL:4 = 12
