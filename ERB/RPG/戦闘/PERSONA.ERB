	FOR LOCAL:2, 0, FLAG:상태이상수
		MAXBASE:ARG:(GET_STATE(LOCAL:2)) = CSVBASE(LOCAL:3, GETNUM(BASE, GET_STATE(LOCAL:2)), 0)
	NEXT
	FOR LOCAL:2, 0, 8
		ABL:ARG:(GETNUM(ABL, "스킬1") + LOCAL:2) = DITEMTYPE:LOCAL:(페르소나("스킬1")+LOCAL:2)
	NEXT
