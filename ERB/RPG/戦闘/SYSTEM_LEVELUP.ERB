;===============================
;레벨アップ판정＆処理　新I/F
;===============================
@CHECK_LEVEL_UP_NEW,ARG
	#DIM 레벨上昇値,1
	#DIM ボーナス포인트,1
	#DIM 事前최대ＨＰ,1
	#DIM 事前최대ＭＰ,1
	ARRAYREMOVE ボーナス포인트,0,0
	레벨上昇値 = 0
	ボーナス포인트 = 0
	事前최대ＨＰ = MAXBASE:ARG:ＨＰ
	事前최대ＭＰ = MAXBASE:ARG:ＭＰ

	WHILE BASE:ARG:ＥＸＰ >= GET_NEXT_EXP(BASE:ARG:LV+레벨上昇値, ABL:ARG:종족 != 0 && !함락(ARG))
		SIF (BASE:ARG:LV + 레벨上昇値 ) % 2 == 1
			ボーナス포인트 += 1
		레벨上昇値 += 1
	WEND
	ボーナス포인트 += 레벨上昇値

	SIF !ボーナス포인트
	RETURN 0
	PRINTFORML %NAME:ARG%의 레벨이(가) 올랐다！
	;---- EDIT 020 MOD START -------------------------
	SETCOLOR 0x33ffcc
	TFLAG:전투이벤트 = 91
	SWAP ARG,TARGET
	CALL BATTLE_EVENT,TARGET
	SWAP ARG,TARGET
	RESETCOLOR
	;---- EDIT 020 MOD END ---------------------------
	BASE:ARG:LV += 레벨上昇値

	;비전투원はここまで
	IF TALENT:ARG:비전투원 && 레벨上昇値
	CALL SYNC_STATUS , ARG
	RETURN 0
	ENDIF

	;레벨アップに伴う能力値ボーナス
	CALL STATUS_BONUS(ARG,ボーナス포인트)

	;インス토르ソフト・악세사리等の特殊ボーナス
	CALL LVUP_BOOSTER(ARG,ボーナス포인트)
	CALL LVUP_BOOSTER_MAGATAMA(ARG,ボーナス포인트)

	CALLFORM EVENT_LEVELUP,ARG,LOCAL:1
	TRYCALLFORM EVENT_LEVELUP_{NO:ARG},LOCAL:1
	CALL SYNC_STATUS,ARG

	;増加分だけＨＰとＭＰが회복
	CALL VAR_HP,ARG,MAXBASE:ARG:ＨＰ - 事前최대ＨＰ,3
	CALL VAR_MP,ARG,MAXBASE:ARG:ＭＰ - 事前최대ＭＰ,3

	;인간なら全회복
	IF IS_HUMAN(ARG)
		BASE:ARG:ＨＰ = MAXBASE:ARG:ＨＰ
		CFLAG:ARG:ステート = GET_STATE_NUM("GOOD")
	ENDIF

