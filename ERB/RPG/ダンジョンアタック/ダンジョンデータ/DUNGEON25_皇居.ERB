	CASE 34
		;アカラナ回廊の砂時計
		IF 이벤트플래그:86:1 == 23
			RESULTS = %UNICODE(0x231B)%
		ELSE
			SETCOLOR 255, 100, 100
			RESULTS = ◆ 
		ENDIF
	;↑
	CASE 44
		RESULTS = ↑
	;↓
	CASE 54
		RESULTS = ↓
	;↓
	CASE 64
		RESULTS = →
	CASE 74
		RESULTS = ←
	CASEELSE
		RETURN 1
ENDSELECT




