	CASE 12
		SETCOLOR 255, 0, 0
		RESULTS = 偵
	CASE 22
		SETCOLOR 0, 255, 0
		RESULTS = 壁
	CASE 32
		SETCOLOR 255, 0, 0
		RESULTS = 封
	CASEELSE
		RETURN 1
