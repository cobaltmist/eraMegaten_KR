@CHECK_ENCOUNT_0
IF RAND:100 < FLAG:인카운터율
	$LOOP_ENCOUNT
	LOCAL:2 = 0
	FOR LOCAL,7,17,1
		;1Fは１枠あたり10％の확률로出現
		;2Fは１枠あたり20％の확률로出現
		IF RAND:100 < (FLAG:現M+1) * 5
			LOCAL:3 = 던전フラグ:0:(RAND:(던전フラグ:0:0) + 1)
			CALL SET_ENEMY,LOCAL, LOCAL:3 , CSVBASE(LOCAL:3, GETNUM(BASE,"LV"),0),0
			LOCAL:2 += 1
		ENDIF
	NEXT
	SIF LOCAL:2 == 0
		GOTO LOOP_ENCOUNT
	RETURN 1
ELSE
	FLAG:未遭遇歩数 += 1
	RETURN 0
ENDIF










