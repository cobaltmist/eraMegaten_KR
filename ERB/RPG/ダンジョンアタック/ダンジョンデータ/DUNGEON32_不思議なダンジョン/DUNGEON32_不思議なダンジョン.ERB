			ENDIF
		ENDIF

	ELSEIF 던전플래그:32:1 == 2
	;魔界探索の場合

		IF FLAG:현M % 10 == 0 || DUNGEON_32_IS_LAST_FLOOR() == 1
			;10の倍数階の場合、または;最上層 / 最下層である場合

			IF (FLAG:현X == CD_ARRAY_EVENT_POINT:0:0) && (FLAG:현Y == CD_ARRAY_EVENT_POINT:0:1)
				;---------------------------------
