		IF RESULT == 0
			;--------------
			;依頼を受ける
			;--------------
			던전플래그:32:1 = 1																					;挑戦中のダンジョンの大分類を指定(1:占い師マリーの依頼によるランダム異界)
			던전플래그:32:2 = DUNGEON_32_IKAI_DEVIL_LEVEL_MIN:(DUNGEON_32_QUEST_LIST:SELECT_QUEST_NO:0)			;出現する悪魔の最低レベルを指定
