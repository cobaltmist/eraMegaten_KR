		IF FLAG:현X == 2 && FLAG:현Y == 5
			WAIT
			FLAG:도주불가플래그 = 1
			FLAG:회화불능플래그 = 1
			FLAG:선제기습취소 = 1

			CALL SET_ENEMY,8,[[キャラ:네비로스]],40 + RAND:5,0,0
			CALL SYNC_STATUS,(CHARANUM-1)
			CALL HEALTH_CHARA,(CHARANUM-1)

			CALL SET_ENEMY,9,[[キャラ:뱀파이어]],48,0,0
			CALL SYNC_STATUS,(CHARANUM-1)
			CALL HEALTH_CHARA,(CHARANUM-1)
			
