@EVENT_TOKYO_STATION_START
[IF_DEBUG]
	CALL INPUT_YN_D("ダンジョンスキップ", "")
	IF RESULT == 0
		던전플래그:25:10 = 2
		CALL MESSAGE_WINDOW_D, "",					 "＞던전플래그:25:10 == 2"
		FLAG:탈출 = 1
		MONEY:1 += 10000
		FLAG:명성 += 100
