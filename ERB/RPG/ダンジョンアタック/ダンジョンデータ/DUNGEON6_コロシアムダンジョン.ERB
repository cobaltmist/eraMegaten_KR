		CALL MAKE_FLOOR_LINE, 7,"01 111 6 11111210"
		CALL MAKE_FLOOR_LINE, 8,"01 111     111 10"
		CALL MAKE_FLOOR_LINE, 9,"01211111 6 111 10"
		CALL MAKE_FLOOR_LINE,10,"0  1 2 1 2 1   10"
		CALL MAKE_FLOOR_LINE,11,"01 1 1 11111 1210"
