;=======================================================================
;적の종족の종류数
;던전성냥中は増える
;=======================================================================
@CLASS_NUM_6
SELECTCASE RAND:100
	CASE IS < (40 - (던전플래그:6:0 == 1) * 20)
		RETURN 1
	CASE IS < (100 - (던전플래그:6:0 == 1) * 20)
		RETURN 2
	CASEELSE
		RETURN 3
ENDSELECT
