;エイプリル(アルプ)
@SORP_PLAY_1016, ARGS
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1016]
	CASE "キャラ名"
		RESULTS = エイプリル
	CASE "指名名"
		RESULTS = エイプリル(アルプ)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		;ウェンディー身請け済なら出現
		IF 롯폰기창관플래그:6 > 3
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "価格"
		RETURN 300
	CASE "紹介文"
		IF 롯폰기창관플래그:16 == 0
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、エイプリル嬢をご希望ですか/彼女はなんといいますか迷子でしてね？"
			CALL MESSAGE_WINDOW_D, "受付の男", @"魔界から人間界まで遊びに来たらしいとのですが/帰り道が分からなくなったので/仲魔が迎えに来るまでこの街で待つことにしたそうです"
			CALL MESSAGE_WINDOW_D, "受付の男", @"ですが流石に働かざる者はなんとやらで/ジョセフィーヌ嬢が保護者代わりとして面倒見る傍ら、当店で客を取っているという訳ですよ"
		ELSE
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、エイプリル嬢ですか/お客様も中々良い趣味なようですね"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"さて、エイプリル嬢ですが…/一晩で３００マッカになります"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,15,3
		IF 롯폰기창관플래그:16 == 0
			CALL MESSAGE_WINDOW_D, "エイプリル", @"はぁい、アタシエイプリル！指名アリガトー"
			CALL MESSAGE_WINDOW_D, "", @"＞陽気な アルプ が 一体 出た。"
			CALL MESSAGE_WINDOW_D, "エイプリル", @"それじゃあ、真夜中ふたりのヒメゴト舞踏会、いってみよー"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
			롯폰기창관플래그:16 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "エイプリル", @"アタシを呼んだー？呼んだよねー？/じゃあ今日は前よりもっと深いトコロまで踏み込んで！"
			CALL MESSAGE_WINDOW_D, "エイプリル", @"他の誰にも見せられない一夜の夢(ダンス)！アタシのハートに刻み付けて！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
		ENDIF
		EXP:MASTER:성교경험 += ABL:MASTER:기교 * 2 + 1
		EXP:MASTER:절정경험 += ABL:MASTER:기교
		JUEL:MASTER:쾌Ｃ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:쾌Ｂ += ABL:MASTER:기교 * (100) + 100
		JUEL:MASTER:욕정 += ABL:MASTER:기교 * (100) + 300
		JUEL:MASTER:습득 += ABL:MASTER:기교 * (100) + 300
		IF !TALENT:MASTER:남자
			EXP:MASTER:레즈경험 += ABL:MASTER:기교 * 2 + 1
			JUEL:MASTER:쾌Ｖ += ABL:MASTER:기교 * (200) + 200
		ENDIF
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:질사경험 += ABL:MASTER:기교
			EXP:MASTER:사정경험 += ABL:MASTER:기교
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 2000 + 1000
		ENDIF
		IF TALENT:MASTER:모유체질
			EXP:MASTER:분유경험 += (ABL:MASTER:기교 + 1)
			JUEL:MASTER:쾌Ｂ += (ABL:MASTER:기교 + 1) * 100
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 2000 + 1000
		ENDIF
		CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 99999
	CASE "身受け確認"
		;
	CASE "身受け口上"
		;
	CASE "宣伝"
		PRINTL
		PRINTL エイプリル
		SETCOLOR COLOR("ハートピンク")
		PRINTL 『一夜のダンスパートナー、ぼしゅーちゅーです』
		RESETCOLOR
		PRINTW (編集注記。とにかく天真爛漫な子です。遊んであげてください)
ENDSELECT
