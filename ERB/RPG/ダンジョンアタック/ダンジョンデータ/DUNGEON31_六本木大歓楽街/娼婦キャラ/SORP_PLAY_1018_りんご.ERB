			CALL MESSAGE_WINDOW_D, "", @"＞「また今度な？」と捨て台詞を告げて、あなたは部屋を後にした…"
			;経験フラグを設定
			롯폰기창관플래그:18 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "りんご", @"キャー%ハート()%ロリコンおじさんまた来たぁ%ハート()%/よわよわチ〇ポ何回もしゃせー%ハート()%したわたしが忘れられなかったのぉ？"
			CALL MESSAGE_WINDOW_D, "りんご", @"わたしみたいな子供%ハート()%じゃないと勝ち目ないんだもんねぇ%ハート()%/それでも前回勝てなかったんだよねぇ%ハート()%ププッ！おじさんかわいそ～%ハート()%"
			CALL MESSAGE_WINDOW_D, "りんご", @"ねえねえ！リベンジさせてあげてもいいよぉ%ハート()%/あ、ハンデもあげよっかぁ？そうじゃないとふこーへー%ハート()%だもんねぇ%ハート()%%ハート()%"
			CALL MESSAGE_WINDOW_D, "りんご", @"大人は子供なんかに絶対負けない%ハート()%って、教えてくれてもいいんだよぉ？/わたし絶対負けないけどぉ%ハート()%"
			CALL MESSAGE_WINDOW_D, "", @"＞どうやら前回の彼女の無様は無かった事にされたようだ…/どうやらまた理解(わか)らせが必要らしい"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "りんご", @"おじしゃんのまけぇ%ハート()% ぴゅっぴゅしたから まけぇなのぉ%ハート()%%ハート()%/たくしゃん たくしゃん イったけどぉ%ハート()%…わたしのかちぃ%ハート()%%ハート()%%ハート()%"
			CALL MESSAGE_WINDOW_D, "りんご", @"おとなチ〇ポしゅきぃ%ハート()%%ハート()% おじしゃんらいしゅきぃ%ハート()%%ハート()%%ハート()%/もっとぉわたしの こどもあな%ハート()% いっぱいしないと メぇー%ハート()%%ハート()%%ハート()%"
			CALL MESSAGE_WINDOW_D, "", @"＞ほぼ敗北宣言同然だが、やはり負けだけは絶対認めないようだ…/いっそドツボにハマっているように見える/どこかのタイミングでこちらが折れてやるべきかもしれない…"
			CALL MESSAGE_WINDOW_D, "", @"＞「また今度な？」と捨て台詞を告げて、あなたは部屋を後にした…"
			;見受け可能フラグを設定
			롯폰기창관플래그:18 = 2
		ENDIF
		;プレイ経験(任意の経験を追加可)
		;正直ここはテキトーにコピペ
		EXP:MASTER:성교경험 += ABL:MASTER:기교 * 2 + 1
		EXP:MASTER:절정경험 += ABL:MASTER:기교
		JUEL:MASTER:습득 += ABL:MASTER:기교 * (1000) + 1000
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:질사경험 += ABL:MASTER:기교 * 3 + 1
			EXP:MASTER:사정경험 += ABL:MASTER:기교 * 7 + 1
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 5000 + 3000
		ENDIF
		CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 10000
	CASE "身受け確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"りんご嬢を身請けされるのですかな？/まあ、半分野良みたいなものでしたし…/保護者になってくれるのはこちらとしても助かりますよ"
		CALL MESSAGE_WINDOW_D, "受付の男", @"それでは１００００マッカ頂く事になりますが…ああ、言いたい事はわかりますよ/実は結構悪戯の被害が酷くてですね…/とある上客への慰謝料を当店が立て替えてまして/ハッキリ言って借金を上乗せしてます"
		CALL MESSAGE_WINDOW_D, "受付の男", @"それで、１００００マッカですが、よろしいですかな？"
	CASE "身受け口上"
		;ここで加入処理を作成
		;ベースははなこ
		CALL ADD_NEW_COMPANION, 1003, 3000
		CHARA = RESULT:1
		NAME:CHARA = メスガキ
		CALLNAME:CHARA = りんご
		CSTR:CHARA:일인칭 = わたし
		CSTR:CHARA:이인칭 = おじさん
		;即戦力として使えるように色々底上げ
		CFLAG:CHARA:매춘인기 = 0
		CFLAG:CHARA:매각가능 = 2
		CFLAG:CHARA:의존도 = 1000
		;ベース
		MAXBASE:CHARA:체력 += 2000
		BASE:CHARA:체력 = MAXBASE:CHARA:체력
		MAXBASE:CHARA:기력 += 1500
		BASE:CHARA:기력 = MAXBASE:CHARA:기력
		BASE:CHARA:ＭＡＧ = MAXBASE:CHARA:ＭＡＧ
		;耐性も微調整
		;わからせ(物理)が通るように剣撃→打撃に弱点移動。はなこと違って水関係ないので水撃耐性なし、火炎弱点追加
		;耐性が減った上に弱点が増えて弱くなったので、代わりに破魔弱点を無耐性にしてバランスを取る
		BASE:CHARA:검격 = 0
		MAXBASE:CHARA:검격 = 0
		BASE:CHARA:타격 = 200
		MAXBASE:CHARA:타격 = 200
		BASE:CHARA:화염 = 150
		MAXBASE:CHARA:화염 = 150
		BASE:CHARA:파마 = 100
		MAXBASE:CHARA:파마 = 100
		BASE:CHARA:수격 = 100
		MAXBASE:CHARA:수격 = 100
		;スキル素質も調整
		TALENT:CHARA:수격 = 0;水と関係性ないのでなし
		TALENT:CHARA:정신 = 1;精神攻撃は基本
		;素質
		TALENT:CHARA:처녀 = 0
		TALENT:CHARA:무관심 = 0
		TALENT:CHARA:비관적 = 0
