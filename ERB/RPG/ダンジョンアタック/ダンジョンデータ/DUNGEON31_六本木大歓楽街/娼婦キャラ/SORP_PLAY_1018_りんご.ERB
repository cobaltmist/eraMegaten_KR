@SORP_PLAY_1018, ARGS
#DIM CHARA, 1
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1018]
	CASE "キャラ名"
		RESULTS = りんご
	CASE "指名名"
		IF 롯폰기창관플래그:18 == 0
			RESULTS = りんご(人間？)
		ELSE
			RESULTS = りんご(外道メスガキ)
		ENDIF
	CASE "所属"
		;表なら1、裏なら2
		RETURN 2
	CASE "判定"
		;指名可能なら0、不可なら1
		;(キャラ的にオトコ前提。ロリハーレムまたは娘ハーレムED到達、または大業物が必要)
		IF 롯폰기창관플래그:18 >= 3
			RETURN 1
