;セシリア(エルフ)
@SORP_PLAY_1012, ARGS
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1012]
	CASE "キャラ名"
		RESULTS = セシリア
	CASE "指名名"
		RESULTS = セシリア(エルフ)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		;シェリー身請け済なら出現
		IF 롯폰기창관플래그:2 > 3
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "キャラ名"
		RESULTS = セシリア
	CASE "価格"
		RETURN 500
	CASE "紹介文"
		IF 롯폰기창관플래그:12 == 0
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、セシリア嬢をご希望ですか/お客様、いいところに目を付けられましたね"
			CALL MESSAGE_WINDOW_D, "受付の男", @"彼女はライバル店からスカウトした実力派のエルフです/元々は騎士だったらしく、その美貌と肢体は当時から衰えてないそうです"
			CALL MESSAGE_WINDOW_D, "受付の男", @"昔、蛮族に力づくで犯されて以来、どうも身体が忘れられなくなってしまったようで/理想のお相手を探して各地を転々としているとのことで/こちらを紹介した次第でございます"
		ELSE
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、セシリア嬢ですか/さてはお客様、エルフの騎士を屈服させるのが楽しくなっておりますね？"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"さて、セシリア嬢ですが…/一晩で５００マッカになります"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,16,2
		IF 롯폰기창관플래그:12 == 0
			CALL MESSAGE_WINDOW_D, "セシリア", @"うむ、指名ありがとう/セシリアだ、よろしく頼む"
			CALL MESSAGE_WINDOW_D, "セシリア", @"ところで私を選んだという事で分かっていると思うが/私はイメージプレイじゃないと燃えないタイプでな"
			CALL MESSAGE_WINDOW_D, "セシリア", @"という訳で…//―――くっ、殺せ!%ハート()%"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
			롯폰기창관플래그:12 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "セシリア", @"よく来てくれたな。それじゃあ、早速//―――くっ、殺せ!%ハート()%"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
		ENDIF
		EXP:MASTER:성교경험 += ABL:MASTER:새드끼 * 5 + 1
		EXP:MASTER:절정경험 += ABL:MASTER:새드끼 * 10
		JUEL:MASTER:쾌Ｃ += ABL:MASTER:새드끼 * (1000) + 1000
		JUEL:MASTER:쾌Ｂ += ABL:MASTER:새드끼 * (1000) + 1000
		JUEL:MASTER:욕정 += ABL:MASTER:새드끼 * (1000) + 1000
		IF !TALENT:MASTER:남자
			EXP:MASTER:레즈경험 += ABL:MASTER:새드끼 * 5 + 1
		ENDIF
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:질사경험 += ABL:MASTER:새드끼 * 3 + 1
			EXP:MASTER:사정경험 += ABL:MASTER:새드끼 * 7 + 1
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:새드끼 * 5000 + 3000
		ENDIF
		EXP:MASTER:가학쾌락경험 += ABL:MASTER:새드끼 * 10 + 10
		CALL INCREASE_LC,10
	CASE "身受け価格"
		RETURN 99999
	CASE "身受け確認"
		;
	CASE "身受け口上"
		;
	CASE "宣伝"
		PRINTL
		PRINTL セシリア
		;勝てなかったよ…展開をするためにあえて自分でフラグを立てていくスタイル
		SETCOLOR COLOR("ハートピンク")
		PRINTL 『エルフの騎士はニンゲンなんかに負けたりしない！私がそれを証明しよう！』
		RESETCOLOR
		PRINTW (編集注記。常日頃から騎士鎧を着ているとのこと。本場の騎士は一味違うね！)
ENDSELECT
