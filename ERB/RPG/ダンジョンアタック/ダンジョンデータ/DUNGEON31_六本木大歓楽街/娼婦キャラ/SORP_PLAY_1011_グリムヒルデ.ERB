;グリムヒルデ(魔女)
;白雪姫の魔女(追加用サンプルキャラ)
@SORP_PLAY_1011, ARGS
#DIM CHARA, 1
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1011]
	CASE "キャラ名"
		RESULTS = グリムヒルデ
	CASE "指名名"
		RESULTS = グリムヒルデ(魔女)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		IF 롯폰기창관플래그:11 >= 3
			RETURN 1
		ELSE
			RETURN 0
		ENDIF
	CASE "キャラ名"
		RESULTS = グリムヒルデ
	CASE "価格"
		RETURN 200
	CASE "紹介文"
		IF 롯폰기창관플래그:11 == 0
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、グリムヒルデ嬢をご希望ですか/彼女は一応娼婦扱いでリストに載ってますが/実際に身体は売らない嬢でありまして、"
			CALL MESSAGE_WINDOW_D, "受付の男", @"一時(いっとき)の間、お酒や舞、歌を楽しんでもらう/いわばヨシワラのゲイシャ・ガール・スタイルの嬢となります"
			CALL MESSAGE_WINDOW_D, "受付の男", @"抱く事はできませんが、まぁ風流を楽しむのも粋というものではないでしょうか"
		ELSE
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、グリムヒルデ嬢ですか/お客さん、粋ですねぇ…"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"さて、グリムヒルデ嬢ですが…/一晩で２００マッカになります"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,13,3
		;条件によって分岐の追加も可
		IF 롯폰기창관플래그:11 == 0
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"ふむ、わらわを指名したのはおぬしかや"
			CALL MESSAGE_WINDOW_D, "", @"＞ゲイシャが出てくるかと思ったら、何故か黒ドレス姿の貴婦人が現れた"
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"その顔は…アテが外れたと思っておるな/まぁ仕方あるまい、そもそも勘違いさせるように言わせておるからな"
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"実体はただの人生相談と、それを占う黒魔術の儀式さ/なぁに、そんな退屈なものじゃないよ/儀式には歌と踊りが必要なのさ"
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"さて、それじゃあ何か悩んでいる事はないかい？"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
			;経験フラグを設定
			롯폰기창관플래그:11 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"おや、また来たのかい"
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"わらわを身受けしたい？/…なかなか酔狂な奴やね"
			CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"そやね…/そろそろ当座の生活資金も貯まったことだから/ここを抜けるために着いて行っても良いんだけどねえ…"
			;レベル40以上で身受け可フラグを立てる
			IF  BASE:MASTER:LV >= 40
				CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"ふむ、/魔女に力を借りなきゃやっていけない暗愚ではなさそうだし/ま、良いよ"
				CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"それじゃあ、身受けできる金が貯まったら迎えに来てくださいな"
				롯폰기창관플래그:11 = 2
			ELSE
				CALL MESSAGE_WINDOW_D, "", @"＞グリムヒルデに全身をざっと眺められ、溜息をつかれた"
				CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"おぬしの実力じゃあ、着いて行っても不安しかなさそうね/もっと力を付けたら考えたげるよ"
			ENDIF
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
		ENDIF
		;プレイ経験(任意の経験を追加可)
		;EXP:MASTER:성교경험 += ABL:MASTER:기교 * 2 + 1
		;EXP:MASTER:절정경험 += ABL:MASTER:기교
		CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 4000
	CASE "身受け確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"グリムヒルデ嬢を身請けされるのですかな？"
		CALL MESSAGE_WINDOW_D, "受付の男", @"でしたら、４０００マッカ頂く事になります/よろしいですかな？"
	CASE "身受け口上"
		;ここで加入処理を作成
		;ベースはモルガン
		CALL ADD_NEW_COMPANION, 523, 3000
		CHARA = RESULT:1
		NAME:CHARA = グリムヒルデ
		CALLNAME:CHARA = グリムヒルデ
		CSTR:CHARA:일인칭 = わらわ
		CSTR:CHARA:이인칭 = おぬし
		;即戦力として使えるように色々底上げ
		CFLAG:CHARA:매각가능 = 2
		CFLAG:CHARA:의존도 = 1000
		;ベース
		MAXBASE:CHARA:체력 += 1000
		BASE:CHARA:체력 = MAXBASE:CHARA:체력
		MAXBASE:CHARA:기력 += 1000
		BASE:CHARA:기력 = MAXBASE:CHARA:기력
		BASE:CHARA:ＭＡＧ = MAXBASE:CHARA:ＭＡＧ
		;素質
		TALENT:CHARA:저항 = 0
		TALENT:CHARA:꿋꿋함 = 1
		TALENT:CHARA:일선을넘지않음 = 1
		TALENT:CHARA:정조관결여 = 0
		TALENT:CHARA:정조관념 = 1
		TALENT:CHARA:습득빠름 = 1
		TALENT:CHARA:약독내성 = 1
		TALENT:CHARA:새드 = 1
		TALENT:CHARA:헌신적 = 1
		TALENT:CHARA:눈에띄고싶어함 = 1
		TALENT:CHARA:월광욕 = 1
		TALENT:CHARA:치료 = 1
		TALENT:CHARA:고무 = 1
		TALENT:CHARA:금단의지식 = 1
		TALENT:CHARA:왕족 = 1
		TALENT:CHARA:하얀피부 = 1
		CFLAG:CHARA:피부색깔 = 1
		;能力
		ABL:CHARA:순종 = 2
		ABL:CHARA:욕망 = 3
		ABL:CHARA:기교 = 3
		ABL:CHARA:가창기능 = 5
		ABL:CHARA:회화타입 = 307
		ABL:CHARA:스킬1 = [[스킬:컨센트레이트]]
		ABL:CHARA:스킬2 = [[스킬:방전]]
		ABL:CHARA:스킬3 = [[스킬:혼탁의장기]]
		ABL:CHARA:스킬4 = [[스킬:도발]]
		ABL:CHARA:스킬5 = [[스킬:스쿤・다]]
		;経験
		EXP:CHARA:출산경험 += 1
		CSTR:CHARA:종족명 = 女王
		;解説リセット
		FOR LOCAL, 1, 21
			CSTR:CHARA:@"해설{LOCAL}" = 　
		NEXT
		CSTR:CHARA:@"해설{1}" = 童話「白雪姫」に登場する、白雪姫の母にして魔女
		CSTR:CHARA:@"해설{2}" = 童話では女王様や魔女とばかり語られ、
		CSTR:CHARA:@"해설{3}" = いつしかそれは「名前の語られない悪の魔女」として存在だけが定着した
		CSTR:CHARA:@"해설{4}" = 　
		CSTR:CHARA:@"해설{5}" = かの魔女は最も偉大な悪役として語り継がれていくが、
		CSTR:CHARA:@"해설{6}" = 彼女の名前だけは慈悲により悪役として語り継がれる事はなく、
		CSTR:CHARA:@"해설{7}" = 彼女自身は魔女の抜け殻となる代わりに、自由を手に入れた…
		CSTR:CHARA:@"해설{8}" = 　
		CSTR:CHARA:@"해설{9}" = その手に王権も、願いを叶える鏡もなく、
		CSTR:CHARA:@"해설{10}" = しかし、その足に焼けた靴を履かされることもなく、
		CSTR:CHARA:@"해설{11}" = あれほどあった美や娘への執念の心も捨て去って…
		CSTR:CHARA:@"해설{12}" = 　
		CSTR:CHARA:@"해설{13}" = 彼女は偉大な悪の魔女の影法師。ただの女王グリムヒルデ
		
		;口上
		CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"おや、本気だったのかい/ま、もう金払ってくれたみたいだし/この魔女の力が必要っていうなら、力を貸そうじゃないか"
		CALL MESSAGE_WINDOW_D, "グリムヒルデ", @"それじゃあ/コンゴトモ　ヨロシク"
		MONEY:1 -= 4000
		롯폰기창관플래그:11 = 3
ENDSELECT
