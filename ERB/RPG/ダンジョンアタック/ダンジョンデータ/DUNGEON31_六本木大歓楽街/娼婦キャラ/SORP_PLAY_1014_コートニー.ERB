;コートニー(ネコマタ)
@SORP_PLAY_1014, ARGS
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1014]
	CASE "キャラ名"
		RESULTS = コートニー
	CASE "指名名"
		RESULTS = コートニー(ネコマタ)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		;メラニー身請け済なら出現
		IF 롯폰기창관플래그:4 > 3
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "価格"
		RETURN 500
	CASE "紹介文"
		IF 롯폰기창관플래그:14 == 0
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、コートニー嬢をご希望ですか/彼女はメラニー嬢が後継として置いて行ったネコマタでしてね/メラニー嬢が忘れられない層からの支持が厚いですよ"
			CALL MESSAGE_WINDOW_D, "受付の男", @"技術も人気もまさにメラニー嬢の再来なのですが/ただ一点だけ問題がありまして"
			CALL MESSAGE_WINDOW_D, "受付の男", @"マタタビが好物すぎて時々使い物にならなくなるのですよ…/まぁ勤務時間中はマタタビを断っているので問題ないと思いますがね"
			CALL MESSAGE_WINDOW_D, "受付の男", @"あ、今更ですがマタタビの差し入れは禁止としております/以前にとあるお客様の差し入れでそれはそれは酷い事になりましてね…"
		ELSE
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、コートニー嬢ですか/お客様、舌技の虜になられましたね"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"さて、コートニー嬢ですが…/一晩で５００マッカになります"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,12,2
		IF 롯폰기창관플래그:14 == 0
			CALL MESSAGE_WINDOW_D, "コートニー", @"あい、ダンナさん！今日はよろしくね%ハート()%/ココロはいつでもライオンキング！"
			CALL MESSAGE_WINDOW_D, "", @"＞やたらハイテンションなネコマタがやってきた。"
			CALL MESSAGE_WINDOW_D, "コートニー", @"んー？酔っぱらってないかって？ダイジョーブダイジョーブこれが素だよ！/むしろわっち酔ったら泣き喚くタイプだから！"
			CALL MESSAGE_WINDOW_D, "コートニー", @"そんじゃまー、はやく服脱いで脱いで！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
			롯폰기창관플래그:14 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "コートニー", @"今日もよろしくね%ハート()%/ダンナさんなら予約なしでもわっちのフルコースご馳走しちゃうよ！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
		ENDIF
		EXP:MASTER:절정경험 += ABL:MASTER:기교
		JUEL:MASTER:쾌Ｃ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:쾌Ｂ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:쾌Ａ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:욕정 += ABL:MASTER:기교 * (300) + 300
		EXP:MASTER:Ａ경험 += ABL:MASTER:기교 * 5
		IF !TALENT:MASTER:남자
			EXP:MASTER:레즈경험 += ABL:MASTER:기교 * 3
			JUEL:MASTER:쾌Ｖ += ABL:MASTER:기교 * (300) + 300
		ENDIF
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:사정경험 += ABL:MASTER:기교
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 3000
		ENDIF
		IF TALENT:MASTER:모유체질
			EXP:MASTER:분유경험 += (ABL:MASTER:기교 + 1) * 3
			JUEL:MASTER:쾌Ｂ += (ABL:MASTER:기교 + 1) * 200
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 2000 + 1000
		ENDIF
		CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 99999
	CASE "身受け確認"
		;
	CASE "身受け口上"
		;
	CASE "宣伝"
		PRINTL
		PRINTL コートニー
		SETCOLOR COLOR("ハートピンク")
		PRINTL 『にゃー…』
		RESETCOLOR
		PRINTW (編集注記。マタタビ使用中のためコメント収録できなかったことをお詫び申し上げます)
ENDSELECT
