;コートニー(ネコマタ)
@SORP_PLAY_1014, ARGS
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1014]
	CASE "キャラ名"
		RESULTS = 코트니
	CASE "指名名"
		RESULTS = 코트니(네코마타)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		;メラニー身請け済なら出現
		IF 롯폰기창관플래그:4 > 3
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "価格"
		RETURN 500
	CASE "紹介文"
		IF 롯폰기창관플래그:14 == 0
			CALL MESSAGE_WINDOW_D, "접수 보는 남자", @"과연、코트니양을 지명하십니까/그녀는 멜라니양이 후계자로 두고간 네코마타입니다/멜라니양을 잊지 못한 매니아층으로부터의 지지가 두텁죠"
			CALL MESSAGE_WINDOW_D, "접수 보는 남자", @"기술도 인기도 그야말로 멜라니양의 재림입니다/그런데 단 한가지 문제가 있어서요"
			CALL MESSAGE_WINDOW_D, "접수 보는 남자", @"개다래나무를 너무 좋아해서 가끔 쓸모가 없어지더군요…/뭐 근무시간 중에는 개다래나무를 끊었기 때문에 별 문제는 없을 것 같지만요"
			CALL MESSAGE_WINDOW_D, "접수 보는 남자", @"아、새삼스럽지만 개다래 나무의 반입은 금지되어있습니다/이전에 어떤 손님의 반입을 통해서 너무 심한 일이 되어버렸기 때문에…"
		ELSE
			CALL MESSAGE_WINDOW_D, "접수 보는 남자", @"과연、코트니양입니까/고객님、혀 기술의 포로가 되셨군요"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "접수 보는 남자", @"그럼、코트니양 말입니다만…/하룻밤에 ５００마카입니다"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,12,2
		IF 롯폰기창관플래그:14 == 0
			CALL MESSAGE_WINDOW_D, "코트니", @"넵, 남편씨！오늘은 잘 부탁해%ハート()%/마음은 언제나 라이언 킹！"
			CALL MESSAGE_WINDOW_D, "", @"＞굉장히 하이텐션인 네코마타가 찾아왔다。"
			CALL MESSAGE_WINDOW_D, "코트니", @"응ー？술에 취한거 아니냐고? 갠찮아 갠찮아 이건 기본이야！/오히려 취하면 엉엉 우는 타입이라구！"
			CALL MESSAGE_WINDOW_D, "코트니", @"그러면, 빨리 옷이나 벗어！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞즐겁게 놀았다…"
			롯폰기창관플래그:14 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "코트니", @"오늘도 잘 부탁해%ハート()%/남편씨라면 예약없이 와도 내가 풀코스로 대접할테니까！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞즐겁게 놀았다…"
		ENDIF
		EXP:MASTER:절정경험 += ABL:MASTER:기교
		JUEL:MASTER:쾌Ｃ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:쾌Ｂ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:쾌Ａ += ABL:MASTER:기교 * (300) + 300
		JUEL:MASTER:욕정 += ABL:MASTER:기교 * (300) + 300
		EXP:MASTER:Ａ경험 += ABL:MASTER:기교 * 5
		IF !TALENT:MASTER:남자
			EXP:MASTER:레즈경험 += ABL:MASTER:기교 * 3
			JUEL:MASTER:쾌Ｖ += ABL:MASTER:기교 * (300) + 300
		ENDIF
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:사정경험 += ABL:MASTER:기교
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 3000
		ENDIF
		IF TALENT:MASTER:모유체질
			EXP:MASTER:분유경험 += (ABL:MASTER:기교 + 1) * 3
			JUEL:MASTER:쾌Ｂ += (ABL:MASTER:기교 + 1) * 200
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:기교 * 2000 + 1000
		ENDIF
		CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 99999
	CASE "身受け確認"
		;
	CASE "身受け口上"
		;
	CASE "宣伝"
		PRINTL
		PRINTL 코트니
		SETCOLOR COLOR("ハートピンク")
		PRINTL 『냐아…』
		RESETCOLOR
		PRINTW (편집자 주。개다래나무 사용 중이라 코멘트 수록하지 못한 점 사죄드립니다)
ENDSELECT
