;無名の高校生
;援助交際サンプル用
;ブルセラ？で小遣い稼ぎする高校生たち。ぶっちゃけ何の効果もないフレーバー。身受け不可(身受け処理を別利用)
;相場とかは知らんのでテキトー。両替屋の1マッカ=200円レート換算で50マッカ=1万として、高校生が飛び付きそうな価格設定で
@SORP_PLAY_1020, ARGS
#DIM CHARA, 1
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1020]
	CASE "キャラ名"
		IF 롯폰기창관플래그:20 == 0
			RESULTS = 幸薄そうな女の子
		ELSE
			RESULTS = イケイケな女の子
		ENDIF
	CASE "指名名"
		IF 롯폰기창관플래그:20 == 0
			RESULTS = 幸薄そうな女の子
		ELSE
			RESULTS = イケイケな女の子
		ENDIF
	CASE "所属"
		;表なら1、裏なら2、援助なら3
		RETURN 3
	CASE "判定"
		RETURN 0
	CASE "価格"
		IF 롯폰기창관플래그:20 == 0
			RETURN 50
		ELSE
			RETURN 300
		ENDIF
	CASE "紹介文"
		IF 롯폰기창관플래그:20 == 0
			CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"彼女はー/下着の売却を希望しているみたいですー"
			CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"グループで来られた方なのですがー/今回は様子見でー/彼女のみ参加を希望とのことですー"
		ELSE
			CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"彼女はー/下着の売却を希望しているみたいですー"
			CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"以前に援助を受けた方の話を聞いてー/「ウチらのならこのぐらいの価値あるっしょー」とー/援助を希望しているみたいですー"
		ENDIF
	CASE "確認"
		IF 롯폰기창관플래그:20 == 0
			CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"５０マッカでの援助を希望しておりますがー/どうしますかー？"
		ELSE
			CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"３００マッカでの援助を希望しておりますがー/どうしますかー？"
		ENDIF
	CASE "プレイ口上"
		IF 롯폰기창관플래그:20 == 0
			CALL MESSAGE_WINDOW_D, "幸薄そうな女の子", @"あ、あの……/援助者の方ですか…？"
			CALL MESSAGE_WINDOW_D, "", @"＞現れたのは幸薄そうな女子高生だ"
			CALL MESSAGE_WINDOW_D, "幸薄そうな女の子", @"ご、ごめんなさい……/後ろ、向いていてもらっていいですか…？"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL MESSAGE_WINDOW_D, "幸薄そうな女の子", @"こ、これで……お願いします……"
			CALL MESSAGE_WINDOW_D, "", @"＞脱いだ下着を手早く渡すと、彼女は俯いたまま去っていった…"
			CALL SHOW_PICTURE, "EMPTY"
			;経験フラグを設定
			롯폰기창관플래그:20 = 1
		ELSEIF RAND:2 == 0 && TALENT:MASTER:남자 && !TALENT:MASTER:오토코노코
			CALL MESSAGE_WINDOW_D, "", @"＞現れたのは以前とは異なる女子高生二人組だ/少し化粧が濃い、街で割とよく見かけるギャルといった容貌である"
			SELECTCASE RAND:5
				CASE 0
					;1/5でエロ展開(その前に1/2で分岐するので、実質1/10)　なんかヤバい奴に襲われる
					;例えるなら、風俗でアラフィフぐらいのBBA嬢に当たってベテランのテクで抜けるっちゃ抜けるんだけど気分的にはアレな感じ、と言えば分かる人は分かると思う…
					CALL MESSAGE_WINDOW_D, "キャピキャピした子", @"オジサンが買ってくれるんですかぁ？/やぁ、ヘンターイ☆"
					CALL MESSAGE_WINDOW_D, "妖しい目付きの子", @"熱視線感じちゃうよネー/フフ…何されちゃうんだろーねぇ…"
					CALL MESSAGE_WINDOW_D, "", @"＞ヤバい性欲モンスターだ/どうみても地雷です本当に(ry"
					CALL MESSAGE_WINDOW_D, "", @"＞パンツを餌にした釣りに引っ掛かった獲物…/オモチャにされる運命をあなたは悟った…"
					CALL MESSAGE_WINDOW_D, "キャピキャピした子", @"大人しくしててね☆オジサン/ウチらのパンツで天国見したゲルからね"
					CALL MESSAGE_WINDOW_D, "妖しい目付きの子", @"こんなの体験したら下着フェチになっちゃうんじゃない…？/ううん、下着フェチにしてあげるぅ…"
					CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
					CALL MESSAGE_WINDOW_D, "", @"＞それぞれ1回ずつ絞られた…/無論、使用済みパンツのお持ち帰り付きである//…なんか、絶妙に嬉しくない気分"
					;ハズレで終わるだけだとちょっと可哀想なので、経験増加のオマケ付き
					EXP:MASTER:절정경험 += 2
					EXP:MASTER:사정경험 += 2
				CASEELSE
					;それ以外は普通のブルセラ。比較的優しいギャルでストリップのサービス付き(ストリップ描写書けないから省略するけどな！)
					;イチゴ≒1.5万の事で2個つまり3万。それが二人で6万分≒300マッカの計算で価格を設定。この部分を基準に分岐を増やした形なので、イマイチ値段と釣り合ってなくても許して…
					CALL MESSAGE_WINDOW_D, "金髪ギャル", @"オジサンがウチらのパンツ買ってくれるん？"
					CALL MESSAGE_WINDOW_D, "茶髪ギャル", @"ヘンタイキモ親父を予想してたけど/想像より10倍はマシなツラしてんじゃーん？"
					CALL MESSAGE_WINDOW_D, "金髪ギャル", @"前払いでイチゴ2個。あ、ウチらそれぞれ別ね？/パンツだけでウリと同じぐらい稼げるとかマジウケる☆"
					CALL MESSAGE_WINDOW_D, "茶髪ギャル", @"ウチ的にはオジサンはアリ寄りのアリだし/少しサービスしたげてもイーヨ♪"
					CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
					SELECTCASE RAND:3
						CASE 0
							LOCALS = シースルーパンティとローライズ
						CASE 1
							LOCALS = エナメルショーツとTバック
						CASE 2
							LOCALS = アニマル柄のハイレグと紐パン
					ENDSELECT
					CALL MESSAGE_WINDOW_D, "", @"＞即席ストリップショーを鑑賞し、/%LOCALS%を手に入れました"
			ENDSELECT
		ELSE
			SELECTCASE RAND:2
				CASE 0
					;悪魔たちによる衣類売買。無名の高校生でもブルセラでもないやんけ！ってツッコミは認める
					CALL MESSAGE_WINDOW_D, "ナイトメア", @"キミが買い取ってくれるんですかぁ？"
					CALL MESSAGE_WINDOW_D, "ネコマタ", @"ウチらの縄張りに入ってきた余所者から身包み剥いだ奴～/臨時収入ウマウマー♪"
					CALL MESSAGE_WINDOW_D, "ハーピー", @"ココ良いよね！古着屋より高く買い取ってくれるし～"
					CALL MESSAGE_WINDOW_D, "", @"＞売りに来たのは路地裏の悪魔たちだった/路地裏と言えども弱肉強食、サバンナの掟はここでも有効なようだ"
					CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
					CALL MESSAGE_WINDOW_D, "", @"＞ダメージ加工された下着を複数手に入れた/ただの襤褸切れもいくつか見える…"
				CASE 1
					;ゾンビちゃんによるブルセラ。無名の高校生(軽高生ゾンビちゃん)
					;ゾンビの体臭隠しのために香水を多用してた的な扱い。腐乱臭する下着とか流石にレベル高い気がしたのでこんな形に…
					CALL MESSAGE_WINDOW_D, "", @"＞現れたのは以前とは異なる女子高生二人組だ/少し化粧が濃い、街で割とよく見かけるギャルといった容貌である"
					CALL MESSAGE_WINDOW_D, "ゾンビちゃんA", @"元はブランド物なんだけど買ってくれない？/ちょーと最近入り用でさー"
					CALL MESSAGE_WINDOW_D, "ゾンビちゃんB", @"ブランドっていっても結構昔の奴なんだけどねー/ほらウチらってこの有様じゃん？"
					SELECTCASE RAND:4
						CASE 0
							LOCALS = 魔界でも評判の新色ネイル
						CASE 1
							LOCALS = 最近バズってる新作アクセ
						CASE 2
							LOCALS = 来週発売予定の限定ブランド品
						CASE 3
							LOCALS = 噂のアイドルのライブチケット
					ENDSELECT
					CALL MESSAGE_WINDOW_D, "", @"＞聞くと%LOCALS%が欲しいらしい/ゾンビちゃんたちはキャッキャしながら話している"
					CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
					CALL MESSAGE_WINDOW_D, "ゾンビちゃんA", @"抵抗？うーん、この身体で今更エロも何もないしー/高く売れるならそれでい～じゃんっていうかー"
					CALL MESSAGE_WINDOW_D, "", @"＞二人は明け透けに下着を脱いで渡してきた/香水の匂いが強く染み付いている…/もし体温が残っていれば、ゾンビちゃんが履いていたとは気が付かないだろう…"
			ENDSELECT
		ENDIF
		CALL SHOW_PICTURE, "EMPTY"
		;お持ち帰り可フラグを立てる(描写的にオトコ前提にしちゃったので、ここで除外)
		IF TALENT:MASTER:남자
			롯폰기창관플래그:20 = 2
		ENDIF
	CASE "身受け価格"
		RETURN 500
	CASE "身受け確認"
		;身受けという名目の普通のパパ活
		CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"彼女はー/「即サポ希望」とのことですー"
		CALL MESSAGE_WINDOW_D, "露出したウェイトレス", @"５００マッカでお持ち帰りされても良いとのことですがー/いかがいたしますかー？"
	CASE "身受け口上"
		;身受けという名目の普通のパパ活なのでキャラ追加はなし。フラグを身受け済に変更せず再び選べる
		SELECTCASE RAND:3
			CASE 0
				;彼氏持ち。NTRっぽい流れ
				CALL MESSAGE_WINDOW_D, "黒髪ピアス", @"ふーん、あんたが今日の相手？/メンド…さっさとすませちゃってよ"
				CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
				CALL SHOW_PICTURE, "EMPTY"
				CALL MESSAGE_WINDOW_D, "黒髪ピアス", @"フーッ%ハート()% フーッ%ハート()%/彼氏のより…凄ぉ…%ハート()% おなか…熱…%ハート()%/(今日…どっちだったっけ…？ピル…呑まないと…デキちゃう…かも)"
				CALL MESSAGE_WINDOW_D, "", @"＞즐겁게 놀았다…"
			CASE 1
				;淫乱ピンク。プレイ後は脳内ピンク一色に
				CALL MESSAGE_WINDOW_D, "ピンク髪ガーリッシュ", @"パーパ%ハート()% いっぱいお金ちょーだい%ハート()%/(はぁ…お金のためとは言えヘンタイの相手とかダル…)"
				CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
				CALL SHOW_PICTURE, "EMPTY"
				CALL MESSAGE_WINDOW_D, "ピンク髪ガーリッシュ", @"ぱぱぁ%ハート()% もっとぉ気持ちよくしてぇ%ハート()%%ハート()%%ハート()%/おかねぇ？ そんなのもうどーでもいいからあ%ハート()%/(ちんぽ%ハート()%ちんぽ%ハート()%ちんぽ%ハート()%ちんぽ%ハート()%ちんぽ%ハート()%ちんぽ%ハート()%)"
				CALL MESSAGE_WINDOW_D, "", @"＞즐겁게 놀았다…"
			CASE 2
				;ゾンビちゃん。ちょっと趣味入れ過ぎたかも…
				CALL MESSAGE_WINDOW_D, "", @"＞相手はおしゃべり好きのゾンビちゃんだった"
				CALL MESSAGE_WINDOW_D, "ゾンビちゃん", @"やほー！きみサマナーくんだよね！/いやー事情知ってる人の方が相手しやすくてさー"
				CALL MESSAGE_WINDOW_D, "ゾンビちゃん", @"一般人に紛れるって結構大変なのよー/やー異界でナンパ待ちするより全然楽だし確実だけどさー"
				CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
				CALL MESSAGE_WINDOW_D, "ゾンビちゃん", @"ほら、生前の習慣ってあるじゃん？/あたし生前はえんこーが生活の中心だったの"
				CALL MESSAGE_WINDOW_D, "ゾンビちゃん", @"こう…/人肌が恋しくなる時があるってゆーか？/セックスしてる時だけが、あたし生きてる って実感を抱けてたの…"
				CALL MESSAGE_WINDOW_D, "ゾンビちゃん", @"…もう死んじゃったけどさ/こうなるとやっぱ時々思うのよ…あたしは生きながら死んでたんだな って…"
				CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
				CALL SHOW_PICTURE, "EMPTY"
				CALL MESSAGE_WINDOW_D, "ゾンビちゃん", @"うん……うん……――/……ありがと、慰めてくれて…/サマナーくんはやさしいね…思わず泣きたくなるぐらい…"
				CALL MESSAGE_WINDOW_D, "", @"＞――――…"
		ENDSELECT
		EXP:MASTER:성교경험 += ABL:MASTER:기교 * 2 + 1
		EXP:MASTER:절정경험 += ABL:MASTER:기교
		;連続してお持ち帰りできないようにフラグを戻す
		롯폰기창관플래그:20 = 1
	CASE "宣伝"
		;
ENDSELECT

