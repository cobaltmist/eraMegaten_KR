;カスミン(魔乳ガイア教徒)
@SORP_PLAY_1015, ARGS
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1015]
	CASE "キャラ名"
		RESULTS = カスミン
	CASE "指名名"
		RESULTS = カスミン(魔乳ガイア教徒)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		;ミア身請け済なら出現
		IF 롯폰기창관플래그:5 > 3
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "価格"
		RETURN 500
	CASE "紹介文"
		IF 롯폰기창관플래그:15 == 0
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、カスミン嬢をご希望ですか/人間がどうしてこんなところで働いているんだと思われますでしょうが/実はここだけの話、彼女は半魔なのですよ"
			CALL MESSAGE_WINDOW_D, "受付の男", @"ガイア教会の特別な儀式とやらで悪魔が憑いてるとのことで/普通の職に就けないそうです"
			CALL MESSAGE_WINDOW_D, "受付の男", @"当店はガイア教系列の店ではありませんが/問題なのは発情と軽度の破壊衝動とのことで/そっち側の趣向にはうってつけとして当店で雇っている訳です"
			CALL MESSAGE_WINDOW_D, "受付の男", @"ちなみに胸は元からあの大きさだったようですよ？/そういうところもやはりこの業界ならポイント高いですし、ね"
		ELSE
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、カスミン嬢ですか/お客様、趣向が合われたようですね"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"さて、カスミン嬢ですが…/一晩で５００マッカになります"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,13,3
		IF 롯폰기창관플래그:15 == 0
			CALL MESSAGE_WINDOW_D, "カスミン", @"ッケ！あんた…裏の雰囲気がするな/こんなところで何やってるか知らないが/オレを嬢として指名したんなら覚悟はあるんだろな？"
			CALL MESSAGE_WINDOW_D, "カスミン", @"この部屋ではオレがルールだ！/オレが満足するまで出られると思うなよ！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
			던전플래그:31:15 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "カスミン", @"ッケ！また来たのかい/今度はイタイ程度じゃ済まさないからな？"
			CALL MESSAGE_WINDOW_D, "カスミン", @"そうだ！この胸で圧殺してやろうじゃないか！/これを味わえる奴は滅多にいないんだぜ！"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
		ENDIF
		EXP:MASTER:절정경험 += (ABL:MASTER:마조끼 + 1) * 2
		EXP:MASTER:봉사쾌락경험 += (ABL:MASTER:마조끼 + 1) * 6
		EXP:MASTER:고통쾌락경험 += (ABL:MASTER:마조끼 + 1) * 6
		JUEL:MASTER:고통 += (ABL:MASTER:마조끼 + 1) * 300
		JUEL:MASTER:치정 += (ABL:MASTER:마조끼 + 1) * 200
		JUEL:MASTER:굴복 += (ABL:MASTER:마조끼 + 1) * 500
		JUEL:MASTER:공포 += (ABL:MASTER:마조끼 + 1) * 200
		JUEL:MASTER:욕정 += ABL:MASTER:마조끼 * (500) + 500
		IF !TALENT:MASTER:남자
			EXP:MASTER:레즈경험 += (ABL:MASTER:마조끼 + 1) * 2
		ENDIF
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:사정경험 += (ABL:MASTER:마조끼 + 1) * 2
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:마조끼 * 2000 + 1000
		ENDIF
		IF TALENT:MASTER:모유체질
			EXP:MASTER:분유경험 += (ABL:MASTER:마조끼 + 1) * 2
			JUEL:MASTER:쾌Ｂ += (ABL:MASTER:마조끼 + 1) * 200
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:마조끼 * 2000 + 1000
		ENDIF
		CALL INCREASE_LC,10
	CASE "身受け価格"
		RETURN 99999
	CASE "身受け確認"
		;
	CASE "身受け口上"
		;
	CASE "宣伝"
		PRINTL
		PRINTL カスミン
		SETCOLOR COLOR("ハートピンク")
		PRINTL 『ハァ？広告用のコメント？知るかよンなもん。そっちでテキトーに捏造すればいいだろ！』
		RESETCOLOR
		PRINTW (編集注記。少し粗野な印象も受けますが、面倒見の良い方だそうです)
ENDSELECT
