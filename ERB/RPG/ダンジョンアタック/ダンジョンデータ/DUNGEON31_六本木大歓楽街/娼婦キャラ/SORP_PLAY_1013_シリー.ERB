;シリー(ドリアード)
@SORP_PLAY_1013, ARGS
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1013]
	CASE "キャラ名"
		RESULTS = シリー
	CASE "指名名"
		RESULTS = シリー(ドリアード)
	CASE "所属"
		;表なら1、裏なら2
		RETURN 1
	CASE "判定"
		;指名可能なら0、不可なら1
		;ナヴィ身請け済なら出現
		IF 롯폰기창관플래그:3 > 3
			RETURN 0
		ELSE
			RETURN 1
		ENDIF
	CASE "価格"
		RETURN 500
	CASE "紹介文"
		IF 롯폰기창관플래그:13 == 0
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、シリー嬢をご希望ですか/ナヴィ嬢から紹介でもされましたかな？/同じ土地で育った後輩だそうですよ"
			CALL MESSAGE_WINDOW_D, "受付の男", @"彼女は見ての通りドリアードでして/お客様が以前に身受けしたナヴィ嬢のような華はありませんが/その複雑に絡み着いてくる身体の具合はもう何人も虜にしているほどです"
			CALL MESSAGE_WINDOW_D, "受付の男", @"彼女も樹精の血を引く者ですので/お客様のＭＡＧを通常以上に吸収すると思われます/何卒、力尽きぬようお気を付けください…"
		ELSE
			CALL MESSAGE_WINDOW_D, "受付の男", @"成程、シリー嬢ですか/お客様、どうやらシリー嬢に気に入られたようですね"
		ENDIF
	CASE "確認"
		CALL MESSAGE_WINDOW_D, "受付の男", @"さて、シリー嬢ですが…/一晩で５００マッカになります"
	CASE "プレイ口上"
		CALL DUNGEON_WORP,1,14,2
		IF 롯폰기창관플래그:13 == 0
			CALL MESSAGE_WINDOW_D, "シリー", @"はじめまして、シリーと申します/わたしも時々交代で客引きに参加してたりするので、そちらもよろしくね☆"
			CALL MESSAGE_WINDOW_D, "シリー", @"君の白い露は一体どんな味がするかな？/ふふ…いただきまぁす☆"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
			롯폰기창관플래그:13 = 1
		ELSE
			CALL MESSAGE_WINDOW_D, "シリー", @"また来てくれて嬉しいです/この街で味わった中だと、君のＭＡＧが一番やばいですね☆"
			CALL MESSAGE_WINDOW_D, "シリー", @"それじゃあ今日も…いただきまぁす☆"
			CALL MESSAGE_WINDOW_D, "", @"………………/…………/……"
			CALL SHOW_PICTURE, "EMPTY"
			CALL MESSAGE_WINDOW_D, "", @"＞楽しく遊びました…"
		ENDIF
		EXP:MASTER:성교경험 += ABL:MASTER:욕망 * 4 + 1
		EXP:MASTER:절정경험 += ABL:MASTER:욕망 * 2
		JUEL:MASTER:쾌Ｃ += ABL:MASTER:욕망 * (500) + 500
		JUEL:MASTER:쾌Ｂ += ABL:MASTER:욕망 * (300) + 300
		IF !TALENT:MASTER:남자
			EXP:MASTER:레즈경험 += ABL:MASTER:욕망 * 2 + 1
			JUEL:MASTER:쾌Ｖ += ABL:MASTER:욕망 * (200) + 200
		ENDIF
		IF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
			EXP:MASTER:질사경험 += ABL:MASTER:욕망 * 2
			EXP:MASTER:사정경험 += ABL:MASTER:욕망 * 5
		ENDIF
		IF TALENT:MASTER:모유체질
			EXP:MASTER:분유경험 += (ABL:MASTER:욕망 + 1) * 3
			JUEL:MASTER:쾌Ｂ += (ABL:MASTER:욕망 + 1) * 500
			BASE:MASTER:ＭＡＧ -= ABL:MASTER:욕망 * 5000 + 1000
		ENDIF
		JUEL:MASTER:욕정 += ABL:MASTER:욕망 * (500) + 300
		JUEL:MASTER:습득 += ABL:MASTER:욕망 * (500) + 300
		BASE:MASTER:ＭＡＧ -= ABL:MASTER:욕망 * 20000 + 1000
		CALL INCREASE_LC,5
	CASE "身受け価格"
		RETURN 99999
	CASE "身受け確認"
		;
	CASE "身受け口上"
		;
	CASE "宣伝"
		PRINTL
		PRINTL シリー
		SETCOLOR COLOR("ハートピンク")
		PRINTL 『おいしいものを所望します☆』
		RESETCOLOR
		PRINTW (編集注記。趣味は食べ歩きとのことです。気に入ったら何か差し入れするといいでしょう)
ENDSELECT
