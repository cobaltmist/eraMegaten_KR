;=======================================================================
;인카운트율
;=======================================================================
@ENCOUNT_RATE_98
IF STRFLAG_D("적出現なし") || STRFLAG_D("ボス撃破")
	FLAG:인카운트율 = 0
ELSE
	IF FLAG:미조우걸음수 <= 5
		FLAG:인카운트율 = 0
	ELSE
		FLAG:인카운트율 = 10 + (FLAG:미조우걸음수-5) * 5
	ENDIF
ENDIF
;=======================================================================
;필요레벨눈安
;권장LV 雑魚최저LV 雑魚最高LV ボスLV 
;=======================================================================
@GET_DUNGEON_LV_98
RETURN 13, 8, 12, 18
;=======================================================================
;エンカウント処理
;=======================================================================
@CHECK_ENCOUNT_98
IF RAND:100 < FLAG:인카운트율
	CALL ENEMY_TABLE
	RETURN 1
ELSE
	FLAG:미조우걸음수 += 1
	RETURN 0
ENDIF
