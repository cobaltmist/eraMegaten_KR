;=======================================================================
;적の종류
;=======================================================================
@ENEMY_98, ARG
SELECTCASE RAND:100
	CASE IS < 19
		;20%で나이트메어
		RETURN [[キャラ:나이트메어]], 8 + RAND:3 * 2
	CASE IS < 39
		;20%で라타토스크
		RETURN [[キャラ:라타토스크]], 8 + RAND:3 * 2
	CASE IS < 59
		;20%で픽시
		RETURN [[キャラ:픽시]], 8 + RAND:3 * 2
	CASE IS < 74
		;15%で좀비쨩
		RETURN [[キャラ:좀비쨩]], 8 + RAND:3 * 2
	CASE IS < 89
		;15%で좀비군
		RETURN [[キャラ:좀비군]], 8 + RAND:3 * 2
	CASEELSE
		;10%で모코이
		RETURN [[キャラ:모코이]], 8 + RAND:3 * 2
ENDSELECT

