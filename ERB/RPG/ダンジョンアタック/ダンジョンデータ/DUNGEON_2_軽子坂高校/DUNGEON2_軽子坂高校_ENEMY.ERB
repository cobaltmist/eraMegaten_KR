
;=======================================================================
;인카운트율
;=======================================================================
@ENCOUNT_RATE_2
IF 던전フラグ:2:11 == 0
	FLAG:인카운트율 = FLAG:미조우걸음수*3
	SIF FLAG:미조우걸음수 < 8
		FLAG:인카운트율 = 0
;ランダム依頼
ELSE
	FLAG:인카운트율 = FLAG:미조우걸음수
	SIF FLAG:미조우걸음수 < 8
		FLAG:인카운트율 = 0
ENDIF

;=======================================================================
;必要レベル目安
;推奨LV 雑魚最低LV 雑魚最高LV ボスLV 
;=======================================================================
@GET_DUNGEON_LV_2
IF 던전フラグ:2:11 == 0
	RETURN 6, 3, 17, 19
ELSE
	RETURN 50, 50,50, 50
ENDIF

;=======================================================================
;エンカウント処理（共通）
;=======================================================================
@CHECK_ENCOUNT_2
IF RAND:100 < FLAG:인카운트율
	CALL ENEMY_TABLE
	RETURN 1
ELSE
	FLAG:미조우걸음수 += 1
	RETURN 0
ENDIF


;=======================================================================
;敵の種族の種類数
;=======================================================================
@CLASS_NUM_2
IF 던전フラグ:2:11 == 0
	RETURN CLASS_NUM_COMMON("初級")
;ランダム依頼のダンジョンの敵は一種類
ELSE
	RETURN 1
ENDIF

;=======================================================================
;敵の総数
;ARGは出現する敵の種類です
;RAND(X, Y)はX～Y-1のうちのどれかになるRANDです
;なお、ここで帰った数字は下限を種族数、上限を10として自動的に調整されます
;
;軽子坂高校も初期のダンジョンなので数は抑え目
;=======================================================================
@ENEMY_NUM_2, ARG
IF 의뢰플래그:2:1 == 29 && 던전フラグ:2:20 == 1
	RETURN ENEMY_NUM_COMMON("上級", ARG)
ELSEIF 의뢰플래그:2:1 == 59
	RETURN ENEMY_NUM_COMMON("中級", ARG)
ELSE
	RETURN ENEMY_NUM_COMMON("初級", ARG)
ENDIF

