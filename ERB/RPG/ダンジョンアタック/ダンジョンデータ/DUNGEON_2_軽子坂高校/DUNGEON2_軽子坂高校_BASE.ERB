;=======================================================================
;[5]조사 실행시의 이벤트
;=======================================================================
@EVENT_CHECK_DUNGEON_2

;==========
;출구의 처리
;==========
IF DA:(FLAG:현X):(FLAG:현Y) % 10 == 8
	CALL DUNGEON_EXIT
	RETURN 1

;========
;보물의 처리
;========
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 3
	IF 던전플래그:2:11 == 0
		CALL TREASURE_2_0
	ELSE
		;ランダムダンジョン
		SIF 의뢰플래그:2:3 == 6
			CALL TREASURE_RAND_DANGEON
	ENDIF
	
;=======
;계단
;=======
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 6
	;카루코자카 고교
	IF 던전플래그:2:11 == 0
		CALL UPSTAIRS_2_0
	;랜덤 의뢰
	ELSE
		CALL UPSTAIRS_2
		RETURN RESULT
	ENDIF

ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 7
	;카루코자카 고교
	IF 던전플래그:2:11== 0
		CALL DOWNSTAIRS_2_0
	;ランダム依頼
	ELSE
		;ランダムダンジョン
		IF 의뢰플래그:2:3 == 6
			CALL RAND_DUNGEON_DOWNSTAIRS
			RETURN RESULT
		ELSE
			CALL DOWNSTAIRS_2
			RETURN RESULT
		ENDIF
	ENDIF

;========
;이벤트
;========
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 4
	;카루코자카 고교
	IF 던전플래그:2:11 == 0
		CALL DUNGEON_EVENT_2_0
	;ランダム依頼
	ELSE
		CALLFORM  DUNGEON_EVENT_2_{의뢰플래그:2:3}_{의뢰플래그:2:1}
	ENDIF
ELSE
	CALL MESSAGE_WINDOW_D, "", "＞아무것도 없는 것 같다"
	RETURN 0
ENDIF

;=======================================================================
;タイル進入時のイベント
;=======================================================================
@EVENT_ENTER_DUNGEON_2,ARG
;ARG = 進入時の向き　0の場合ワープなど
;==========
;출구의 처리
;==========
IF DA:(FLAG:현X):(FLAG:현Y) % 10 == 8
	CALL DUNGEON_EXIT
	RETURN 1

;========
;보물의 처리
;========
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 3
	;軽子坂高校
	IF 던전플래그:2:11 == 0
		CALL TREASURE_2_0
	ELSE
		;ランダムダンジョン
		SIF 의뢰플래그:2:3 == 6
			CALL TREASURE_RAND_DANGEON
	ENDIF
	
;=======
;계단
;=======
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 6
	;카루코자카 고교
	IF 던전플래그:2:11 == 0
		CALL UPSTAIRS_2_0
	;랜덤 의뢰
	ELSE
		CALL UPSTAIRS_2
		RETURN RESULT
	ENDIF

ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 7
	;카루코자카 고교
	IF 던전플래그:2:11 == 0
		CALL DOWNSTAIRS_2_0
	;ランダム依頼
	ELSE
	;ランダムダンジョン
		IF 의뢰플래그:2:3 == 6
			CALL RAND_DUNGEON_DOWNSTAIRS
			RETURN RESULT
		ELSE
			CALL DOWNSTAIRS_2
			RETURN RESULT
		ENDIF
	ENDIF
;==========
;문 처리
;==========
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 2
	CALL DUNGEON_DOOR,ARG
	RETURN 1

;===========
;이벤트
;===========
ELSEIF DA:(FLAG:현X):(FLAG:현Y) % 10 == 4
	;카루코자카 고교
	IF 던전플래그:2:11 == 0
		CALL DUNGEON_EVENT_2_0
	;ランダム依頼
	ELSE
		CALLFORM DUNGEON_EVENT_2_{의뢰플래그:2:3}_{의뢰플래그:2:1}
	ENDIF
ENDIF
RETURN 0

