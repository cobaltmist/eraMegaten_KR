;=======================================================================
;エンカウント処理（共通）
;=======================================================================
@CHECK_ENCOUNT_108
IF RAND:100 < FLAG:인카운트율
	CALL ENEMY_TABLE
	RETURN 1
ELSE
	FLAG:미조우걸음수 += 1
	RETURN 0
ENDIF


