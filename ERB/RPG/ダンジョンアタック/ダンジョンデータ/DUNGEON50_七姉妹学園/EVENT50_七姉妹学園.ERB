@EVENT_ENTER_DUNGEON_50,ARG
;ARG = 進入時の向き　0の場合ワープなど
SELECTCASE DA:(FLAG:현X):(FLAG:현Y) % 10
CASE 1
	SELECTCASE DA:(FLAG:현X):(FLAG:현Y) / 10
	ENDSELECT
;==========
;出口の処理　出口はない
;==========
;==========
;扉の処理
;==========
CASE 2
	SELECTCASE DA:(FLAG:현X):(FLAG:현Y) / 10
		;入り口の扉
		CASE 1
			IF STRFLAG_D("보스격파", 0, [[던전:페르소나２]])
				PRINTW ＞직원실에 보고하러 가자
			ELSE
				PRINTW ＞문은 무언가의 힘으로 봉인되어 있는 것 같다
			ENDIF
			FLAG:현Y -= 1
			RETURN 0
		CASEELSE
			;2F以下では扉に出入りするごとに적の出現の有無がスイッチされる
			IF FLAG:현M <= 2
				IF STRFLAG_D("적출현없음")
					IF !STRFLAG_D("보스격파", 0, [[던전:페르소나２]])
						CALLF STRFLAG_D("적출현없음", -1)
						FLAG:MAG소비율 = 100
					ENDIF
				ELSE
					CALLF STRFLAG_D("적출현없음", 1)
					FLAG:MAG소비율 = 0
				ENDIF
			ENDIF
	ENDSELECT
	CALL DUNGEON_DOOR, ARG
	RETURN 1
;========
;宝の処理
;========
	CASE 3
		CALL TREASURE_50, DA:(FLAG:현X):(FLAG:현Y) / 10
		RETURN 1
;=======
;이벤트
;=======
	CASE 4
		CALL EVENT_50
		RETURN 1
;=======
;階段
;=======
	CASE 6
		CALL STAIR_50, 6
		RETURN 1
	CASE 7
		CALL STAIR_50, 7
		RETURN 1
;=======
;特殊タイル
;=======
	CASE 9
ENDSELECT
@EVENT_CHECK_DUNGEON_50
SELECTCASE DA:(FLAG:현X):(FLAG:현Y) % 10
;==========
;出口の処理　出口はない
;==========
;========
;宝の処理
;========
