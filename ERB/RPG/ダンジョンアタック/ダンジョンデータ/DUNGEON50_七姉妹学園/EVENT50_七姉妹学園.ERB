		CALL TREASURE_50, DA:(FLAG:현X):(FLAG:현Y) / 10
		RETURN 1
;=======
;이벤트
;=======
	CASE 4
		CALL EVENT_50
		RETURN 1
;=======
;階段
;=======
	CASE 6
		CALL STAIR_50, 6
		RETURN 1
	CASE 7
		CALL STAIR_50, 7
		RETURN 1
