				;회복마법でない場合無視
				CALLFORM SKILL_EFECT_{ABL:(LOCAL):LOCALS}
				SIF RESULT != 2
					CONTINUE
				;発動가능？（MP、CLOSE等）
				CALL CHECK_ACTIONABLE, LOCAL, ABL:(LOCAL):LOCALS
				SIF RESULT == 0
					CONTINUE
				;위력と소비MP취득
				CALLFORM SKILL_POWER_{ABL:(LOCAL):LOCALS}
				LOCAL:3 = RESULT
				CALLFORM SKILL_COST_{ABL:(LOCAL):LOCALS}
				LOCAL:4 = RESULT
				;コピペ
				CALLFORM SKILL_NAME_{ABL:(LOCAL):LOCALS}
				SELECTCASE RESULTS
					CASE "디아", "디아라마"
						;회복량OR데미지の小さい方を회복量とする
						LOCAL:3 = MIN((LOCAL:3 * (BASE:(LOCAL):16/4+(BASE:(LOCAL):15 / 8+10)) /50), LOCAL:8)
						LOCAL:10 = LOCAL:1
					CASE "디아라한"
						LOCAL:3 = LOCAL:8
						LOCAL:10 = LOCAL:1
					CASE "메・디아", "메・디아라마"
						LOCAL:3 = LOCAL:3 * (BASE:(LOCAL):16/4+(BASE:(LOCAL):15 / 8+10)) /50
						LOCAL:9 = 0
						FOR LCOUNT:2, 1, 6
							LOCALS:1 = 포지션{LCOUNT:2}
							LOCAL:2 = FLAG:(LOCALS:1)
							;死んでるならスルー
							SIF LOCAL:2 == -1
								CONTINUE
							SIF GET_STATE(CFLAG:(LOCAL:2):상태이상) == "DYING"
								CONTINUE
							;회복불필요한らスルー
							SIF BASE:(LOCAL:2):ＨＰ >= MAXBASE:(LOCAL:2):ＨＰ
								CONTINUE
							;회복량OR데미지の小さい方を회복量とする
							LOCAL:9 += MIN(LOCAL:3, MAXBASE:(LOCAL:2):ＨＰ - BASE:(LOCAL:2):ＨＰ)
						NEXT
						;회복량の합계
						LOCAL:3 = LOCAL:9
						LOCAL:10 = 19
					CASE "메・디아라한"
						LOCAL:9 = 0
						FOR LCOUNT:2, 1, 6
							LOCALS:1 = 포지션{LCOUNT:2}
							LOCAL:2 = FLAG:(LOCALS:1)
							;死んでるならスルー
							SIF LOCAL:2 == -1
								CONTINUE
							SIF GET_STATE(CFLAG:(LOCAL:2):상태이상) == "DYING"
								CONTINUE
							;회복불필요한らスルー
							SIF BASE:(LOCAL:2):ＨＰ >= MAXBASE:(LOCAL:2):ＨＰ
								CONTINUE
							;데미지を회복量とする
							LOCAL:9 += MAXBASE:(LOCAL:2):ＨＰ - BASE:(LOCAL:2):ＨＰ
						NEXT
						;회복량の합계
						LOCAL:3 = LOCAL:9
						LOCAL:10 = 19
					CASEELSE
						CONTINUE
				ENDSELECT
				LOCAL:3 *= 100
				LOCAL:3 = LOCAL:3 / LOCAL:4
				;もっとも効率がよい(회복量÷소비MPが多い)ものを깨달음えておく
				IF LOCAL:7 < LOCAL:3
					LOCAL:5 = LOCAL
					LOCAL:6 = ABL:(LOCAL):LOCALS
					LOCAL:7 = LOCAL:3
					LOCAL:11 = LOCAL:10
				ENDIF
			CATCH
				;未実装は無視
				CONTINUE
			ENDCATCH
		ENDIF
	NEXT
NEXT
