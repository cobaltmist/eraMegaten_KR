;-------------------------------------------------
;マルフーシャ個別イベント
;
;CFLAG:800～998 = 口上テンプレにおける自由領域
;
;CFLAG:ARG:900　カード番号（@カード購入_CARD_NAMEを参照）
;CFLAG:ARG:901　代払い額（0～5000*n）
;CFLAG:ARG:994　前イベント読破の日付
;CFLAG:ARG:995　前イベント読破の時間
;CFLAG:ARG:996　0:何も起こらない　1:チャレンジモードクリア
;CFLAG:ARG:997　0:何も起こらない　1:個人イベントクリア
;CFLAG:ARG:998　0:専用技を使えない　1:専用技を使える　2:防衛戦モード
;
;FLAG:개별이벤트캐릭 = NO:CAST
;FLAG:진행중개별이벤트 = LOCAL
;
;;好感度以外は後に上昇値が表示される
;CFLAG:ARG:(MASTER + 2100) += A
;CFLAG:ARG:의존도 += B
;TCVAR:ARG:획득의존도 = B
;BASE:ARG:충성도 += C
;TCVAR:ARG:획득충성도 = C
;BASE:ARG:ＭＡＧ += D
;TCVAR:ARG:획득ＭＡＧ = D
;CALL ADDS_EXP("○○経験", E, ARG)
;-------------------------------------------------
@INDIVIDUAL_EVENT_K5371, ARG, ARG:1 = 0, ARG:2 = -1
#DIM 現個人イベントバージョン = 130
#DIM フェリセットを採用した
#DIM ベルカを採用した
#DIM ストレルカを採用した
#DIM ビオンを採用した
#DIM アリビナを採用した
#DIM エノスを採用した
#DIM ライカを採用した
#DIM スネジンカを連れてこさせた
#DIM 戦力として扱う
#DIM 既存キャラ
#DIM ストーリースキップ
#DIM 敵レベル
;ARG:0　キャラ番号
;ARG:1　関数種類　1,開放条件　2,タイトル　3,イベント
;ARG:2　イベント番号（0～63まで）

IF ARG:1 == 1
	IF 마르푸샤개인이벤트버전 < 10
		SIF !TALENT:ARG:꿋꿋함
			TALENT:ARG:꿋꿋함 = 1
		마르푸샤개인이벤트버전 = 10
	ENDIF
	IF 마르푸샤개인이벤트버전 < 20
		FOR LOCAL, 1, 21
			;기합이 있을 경우、체인업으로 대체
			IF ABL:ARG:@"스킬{LOCAL}" == [[스킬:기합]]
				PRINTFORML ※%CALLNAME:ARG%의 습득 스킬 변경을 반영합니다
				PRINTFORML 기합　→　체인업
				ABL:ARG:@"스킬{LOCAL}" = [[스킬:체인업]]
			ENDIF
			;기합을 배울 예정인 경우、체인업으로 대체
			IF ABL:ARG:@"습득스킬{LOCAL}" == [[스킬:기합]]
				PRINTFORML ※%CALLNAME:ARG%의 습득 스킬 변경을 반영합니다
				PRINTFORML 기합　→　체인업
				ABL:ARG:@"습득스킬{LOCAL}" = [[스킬:체인업]]
			ENDIF
		NEXT
		마르푸샤개인이벤트버전 = 20
	ENDIF
	IF 마르푸샤개인이벤트버전 < 30
		CFLAG:ARG:800 = 0
		CFLAG:ARG:801 = 0
		마르푸샤개인이벤트버전 = 30
	ENDIF
	IF 마르푸샤개인이벤트버전 < 40
		;一時的にアンロック
		CFLAG:ARG:998 = 1
		마르푸샤개인이벤트버전 = 40
	ENDIF
	IF 마르푸샤개인이벤트버전 < 90
		;義妹
		CSTR:ARG:근친판정_자매 = 
		마르푸샤개인이벤트버전 = 90
	ENDIF
ENDIF

SELECTCASE ARG:2
;個別イベント0
CASE 0
	;解放条件
	IF ARG:1 == 1
		SIF HAVE_SKILL(ARG, PU_SKILLNUM_GET(ARG,"リラックス"))
			RETURN 0
		RETURN 1
	ELSEIF ARG:1 == 2
	;タイトル
		IF GETBIT(CFLAG:ARG:개별이벤트개방,ARG:2)
			;タイトル
			RESULTS = 릴렉스는 중요
		ELSE
			;必要のないときはこのイベントを非表示にする
		ENDIF
	;イベント
	ELSEIF ARG:1 == 3
		CALL ANIMATION_LOAD_SHORT( "Now loading" )
		
		CALL LEARN_PU_SKILL(ARG,"リラックス")
		PRINTFORMW ＞%ARG는% 자신에게 맞는 릴렉스 방법을 발견했다！
		
		RETURN 1
	ENDIF

;個別イベント１
CASE 1
	;解放条件
	IF ARG:1 == 1
		;夜以外だとダメ
		SIF TIME != 3
			RETURN 0
		SIF CFLAG:ARG:이자리에없는플래그 > 0
			RETURN 0
		FOR LOCAL, 1, 7
			;LOCALSにポジションにいる人を入れる
			LOCALS = 포지션{LOCAL}
			;中に誰もいないならループ離脱
			SIF FLAG:LOCALS < 0
				CONTINUE
			;PTにマルフーシャはいるか？
			SIF NO:(FLAG:LOCALS) == [[キャラ:마르푸샤]]
				RETURN 1
		NEXT
		RETURN 0
	ELSEIF ARG:1 == 2
	;タイトル
		IF GETBIT(CFLAG:ARG:개별이벤트개방, ARG:2)
			;タイトル
			RESULTS = 호접의 꿈 －Reason－（권장LV10～）
		ELSE
			;未開放時のタイトル（解放条件を入れておく）
			RESULTS = (①%CALLNAME:ARG%가 파티에 존재　②시간이 밤　으로 해방　※전투 있음)
		ENDIF
	;イベント
	ELSEIF ARG:1 == 3
		CUSTOMDRAWLINE =
		PRINTFORMW 안좋은 느낌이 든다……
		PRINTFORMW 준비는 만전인가？
		PRINTFORML 
		PRINTFORML （주의：일 대 다수의 연전
		PRINTFORMW 　보수：없음…？）
		PRINTFORML 
		PRINTFORML [0] 문제 없다
		PRINTFORML [1] 불안이 남아있다
		CALL INPUTINT, 0, 1
		IF RESULT == 1
			PRINTFORMW 장비를 재검토하기로 했다.
			RETURN 0
		ENDIF
		CLEARLINE 9
		
		;ポジション1-6に存在する味方をすべてポイする
		FOR LOCAL, 1, 7
			; LOCALSにポジションにいるキャラを取得
			LOCALS = 포지션{LOCAL}
			LOCAL:1 = FLAG:LOCALS
			
			; 誰もいない、もしくはマルフーシャだったらCONTINUE
			SIF LOCAL:1 < 0 || LOCAL:1 == ARG
				CONTINUE
			
			; ポジションを外す（リターン同等処理）
			CALL REMOVE_POSITION, CFLAG:(LOCAL:1):포지션
		NEXT
		
		IF RAND:100 == 0
			CALL ANIMATION_LOAD_MIDDLE_Marufusha_2( "Now loading", "歩き_敵", 8 )
		ELSE
			CALL ANIMATION_LOAD_MIDDLE_Marufusha( "Now loading", "歩き_マルフーシャ", 8 )
		ENDIF
		
		PRINTFORML [0] 스토리를 건너뛰지 않는다
		PRINTFORML [1] 스토리를 건너뛴다
		CALL INPUTINT, 0, 1
		ストーリースキップ = RESULT
		CLEARLINE 3
		
		;専用技、封印解除
		SIF CFLAG:ARG:998 < 2
			CFLAG:ARG:998 = 2
		
		IF !ストーリースキップ
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "는 과거의, " + CALLNAME:ARG + "의 꿈을 꾸고 있었다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "이것이 꿈이라는 것을 알게 된 건, " + CALLNAME:MASTER + "가 꿈속에서 " + CALLNAME:ARG + "가 되어있었기 때문이다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "그리고, 과거의 일이라는 것을 알게 된 건, 라그의 가게에서 인수받은 " + CALLNAME:ARG + "의 ", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "오른손에 있던 서글픈 총상이, 아직 없기 때문이었다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "그렇다고는 하나, 몸의 주도권은 " + CALLNAME:MASTER + "에게 있지는 않은 듯 했다.", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "일인칭의 시점에서 촬영된 영화처럼, 시야는 마음대로 움직이며, 손발은 멋대로 행동한다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……" + CALLNAME:MASTER + "은, 어리다는 것을 제외하면 " + CALLNAME:ARG + "와 꼭 닮은 소녀와 함께, 집의 현관에 찾아온 몇 명의 남자。", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "그 중 하나가 내민 종이를 보고 있다.", 1, 1, 600
			SETCOLOR 0xFF0000
			CALL ANIMATION_ROLL_TEXT, "……『소집영장』。『빨간 종이』라고도 불리는 그것을。", 1, 1, 600
			RESETCOLOR
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "딱딱한 세로쓰기로 쓰여있는 그 영장은, 요약하자면", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "『" + CALLNAME:ARG + "를, 국경문방위부대에 배속한다』", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "그런 내용이었다.", 1, 1, 600

			PRINTFORML 
			SETCOLOR 0xFFA500
			CALL ANIMATION_ROLL_TEXT, "「괜찮아. 걱정마, 스네진카」", 1, 1, 600
			RESETCOLOR
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "시야가 영장에서 옆에 있던 소녀에게로 옮겨가, 어린 아이 특유의 살랑거리는 갈색 머리카락을 쓰다듬는 감촉과、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + " 자신의 것이겠지, 여동생을 진정시키는 목소리가 뇌리에 울려퍼진다。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "소집을 받아들인건지, 아니면 거부할 권리가 없는 것인지", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "그것조차 " + CALLNAME:MASTER + "는 알 수가 없다。 " + CALLNAME:MASTER + "는 " + CALLNAME:ARG + "가 살던 조국의 인간이 아니기 때문이다。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "집에 여동생을 남겨두고, 남자들과 함께 어딘가로 향하려고 하는 " + CALLNAME:ARG + "。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "한 발짝을 집에서 내딛는 순간, 시야가 뿌옇게 흐려져간다…………。", 1, 1, 600
			
			CALL EVENT_K5371_DAY_TITLE, "1 일째"
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「네가 오늘부터 배속된 " + CALLNAME:ARG + "구나」", 1, 1, 600, 5372, 101
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "…………목소리와 함께, 흐려졌던 시야가 깨끗해졌다。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "「나는 감독관. 무능한 저급국민들을 국가에 공헌하게 만드는 게 나의 일이지」", 1, 1, 600, 5372, 201
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "평균적인 소녀의 신장보다 약간 작은 " + CALLNAME:ARG + "보다는 키가 큰、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "금발이라고 하기에는 약간 칙칙한 색의 머리카락을 지닌 감독관이라고 이름을 댄 소녀가、", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "――정확히는、" + CALLNAME:MASTER + "와 공유하고 있는 " + CALLNAME:ARG + "이었지만――에게 업무의 내용을 설명하고 있다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "『국경문에 접근하는 적병을, 모두 격파하라』라는 것이었다.", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "전선을 빠져나온 소수의 적병을 때려눕힐 뿐이라고 감독관은 말했다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……궤변이라는 것은, 바로 알 수 있었다.", 1, 1, 600
		ENDIF
		
		;5日目 + 10日目
		CALL マルフーシャ個別イベント_防衛戦_SOLO, ARG, 1
		CALL HEALTH_CHARA, ARG
		
		IF !ストーリースキップ
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "국경문을 단 한 사람이 담당한다고 하는, " + CALLNAME:MASTER + "이라면 있을 수 없는 병력의 운용법에 더해서,", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "『전선을 빠져나온 적병』이라고는 생각할 수도 없는 물량의 적병…… 그것도, 전부 기계병기이다.", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "그것들이 매일마다, 무리를 지어 국경문에 공격을 가해오는 것이다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "다행이라고 해야하나, 적의 병기들은 " + CALLNAME:ARG + "에게 눈길도 주지 않고", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "국경문만을 노리고 있는 탓에, 전쟁의 화염에 직접 노출당하는 것보다는 낫지만", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "그래도 유탄, 폭탄 처리의 지연, 격추당한 적기의 폭발……", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "다소 운이 없는 정도로도 큰일이 나는 건 틀림이 없는, 절망적인 『부대』였다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "다음으로 " + CALLNAME:MASTER + "의 눈길을 끈 건, 공제라는 이름의 착취였다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "주민세, 소비세, 요양보험료, 문의 유지비, 소득세,", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "후생연금, 고용보험, 학자금대출, 광열비 통신비……", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "일정 소득 이하의 국민을 더욱 착취하는, 저급국민세라는 것까지 있었다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "기본급이 올라갈수록 그 공제들이 산더미같이 쌓여서,", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "결과적으로 손에 들어오는 건 기본급 액면의 1/10 이하이다.", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "만일 문의 방위에 실패하여, 수리비를 징수당하게 되면 실수령액이 전무해지는 날조차 있었다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "는…… 그런 속에서, 문자 그대로 고군분투를 하고 있었다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "적은 급료로 무기를 살 돈을 염출하여, 망가질 때까지 혹사시키고,", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "어떨 때는 일회용의 총기, 어떨 때는 바리케이드, 어떨 때는 폭격요청권리를 구매하며", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "혼자서는 도저히 지켜낼 수 없을 양으로 문에 밀려오는 적병기를", 1, 1, 300
			
			PRINTFORML 
			SETCOLOR 0x5090FF
			CALL ANIMATION_ROLL_TEXT, "모두 파괴하면서, 지켜냈다.", 1, 1, 800
			RESETCOLOR
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:MASTER + "가 아는 " + CALLNAME:ARG + "의, 그 총기를 다루는 법, 그리고 요령은", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "이 싸움이 길렀다…… 아니, 혼자서 모든 것을 해야 하므로", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "무엇이든 할 수 있도록 성장할 수밖에 없었기 때문, 이었던 것이다.", 1, 1, 600
		ENDIF
		
		;20日目 + 30日目
		CALL マルフーシャ個別イベント_防衛戦_SOLO, ARG, 2
		CALL HEALTH_CHARA, ARG
		
		IF !ストーリースキップ
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "1일…… 3일…… 5일…… 10일……", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "20일…… 30일……", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "40일째.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "그날도, 무수한 기계병기가, 밀려들어왔다.", 1, 1, 600
			CALL ANIMATION_ROLL_TEXT, "쳐들어온 병기에 응전하는 " + CALLNAME:ARG + "。", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "……이날, 국경문에 선 시점에서, " + CALLNAME:MASTER + "는 어떤 예감이 들었다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + "는 눈치채지 못한 듯 하지만", 1, 1, 300
			CALL ANIMATION_ROLL_TEXT, "국경…… 연합국 측에서, 『무거운』 땅울림이 느껴졌다.", 1, 1, 600
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "겨우, 적의 그림자가 드문드문해졌을 무렵", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "소형 기계병기를 이끌고 나타난 것은", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, CALLNAME:ARG + " 3인분 정도는 될까 싶은 높이와,", 1, 1, 300
			
			PRINTFORML 
			CALL ANIMATION_ROLL_TEXT, "총탄을 튕겨내는 회전식의 미러 쉴드를 갖춘,", 1, 1, 300
			
			PRINTFORML 
			SETCOLOR 0xFF0000
			CALL ANIMATION_ROLL_TEXT, "몹시도 거대한, 공성병기였다.", 1, 1, 600
			RESETCOLOR
		ENDIF
		
		;40日目
		CALL マルフーシャ個別イベント_防衛戦_SOLO, ARG, 3
		CALL HEALTH_CHARA, ARG
		
