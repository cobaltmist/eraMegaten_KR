	CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:기합]]
ELSEIF CFLAG:ARG:행동한횟수 == 0
	IF CFLAG:ARG:800 == 1
		;ガンヴォルトあるある：HPが1/3切ったらSPスキル使う　5Tに1回打ってくるぞ
		IF (FLAG:경과턴수 - CFLAG:ARG:803) % 5 == 0
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:토르해머]]
		ELSEIF (FLAG:경과턴수 - CFLAG:ARG:803) % 5 == 1
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전격가드킬]]
		ELSEIF (FLAG:경과턴수 - CFLAG:ARG:803) % 5 == 2
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:산산조각베기]]
		ELSEIF (FLAG:경과턴수 - CFLAG:ARG:803) % 5 == 3
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:썬더볼트]]
		ELSE
			IF 현HP비율(ARG) < 34
				;念のためゲージが0になってなかったら困るので←スキル側でいじったので用済みだ
				;CALL SKILLGAGE_D_SET, ARG, PU_SKILLNUM_GET(ARG, "コレダーデュランダル"), 0
				CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전용기1]]
			ELSE
				CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전격가드킬]]
			ENDIF
		ENDIF
	ELSE
		;1回目の行動は速度補正が高いやつ
		IF RAND:2
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:퀵스피어]]
		ELSE
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:스파크볼트]]
		ENDIF
	ENDIF
ELSEIF CFLAG:ARG:행동한횟수 == 1
	IF CFLAG:ARG:800 == 1
		;2回目の行動は速度補正が高いやつ
		IF RAND:2
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:퀵버스터]]
		ELSE
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:블리츠레인]]
		ENDIF
	ELSE
		IF (FLAG:경과턴수 + 1) % 3 == 1
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:번개찌르기]]
		ELSEIF (FLAG:경과턴수 + 1) % 3 == 2
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:구십구나선격]]
		ELSE
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:헬라이트닝]]
		ENDIF
	ENDIF
