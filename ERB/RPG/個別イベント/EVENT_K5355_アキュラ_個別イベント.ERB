			ELSE
				CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:전격가드킬]]
			ENDIF
		ENDIF
	ELSE
		;1回目の行動は速度補正が高いやつ
		IF RAND:2
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:퀵스피어]]
		ELSE
			CALL CHECK_ACTIONABLE_AND_SET, ARG, [[스킬:스파크볼트]]
		ENDIF
	ENDIF
