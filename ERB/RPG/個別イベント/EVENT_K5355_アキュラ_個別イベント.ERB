	CFLAG:ARG:801 = 0
	CFLAG:ARG:802 = 0
	FOR LOCAL,1, 7
		LOCALS = 포지션{LOCAL}
		SIF FLAG:LOCALS == -1
			CONTINUE
		SIF CFLAG:(FLAG:LOCALS):상태이상 == GET_STATE_NUM("DYING")
