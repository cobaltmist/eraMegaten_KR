			RETURN 7
		ELSE
			RETURN 2
		ENDIF
	CASE "속도"
		RETURN 2
	CASE "인내력"
		RETURN 2
ENDSELECT
RETURN 0

@전투능력수정_2273,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		SIF ARG:1 == -1
			RETURN 20
		LOCAL = 20 + BASE:(ARG:1):LV * 2
			SIF LOCAL >= 50
			LOCAL = 50
		RETURN LOCAL
		;RETURN 20+30=50
	CASE "명중"
		SIF ARG:1 == -1
			RETURN 20
		LOCAL = 20 + BASE:(ARG:1):LV * 1
			SIF LOCAL >= 35
			LOCAL = 35
		RETURN LOCAL
	CASE "회피"
		;재래식 산탄총 + 케블러 세트와 함께 장비시
		IF EQUIP:(ARG:1):총 == 2803 && EQUIP:(ARG:1):몸통 == 3805 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && BASE:(ARG:1):LV > 9
			RETURN 20
		ELSE
			RETURN 0
		ENDIF
	CASE "마법위력"
		RETURN 10
	CASE "마법효과"
		RETURN 10
ENDSELECT
RETURN 0

