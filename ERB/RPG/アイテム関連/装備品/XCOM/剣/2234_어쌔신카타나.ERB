	CASE "공격"
		SIF ARG == -1
			RETURN 110
		IF BASE:(ARG:1):LV >= 35
			RETURN 110
		ELSEIF BASE:(ARG:1):LV >= 30
			RETURN 100
		ELSEIF BASE:(ARG:1):LV >= 20
			RETURN 80
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 60
		ELSE
			RETURN 60
		ENDIF
	CASE "명중"
		RETURN 999
	CASE "회피"
		RETURN -15
	CASE "마법위력"
		RETURN 90
	CASE "마법효과"
		RETURN 85
ENDSELECT
