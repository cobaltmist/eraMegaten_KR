	CASE "공격"
		SIF ARG == -1
			RETURN 100
		IF BASE:(ARG:1):LV >= 21
			RETURN 100
		ELSEIF BASE:(ARG:1):LV >= 11
			RETURN 70
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 40
		ELSE
			RETURN 40
		ENDIF
	CASE "명중"
		RETURN 75
	CASE "방어"
		SIF ARG == -1
			RETURN -30
		IF BASE:(ARG:1):LV >= 21
			RETURN -30
		ELSEIF BASE:(ARG:1):LV >= 11
			RETURN -20
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN -10
		ELSE
			RETURN -10
		ENDIF
	CASE "회피"
		RETURN -30
ENDSELECT
RETURN 0

