@장비추가스킬_2246,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. 풀세트 장비시
	IF EQUIP:(ARG:1):머리 == 3225 && EQUIP:(ARG:1):팔 == 4079 && EQUIP:(ARG:1):발 == 4707 && EQUIP:(ARG:1):몸통 == 3812 && EQUIP:(ARG:1):총 == 2821
	IF BASE:(ARG:1):LV < 20
		SELECTCASE ARG
			CASE 0
				;칼바람
				RETURN 77
			CASE 1
				;잠복(템플러)
				RETURN 592
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 19 && BASE:(ARG:1):LV < 30 ;20~29까지
		SELECTCASE ARG
			CASE 0
				;칼바람
				RETURN 77
			CASE 1
				;기둥
				RETURN 3725
			CASE 2
				;폭풍타격
				RETURN 3726
			CASE 3
				;잠복(템플러)
				RETURN 592
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 29 ;레벨 30부터
		SELECTCASE ARG
			CASE 0
				;칼바람
				RETURN 77
			CASE 1
				;기둥
				RETURN 3725
			CASE 2
				;폭풍타격
				RETURN 3726
			CASE 3
				;블레이드스톰 (템플러)
				RETURN 93
			CASE 4
				;잠복(템플러)
				RETURN 592
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

