@장비추가스킬_5082,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. 그렘린 세트
	IF EQUIP:(ARG:1):몸통 == 3805 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):총 == 2801 && BASE:(ARG:1):LV < 10
		SELECTCASE ARG
			CASE 0
				;지원 프로토콜
				RETURN 586
			CASE 1
				;메딕킷치료
				RETURN 440
			CASE 2
				;안정화
				RETURN 441
			CASE 3
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	IF EQUIP:(ARG:1):몸통 == 3805 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):총 == 2801 && BASE:(ARG:1):LV > 9
		SELECTCASE ARG
			CASE 0
				;지원 프로토콜
				RETURN 586
			CASE 1
				;잠복(XCOM)
				RETURN 589
			CASE 2
				;전투프로토콜
				RETURN 961
			CASE 3
				;그렘린치료
				RETURN 442
			CASE 4
				;안정화
				RETURN 441
			ENDSELECT
		ENDIF
	;급조된 장비 세트 레벨 10 미만
	IF EQUIP:(ARG:1):몸통 == 3838 && EQUIP:(ARG:1):팔 == 4104 && EQUIP:(ARG:1):발 == 4732 && EQUIP:(ARG:1):총 == 2855 && BASE:(ARG:1):LV < 10 ;레벨 9일시
		SELECTCASE ARG
			CASE 0
				;메딕킷치료
				RETURN 440
			CASE 1
				;안정화
				RETURN 441
			ENDSELECT
		ENDIF
	;급조된 장비 세트 레벨 10이상
	IF EQUIP:(ARG:1):몸통 == 3838 && EQUIP:(ARG:1):팔 == 4104 && EQUIP:(ARG:1):발 == 4732 && EQUIP:(ARG:1):총 == 2855 && BASE:(ARG:1):LV > 9 ;레벨 10 이상
		SELECTCASE ARG
			CASE 0
				;그렘린치료
				RETURN 442
			CASE 1
				;안정화
				RETURN 441
			ENDSELECT
		ENDIF
	ELSE
		;세트 미장착시
		SELECTCASE ARG
			CASE 0
				;메딕킷치료
				RETURN 440
			CASE 1
				;안정화
				RETURN 441
		ENDSELECT
	ENDIF
RETURN 0

