	;스파이더 슈트용 블래스트 패딩
	CASE "검격","타격","지변","수격","전술","전격"
		IF (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2813) || (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2847)
			RETURN 90
		ELSE
			RETURN 95
		ENDIF
	;포식자 방어구용 블래스트 패딩
	CASE "화염"
		IF (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2813) || (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2847)
		;블래스트 패딩 효과
			RETURN 34
		ELSE
			RETURN 95
		ENDIF
	;포식자 방어구용 방어구 1 효과
	CASE "핵열"
		IF (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2813) || (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2847)
		;방어구 1 효과
			RETURN 95
		ELSE
			RETURN 100
		ENDIF
	;포식자 방어구용 블래스트 패딩
	CASE "비구"
		IF (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2813) || (EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709 && EQUIP:(ARG:1):총 == 2847)
		;방어구 1 효과
			RETURN 95
		ELSE
			RETURN 100
		ENDIF
ENDSELECT
RETURN 100

