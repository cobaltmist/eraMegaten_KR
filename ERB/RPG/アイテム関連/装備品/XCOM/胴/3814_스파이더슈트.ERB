				RETURN 2498
			CASE 2
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	ENDIF
		ENDIF
ENDIF
RETURN 0

@방어상성_3814,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SIF (ARG:1) == -1
	ARG:1 = 0
