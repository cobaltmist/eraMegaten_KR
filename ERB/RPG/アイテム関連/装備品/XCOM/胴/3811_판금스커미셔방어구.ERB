				RETURN 178
			CASE 2
				;제압사격
				RETURN 169
			CASE 3
				;잠복(스커미셔)
				RETURN 591
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 29
		SELECTCASE ARG
			CASE 0
				;전투참여
				RETURN 588
			CASE 1
				;채찍질
