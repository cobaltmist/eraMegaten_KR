@기본능력수정_3811,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BASESTATUS(ARG)
	CASE "인내력"
		RETURN 1
	CASE "속도"
		IF BASE:(ARG:1):LV > 29 ;레벨 20, + 토탈 컴뱃 (속도 +5) + 풀 스로틀 (속도 +3) + 레벨 30 중단(속도 + 5)
			RETURN 13
		ELSEIF BASE:(ARG:1):LV > 24 ;레벨 20, 풀 스로틀 (속도 +3)
			RETURN 10
		ELSE
			RETURN 7 ;2 + 5(토탈 컴뱃)
		ENDIF
	CASE "운"
		IF BASE:(ARG:1):LV > 19 ;레벨 20, 제로 인 (운 +5)
			RETURN 5
		ELSE
			RETURN 0
		ENDIF
	CASE "지혜"
		IF BASE:(ARG:1):LV > 29 ;레벨 30, 파쿠르
			RETURN 3
		ELSE
			RETURN 0
		ENDIF
	CASE "마력"
		IF BASE:(ARG:1):LV > 29 ;레벨 30, 파쿠르
			RETURN 3
		ELSE
			RETURN 0
		ENDIF
ENDSELECT
RETURN 0

