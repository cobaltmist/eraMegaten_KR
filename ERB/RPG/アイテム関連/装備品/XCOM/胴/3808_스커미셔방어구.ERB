@기본능력수정_3808,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SELECTCASE GET_BASESTATUS(ARG)
	CASE "인내력"
		RETURN 1
	CASE "속도"
		IF BASE:(ARG:1):LV > 14 ;기본 + 2에 토탈 컴뱃 + 5 = 7
			RETURN 7
		ELSE
			RETURN 2
		ENDIF
ENDSELECT
RETURN 0

@전투능력수정_3808,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		RETURN 4
	CASE "회피"
		;반사신경
		SIF ARG:1 == -1
			RETURN 15
		LOCAL = 15 + BASE:(ARG:1):LV * 1
			SIF LOCAL >= 30
			LOCAL = 30
		RETURN LOCAL
ENDSELECT
RETURN 0

