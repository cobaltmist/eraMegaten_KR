@장비추가스킬_3816,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. WAR 슈트 세트시 파편수류탄 능력
	;레벨 30일시 거대한폭발 추가
	IF EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711
	IF EQUIP:(ARG:1):총 == 2825 ;빔 캐넌
		SELECTCASE ARG
			CASE 0
				;수류탄발사
				RETURN 3704
			CASE 1
				;거대한폭발
				RETURN 2498
			CASE 2
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

@방어상성_3816,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_TYPE(ARG)
	;감시관 방어구용 블래스트 패딩
	CASE "검격","타격","지변","수격","전술","전격"
		IF (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2825) || (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2848)
			RETURN 80
		ELSE
			RETURN 85
		ENDIF
	;감시관 방어구용 블래스트 패딩
	CASE "화염"
		IF (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2825) || (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2848)
		;블래스트 패딩 효과
			RETURN 34
		ELSE
			RETURN 90
		ENDIF
	;감시관 방어구용 방어구 1 효과
	CASE "핵열"
		IF (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2825) || (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2848)
		;방어구 1 효과
			RETURN 85
		ELSE
			RETURN 90
		ENDIF
	;감시관 방어구용 블래스트 패딩
	CASE "비구"
		IF (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2825) || (EQUIP:(ARG:1):팔 == 4083 && EQUIP:(ARG:1):발 == 4711 && EQUIP:(ARG:1):총 == 2848)
		;방어구 1 효과
			RETURN 85
		ELSE
			RETURN 90
		ENDIF
ENDSELECT
RETURN 100

