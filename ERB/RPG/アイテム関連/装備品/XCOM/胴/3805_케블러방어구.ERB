@장비추가스킬_3805,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;사이오니스트 전용 세트
	IF EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):악세사리 == 5087 ;사이오닉증폭기
	IF BASE:(ARG:1):LV < 10
		SELECTCASE ARG
			CASE 0
				;정지
				RETURN 3717
			CASE 1
				;영혼불꽃
				RETURN 3719
			CASE 2
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 9
		SELECTCASE ARG
			CASE 0
				;정지
				RETURN 3717
			CASE 1
				;영혼불꽃
				RETURN 3719
			CASE 2
				;실성
				RETURN 3718
			CASE 3
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

