@방어상성_3805,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_TYPE(ARG)
	CASE "검격","타격","전술","지변","수격","전격"
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):총 == 2804
			RETURN 90
		ELSE
			RETURN 95
		ENDIF
	CASE "화염"
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):총 == 2804
		;블래스트 패딩 효과
			RETURN 34
		ELSE
			RETURN 95
		ENDIF
	CASE "핵열"
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):총 == 2804
		;방어구 1 효과
			RETURN 95
		ELSE
			RETURN 100
		ENDIF
	CASE "비구"
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4072 && EQUIP:(ARG:1):발 == 4700 && EQUIP:(ARG:1):총 == 2804
		;방어구 1 효과
			RETURN 95
		ELSE
			RETURN 100
		ENDIF
ENDSELECT
RETURN 100

