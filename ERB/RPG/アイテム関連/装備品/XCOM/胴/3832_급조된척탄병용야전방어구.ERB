		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4098 && EQUIP:(ARG:1):발 == 4726 && EQUIP:(ARG:1):총 == 2846
		;블래스트 패딩 효과
			RETURN 34
		ELSE
			RETURN 95
		ENDIF
	CASE "핵열"
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4098 && EQUIP:(ARG:1):발 == 4726 && EQUIP:(ARG:1):총 == 2846
		;방어구 1 효과
			RETURN 95
		ELSE
			RETURN 100
		ENDIF
	CASE "비구"
		IF BASE:(ARG:1):LV > 9 && EQUIP:(ARG:1):팔 == 4098 && EQUIP:(ARG:1):발 == 4726 && EQUIP:(ARG:1):총 == 2846
		;방어구 1 효과
			RETURN 95
		ELSE
			RETURN 100
		ENDIF
ENDSELECT
RETURN 100

