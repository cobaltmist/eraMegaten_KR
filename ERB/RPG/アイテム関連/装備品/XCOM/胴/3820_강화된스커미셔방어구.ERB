	CASE "지혜"
		RETURN 3 ;레벨 30, 파쿠르
	CASE "마력"
		RETURN 3 ;레벨 30, 파쿠르
ENDSELECT
RETURN 0

@전투능력수정_3820,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		RETURN 8
	CASE "회피"
		RETURN 89 ;레벨 25, 예리한 반사신경 회피 + 50
	CASE "마법위력"
		IF BASE:(ARG:1):LV > 39 ;레벨 40, 심판
			RETURN 50
		ELSE
			RETURN 0
		ENDIF
	CASE "마법효과"
		IF BASE:(ARG:1):LV > 39 ;레벨 40, 심판
			RETURN 50
		ELSE
			RETURN 0
		ENDIF
ENDSELECT
RETURN 0

