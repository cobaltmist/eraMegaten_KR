@방어상성_3821,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_TYPE(ARG)
	;감시관 방어구용 블래스트 패딩
	CASE "검격","타격","지변","수격","전술","전격"
		IF EQUIP:(ARG:1):팔 == 4084 && EQUIP:(ARG:1):발 == 4712 && EQUIP:(ARG:1):총 == 2825
