#LOCALSSIZE 2
SELECTCASE GET_BASESTATUS(ARG)
	CASE "힘"
		RETURN 2
	CASE "인내력"
		RETURN 1
	CASE "속도"
		RETURN 2
ENDSELECT
RETURN 0

@전투능력수정_3810,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		RETURN 8
	CASE "회피"
		IF BASE:(ARG:1):LV > 29 ;레벨 30, 침투. 회피+32
			RETURN 50
		ELSE
			RETURN 18
		ENDIF
ENDSELECT
RETURN 0

