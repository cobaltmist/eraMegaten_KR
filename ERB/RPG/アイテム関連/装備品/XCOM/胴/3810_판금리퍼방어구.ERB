	;1-1번 세트. 판금 리퍼 방어구 세트시 섀도 잠행
	IF EQUIP:(ARG:1):머리 == 3240 && EQUIP:(ARG:1):팔 == 4077 && EQUIP:(ARG:1):발 == 4705 && EQUIP:(ARG:1):총 == 2819 && EQUIP:(ARG:1):검 == 2276
		SELECTCASE ARG
			CASE 0
				;섀도
				RETURN 584
			CASE 1
				;섀도(자동)
				RETURN 2487
			CASE 2
				;원격작동
				RETURN 163
			CASE 3
				;잠복(리퍼)
				RETURN 590
			ENDSELECT
	ELSE
		SELECTCASE ARG
		ENDSELECT
	ENDIF
ENDIF
RETURN 0

