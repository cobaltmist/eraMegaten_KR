	;1-1번 세트. EXO아머 슈트 방어구 세트시 파편수류탄 능력
	;레벨 30일이 어드바이스 추가
	IF EQUIP:(ARG:1):팔 == 4080 && EQUIP:(ARG:1):발 == 4708
	IF EQUIP:(ARG:1):총 == 2813
		SELECTCASE ARG
			CASE 0
				;수류탄발사
				RETURN 3704
			CASE 1
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 29
	IF EQUIP:(ARG:1):총 == 2813
		SELECTCASE ARG
			CASE 0
				;수류탄발사
				RETURN 3704
			CASE 1
				;거대한폭발
				RETURN 2498
			CASE 2
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	ENDIF
		ENDIF
ENDIF
RETURN 0

