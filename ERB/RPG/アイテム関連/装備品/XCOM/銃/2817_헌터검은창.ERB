@전투능력수정_2817,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		SIF ARG == -1
			RETURN 120
		IF BASE:(ARG:1):LV >= 35
			RETURN 120
		ELSEIF BASE:(ARG:1):LV >= 30
			RETURN 100
		ELSEIF BASE:(ARG:1):LV >= 20
			RETURN 80
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 70
		ELSE
			RETURN 70
		ENDIF
	CASE "명중"
		SIF ARG == -1
			RETURN 130
		IF BASE:(ARG:1):LV >= 35
			RETURN 130
		ELSEIF BASE:(ARG:1):LV >= 30
			RETURN 120
		ELSEIF BASE:(ARG:1):LV >= 20
			RETURN 110
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 100
		ELSE
			RETURN 100
		ENDIF
	CASE "회피"
		RETURN 30
ENDSELECT
RETURN 0

