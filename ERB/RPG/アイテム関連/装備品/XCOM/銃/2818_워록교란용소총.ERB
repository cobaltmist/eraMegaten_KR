			RETURN 75
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 65
		ELSE
			RETURN 65
		ENDIF
	CASE "명중"
		SIF ARG == -1
			RETURN 105
		IF BASE:(ARG:1):LV >= 35
			RETURN 105
		ELSEIF BASE:(ARG:1):LV >= 30
			RETURN 100
		ELSEIF BASE:(ARG:1):LV >= 20
			RETURN 95
		ELSEIF BASE:(ARG:1):LV >= 10
			RETURN 90
		ELSE
			RETURN 90
		ENDIF
ENDSELECT
RETURN 0

