	IF (EQUIP:(ARG:1):몸통 == 3809 && EQUIP:(ARG:1):팔 == 4076 && EQUIP:(ARG:1):발 == 4704) || (EQUIP:(ARG:1):몸통 == 3813 && EQUIP:(ARG:1):팔 == 4080 && EQUIP:(ARG:1):발 == 4708) || (EQUIP:(ARG:1):몸통 == 3814 && EQUIP:(ARG:1):팔 == 4081 && EQUIP:(ARG:1):발 == 4709)
