				RETURN 589
			ENDSELECT
		ENDIF
	;레벨 20에 데드아이 획득
	IF BASE:(ARG:1):LV > 19 && BASE:(ARG:1):LV < 30 ;20~29까지
		SELECTCASE ARG
			CASE 0
				;데드아이
				RETURN 171
			CASE 1
				;잠복(XCOM)
				RETURN 589
			ENDSELECT
		ENDIF
	;레벨 30일시 살상지대도 획득
	IF BASE:(ARG:1):LV > 29
		SELECTCASE ARG
			CASE 0
				;데드아이
				RETURN 171
			CASE 1
				;잠복(XCOM)
				RETURN 589
			CASE 2
				;살상지대
				RETURN 172
			CASE 3
				;데드샷
				RETURN 2497
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
