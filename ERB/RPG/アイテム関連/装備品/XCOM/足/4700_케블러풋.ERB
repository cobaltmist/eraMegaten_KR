@전투능력수정_4700,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
		RETURN 5
	CASE "회피"
		RETURN 8
	CASE "마법효과"
		RETURN 1
ENDSELECT
RETURN 0

@방어상성_4700,ARG,ARG:1 = -1
