		;홀로그램 조준 (속도 + 5)
			RETURN 7
		ELSE
			RETURN 2
		ENDIF
	CASE "인내력"
		IF CFLAG:(ARG:1):돌격병_훈련 == 1 && !GROUPMATCH(EQUIP:(ARG:1):총, 2812,2824,2844,2845,2863)
		;돌격병 훈련 완료. 은폐 (인내력 + 5)
			RETURN 7
		ELSE
			RETURN 2
		ENDIF
ENDSELECT
