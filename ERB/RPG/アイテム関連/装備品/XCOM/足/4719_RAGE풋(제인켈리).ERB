#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "방어"
	IF CFLAG:(ARG:1):돌격병_훈련 == 1
		;돌격병 훈련 완료. 언터쳐블 (방어 +50)
		RETURN 83
	ELSE
		RETURN 30
	ENDIF
	CASE "명중"
	IF CFLAG:(ARG:1):저격병_훈련 == 1
		;저격병 훈련 완료. 겨냥
		RETURN 10
	ELSE
		RETURN 0
	ENDIF
	CASE "회피"
	IF CFLAG:(ARG:1):저격병_훈련 == 1
		;저격병 훈련 완료. 천상의 레퀴엠 (회피 + 15)
		RETURN 39
	ELSEIF CFLAG:(ARG:1):특수병_훈련 == 1
		;특수병 훈련. 예리한 반사신경 (회피 + 50)
		RETURN 74
	ELSEIF CFLAG:(ARG:1):돌격병_훈련 == 1
		;돌격병 훈련. 유령 (회피 + 20)
		RETURN 44
	ELSE
		RETURN 24
	ENDIF
	CASE "마법효과"
		RETURN 3
ENDSELECT
RETURN 0

