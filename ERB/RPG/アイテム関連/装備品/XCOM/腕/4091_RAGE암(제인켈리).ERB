;RAGE아머 장비스킬들
@장비추가스킬_4091,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. RAGE아머의 중화기 스킬.
	IF EQUIP:(ARG:1):몸통 == 3825 && EQUIP:(ARG:1):발 == 4719
	IF BASE:(ARG:1):LV < 35
		SELECTCASE ARG
			CASE 0
				;플라즈마 블래스터
				RETURN 3738
			CASE 1
				;헬파이어 화염방사기
				RETURN 3739
			CASE 2
				;분노의 맹타
				RETURN 283
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 34 && BASE:(ARG:1):LV < 40
		SELECTCASE ARG
			CASE 0
				;플라즈마 블래스터
				RETURN 3738
			CASE 1
				;헬파이어 화염방사기
				RETURN 3739
			CASE 2
				;블래스터 폭탄
				RETURN 3740
			CASE 3
				;분노의 맹타
				RETURN 283
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 39
		SELECTCASE ARG
			CASE 0
				;플라즈마 블래스터
				RETURN 3738
			CASE 1
				;헬파이어 화염방사기
				RETURN 3739
			CASE 2
				;블래스터 폭탄
				RETURN 3740
			CASE 3
				;파쇄돌풍 캐넌
				RETURN 3741
			CASE 4
				;분노의 맹타
				RETURN 283
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

