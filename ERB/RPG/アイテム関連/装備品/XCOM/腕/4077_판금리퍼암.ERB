@장비추가스킬_4077,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. 판금 리퍼 방어구 세트시 클레이모어. 레벨 20에 클레이모어(파편)
	IF EQUIP:(ARG:1):몸통 == 3810 && EQUIP:(ARG:1):발 == 4705 && EQUIP:(ARG:1):머리 == 3240 && EQUIP:(ARG:1):총 == 2819 && EQUIP:(ARG:1):검 == 2276
	IF BASE:(ARG:1):LV < 20
		SELECTCASE ARG
			CASE 0
				;클레이모어. 물리 피해 50. 화염 상성 추가 및 BOMB을 폭발시킴
				RETURN 3703
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 19
		SELECTCASE ARG
			CASE 0
				;클레이모어(파편)
				RETURN 3714
			CASE 1
				;목표물정의
				RETURN 2495
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 24
		SELECTCASE ARG
			CASE 0
				;클레이모어(파편)
				RETURN 3714
			CASE 1
				;목표물정의
				RETURN 2495
			CASE 2
				;살상지대
				RETURN 172
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

