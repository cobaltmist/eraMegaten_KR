	;1-1번 세트. 강화된 스커미셔 방어구 세트시 갈고리 + 자동 발동 갈고리
	IF EQUIP:(ARG:1):머리 == 3226 && EQUIP:(ARG:1):몸통 == 3820 && EQUIP:(ARG:1):발 == 4715 && EQUIP:(ARG:1):총 == 2832 && EQUIP:(ARG:1):검 == 2249
		SELECTCASE ARG
			CASE 0
				;갈고리사출
				RETURN 585
			CASE 1
				;갈고리사출(자동)
				RETURN 2489
		ENDSELECT
	ELSE
		SELECTCASE ARG
		ENDSELECT
	ENDIF
ENDIF
RETURN 0

