@장비추가스킬_4075,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. 스커미셔 방어구 세트시 갈고리
	IF EQUIP:(ARG:1):머리 == 3226 && EQUIP:(ARG:1):몸통 == 3808 && EQUIP:(ARG:1):발 == 4703 && EQUIP:(ARG:1):총 == 2808 && EQUIP:(ARG:1):검 == 2275
		SELECTCASE ARG
			CASE 0
				;갈고리사출
				RETURN 585
			CASE 1
				;갈고리사출(자동)
				RETURN 2489
		ENDSELECT
	ELSE
		SELECTCASE ARG
		ENDSELECT
	ENDIF
ENDIF
RETURN 0

