	;1-1번 세트. 강화된 템플러 방어구 풀세트시 연쇄번개·여진 + 증폭
	IF EQUIP:(ARG:1):몸통 == 3818 && EQUIP:(ARG:1):발 == 4713 && EQUIP:(ARG:1):머리 == 3225 && EQUIP:(ARG:1):총 == 2830 && EQUIP:(ARG:1):검 == 2248
		SELECTCASE ARG
			CASE 0
				;연쇄번개·여진
				RETURN 960
			CASE 1
				;증폭
				RETURN 587
		ENDSELECT
	ELSE
		SELECTCASE ARG
		ENDSELECT
	ENDIF
ENDIF
RETURN 0

