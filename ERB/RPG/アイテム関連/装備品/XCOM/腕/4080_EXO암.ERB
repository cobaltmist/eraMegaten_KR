;EXO 아머 장비스킬들
@장비추가스킬_4080,ARG,ARG:1 = -1
#LOCALSIZE 2
#LOCALSSIZE 2
IF ARG:1 != -1
	;1-1번 세트. EXO 아머의 중화기 스킬.
	IF EQUIP:(ARG:1):몸통 == 3813 && EQUIP:(ARG:1):발 == 4708
	IF BASE:(ARG:1):LV < 20
		SELECTCASE ARG
			CASE 0
				;로켓발사
				RETURN 3727
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 19 && BASE:(ARG:1):LV < 25
		SELECTCASE ARG
			CASE 0
				;로켓발사
				RETURN 3727
			CASE 1
				;파쇄총
				RETURN 3728
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 24
		SELECTCASE ARG
			CASE 0
				;로켓발사
				RETURN 3727
			CASE 1
				;파쇄총
				RETURN 3728
			CASE 2
				;EXO화염방사
				RETURN 3729
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

