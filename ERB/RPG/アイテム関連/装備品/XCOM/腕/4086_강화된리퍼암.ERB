	;1-1번 세트. 강화된 리퍼 방어구 풀세트시
	IF EQUIP:(ARG:1):몸통 == 3819 && EQUIP:(ARG:1):발 == 4714 && EQUIP:(ARG:1):머리 == 3240 && EQUIP:(ARG:1):총 == 2831 && EQUIP:(ARG:1):검 == 2276
	IF BASE:(ARG:1):LV < 35
		SELECTCASE ARG
			CASE 0
				;클레이모어(파편)
				RETURN 3714
			CASE 1
				;목표물정의
				RETURN 2495
			CASE 2
				;살상지대
				RETURN 172
			ENDSELECT
		ENDIF
