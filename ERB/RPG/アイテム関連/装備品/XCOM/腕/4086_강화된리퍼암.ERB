@기본능력수정_4086,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BASESTATUS(ARG)
	CASE "지혜"
		RETURN 2
	CASE "마력"
		RETURN 2
	CASE "속도"
		;홀로그램 조준 효과. 레벨 35
		IF EQUIP:(ARG:1):몸통 == 3819 && EQUIP:(ARG:1):발 == 4714 && EQUIP:(ARG:1):머리 == 3240 && EQUIP:(ARG:1):검 == 2276 && EQUIP:(ARG:1):총 == 2831 && BASE:(ARG:1):LV > 34
			RETURN 8
		ELSE
			RETURN 3
		ENDIF
ENDSELECT
RETURN 0

