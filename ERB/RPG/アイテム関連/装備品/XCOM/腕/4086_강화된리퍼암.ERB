		SELECTCASE ARG
			CASE 0
				;클레이모어(파편)
				RETURN 3714
			CASE 1
				;목표물정의
				RETURN 2495
			CASE 2
				;살상지대
				RETURN 172
			CASE 3
				;추방 : Death To The ALL ALIEN!
				RETURN 185
			ENDSELECT
		ENDIF
	IF BASE:(ARG:1):LV > 39
		SELECTCASE ARG
			CASE 0
				;클레이모어(파편)
				RETURN 3714
			CASE 1
				;목표물정의
				RETURN 2495
			CASE 2
				;살상지대
				RETURN 172
			CASE 3
				;추방-괴멸 : Death To The ALL ALIEN!
				RETURN 186
			CASE 4
				;추적지뢰
				RETURN 3744
			ENDSELECT
		ENDIF
	ENDIF
ENDIF
RETURN 0

