@기본능력수정_4078,ARG,ARG:1 = 0
#LOCALSIZE 2
#LOCALSSIZE 2
;버그픽스용
SIF (ARG:1) == -1
	ARG:1 = 0
SELECTCASE GET_BASESTATUS(ARG)
	CASE "속도"
		IF BASE:(ARG:1):LV > 29 ;레벨 30, 응징(속도 +5)
			RETURN 5
		ELSE
			RETURN 0
		ENDIF
ENDSELECT
RETURN 0

