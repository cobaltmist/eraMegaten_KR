@P습득스킬_8200,ARG
LOCAL=0
LOCAL:1=0
SELECTCASE ARG
	CASE 0
		LOCAL   = [[스킬:돌격]]
		LOCAL:1 = 3
	CASE 1
		LOCAL   = [[스킬:사바트마]]
		LOCAL:1 = 9
	CASE 2
		LOCAL   = [[스킬:일할의활천]]
		LOCAL:1 = 11
	CASE 3
		LOCAL   = [[스킬:마구날뛰기]]
		LOCAL:1 = 13
	CASE 4
		;アマラで許可もらってるか、アマラEDクリア済みなら貫通
		IF (던전플래그:68:29 >= 2 || GETBIT(FLAG:발견ED,55))
			LOCAL   = [[스킬:관통]]
			LOCAL:1 = 80
		ELSE
			LOCAL   = 0
			LOCAL:1 = 0
		ENDIF
ENDSELECT
RETURN LOCAL,LOCAL:1

