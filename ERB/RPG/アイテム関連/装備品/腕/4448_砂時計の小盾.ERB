				RETURN 2
			ENDIF
		;ほむら陥落時、知＋２
		CASE "지혜"
			LOCAL = GETCHARA([[キャラ:호무라]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;まどか陥落時、魔＋２
		CASE "마력"
			LOCAL = GETCHARA([[キャラ:마도카]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;さやか陥落時、体＋２
		CASE "인내력"
			LOCAL = GETCHARA([[キャラ:사야카]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;杏子陥落時、速＋２
		CASE "속도"
			LOCAL = GETCHARA([[キャラ:교코]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;マミ陥落時、運＋２
		CASE "운"
			LOCAL = GETCHARA([[キャラ:마미]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
	ENDSELECT
ENDIF
