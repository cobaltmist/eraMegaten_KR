;素の性能自体は３０레벨
;함락した마법소녀を소지していると능력上昇
;	마도카	魔＋２、파마반감
;	호무라	知＋２、주살一回무효
;	마미	운＋２、신경반감
;	사야카	体＋２、自動治癒（中）
;	교코	速＋２、정신반감
;	유마	충격무효
;	おりこ	핵열무효
;	키리카	힘＋２、물리にゆるい내성
;	여신まど	만능にゆるい내성
;	そして마법소녀一人ごとに盾の레벨＋１０
;本当は유마は라쿠카쟈오토、おりこは스쿠카쟈오토だったが
;どうしても기능しないため내성부여
;
;기능するように수정して내성소거、안경호무라に対応させて引き継ぎ가능に
;기본性能が高すぎたため計算式を변경、조마でも레벨が上っていたためそちらも수정
;======================================================

@기본능력수정_4448,ARG,ARG:1 = -1
IF ARG:1 > -1
	SELECTCASE GET_BASESTATUS(ARG)
		;키리카함락時、힘＋２
		CASE "힘"
			LOCAL = GETCHARA([[キャラ:키리카]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;호무라함락時、知＋２
		CASE "지혜"
			LOCAL = GETCHARA([[キャラ:호무라]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;마도카함락時、魔＋２
		CASE "마력"
			LOCAL = GETCHARA([[キャラ:마도카]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;사야카함락時、体＋２
		CASE "인내력"
			LOCAL = GETCHARA([[キャラ:사야카]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;교코함락時、速＋２
		CASE "속도"
			LOCAL = GETCHARA([[キャラ:교코]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
		;마미함락時、운＋２
		CASE "운"
			LOCAL = GETCHARA([[キャラ:마미]])
			IF LOCAL > 0 && FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL)
				RETURN 2
			ENDIF
	ENDSELECT
ENDIF
RETURN 0

@전투능력수정_4448,ARG,ARG:1 = -1
#LOCALSIZE 3
LOCAL:1 = 0
LOCAL:2 = 30
IF ARG:1 > -1
	;함락している마법소녀１人毎に레벨＋１０
	;（＋５に변경）
	FOR LOCAL, 4390, 4399
		LOCAL:1 = GETCHARA(LOCAL)
		IF LOCAL:1 > 0 && FAVORITE_1(LOCAL:1) == ARG:1 && 함락(LOCAL:1)
;			LOCAL:2 += 10
			LOCAL:2 += 5
		ENDIF
	NEXT
	;안경호무라함락時、레벨＋１０
	LOCAL:1 = GETCHARA([[キャラ:호무라(U-U)]])
	IF LOCAL:1 > 0 && FAVORITE_1(LOCAL:1) == ARG:1 && 함락(LOCAL:1)
		LOCAL:2 += 10
	ENDIF
ENDIF
