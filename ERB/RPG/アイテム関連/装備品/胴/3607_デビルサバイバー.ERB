@전투능력수정_3607,ARG,ARG:1 = -1

SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 11
		LOCAL = 11
		SIF EQUIP:(ARG:1):악세서리 == 5202
			LOCAL += BASE:(ARG:1):LV / 4
		SIF TALENT:(ARG:1):이능자 && TALENT:(ARG:1):서머너
			LOCAL += BASE:(ARG:1):LV * 3 / 8
		IF BASE:(ARG:1):힘 > BASE:(ARG:1):LV
			IF (( BASE:(ARG:1):힘 - BASE:(ARG:1):LV) > 60)
				LOCAL += 60
			ELSE
				LOCAL += BASE:(ARG:1):힘 - BASE:(ARG:1):LV
			ENDIF
		ENDIF
		RETURN LOCAL
	CASE 3
		SIF ARG:1 == -1
			RETURN 6
		LOCAL = 6
		SIF EQUIP:(ARG:1):악세서리 == 5202
			LOCAL += BASE:(ARG:1):LV / 7
		SIF TALENT:(ARG:1):이능자 && TALENT:(ARG:1):서머너
			LOCAL += BASE:(ARG:1):LV * 3 / 11
		IF BASE:(ARG:1):속도 > BASE:(ARG:1):LV
			IF (( BASE:(ARG:1):속도 - BASE:(ARG:1):LV) > 60)
				LOCAL += 60
			ELSE
				LOCAL += BASE:(ARG:1):속도 - BASE:(ARG:1):LV
			ENDIF
		ENDIF
		RETURN LOCAL
	CASE 4
		SIF ARG:1 == -1
			RETURN 5
		LOCAL = 5
		SIF EQUIP:(ARG:1):악세서리 == 5202
			LOCAL += BASE:(ARG:1):LV / 8
		SIF TALENT:(ARG:1):이능자 && TALENT:(ARG:1):서머너
			LOCAL += BASE:(ARG:1):LV * 3 / 11
		IF BASE:(ARG:1):마력 > BASE:(ARG:1):LV
			IF (( BASE:(ARG:1):마력 - BASE:(ARG:1):LV) > 50)
				LOCAL += 50
			ELSE
				LOCAL += BASE:(ARG:1):마력 - BASE:(ARG:1):LV
			ENDIF
		ENDIF
		RETURN LOCAL
	CASE 5
		SIF ARG:1 == -1
			RETURN 5
		LOCAL = 5
		SIF EQUIP:(ARG:1):악세서리 == 5202
			LOCAL += BASE:(ARG:1):LV / 7
		SIF TALENT:(ARG:1):이능자 && TALENT:(ARG:1):서머너
			LOCAL += BASE:(ARG:1):LV * 3 / 11
		IF BASE:(ARG:1):지혜 > BASE:(ARG:1):LV
