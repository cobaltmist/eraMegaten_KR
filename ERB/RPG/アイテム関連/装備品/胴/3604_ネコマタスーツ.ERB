@전투능력수정_3604,ARG,ARG:1 = -1

SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 8
		IF EQUIP:(ARG:1):발 == 4602 && EQUIP:(ARG:1):악세사리 == 5200
			LOCAL = BASE:(ARG:1):LV / 3 +8
			IF TALENT:(ARG:1):절벽
				IF LOCAL < (BASE:(ARG:1):LV / 2)
					LOCAL = 8
				ELSE
					LOCAL -= BASE:(ARG:1):LV / 2
				ENDIF
			ELSEIF TALENT:(ARG:1):빈유
				IF LOCAL < (BASE:(ARG:1):LV / 3)
					LOCAL = 8
				ELSE
					LOCAL -= (BASE:(ARG:1):LV / 3)
				ENDIF
			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 8
		ENDIF
	CASE 3
		SIF ARG:1 == -1
			RETURN 15
		IF EQUIP:(ARG:1):발 == 4602 && EQUIP:(ARG:1):악세사리 == 5200
			LOCAL = BASE:(ARG:1):LV / 3 + 15
			SIF TALENT:(ARG:1):절벽
				LOCAL += BASE:(ARG:1):LV / 2
			SIF TALENT:(ARG:1):빈유
				LOCAL += BASE:(ARG:1):LV / 3
			RETURN LOCAL
		ELSE
			RETURN 15
		ENDIF
ENDSELECT
RETURN 0

