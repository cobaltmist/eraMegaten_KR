@전투능력수정_3545,ARG,ARG:1 = -1

SELECTCASE ARG
	;防御24~80 露出癖とレベルで変化
	CASE 2
		IF ARG:1 > -1
			SELECTCASE ABL:(ARG:1):노출증
				CASE 0
					RETURN 24
				CASE 1
					RETURN 28
				CASE IS < 4
					IF EQUIP:(ARG:1):머리 == 3004 && EQUIP:(ARG:1):발 == 4528
						LOCAL = BASE:(ARG:1):LV / 5 + 30
							IF LOCAL > 60
								LOCAL = 60
							ENDIF
						RETURN LOCAL
					ELSE
						RETURN 30
					ENDIF
				CASEELSE
					IF EQUIP:(ARG:1):머리 == 3004 && EQUIP:(ARG:1):발 == 4528
						LOCAL = BASE:(ARG:1):LV / 4 + 35
							IF LOCAL > 80
								LOCAL = 80
							ENDIF
						RETURN LOCAL
					ELSE
						RETURN 35
					ENDIF
			ENDSELECT
		ENDIF
		RETURN 24
	;露出癖とレベルで変化 最大100
	CASE 3
		IF ARG:1 > -1
			SELECTCASE ABL:(ARG:1):노출증
				CASE 0
					RETURN 10
				CASE 1
					RETURN 15
				CASE IS < 4
					IF EQUIP:(ARG:1):머리 == 3004 && EQUIP:(ARG:1):발 == 4528
						LOCAL = BASE:(ARG:1):LV / 4 + 20
							IF LOCAL > 80
								LOCAL = 80
							ENDIF
						RETURN LOCAL
					ELSE
						RETURN 20
					ENDIF
				CASEELSE
					IF EQUIP:(ARG:1):머리 == 3004 && EQUIP:(ARG:1):발 == 4528
						LOCAL = BASE:(ARG:1):LV / 3 + 26
							IF LOCAL > 100
								LOCAL = 100
							ENDIF
						RETURN LOCAL
					ELSE
						RETURN 26
					ENDIF
			ENDSELECT
		ELSE
			RETURN 11
		ENDIF
	CASE 5
		RETURN 3
ENDSELECT
RETURN 0
