@전투능력수정_3602,ARG,ARG:1 = -1
SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 35
		IF EQUIP:(ARG:1):머리 == 3202
			LOCAL = BASE:(ARG:1):LV / 3 +35
			RETURN LOCAL
		ELSE
			RETURN 35
		ENDIF
	CASE 3
		SIF ARG:1 == -1
			RETURN 15
		IF EQUIP:(ARG:1):머리 == 3202
			LOCAL = BASE:(ARG:1):LV / 4 + 15
			RETURN LOCAL
		ELSE
			RETURN 15
		ENDIF
	CASE 4
		SIF ARG:1 == -1
			RETURN 8
		SIF EQUIP:(ARG:1):머리 != 3202
			RETURN 8
		IF TALENT:(ARG:1):거유
			LOCAL = (BASE:(ARG:1):LV / 5) * (ABL:(ARG:1):Ｂ감각 / 3)
		ELSEIF TALENT:(ARG:1):폭유 || TALENT:(ARG:1):마유
			LOCAL = (BASE:(ARG:1):LV / 6) * (ABL:(ARG:1):Ｂ감각 / 2)
		ELSE
			LOCAL = BASE:(ARG:1):LV / 6
		ENDIF
		;LV26時点でフレイアの魔力基本値になるように設定
		LOCAL += 9
		;過剰な数値にならないように制限
		SIF LOCAL > 50
			LOCAL = 50 + (LOCAL - 50) / 2
		RETURN LOCAL
	CASE 5
		SIF ARG:1 == -1
			RETURN 6
		SIF EQUIP:(ARG:1):머리 != 3202
			RETURN 6
		LOCAL = BASE:(ARG:1):LV / 6 + 6
		RETURN LOCAL
ENDSELECT
RETURN 0

