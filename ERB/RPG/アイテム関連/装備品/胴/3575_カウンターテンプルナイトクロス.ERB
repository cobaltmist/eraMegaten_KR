		ELSE
			RETURN 30
		ENDIF
	;回避
	CASE 3
		IF ARG:1 > -1
			RETURN MIN((31 * (255 - CFLAG:(ARG:1):선악치) / 150) , (MAXBASE:(ARG:1):LV * 175 / 100 + 6) * 3 / 10)
		ELSE
			RETURN 15
		ENDIF
	;魔法効果
	CASE 5
		IF ARG:1 > -1
			RETURN MIN((10 * (255 - CFLAG:(ARG:1):선악치) / 150) , (MAXBASE:(ARG:1):LV * 175 / 100 + 8) * 1 / 10)
		ELSE
			RETURN 2
		ENDIF
ENDSELECT
