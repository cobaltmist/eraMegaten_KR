;============================================================================
;@EQUIP_SORT , ARG = -1(장비するキャラ) , ARG:1 (ソート開始位置(素손などを省くため))
;あらかじめ설정済みのソート조건に応じて장비品のリストをソートする
;아이템リストに장비品のリストを作成した上で実行する事
;============================================================================
@EQUIP_SORT , ARG = -1 , ARG:1
SIF ソート조건 == ""
	ソート조건 = 아이템번호
FOR LOCAL:2 , 2 , -1 , -1
	;조건によって、아이템リストの数値を色々변경
	IF ソート조건:(LOCAL:2) != ""
		FOR LOCAL , ARG:1 , FINDELEMENT(아이템リスト , -1)
			IF ソート조건:(LOCAL:2) == "아이템번호"
			ELSEIF ソート조건:(LOCAL:2) == "합계능력値" || RANGE(GET_BATTLESTATUS_NUM(ソート조건:(LOCAL:2)) , 1 , 6 )
				IF ソート조건:(LOCAL:2) == "합계능력値"
					LOCAL:3 = 1 , 9
				ELSE
					LOCAL:3 = GET_BATTLESTATUS_NUM(ソート조건:(LOCAL:2))
					LOCAL:4 = LOCAL:3 + 1
					;총なら명중と공격を変換
					IF GROUPMATCH(ソート조건:(LOCAL:2) , "공격" , "명중")
						TRYCALLFORM 장비箇所_{아이템リスト:LOCAL % 10000}
						IF RESULT == GET_EQUIPNUM("총")
							LOCAL:3 += 6
							LOCAL:4 += 6
						ENDIF
					ENDIF
				ENDIF
				FOR LOCAL:1 , LOCAL:3 , LOCAL:4
					;CALL EQUIP_PROPERTY , 아이템リスト:LOCAL % 10000 , "전투능력수정" , LOCAL:1 , ARG
					IF GET_BATTLESTATUS(LOCAL:1) == "총공격"
						CALL EQUIP_PROPERTY , MODULO(아이템リスト:LOCAL , 10000) , "총공격" , LOCAL:1 , ARG
					ELSEIF GET_BATTLESTATUS(LOCAL:1) == "총명중"
						CALL EQUIP_PROPERTY , MODULO(아이템リスト:LOCAL , 10000) , "총명중" , LOCAL:1 , ARG
					ELSE
						CALL EQUIP_PROPERTY , MODULO(아이템リスト:LOCAL , 10000) , "전투능력수정" , LOCAL:1 , ARG
					ENDIF
					아이템リスト:LOCAL += RESULT * 10000
				NEXT
				
			ELSEIF RANGE(GET_TYPE_NUM(ソート조건:(LOCAL:2)) , 0 , FLAG:相性数 )
				CALLFORM EQUIP_PROPERTY , MODULO(아이템リスト:LOCAL , 10000) , "방어상성" , GET_TYPE_NUM(ソート조건:(LOCAL:2)) , ARG
				SELECTCASE RESULT
					CASE 999
						아이템リスト:LOCAL += 999 * 10000
					CASEELSE
						아이템リスト:LOCAL += (500 - RESULT) * 10000
				ENDSELECT
			ELSEIF ソート조건:(LOCAL:2) == "가격"
				아이템リスト:LOCAL += ITEMPRICE:(아이템リスト:LOCAL) * 10000
			ELSEIF ソート조건:(LOCAL:2) == "필요레벨"
				CALL EQUIP_PROPERTY , MODULO(아이템リスト:LOCAL , 10000) , "필요레벨" , , ARG
				아이템リスト:LOCAL += RESULT * 10000
				
			ENDIF
		NEXT
		SELECTCASE ソート조건:(LOCAL:2)
			CASE "아이템번호"
				ARRAYSORT 아이템リスト , FORWARD , ARG:1 , MAX(0 , FINDELEMENT(아이템リスト , -1) - ARG:1)
			CASEELSE
				ARRAYSORT 아이템リスト , BACK , ARG:1 , MAX(0 , FINDELEMENT(아이템リスト , -1) - ARG:1)
		ENDSELECT
		FOR LOCAL , 0 , FINDELEMENT(아이템リスト , -1)
			아이템リスト:LOCAL = MODULO(아이템リスト:LOCAL , 10000)
		NEXT
	ENDIF
NEXT

