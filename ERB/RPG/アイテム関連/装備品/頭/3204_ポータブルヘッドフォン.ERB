			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 2
		ENDIF
	;마법위력
	CASE 4
		SIF ARG:1 == -1
			RETURN 5
		IF TALENT:(ARG:1):페르소나구사자
			IF TALENT:(ARG:1):빈유 || TALENT:(ARG:1):절벽
