		SIF ARG:1 == -1
			RETURN 5
		IF TALENT:(ARG:1):페르소나구사자
			IF TALENT:(ARG:1):빈유 || TALENT:(ARG:1):절벽
				LOCAL = BASE:(ARG:1):LV / 6
			ELSE
				LOCAL = BASE:(ARG:1):LV / 3
			ENDIF
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
ENDSELECT
