;장비품の데이터
;아라스톨
;性能の計算は마정검とほぼ同じで、악마狩人당신の스테이터스の影響を受ける
;======================================================
@기본능력수정_2370,ARG,ARG:1 = -1
#LOCALSIZE 1
#LOCALSSIZE 1
LOCAL = GETCHARA(4999)
SIF LOCAL < 0
	RETURN 0
SIF ARG:1 < 0
	RETURN 0
IF ARG:1 == GETCHARA(4999)
	SELECTCASE ARG
		CASE 5
			SIF ARG == 5 && ARG:1 == GETCHARA(0) || ARG:1 == GETCHARA(4999) || (FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL))
			RETURN BASE:LOCAL:GET_BASESTATUS(ARG) / 10 + 6
		CASEELSE
			SIF ARG:1 == GETCHARA(0)
				LOCAL = GETCHARA(0)
			SIF ARG:1 == GETCHARA(4999)
				LOCAL = GETCHARA(4999)
			SIF LOCAL < 0
				RETURN 0
			SIF ARG:1 < 0
				RETURN 0
			SIF ARG:1 == GETCHARA(0) || ARG:1 == GETCHARA(4999) || (FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL))
				RETURN BASE:LOCAL:GET_BASESTATUS(ARG) / 10
	ENDSELECT
ENDIF
RETURN 0

@전투능력수정_2370,ARG,ARG:1 = -1
#LOCALSIZE 3
LOCAL = GETCHARA(4999)
LOCAL:1 = 0
LOCAL:2 = 40

;검の레벨설정。당신が함락している場合、당신の레벨の半分が加算される
SIF ARG:1 >= 0 && (NO:(ARG:1) == 0 || NO:(ARG:1) == 4999 || (NO:(ARG:1) == 4998 && (CFLAG:(ARG:1):당신の専攻分野 == 7)) || (LOCAL >=0 && 함락(LOCAL, ARG:1)))
	LOCAL:2 += MIN(BASE:(ARG:1):LV / 2, 40)
LOCAL:2 += 5
;레벨による전투能力値
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		LOCAL:1 = LOCAL:2 * 3/2
	CASE "명중"
		LOCAL:1 = LOCAL:2
	CASE "마법위력"
		LOCAL:1 = LOCAL:2 * 3/2
	CASE "마법효과"
		LOCAL:1 = LOCAL:2
ENDSELECT

;STATUSによる能力値　당신함락で스테이터스によって性能が加算される
IF ARG:1 >= 0 && (NO:(ARG:1) == 0 || NO:(ARG:1) == 4999 || (NO:(ARG:1) == 4998 && (CFLAG:(ARG:1):당신の専攻分野 == 7)) || (LOCAL >=0 && 함락(LOCAL, ARG:1)))
	SELECTCASE GET_BATTLESTATUS(ARG)
		CASE "공격"
			LOCAL:1 +=  BASE:(ARG:1):힘*3/2 + BASE:(ARG:1):인내력 / 2
		CASE "명중"
			LOCAL:1 += BASE:(ARG:1):속도*3/2 + BASE:(ARG:1):운/2
		CASE "마법위력"
			LOCAL:1 += BASE:(ARG:1):마력*3/2 + BASE:(ARG:1):지혜 / 2
		CASE "마법효과"
			LOCAL:1 += BASE:(ARG:1):지혜 + BASE:(ARG:1):운/2 + BASE:(ARG:1):마력/2
	ENDSELECT
ENDIF

;검仕様に변경
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		TIMES LOCAL:1, 1.10
	CASE "명중"
		LOCAL:1 += 10
	CASE "마법위력"
		TIMES LOCAL:1, 1.00
	CASE "마법효과"
		TIMES LOCAL:1, 0.30
ENDSELECT
;최저でも40레벨검の性能は保証される
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		RETURN MAX(107, LOCAL:1)
	CASE "명중"
		RETURN MAX(94, LOCAL:1)
	CASE "마법위력"
		RETURN MAX(95, LOCAL:1)
	CASE "마법효과"
		RETURN MAX(23, LOCAL:1)
ENDSELECT
