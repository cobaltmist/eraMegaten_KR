@전투능력수정_2406,ARG,ARG:1 = -1
SELECTCASE ARG
	CASE 0
		SIF ARG:1 == -1
			RETURN 160
		LOCAL = 160
		IF NO:(ARG:1) == [[キャラ:요시토라]]
			LOCAL += 125 * (MIN(MAX(51,MAXBASE:(ARG:1):LV),70) - 50) / 20
		ELSEIF ABL:(ARG:1):속성LD == 1 && MAXBASE:(ARG:1):LV > 69
			SIF TALENT:(ARG:1):매혹
				LOCAL += 50
			SIF TALENT:(ARG:1):고무
				LOCAL += 50
			SIF ABL:(ARG:1):속성LC == 3
				LOCAL += 25
			SIF ABL:(ARG:1):속성LC == 1
				LOCAL -= 25
		ENDIF
		RETURN LOCAL
	CASE 1
		SIF ARG:1 == -1
			RETURN 116
		LOCAL = 116
		IF NO:(ARG:1) == [[キャラ:요시토라]]
			LOCAL += 70 * (MIN(MAX(51,MAXBASE:(ARG:1):LV),70) - 50) / 20
		ELSEIF ABL:(ARG:1):속성LD == 1 && MAXBASE:(ARG:1):LV > 69
			SIF TALENT:(ARG:1):매력
				LOCAL += 50
			SIF ABL:(ARG:1):속성LC == 3
				LOCAL += 20
			SIF ABL:(ARG:1):속성LC == 1
				LOCAL -= 20
		ENDIF
		RETURN LOCAL
	CASE 4
		RETURN 100
	CASE 5
		RETURN 44
ENDSELECT
RETURN 0

