@전투능력수정_2364,ARG,ARG:1 = -1
SELECTCASE ARG
;공격
	CASE 0
		SIF ARG:1 == -1
			RETURN 10
	IF ABL:(ARG:1):욕망 <= 4
			LOCAL = BASE:(ARG:1):LV + 15
			RETURN LOCAL
	ELSE
			LOCAL = BASE:(ARG:1):LV * 2 + 20
			RETURN LOCAL
	ENDIF
;명중
	CASE 1
	SIF ARG:1 == -1
			RETURN 10
	IF ABL:(ARG:1):욕망 <= 4
			LOCAL = BASE:(ARG:1):LV + 15
			RETURN LOCAL
	ELSEIF ABL:(ARG:1):욕망 <= 9
			LOCAL = BASE:(ARG:1):LV * 2
			RETURN LOCAL
	ELSE
			LOCAL = BASE:(ARG:1):LV * 2 +30
			RETURN LOCAL
	ENDIF
;방어
	CASE 2
		RETURN 0
;회피
	CASE 3
	SIF ARG:1 == -1
			RETURN 10
	IF ABL:(ARG:1):욕망 <= 4
			RETURN 0
	ELSEIF ABL:(ARG:1):욕망 <= 9
			RETURN 30
	ELSE
			RETURN 60
	ENDIF
;마법공격
	CASE 4
		RETURN 0
;마법방어
	CASE 5
		RETURN 0
ENDSELECT
RETURN 0

