;장비품の데이터
;スパーダ
;히노카쿠츠치의검のパクリ。공격と魔威高め
;性能の計算は마정검とほぼ同じで、트리쉬(DMC)の스테이터스の影響を受ける
;======================================================
@기본능력수정_2372,ARG,ARG:1 = -1
#LOCALSIZE 1
#LOCALSSIZE 1
LOCAL = GETCHARA([[キャラ:트리쉬(DMC)]])
SIF LOCAL < 0
	RETURN 0
SIF ARG:1 < 0
	RETURN 0
SIF ARG:1 == GETCHARA([[キャラ:트리쉬(DMC)]]) || (FAVORITE_1(LOCAL) == ARG:1 && 함락(LOCAL))
	RETURN BASE:LOCAL:GET_BASESTATUS(ARG) / 10
RETURN 0
@전투능력수정_2372,ARG,ARG:1 = -1
#LOCALSIZE 3
LOCAL = GETCHARA([[キャラ:트리쉬(DMC)]])
LOCAL:1 = 0
LOCAL:2 = 40
;검の레벨설정。트리쉬(DMC)が함락している場合、트리쉬(DMC)の레벨の半分が加算される
SIF ARG:1 >=0 && LOCAL >= 0 && (NO:(ARG:1) == [[キャラ:트리쉬(DMC)]] || 함락(LOCAL, ARG:1))
	LOCAL:2 += MIN(BASE:LOCAL:LV / 2, 40)
LOCAL:2 += 5
;레벨による전투能力値
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		LOCAL:1 = LOCAL:2 * 3/2
	CASE "명중"
		LOCAL:1 = LOCAL:2
	CASE "마법위력"
		LOCAL:1 = LOCAL:2 * 3/2
	CASE "마법효과"
		LOCAL:1 = LOCAL:2
ENDSELECT
;STATUSによる能力値　트리쉬(DMC)ありは트리쉬(DMC)함락で스테이터스によって性能が加算される
IF ARG:1 >= 0 && (NO:(ARG:1) == [[キャラ:트리쉬(DMC)]] || (LOCAL >=0 && 함락(LOCAL, ARG:1)))
	SELECTCASE GET_BATTLESTATUS(ARG)
		CASE "공격"
			LOCAL:1 +=  BASE:(ARG:1):힘*3/2 + BASE:(ARG:1):인내력 / 2
		CASE "명중"
			LOCAL:1 += BASE:(ARG:1):속도*3/2 + BASE:(ARG:1):운/2
		CASE "마법위력"
			LOCAL:1 += BASE:(ARG:1):마력*3/2 + BASE:(ARG:1):지혜 / 2
		CASE "마법효과"
			LOCAL:1 += BASE:(ARG:1):지혜 + BASE:(ARG:1):운/2 + BASE:(ARG:1):마력/2
	ENDSELECT
ENDIF
;검仕様に변경
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		TIMES LOCAL:1, 1.10
	CASE "명중"
		LOCAL:1 += 10
	CASE "마법위력"
		TIMES LOCAL:1, 0.90
	CASE "마법효과"
		TIMES LOCAL:1, 0.40
ENDSELECT
;최저でも40레벨검の性能は保証される
SELECTCASE GET_BATTLESTATUS(ARG)
	CASE "공격"
		RETURN MAX(107, LOCAL:1)
	CASE "명중"
		RETURN MAX(94, LOCAL:1)
	CASE "마법위력"
		RETURN MAX(85, LOCAL:1)
	CASE "마법효과"
		RETURN MAX(33, LOCAL:1)
ENDSELECT
