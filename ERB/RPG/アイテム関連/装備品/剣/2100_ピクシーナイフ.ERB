@장비추가스킬_2100,ARG,ARG:1 = -1
IF ARG:1 != -1 && ABL:(ARG:1):종족 == 36
	SELECTCASE ARG
		CASE 0
			IF EQUIP:(ARG:1):팔 == 4070
				RETURN 2400
			ELSEIF EQUIP:(ARG:1):머리 == 3201 && EQUIP:(ARG:1):몸통 == 3601
				RETURN 2400
			ELSEIF EQUIP:(ARG:1):머리 == 3202 && EQUIP:(ARG:1):몸통 == 3602 && EQUIP:(ARG:1):악세서리 == 5119 && EQUIP:(ARG:1):팔 == 4070
				RETURN 2001
			ELSEIF EQUIP:(ARG:1):머리 == 3201 && EQUIP:(ARG:1):몸통 == 3601 && EQUIP:(ARG:1):팔 == 4070
				RETURN 2001
			ELSE
				RETURN 2403
			ENDIF
	ENDSELECT
ENDIF
RETURN 0

