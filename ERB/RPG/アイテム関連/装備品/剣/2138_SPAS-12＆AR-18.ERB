@전투능력수정_2138,ARG,ARG:1 = -1
IF ARG:1 == -1
	SELECTCASE ARG
		CASE 0
			RETURN 24
		CASE 1
			RETURN 31
		CASE 4
			RETURN 20
		CASE 5
			RETURN 8
	ENDSELECT
ELSE
	SELECTCASE ARG
		CASE 0
			RETURN (MAXBASE:(ARG:1):LV)*3/2 + MAXBASE:(ARG:1):힘 * 3/ 2 + MAXBASE:(ARG:1):인내력 / 2
		CASE 1
			RETURN (MAXBASE:(ARG:1):LV) + MAXBASE:(ARG:1):속도 * 3/ 2 + MAXBASE:(ARG:1):운 / 2
		CASE 4
			RETURN (MAXBASE:(ARG:1):LV)*3/2 + MAXBASE:(ARG:1):마력 * 3/ 2 + MAXBASE:(ARG:1):지혜 / 2
		CASE 5
			RETURN ((MAXBASE:(ARG:1):LV) + MAXBASE:(ARG:1):지혜 + MAXBASE:(ARG:1):마력 / 2 + MAXBASE:(ARG:1):운 / 2)/2
	ENDSELECT
ENDIF
RETURN 0

