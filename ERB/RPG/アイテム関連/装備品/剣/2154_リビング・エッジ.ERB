@전투능력수정_2154,ARG,ARG:1 = -1
SIF ARG:1 < 0
	RETURN 0

LOCAL:0 = (MAXBASE:(ARG:1):LV) - 3
LOCAL:1 = (MAXBASE:(ARG:1):힘) - 3
LOCAL:2 = (MAXBASE:(ARG:1):지혜) - 3
LOCAL:3 = (MAXBASE:(ARG:1):마력) - 3
LOCAL:4 = (MAXBASE:(ARG:1):인내력) - 3
LOCAL:5 = (MAXBASE:(ARG:1):속도) - 3
LOCAL:6 = (MAXBASE:(ARG:1):운) - 3

SELECTCASE ARG
	
	CASE 0
		RETURN (LOCAL:0)*3/2 + LOCAL:1 * 3/ 2 + LOCAL:4 / 2
	CASE 1
		RETURN (LOCAL:0) + LOCAL:5 * 3/ 2 + LOCAL:6 / 2
	CASE 4
		RETURN (LOCAL:0)*3/2 + LOCAL:3 * 3/ 2 + LOCAL:2 / 2
	CASE 5
		RETURN (LOCAL:0 + LOCAL:2 + LOCAL:3 / 2 + LOCAL:6 / 2)/2
ENDSELECT

