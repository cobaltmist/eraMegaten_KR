	LOCALS = 포지션{LOCAL:9}
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):상태이상) == "DYING"
		CONTINUE
	PRINTFORM 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
