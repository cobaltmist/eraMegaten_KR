#DIM DYNAMIC L_FLAG_REQ
#DIM DYNAMIC L_FLAG_EVENT_DIGIT
#DIM DYNAMIC L_FLAG
#DIM DYNAMIC L_FLAG2
#DIM DYNAMIC L_FLAG3

;-----------------------------
;- 共通체크
;-----------------------------

;- デバッグ
IF FLAG:DEBUG
	;OK

;- 主人레벨20이상
ELSEIF BASE:MASTER:LV >= 20
	;OK

ELSE
	;NG
	RETURN 0
ENDIF

;-----------------------------
;- 処理開始
;-----------------------------

;- フラグをセット(이벤트플래그:3桁눈)
L_FLAG_REQ = FLAG:진IV진행도 /100

SELECTCASE L_FLAG_REQ
	;-----------------------------
	;- [第1이벤트　東京スカイタワー]
	;-----------------------------
	CASE 0
		;- CHK:이벤트플래그
		RESULTS = 스카이트리 이계화
		RETURN 1
	;-----------------------------
	;- [第2이벤트　신주쿠]
	;-----------------------------
	CASE 1
		;- CHK:이벤트플래그 신주쿠でオザワが倒されている
		IF 던전플래그:42:신주쿠플래그("오자와") > 0
			RESULTS = 아수라회의 의뢰
			RETURN 1
		ENDIF
	;-----------------------------
	;- [第3이벤트　]
	;-----------------------------
	CASE 2
	;- フラグをセット(이벤트플래그:2桁눈)
		L_FLAG_REQ = FLAG:진IV진행도 % 100
		L_FLAG_REQ = L_FLAG_REQ / 10

		IF L_FLAG_REQ == 1
			RESULTS = 아수라회에서 온 의뢰
			RETURN 1
		ELSEIF L_FLAG_REQ == 9
	;- フラグをセット(이벤트플래그:1桁눈)
		L_FLAG_REQ = FLAG:진IV진행도 % 10
			IF L_FLAG_REQ == 2
				RESULTS = 동쪽 미카도국의 의뢰
				RETURN 1
			ELSE
				RESULTS = 이케부쿠로에서의 악마 퇴치
				RETURN 1
			ENDIF
		ENDIF
	;-----------------------------
	;- [第4이벤트　]
	;-----------------------------
	CASE 3
;- フラグをセット(이벤트플래그:2桁눈)
		L_FLAG_REQ = FLAG:진IV진행도 % 100
		L_FLAG_REQ = L_FLAG_REQ / 10
		IF L_FLAG_REQ == 1
			L_FLAG = 이벤트플래그:60:0 % 10
			IF L_FLAG == 2
				RESULTS = 아수라회에서 온 의뢰 2
				RETURN 1
			ENDIF
		ELSEIF L_FLAG_REQ == 9
;- フラグをセット(이벤트플래그:1桁눈)
			L_FLAG = 이벤트플래그:60:0 % 10
			L_FLAG2 = 이벤트플래그:60:0 / 10
			L_FLAG2 = L_FLAG2 % 10
			L_FLAG3 = 이벤트플래그:60:0 / 100

			IF L_FLAG + L_FLAG2 + L_FLAG3 >= 3
				RESULTS = 동쪽 미카도국의 의뢰 2
				RETURN 1
			ENDIF
		ENDIF
	;-----------------------------
	;- [第5이벤트　]
	;-----------------------------
	CASE 4
;- フラグをセット(이벤트플래그:2桁눈)
		RESULTS = 거꾸로 힐즈
		RETURN 1
	;-----------------------------
	;- [第6이벤트　]
	;-----------------------------
	CASE 5
;- フラグをセット(이벤트플래그:2桁눈)
		IF 이벤트플래그:60:1 >= 100
			L_FLAG_REQ = FLAG:진IV진행도 % 100
			L_FLAG_REQ = L_FLAG_REQ / 10
			IF L_FLAG_REQ == 1
				RESULTS = 유리코 암살 계획
				RETURN 1
			ELSEIF L_FLAG_REQ == 9
	;- フラグをセット(이벤트플래그:1桁눈)
				L_FLAG = 0
				IF 이벤트플래그:60:1 == 101
					L_FLAG2 = [[キャラ:요나탄]]
				ELSEIF 이벤트플래그:60:1 == 102
					L_FLAG2 = [[キャラ:이자보]]
				ELSEIF 이벤트플래그:60:1 == 103
					L_FLAG2 = [[キャラ:월터]]
				ELSE
					L_FLAG2 = 0
				ENDIF
				FOR LOCAL, 1, 7
					;空き포지션は勘定外
					SIF POS(LOCAL) < 0
						CONTINUE
					;主人は勘定外
					SIF POS(LOCAL) == MASTER
						CONTINUE
					;인간以外は勘定外
					SIF ABL:POS(LOCAL):종족
						CONTINUE
					SIF NO:POS(LOCAL) == L_FLAG2
						L_FLAG = 1
				NEXT
				IF L_FLAG == 1
					RESULTS = 유리코 또 다시
					RETURN 1
				ELSE
					RETURN 0
				ENDIF
			ENDIF
		ELSE
			RETURN 0
		ENDIF
	;-----------------------------
	;- [第7이벤트　]
	;-----------------------------
	CASE 6
;- フラグをセット(이벤트플래그:2桁눈)
		IF 이벤트플래그:60:1 >= 100
			L_FLAG_REQ = FLAG:진IV진행도 % 100
			L_FLAG_REQ = L_FLAG_REQ / 10
			IF L_FLAG_REQ == 1
				RESULTS = 타야마의 비밀
				RETURN 1
			ELSEIF L_FLAG_REQ == 9
	;- フラグをセット(이벤트플래그:1桁눈)
				L_FLAG = 0
				IF 이벤트플래그:60:1 == 101
					L_FLAG2 = [[キャラ:요나탄]]
				ELSEIF 이벤트플래그:60:1 == 102
					L_FLAG2 = [[キャラ:이자보]]
				ELSEIF 이벤트플래그:60:1 == 103
					L_FLAG2 = [[キャラ:월터]]
				ELSE
					L_FLAG2 = 0
				ENDIF
				FOR LOCAL, 1, 7
					;空き포지션は勘定外
					SIF POS(LOCAL) < 0
						CONTINUE
					;主人は勘定外
					SIF POS(LOCAL) == MASTER
						CONTINUE
					;인간以外は勘定外
					SIF ABL:POS(LOCAL):종족
						CONTINUE
					SIF NO:POS(LOCAL) == L_FLAG2
						L_FLAG = 1
				NEXT
				IF L_FLAG == 1
					RESULTS = 이치가야로
					RETURN 1
				ELSE
					RETURN 0
				ENDIF
			ENDIF
		ELSE
			RETURN 0
		ENDIF

	;-----------------------------
	;- 종료
	;-----------------------------
	;- 作成中
	CASEELSE
		RESULTS = 개발 대기
		RETURN 1

ENDSELECT

;念の為
RETURN 0

