LOCAL = 1 
LOCAL:1 = DAY
WHILE LOCAL
	IF LOCAL:1 >= 100
		LOCAL:1 -= 100
	ELSEIF LOCAL:1 >= 10
		LOCAL:1 -= 10
	ELSE
		LOCAL = 0
	ENDIF
WEND
IF LOCAL:1 == 3 || LOCAL:1 == 6 || LOCAL:1 == 9
	SIF GETBIT(의뢰플래그:40:0, 51)
		RETURN 0
	RETURN 1
ELSE
	SIF GETBIT(의뢰플래그:40:0, 51)
		CLEARBIT 의뢰플래그:40:0, 51
	RETURN 0
ENDIF

