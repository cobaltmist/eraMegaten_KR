		ELSEIF (FLAG:경과턴수 % 3) == 0 && FLAG:경과턴수 < 30
			FLAG:데빌서바２가는얼굴영상진행도 += 1000
			LOCAL = FLAG:경과턴수 / 3
			CALL REQUEST_30_DELIVERY_오토메(LOCAL)
		ENDIF
	;-----------------------------
	;- 53〜56:전투중(미자르戦)
	;-----------------------------
	CASE 53 TO 56
		L_CNT = 0
		L_I = 0
		
		;配置の空きを探す
		FOR LOCAL,7,17
			SIF POS(LOCAL) < 0
				L_CNT++
		NEXT
		;- 赤
		SETCOLOR 0xFF0000
		
		;미자르本体の処理
		IF FINDCHARA_ENEMY([[キャラ:미자르]]) == 1 || FINDCHARA_ENEMY([[キャラ:미자르]]) == 2
			L_POSITION = RESULT:1
			LOCAL = 현HP비율(L_POSITION)
			;本体HPの減り具合によって分岐させる
			IF LOCAL < 30 && L_FLAG_EVENT_DIGIT == 55
				ABL:L_POSITION:스킬4 = [[스킬:헬스트라이크]]
			ELSEIF LOCAL < 60 && L_FLAG_EVENT_DIGIT == 54
				ABL:L_POSITION:스킬3 = [[스킬:관통]]
			ELSEIF LOCAL >= 80 || L_FLAG_EVENT_DIGIT != 53
				GOTO MIZA_BUNTAI
			ENDIF
			
			;フラグ進行
			FLAG:데빌서바２진행도++
			
			CALL MESSAGE_B(3,,"미자르가 분열했다！",)
			
			;分裂数加算
			L_I += 2
			
			;미자르강화
			BASE:L_POSITION:LV += 1
			BASE:L_POSITION:힘 += 2
			BASE:L_POSITION:속도 += 1
			BASE:L_POSITION:운 += 2
			
			CALL SYNC_STATUS,L_POSITION
		ENDIF
		$MIZA_BUNTAI
		;分体の分裂処理。空きがなければ分裂しない
		IF FINDCHARA_ENEMY([[キャラ:미자르분체]]) == 1 || FINDCHARA_ENEMY([[キャラ:미자르분체]]) == 2
			FOR LOCAL,7,17
				L_POSITION = POS(LOCAL)
				SIF L_POSITION < 0 || ( NO:L_POSITION != [[キャラ:미자르분체]] )
					CONTINUE
				
				IF 현HP비율(L_POSITION) < 50 && L_I < L_CNT
					CALL MESSAGE_B(3,,"미자르 분체가 분열했다！",)
					CALL HEALTH_CHARA,(CHARANUM-1)
					
					;分裂数加算
					L_I ++
				ENDIF
			NEXT
		ENDIF
		;実際に分体増やす処理
		FOR LOCAL ,7,17
			SIF L_I == 0
				BREAK
			SIF POS(LOCAL) > 0
				CONTINUE
			
			CALL SET_ENEMY,LOCAL,[[キャラ:미자르분체]],REQUEST_30_BASE_LV(6),0
			
			LOCAL = 7
			L_I --
		NEXT
		RESETCOLOR
ENDSELECT