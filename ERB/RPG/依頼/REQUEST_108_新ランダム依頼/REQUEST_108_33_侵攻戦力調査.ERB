				CALL SYNC_STATUS,(CHARANUM-1)
				CALL HEALTH_CHARA,(CHARANUM-1)
			NEXT
		ENDIF
	ELSEIF BATTLE_CNT <= 10
		IF RAND:2 == 0
			FOR  LOCAL:2, 7, 17
				CALL SET_ENEMY, LOCAL:2 ,[[キャラ:미노타우로스]],35+RAND:5,1,0
				CALL SYNC_STATUS,(CHARANUM-1)
				CALL HEALTH_CHARA,(CHARANUM-1)
