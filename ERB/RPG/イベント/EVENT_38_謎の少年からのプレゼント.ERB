@PLAYABLE_EVENT_38
#DIM LCOUNT
IF 이벤트플래그:38:0 == 0
;	SIF !(FLAG:DEBUG)
;		RETURN 0
	IF FLAG:DEBUG
		;デバッグ
		RESULTS = 금발 소년의 프레젠트
		RETURN 1
	ELSEIF FLAG:조직공헌도 >= 10000 && DAY == 1 && TIME < 1
		;何もいらない選択後、マッカとお金を初손で即納金につぎ込んだ場合のみ特に가능な隠しルート
		;二週눈？知らんね
		RESULTS = 금발 소년의 프레젠트
		RETURN 1
	ELSEIF FLAG:조직공헌도 >= 100000 && (DAY <= 10 || DAY > 50 || FLAG:5 == 9)
		;一定の名声があり、１０日以内か５０日より後またはクリア済みである
		RESULTS = 금발 소년의 프레젠트
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 이벤트플래그:38:0 == 1 && DAY <= 50
	;조건１、５０日以内かつ아마라심계(とカグツチ塔?)クリア
	SIF DAY > 50 ;|| 던전フラグ:68:1 == 1 || 던전フラグ:34:8 > 0
		RETURN 0

	;조건２、마사카도ゥス以外のマガタマ制覇
	FOR LOCAL,0,24,1
		SIF ITEM:(8200+LOCAL) < 1
			RETURN 0
	NEXT

	;조건３、인수라がPTにいて함락済み
	FOR LCOUNT, 0, CHARANUM
		IF NO:LCOUNT == 4298 || NO:LCOUNT == 4299
			IF TALENT:LCOUNT:3 == 1 || TALENT:LCOUNT:4 == 1 || TALENT:LCOUNT:5 == 1 || TALENT:LCOUNT:6 == 1 || TALENT:LCOUNT:7 == 1 || TALENT:LCOUNT:8 == 1
				BREAK
			ELSE
				RETURN 0
			ENDIF
		ENDIF
	NEXT
	IF LCOUNT == CHARANUM
		RETURN 0
	ENDIF

	RETURN 0

	;突破した場合、真３出現？
	;RESULTS = 大いなる闇
	RETURN 1
ENDIF

