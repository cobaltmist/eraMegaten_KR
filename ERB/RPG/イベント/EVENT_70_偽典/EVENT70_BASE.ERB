;内容
;====================
@SHOPCOM_EVENT_70
IF 이벤트フラグ:70:0 == 0
	CALL EVENT_70_1
	RETURN 0

ELSEIF 이벤트フラグ:70:0 == 3
	CALL EVENT_70_2
	RETURN 0

ELSEIF 이벤트フラグ:70:0 == 4
	CALL EVENT_70_3
	RETURN 0

ELSEIF 이벤트フラグ:70:0 == 5
	CALL EVENT_70_4
	RETURN 0

ELSEIF 이벤트フラグ:70:0 == 6
	CALL EVENT_70_5
	RETURN 0

ELSEIF 이벤트フラグ:70:0 == 8
	CALL EVENT_70_6
	RETURN 0

ELSEIF 이벤트フラグ:70:0 == 9
	CALL EVENT_70_7
	RETURN 0
ENDIF