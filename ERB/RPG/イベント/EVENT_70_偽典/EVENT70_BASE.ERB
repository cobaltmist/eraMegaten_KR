;=================================================
;   sub EVENT_70_FLAG_RESET
;=================================================
;   의뢰:フラグ리셋
;-------------------------------------------------
;   MENU画面で「依頼出現」が出る様、
;   依頼登録フラグをリセットする
;-------------------------------------------------
@EVENT_70_FLAG_RESET

;- フラグがONの場合、クリアしてOFFに변경
SIF GETBIT(FLAG:이벤트출현2,99 - 64)
	CLEARBIT FLAG:이벤트출현2, 99 - 64

;====================
;조건
;====================


;=======================================================================
;공략 조건
;=======================================================================
@PLAYABLE_EVENT_70
IF 이벤트플래그:70:0 == 0
	SIF BASE:MASTER:LV < 20 || 던전플래그:34:8 == 0
		RETURN 0
	RESULTS = 여신의 연인
	RETURN 1

ELSEIF 이벤트플래그:70:0 == 3
	RESULTS = 천사의 발버둥
	RETURN 1

ELSEIF 이벤트플래그:70:0 == 4 && BASE:MASTER:LV > 49
	RESULTS = 성왕전설
	RETURN 1

ELSEIF 이벤트플래그:70:0 == 5
	RESULTS = 롯폰기 공략작전
	RETURN 1

ELSEIF 이벤트플래그:70:0 == 6 && 의뢰플래그:19:0 != 0
	RESULTS = 황천에서 온 사자
	RETURN 1

ELSEIF 이벤트플래그:70:0 == 8
	RESULTS = 잠입・바엘 성
	RETURN 1

ELSEIF 이벤트플래그:70:0 == 9
	RESULTS = 이슈타르 부활
	RETURN 1
ENDIF
RETURN 0

;====================
;内容
;====================
@SHOPCOM_EVENT_70
IF 이벤트플래그:70:0 == 0
	CALL EVENT_70_1
	RETURN 0

ELSEIF 이벤트플래그:70:0 == 3
	CALL EVENT_70_2
	RETURN 0

ELSEIF 이벤트플래그:70:0 == 4
	CALL EVENT_70_3
	RETURN 0

ELSEIF 이벤트플래그:70:0 == 5
	CALL EVENT_70_4
	RETURN 0

ELSEIF 이벤트플래그:70:0 == 6
	CALL EVENT_70_5
	RETURN 0

ELSEIF 이벤트플래그:70:0 == 8
	CALL EVENT_70_6
	RETURN 0

ELSEIF 이벤트플래그:70:0 == 9
	CALL EVENT_70_7
	RETURN 0
ENDIF