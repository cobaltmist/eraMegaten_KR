;
;この이벤트を終える事でデビオクの이용が가능になる
;
;
;==========================================================
;デビオク이용등록のお知らせ
;--------------------------------------------------------
;이벤트フラグ:40:0 = 1.デビオク이용可　2.상품入荷のお知らせ이벤트
;--------------------------------------------------------
;====================
;조건
;FLAG:組織貢献度 + FLAG:名声 * 100　が２００万이상

;====================
@PLAYABLE_EVENT_40
IF 이벤트フラグ:40:0 == 2
	RESULTS = 상품 입고 안내
	RETURN 1
ENDIF
	
SIF 이벤트フラグ:40:0 == 1
	RETURN 0
	
SIF FLAG:組織貢献度 + FLAG:名声 * 100  < 2000000
	RETURN 0
	
RESULTS = 데빌 옥션 이용 등록 안내
RETURN 1


;====================
;内容
;====================
@SHOPCOM_EVENT_40
#LOCALSIZE 1
#LOCALSSIZE 1
;デビオク이용등록のお知らせ
IF 이벤트フラグ:40:0 == 0
	CALL MESSAGE_WINDOW, "", "＞메일이 도착했다", , , , , 4
	CALL MESSAGE_WINDOW, "", "＞『이번에 팬텀 소사이어티 님의 요청에 따라、/　　귀하의 데빌 옥션 회원 등록을 대행했습니다』", , , , , 4
	CALL MESSAGE_WINDOW, "", "＞『이용 방법에 관해서는 헬프 쪽을 참조해주시면 감사하겠습니다』", , , , , 4
	CALL MESSAGE_WINDOW, "", "＞『그럼 멋진 옥션 라이프를 즐기시길』", , , , , 4
	CALL MESSAGE_WINDOW, "", "＞・・・", , , , , 4
	CALL MESSAGE_WINDOW, "", "＞『데빌 옥션』의 이용이 가능해졌습니다", , , , , 4
	이벤트フラグ:40:0 = 1

;상품入荷のお知らせ
ELSEIF 이벤트フラグ:40:0 == 2
	CALL MESSAGE_WINDOW, "", "＞데빌 옥션에서 새 상품 입하의 메일이 왔다", , , , , 4
	이벤트フラグ:40:0 = 1

ENDIF

































