LOCAL:4 = -999
FOR LOCAL, 0, 6
	IF LOCAL:4 < COM:LOCAL
		LOCAL:4 = COM:LOCAL
		LOCAL:5 = LOCAL
	ENDIF
NEXT
SIF LOCAL:4 == 999
	RETURNF -3
SIF LOCAL:4 < 0
	RETURNF -2
SIF LOCAL:4 == 0
	RETURNF -1
SIF LOCAL:4 > 100
	RETURNF LOCAL:5 + 1
RETURNF 0


