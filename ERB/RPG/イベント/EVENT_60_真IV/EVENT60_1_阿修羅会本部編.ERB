;1　カガを引き渡している
	L_FLAG = FLAG:진IV진행도 % 10
	IF L_FLAG == 1
		L_FLAG = 이벤트플래그:60:0 / 10
		L_FLAG = L_FLAG % 10
		IF L_FLAG < 2
			PRINTFORMW 『타야마씨에게 용무가 있으십니까？　아니면‥‥？』
			CALL INPUT_YN("타야마를 만나고 싶다", "그 가이아교의 여자는 어떻게 됏나？")
			IF RESULT == 0
				L_FLAG = 0
			ELSE
				L_FLAG = 1
			ENDIF
		ELSE
			L_FLAG = 0
		ENDIF
	ENDIF
	IF L_FLAG == 0
		CALL EVENT_60_VISIT_TAYAMA
	ELSE
		CALL EVENT_60_VISIT_KAGA
	ENDIF
	
