;内容
;====================
@SHOPCOM_EVENT_60
#DIM DYNAMIC L_FLAG

	L_FLAG = FLAG:真IV進行度 / 10
	IF L_FLAG == 31
;아수라会
		CALL EVENT_60_1
	ELSEIF L_FLAG == 39
;サムライ
		CALL EVENT_60_2
	ELSEIF L_FLAG == 51
;아수라会 ヒルズ後
		CALL EVENT_60_3
	ELSEIF L_FLAG == 59
;サムライ
		CALL EVENT_60_4
	ELSEIF L_FLAG == 71
;아수라会 ヒルズ後
		CALL EVENT_60_5
	ELSEIF L_FLAG == 79
;サムライ
		CALL EVENT_60_6
	ENDIF
	RETURN 0

