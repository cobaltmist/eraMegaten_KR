;0:開始前


;====================
;조건
;====================
@PLAYABLE_EVENT_60
#DIM DYNAMIC L_FLAG
L_FLAG = FLAG:真IV進行度 / 100
IF L_FLAG == 3
	L_FLAG = FLAG:真IV進行度 / 10
	IF L_FLAG == 31
;아수라会
		RESULTS = 아수라회 본부에서
		RETURN 1
	ELSEIF L_FLAG == 39
;サムライ
		RESULTS = 동쪽의 미카도국
		RETURN 1
	ENDIF
ELSEIF L_FLAG == 5
		L_FLAG = FLAG:真IV進行度 / 10
		IF L_FLAG == 51
;아수라会 ヒルズ後
			RESULTS = 롯폰기 힐즈(아수라회)
			RETURN 1
		ELSEIF L_FLAG == 59 && 이벤트플래그:60:1 == 0
;サムライ
			RESULTS = 동쪽의 미카도국：신주쿠마을
			RETURN 1
		ENDIF
ELSEIF L_FLAG == 7
		L_FLAG = FLAG:真IV進行度 % 10
		IF L_FLAG == 1
;아수라会 ヒルズ後
			RESULTS = 게이트 폐쇄
			RETURN 1
		ELSEIF L_FLAG == 9
;サムライ
			RESULTS = 동쪽의 미카도국：결정
			RETURN 1
		ENDIF
ENDIF

RETURN 0

