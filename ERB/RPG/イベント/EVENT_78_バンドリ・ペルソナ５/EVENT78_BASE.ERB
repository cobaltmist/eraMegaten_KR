;=================================================
;   sub EVENT_78_FLAG_RESET
;=================================================
;   의뢰:フラグ리셋
;-------------------------------------------------
;   MENU화면で「의뢰출현」が出る様、
;   의뢰등록フラグを리셋する
;-------------------------------------------------
@EVENT_78_FLAG_RESET

;- フラグがONの場合、クリアしてOFFに변경
SIF GETBIT(FLAG:이벤트출현2,99 - 78)
	CLEARBIT FLAG:이벤트출현2, 99 - 78

;====================
;조건
;====================


;=======================================================================
;공략 조건
;=======================================================================
@PLAYABLE_EVENT_78
IF BASE:MASTER:LV > 8 && 이벤트フラグ:78:0 == 0
	RESULTS = [BanG_Dream!] Phantom Thieves of Twilight
	RETURN 1

;적대적

ELSEIF BASE:MASTER:LV > 13 && 이벤트フラグ:78:0 == 1
	RESULTS = [BanG_Dream!] No More "Same as Always"
	RETURN 1

ELSEIF BASE:MASTER:LV > 22 && 이벤트フラグ:78:0 == 3
	RESULTS = [BanG_Dream!] Tea Time
	RETURN 1
	
ELSEIF BASE:MASTER:LV > 25 && 이벤트フラグ:78:0 == 4
	RESULTS = [BanG_Dream!] Tied to the Skies
	RETURN 1
	
ELSEIF BASE:MASTER:LV > 30 && 이벤트フラグ:78:0 == 5
	RESULTS = [BanG_Dream!] As Evening Clears
	RETURN 1
	

;우호적	
	
ELSEIF 이벤트フラグ:78:0 == 6
	RESULTS = [BanG_Dream!] The Happy Phantom's Request
	RETURN 1
	
ELSEIF 이벤트フラグ:78:0 == 7
	RESULTS = [BanG_Dream!] The Tsurumaki Residence Heist! 
	RETURN 1
	
ELSEIF BASE:MASTER:LV > 20 && 이벤트フラグ:78:0 == 8
	RESULTS = [BanG_Dream!] Grand Scarlet Stage
	RETURN 1
	
ELSEIF BASE:MASTER:LV > 30 && 이벤트フラグ:78:0 == 9 && CFLAG:GETCHARA(7900):전투참가불가능 != 1
	RESULTS = [BanG_Dream!] It's showtime!
	RETURN 1
	
ENDIF
RETURN 0

;====================
;内容
;====================
@SHOPCOM_EVENT_78
IF 이벤트フラグ:78:0 == 0
	CALL EVENT_78_1
	RETURN 0

ELSEIF 이벤트フラグ:78:0 == 1
	CALL EVENT_78_2
	RETURN 0

ELSEIF 이벤트フラグ:78:0 == 3
	CALL EVENT_78_3
	RETURN 0
	
ELSEIF 이벤트フラグ:78:0 == 4
	CALL EVENT_78_4
	RETURN 0
	
ELSEIF 이벤트フラグ:78:0 == 5
	CALL EVENT_78_5
	RETURN 0
	
ELSEIF 이벤트フラグ:78:0 == 6
	CALL EVENT_78_6
	RETURN 0
	
ELSEIF 이벤트フラグ:78:0 == 7
	CALL EVENT_78_7
	RETURN 0
	
ELSEIF 이벤트フラグ:78:0 == 8
	CALL EVENT_78_8
	RETURN 0
	
ELSEIF 이벤트フラグ:78:0 == 9
	CALL EVENT_78_9
	RETURN 0
ENDIF
