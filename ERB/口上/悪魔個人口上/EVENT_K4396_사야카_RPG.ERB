		ENDIF
	CASE 2
		IF RAND:3 == 0
			LOCALS = 보고 있으라고！
		ELSEIF !RAND:2
			LOCALS = 해주겠다 이거야！
		ELSE
			LOCALS = 이걸로 어떠냐！？
		ENDIF
	;공격　ARGが공격をする仲魔、ARG:1が적、ARG:2が데미지量
	CASE 11
		CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相손が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
			IF RAND:2
				LOCALS = 봤느냐, 사야카쨩의 실력을！여유♪여유♪
			ELSE
				LOCALS = 자！ 다음 상대는 누구야？
			ENDIF
		;弱点をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):방어플래그
				LOCALS = 크으우！ 내가 너무 물렀어！
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG:1, ARG:2) > 50
			IF RAND:2
				LOCALS = 잡았다！！
			ELSE
				LOCALS = 끝이다！！
			ENDIF
		ELSEIF 데미지비율(ARG:1, ARG:2) > 20
			IF RAND:2
				LOCALS = 가보실까！
			ELSE
				LOCALS = 맡겨줘！
			ENDIF
