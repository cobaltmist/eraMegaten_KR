SELECTCASE TFLAG:전투이벤트
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:3 == 0
			LOCALS = 予測通りですね。さあ、追撃を！
		ELSEIF !RAND:2
			LOCALS = 凌ぎ切ったと思いましたか？　なら、その惰性は당신を殺すことになる
		ELSE
			LOCALS = 計算通りです
		ENDIF
	;COOP참가
	CASE 2
		;主人がCOOP発動
		IF FLAG:행동순1 != -1 && FLAG:행동순1 == MASTER
			LOCALS = ほう。異세계のメイガスの손並み、中々のものですね
		;それ以外
		ELSE
			IF RAND:3 == 0
				LOCALS = 立て直すための時など、作らせはしない
			ELSEIF !RAND:2
				LOCALS = 計算できない전개などありません
			ELSE
				LOCALS = 最適戦略を構築…　行きます！
			ENDIF
		ENDIF
	;被소환時
	CASE 3
		LOCALS = 高速사고전개。전투、開始します
	;공격　ARGが공격을する仲魔、ARG:1が적、ARG:2が데미지量
	CASE 11
		CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
			IF RAND:2
				LOCALS = この결과は必然です
			ELSE
				LOCALS = 대상を撃破、連続전투への支障は皆無
			ENDIF
		;약점をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):방어플래그
				LOCALS = 耐え凌ぎますか。あまり煩わせないで欲しいものですが
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
;		;大데미지
;		ELSEIF 데미지비율(ARG:1, ARG:2) > 50
;			LOCALS = 
;		ELSEIF 데미지비율(ARG:1, ARG:2) > 25
;			LOCALS = 
;		ELSEIF 데미지비율(ARG:1, ARG:2) <= 0
;			LOCALS = 
		ENDIF
	;피데미지
	;ARGが공격을受ける仲魔、ARG:1が적、ARG:2が데미지量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			IF RAND:2
				LOCALS = （…落第だ、私は）
			ELSE
				LOCALS = うあああああっ！？　しまっ―――
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG, ARG:2) > 50 || 현HP비율(ARG) < 25
			IF RAND:2
				LOCALS = （生き延びた이상、まだ가능性は残っている…！）
			ELSE
				LOCALS = この程度、致命傷にはならない…！　전투、再開します！
			ENDIF
		;무효
		ELSEIF ARG:2 == 0
			IF RAND:2
				LOCALS = 당신では突破できない！
			ELSE
				LOCALS = 無駄な저항を…
			ENDIF
			
		;흡수
		ELSEIF ARG:2 < 0
			LOCALS = 당신の行動は、すべて事前に把握していますよ
		ENDIF
	;반사された
	CASE 15
			LOCALS = っ！？　데이터を수정しなければ…
	;반사した
	CASE 16
			LOCALS = それだけの戦術幅では、予測できない筈がない
	;회피された
	CASE 17
			LOCALS = うっ、間違っ…！
	;회피した
	CASE 18
			LOCALS = 亀ですか、당신は
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_BL(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)

