@BATTLE_EVENT_K4525, ARG, ARG:1, ARG:2
SIF ARG < 0 && NO:ARG != 4525
	RETURN 0
LOCAL:1 = 1
LOCALS = EMPTY
SELECTCASE TFLAG:전투이벤트
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:4 == 0
			LOCALS = 생각하지 않고、느낀다！　라는 정도！
		ELSEIF RAND:3 == 0
			LOCALS = 갑니다ー！　모두！
		ELSEIF RAND:2 == 0
			LOCALS = 끝내버리겠어！
		ELSE
			LOCALS = 갑니다ー！
		ENDIF
	CASE 2
		LOCALS = 호기！　저도 갑니다ー！
	;공격　ARGが공격을する仲魔、ARG:1が적、ARG:2が데미지量
	CASE 11
		;潜在反撃対策
		IF CFLAG:ARG:입력행동 == -1
			RETURN
		ENDIF
		CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
			LOCALS = 훗、좋은 기색～
		;약점をついた。つまりCOOP発動
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):방어플래그
				LOCALS = 그런…싫은 느낌…
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG:1, ARG:2) > 50
			LOCALS = 흥、어때！
		ELSEIF 데미지비율(ARG:1, ARG:2) > 25
			LOCALS = 계속해서、갑니다♪
		ELSEIF 데미지비율(ARG:1, ARG:2) <= 0
			LOCALS = 못해먹겠어 이 느낌…
		ENDIF
	;피데미지
	;ARGが공격을受ける仲魔、ARG:1が적、ARG:2が데미지量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			IF RAND:2
				LOCALS = 흙으로 돌아는 것…
			ELSE
				LOCALS = 소ー리ー아…미안…모두
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG, ARG:2) > 50 || 현HP비율(ARG) < 25
			LOCALS = 주、죽어버릴거야
		;무효
		ELSEIF ARG:2 == 0
			IF RAND:2
				LOCALS = 소용없는데、바보처럼♪
			ELSE
				LOCALS = 무다무다무닷♪　이라고！
			ENDIF
		;흡수
		ELSEIF ARG:2 < 0
			LOCALS = 감사♪　소스 님♪
		ENDIF
	CASE 15
		LOCALS = 아야ー！？　그런…
	CASE 16
		LOCALS = ホィサムロ！　일부러 고마워ー♪
	CASE 17
		LOCALS = 켁！　진짜 화났다！
	CASE 18
		LOCALS = 너의 공격은 간파했다…！　라는 정도♪
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_B(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)

