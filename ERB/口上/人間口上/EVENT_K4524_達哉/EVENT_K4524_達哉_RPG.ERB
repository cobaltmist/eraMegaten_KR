@BATTLE_MESSAGE_K4524, ARG,ARG:1 = 0
LOCAL:1 = 1
LOCAL = CFLAG:ARG:입력행동
LOCALS = EMPTY
;타입취득
CALLFORM SKILL_EFECT_{LOCAL}
IF LOCAL == 0
	IF RAND:2 == 0
		LOCALS = せいっ！
	ELSE
		LOCALS = おそいっ！
	ENDIF
ELSEIF LOCAL == [[스킬:ＧＵＮ]]
	LOCALS = あたれっ
ELSEIF LOCAL == [[스킬:노바사이저]]
	IF RAND:2
		LOCALS = 노바사이저っ！！
	ELSE
		LOCALS = もう終わりだ
	ENDIF
;공격
ELSEIF RESULT == 1 && RAND:3 == 0
	;潜在反撃対策
	IF CFLAG:ARG:입력행동 == -1
		RETURN
	ENDIF
	CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
	SELECTCASE RESULT
		;검격・비구・타격・전술
		CASE 0 ,1 ,2 ,3
			IF RAND:2
				LOCALS = そこをどけ！
			ELSE
				LOCALS = フンッ！
			ENDIF
		;화염
		CASE 4
			IF RAND:2
				LOCALS = 燃え尽きろっ！
			ELSE
				LOCALS = もらったぁ！
			ENDIF
		CASEELSE
			IF RAND:2
				LOCALS = 来いっ
			ELSE
				LOCALS = 使わせてもらう
			ENDIF
	ENDSELECT
;회복
ELSEIF RESULT == 2 && RAND:3 == 0
	IF CFLAG:ARG:타겟 > 6
		LOCALS = 守ってみせる…！
	ELSE
		IF RAND:2
			LOCALS = やらせるかっ
		ELSE
			LOCALS = 눈を閉じてな
		ENDIF
	ENDIF
;상태변화
;ELSEIF RESULT == 3
;特殊
;ELSEIF RESULT == 4
;상태회복
;ELSEIF RESULT == 5
ELSE
	IF RAND:3 == 0
		LOCALS = これで終わりだ！
	ELSEIF RAND:2
		LOCALS = 페르소나！
	ELSE
		LOCALS = 来いっ！
	ENDIF
ENDIF
SIF LOCALS != "EMPTY"
	CALL MESSAGE_BL(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)

@BATTLE_EVENT_K4524, ARG, ARG:1, ARG:2
SIF ARG < 0 && NO:ARG != 4524
	RETURN 0
LOCAL:1 = 1
LOCALS = EMPTY
SELECTCASE TFLAG:전투이벤트
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:3 == 0
			LOCALS = 俺に続け！
		ELSEIF RAND:2 == 0
			LOCALS = 今だ…！
		ELSE
			LOCALS = 行くぞ！
		ENDIF
	CASE 2
	;공격　ARGが공격을する仲魔、ARG:1が적、ARG:2が데미지量
	CASE 11
		;潜在反撃対策
		IF CFLAG:ARG:입력행동 == -1
			RETURN
		ENDIF
		CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
				IF RAND:2
					LOCALS = 退いてくれれば済んだものを…
				ELSE
					LOCALS = 詰めが、甘かったな…
				ENDIF
		;약점をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):방어플래그
				LOCALS = やるな
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG:1, ARG:2) > 50
			LOCALS = 差がありすぎるんだ…悪く思うな…
		ELSEIF 데미지비율(ARG:1, ARG:2) > 25
			IF RAND:2
				LOCALS = 相手が悪かったな
			ELSE
				LOCALS = 喧嘩を売るなら相手をよく見て売るんだな
			ENDIF
		ELSEIF 데미지비율(ARG:1, ARG:2) <= 0
			LOCALS = 命拾いしたな
		ENDIF
	;피데미지
	;ARGが공격을受ける仲魔、ARG:1が적、ARG:2が데미지量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			IF RAND:2
				LOCALS = 俺の炎が…
			ELSE
				LOCALS = 済まない…みんな…
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG, ARG:2) > 50 || 현HP비율(ARG) < 25
			LOCALS = まだだ…まだ、燃え尽きちゃいない！
		ELSEIF 데미지비율(ARG, ARG:2) > 20
			IF RAND:2
				LOCALS = まだやれる！
			ELSE
				LOCALS = ぐぅっ
			ENDIF
		ELSEIF 데미지비율(ARG, ARG:2) > 0
		;무효
		ELSEIF ARG:2 == 0
			LOCALS = 邪魔をするな！
		;흡수
		ELSEIF ARG:2 < 0
			LOCALS = 甘いな…
		ENDIF
	CASE 15
		LOCALS = なにっ！？
	CASE 16
		LOCALS = 悪く思うな
	CASE 17
		LOCALS = 二度はない！
	CASE 18
		LOCALS = 遅いっ
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_BL(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)
