@BATTLE_EVENT_K4528, ARG, ARG:1, ARG:2
SIF ARG < 0 && NO:ARG != 4528
	RETURN 0
LOCAL:1 = 1
LOCALS = EMPTY
SELECTCASE TFLAG:전투이벤트
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:4 == 0
			LOCALS = 모두들!　와!
		ELSEIF RAND:3 == 0
			LOCALS = 좋아!　간닷!
		ELSEIF RAND:2 == 0
			LOCALS = 쵸메쵸메 타임！
		ELSE
			LOCALS = 렛츠 고!!
		ENDIF
	CASE 2
	;공격　ARGが공격을する仲魔、ARG:1が적、ARG:2が데미지量
	CASE 11
		;潜在反撃対策
		IF CFLAG:ARG:입력행동 == -1
			RETURN
		ENDIF
		CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
				IF RAND:2
					LOCALS = 쵸메쵸메 완료!!
				ELSE
					LOCALS = 죄송해요…
				ENDIF
		;약점をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):방어플래그
				LOCALS = 제법이네…
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG:1, ARG:2) > 50
			LOCALS = 방해하지 마
		ELSEIF 데미지비율(ARG:1, ARG:2) > 25
			LOCALS = 뭐、이런 걸까나?
		ELSEIF 데미지비율(ARG:1, ARG:2) <= 0
			LOCALS = 아챠…곤란하게 됐네…
		ENDIF
	;피데미지
	;ARGが공격을受ける仲魔、ARG:1が적、ARG:2が데미지量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			LOCALS = 아아…　달이…
		;大데미지
		ELSEIF 데미지비율(ARG, ARG:2) > 50 || 현HP비율(ARG) < 25
			IF RAND:2
				LOCALS = 안돼…이런 곳에서…
			ELSE
				LOCALS = 모두를 위해서라도 이런 곳에서…!
			ENDIF
		;무효
		ELSEIF ARG:2 == 0
			LOCALS = 소용없어요
		;흡수
		ELSEIF ARG:2 < 0
			LOCALS = 흡수ー♪
		ENDIF
	CASE 15
		LOCALS = 어라、실패해버렸다
	CASE 16
		LOCALS = 언니한테 심한 짓을 하려니까
	CASE 17
		LOCALS = 아아앗!
	CASE 18
		LOCALS = 소・용・없・어
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_BL(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)
	
