@BATTLE_MESSAGE_K4538, ARG,ARG:1 = 0
LOCAL:1 = 1
LOCAL = CFLAG:ARG:입력행동
LOCALS = EMPTY
;타입取得
CALLFORM SKILL_EFECT_{LOCAL}
IF LOCAL == 0
	IF RAND:3 == 0
		LOCALS = 움직이지 마라!
	ELSEIF !RAND:2
		LOCALS = 체포하겠다!
	ELSE
		LOCALS = 하앗!
	ENDIF
ELSEIF LOCAL == [[스킬:ＧＵＮ]]
	IF RAND:2
		LOCALS = 쏘겠다!
	ELSE
		LOCALS = 손 들어라!
	ENDIF
;공격
ELSEIF RESULT == 1 && RAND:3 == 0
	;潜在반격対策
	IF CFLAG:ARG:입력행동 == -1
		RETURN
	ENDIF
	CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
	SELECTCASE RESULT
		;검격・타격・전술
		CASE 0, 2, 3
			IF RAND:2
				LOCALS = 얌전하게 굴어라!
			ELSE
				LOCALS = 붙잡아라!
			ENDIF
		;비구
		CASE 1
			IF LOCAL == [[스킬:저스티스샷]]
				LOCALS = 이것으로 끝이다!
			ELSEIF RAND:3 == 0
				LOCALS = 정당방위이다!　불만은 없겠지!
			ELSEIF RAND:2
				LOCALS = 쏘겠다!
			ELSE
				LOCALS = 먹어랏!
			ENDIF
		;화염
		CASE 4
			IF RAND:2
				LOCALS = 불타올라라!
			ELSE
				LOCALS = 경찰을 얕보지 마!
			ENDIF
		;빙결・수격
		CASE 5, 13
			LOCALS = 머리를 식혀라!
		;전격
		CASE 6
			LOCALS = 움직이지 마라!
		;충격
		CASE 7
			LOCALS = 전원 움직이지 마라!
		;신경
		;CASE 8
		;정신
		;CASE 9
		;파마
		CASE 10
			LOCALS = 너희들의 죄악、내가 지불해 주겠다!
		;주살
;		CASE 11
		;지변
		CASE 12
			LOCALS = 대지여!　떨어라!
		;질풍
		;CASE 14
	;		LOCALS = 
	;	;중력
	;	CASE 15
	;		LOCALS = 
		;핵열
		CASE 16
			LOCALS = 지방 공무원을 얕보다니!
		;만능
		CASE 17
			LOCALS = 변명이라면、경찰서에서 듣겠다!
		;사이코
		;CASE 18
		CASEELSE
			IF RAND:2
				LOCALS = 페르소나！
			ELSE
				LOCALS = 끝이다!
			ENDIF
	ENDSELECT
;회복
ELSEIF RESULT == 2 && RAND:3 == 0
	IF CFLAG:ARG:타겟 > 6
		IF RAND:2
			LOCALS = 모두!　괜찮나!?
		ELSE
			LOCALS = 아직、이제부터다!　오기를 보여 주겠다!
		ENDIF
	ELSE
		IF RAND:2
			LOCALS = 동료가 다치도록 두진 않겠다!
		ELSE
			LOCALS = 혼자서는 싸울 수 없으니까 말이지
		ENDIF
	ENDIF
;상태変化
;ELSEIF RESULT == 3
;特殊
;ELSEIF RESULT == 4
;상태회복
;ELSEIF RESULT == 5
ELSE
	IF RAND:3 == 0
		LOCALS = 가라!
	ELSEIF RAND:2
		LOCALS = 페르소나！
	ELSE
		LOCALS = 내 차례다!
	ENDIF
ENDIF
SIF LOCALS != "EMPTY"
	CALL MESSAGE_BL(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)

@BATTLE_EVENT_K4538, ARG, ARG:1, ARG:2
SIF ARG < 0 && NO:ARG != 4538
	RETURN 0
LOCAL:1 = 1
LOCALS = EMPTY
SELECTCASE TFLAG:전투이벤트
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:3 == 0
			LOCALS = 너희들、전원 체포다!
		ELSEIF RAND:2 == 0
			LOCALS = 확보ー!
		ELSE
			LOCALS = 원호를 부탁한다!
		ENDIF
	CASE 2
	;공격　ARGが공격をする仲魔、ARG:1が적、ARG:2が데미지量
	CASE 11
		;潜在반격対策
		IF CFLAG:ARG:입력행동 == -1
			RETURN
		ENDIF
		CALLFORM SKILL_TYPE_{CFLAG:ARG:입력행동}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
				IF RAND:2
					LOCALS = 너에게는、변호사를 고용할 권리가 있다
				ELSE
					LOCALS = 피의자 확보!
				ENDIF
		;弱点をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):방어플래그
				IF RAND:2
					LOCALS = 무으…
				ELSE
					LOCALS = 잔머리 굴리기는…
				ENDIF
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG:1, ARG:2) > 50
			IF RAND:2
				LOCALS = 좋아!
			ELSE
				LOCALS = 자수하려면 지금 해라!
			ENDIF
		ELSEIF 데미지비율(ARG:1, ARG:2) > 20
			IF RAND:2
				LOCALS = 이젠、그만두지 않겠나? 살해되기 전에 말야。
			ELSE
				LOCALS = 아직、하는거냐?
			ENDIF
		ELSEIF 데미지비율(ARG:1, ARG:2) > 0
			IF RAND:2
				LOCALS = 다음에는 진짜로 쏠 테다
			ELSE
				LOCALS = 이것으로 끝이라고 생각하지 마라
			ENDIF
		ELSEIF ARG:2 == 0
			LOCALS = 만약、못 듣더라도 단념하지는 않을 테다!
		ELSEIF ARG:2 < 0
			LOCALS = 범인에게 힘을 빌려 주다니…
		ENDIF
	;피데미지
	;ARGが공격を受ける仲魔、ARG:1が적、ARG:2が데미지量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			IF RAND:2
				LOCALS = 남동생…아…
			ELSE
				LOCALS = 순직(殉職)할 생각은……아직 없는데 말이지……
			ENDIF
		;大데미지
		ELSEIF 데미지비율(ARG, ARG:2) > 50 || 현HP비율(ARG) < 25
			LOCALS = 所轄の意地を見せてやる…！
		ELSEIF 데미지비율(ARG, ARG:2) > 20
			IF RAND:2
				LOCALS = 아아앗!
			ELSE
				LOCALS = 바보 같은…
			ENDIF
		ELSEIF 데미지비율(ARG, ARG:2) > 0
		;無効
		ELSEIF ARG:2 == 0
			IF RAND:2
				LOCALS = 그것으로 끝인가!
			ELSE
				LOCALS = 나쁜 말은 하지 않는다。이제 그만두는 거다。
			ENDIF
		;흡수
		ELSEIF ARG:2 < 0
			LOCALS = 그만 단념해라!
		ENDIF
	CASE 15
		LOCALS = 이런!?
	CASE 16
		LOCALS = 이것으로 자기의 잘못을 알았을 테지?
	CASE 17
		IF RAND:2
			LOCALS = 빗나간…건가…
		ELSE
			LOCALS = 훈련이 모자랐던가…
		ENDIF
	CASE 18
		LOCALS = 쓸데없다!
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_BL(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)
