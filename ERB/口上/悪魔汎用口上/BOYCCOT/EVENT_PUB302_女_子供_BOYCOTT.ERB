		CASE GETNUM(TALENT,"현명")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "？　어째서, 지금 이걸 쓰는데요~?",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;파마相性의 行動で、천사持ちの충성도が上昇
		CASE GETNUM(TALENT,"천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "은, 하면 안된다고 했는데요?",72,LEFT%┃
