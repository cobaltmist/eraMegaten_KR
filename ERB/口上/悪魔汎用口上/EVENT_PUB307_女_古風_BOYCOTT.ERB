@BATTLE_BOYCOTT_MESSAGE_PUB307,ARG,ARG:1 = 0
	;ボイコットした場合に표시する구상
	CALLFORM SKILL_NAME_{CFLAG:ARG:입력행동},ARG
	;사용한 스킬의 이름을 LOCALS에 대입
	LOCALS = %RESULTS%
	SETCOLOR COLOR("RED")
	SELECTCASE ARG:1
		;물리데미지를 주는 행동으로, 영맹 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"영맹")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "라니! 무슨 말을 하시는 건가!!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;마법데미지를 주는 행동으로, 교활 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"교활")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "라니! 웃기지 마시게!!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;고위력의 행동으로, 잔학 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"잔학")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"잘도 이런 국면에서 그런 무른 소리를!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상대의 약점을 찌르는 공격 or 행동불능의 상태이상의 적에 대한 공격으로, 현명 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"현명")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"지금은" + LOCALS + "을 쓸 국면이 아니네!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;파마 상성의 행동으로, 천사 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"잘도 그런 지시를…!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;주살 상성의 행동으로, 타천사 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"타천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"무슨 말을 하고 계신건가!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;회복・상태회복 행동으로는 우애 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"우애")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"킄, 용기와 만용은 다르다네!!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상태변화로는 교만 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"교만")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"이 무슨 어이없는 지시를…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;특수로는 냉정 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"냉정")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"이 얼마나 치졸한 지시인가",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;우둔 보유자는 주인과의 Lv차이 만큼 충성도가 상승
		CASE GETNUM(TALENT,"우둔")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "따윈 듣지 않네!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;허심 보유자는 최저 ２만큼 충성도가 상승
		;CASE GETNUM(TALENT,"허심")
		;	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
		;	PRINTFORML ┃%LOCALS + "",72,LEFT%┃
		;	PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
	ENDSELECT
	RESETCOLOR
