@BATTLE_BOYCOTT_MESSAGE_PUB306,ARG,ARG:1 = 0
	;ボイコットした場合に표시する구상
	CALLFORM SKILL_NAME_{CFLAG:ARG:입력행동},ARG
	;사용した스킬の이름をLOCALSに代入
	LOCALS = %RESULTS%
	SETCOLOR COLOR("RED")
	SELECTCASE ARG:1
		CASE GETNUM(TALENT,"영맹")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "인가요…사양하겠습니다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;마법데미지を与える行動で、교활持ちの충성도が上昇
		CASE GETNUM(TALENT,"교활")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "…" + CSTR:일인칭 + "에겐 맞지 않는군요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;高위력の行動で、잔학持ちの충성도が上昇
		CASE GETNUM(TALENT,"잔학")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "…、참 상냥도 하셔라…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;相手の약점を付いた공격or行動不能な상태이상の적に対する공격で、현명持ちの충성도が上昇
		CASE GETNUM(TALENT,"현명")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"실례지만, 제가 눈을 뜨고 난 후에 지시를 내려주세요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;파마相性의 行動で、천사持ちの충성도が上昇
		CASE GETNUM(TALENT,"천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"그런 행위는 신의 이름에 먹칠은 한답니다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;주살相性의 行動で、타천사持ちの충성도が上昇
		CASE GETNUM(TALENT,"타천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "로는" + CSTR:일인칭 + "의 마음을 채울 수 없답니다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;회복・상태회복行動では우애持ちの충성도が上昇
		CASE GETNUM(TALENT,"우애")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"사랑이 얼마나 멋진지 이해하지 못하고 계신 모양이네요…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상태변화では교만持ちの충성도が上昇
		CASE GETNUM(TALENT,"교만")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "？　후훗, 농담은 그만둬 주세요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;特殊では냉정持ちの충성도が上昇
		CASE GETNUM(TALENT,"냉정")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"그 지시엔 따를 수 없답니다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;우둔持ちは主人とのLv差だけ충성도が上昇
		CASE GETNUM(TALENT,"우둔")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "를(을) 할 기분은 아니네요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;허심持ちは최저２だけ충성도が上昇
		;CASE GETNUM(TALENT,"허심")
		;	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
		;	PRINTFORML ┃%LOCALS + "",72,LEFT%┃
		;	PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
	ENDSELECT
	RESETCOLOR
