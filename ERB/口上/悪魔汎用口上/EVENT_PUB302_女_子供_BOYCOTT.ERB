@BATTLE_BOYCOTT_MESSAGE_PUB302,ARG,ARG:1 = 0
	;ボイコットした場合に표시する구상
	CALLFORM SKILL_NAME_{CFLAG:ARG:입력행동},ARG
	;사용한 스킬의 이름을 LOCALS에 대입
	LOCALS = %RESULTS%
	SETCOLOR COLOR("RED")
	SELECTCASE ARG:1
		CASE GETNUM(TALENT,"영맹")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "따윈 시러요!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;마법데미지를 주는 행동으로, 교활 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"교활")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "～？　싫어싫어~!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;고위력의 행동으로, 잔학 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"잔학")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "로는 개운하지 않다구요!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상대의 약점을 찌르는 공격 or 행동불능의 상태이상의 적에 대한 공격으로, 현명 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"현명")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "？　어째서, 지금 이걸 쓰는데요~?",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;파마 상성의 행동으로, 천사 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "은, 하면 안된다고 했는데요?",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;주살 상성의 행동으로, 타천사 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"타천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"재미없어요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;회복・상태회복 행동으로는 우애 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"우애")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "인가요~? 아픈건 싫어요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상태변화로는 교만 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"교만")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"레이디가 할 일이 아닌걸!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;특수로는 냉정 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"냉정")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "？　흥! 싫어요!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;우둔 보유자는 주인과의 Lv차이 만큼 충성도가 상승
		CASE GETNUM(TALENT,"우둔")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "는(은) 애가 아니에요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;허심 보유자는 최저 ２만큼 충성도가 상승
		;CASE GETNUM(TALENT,"허심")
		;	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
		;	PRINTFORML ┃%LOCALS + "",72,LEFT%┃
		;	PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
	ENDSELECT
	RESETCOLOR
