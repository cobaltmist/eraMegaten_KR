@BATTLE_BOYCOTT_MESSAGE_PUB308,ARG,ARG:1 = 0
	;ボイコットした場合に표시する구상
	CALLFORM SKILL_NAME_{CFLAG:ARG:입력행동},ARG
	;사용한 스킬의 이름을 LOCALS에 대입
	LOCALS = %RESULTS%
	SETCOLOR COLOR("RED")
	SELECTCASE ARG:1
		;물리데미지를 주는 행동으로, 영맹 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"영맹")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "는(은) 싫사옵니다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;마법데미지를 주는 행동으로, 교활 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"교활")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "는(은) 좀…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;고위력의 행동으로, 잔학 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"잔학")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%CSTR:이인칭 + "은(는) 참 상냥도 하시군요…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상대의 약점을 찌르는 공격 or 행동불능의 상태이상의 적에 대한 공격으로, 현명 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"현명")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "같은 걸, 지금 할 리가 없지요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;파마 상성의 행동으로, 천사 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "의 지시는 들어줄 수 없나이다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;주살 상성의 행동으로, 타천사 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"타천사")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "로는" + CSTR:일인칭 + "의 마음이 담기질 않군요!",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;회복・상태회복 행동으로는 우애 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"우애")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"사랑이 없는 건 싫다옵니다…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;상태변화로는 교만 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"교만")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"에~," + LOCALS + "인가요~…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;특수로는 냉정 보유자의 충성도가 상승
		CASE GETNUM(TALENT,"냉정")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"이 국면에서" + LOCALS + "은(는) 아니지요",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;우둔 보유자는 주인과의 Lv차이 만큼 충성도가 상승
		CASE GETNUM(TALENT,"우둔")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + " 쓸 기분이 아니옵니다",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;허심 보유자는 최저 ２만큼 충성도가 상승
		;CASE GETNUM(TALENT,"허심")
		;	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
		;	PRINTFORML ┃%LOCALS + "",72,LEFT%┃
		;	PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
	ENDSELECT
	RESETCOLOR
