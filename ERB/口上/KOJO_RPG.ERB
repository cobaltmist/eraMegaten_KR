			SIF ARG != ARG:1
				LOCAL:4 ++
		ENDIF
		;링케이지참가の場合はフラグ更新しない
		SIF CFLAG:ARG:링케이지참가 || CHARA < 0
			RETURN 0
		LOCAL = ARG
		LOCAL:1 = ARG:1
		LOCAL:2 = ARG:2
		個別キャラ番号:CHARA = ARG:1
		個別与ダメージ:CHARA += ARG:2
		;반사はSKILL_TEMP時点で-1をいれて、それからDAMAGE関数で3をいれる
		IF 個別戦闘イベント:CHARA == -1
			LOCAL:3 = 3
			個別戦闘イベント:CHARA = 3
		ELSE
			LOCAL:3 = ARG:3
			SIF 個別戦闘イベント:CHARA != 5 || ARG:3 != 1
				個別戦闘イベント:CHARA = ARG:3
			SIF 個別戦闘イベント:CHARA == 7
				個別与ダメージ:CHARA = ARG:2
