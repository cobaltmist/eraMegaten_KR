@구상셀렉트설정
#DIM カウント , 1
#DIM リスト , 70
#LOCALSIZE 1
#LOCALSSIZE 1
VARSET リスト , -1
カウント = 0
FOR LOCAL , 0 , 70
	IF LOCAL < 50
		IF CFLAG:구상번호 > 0
			LOCALS = K{(CFLAG:구상번호)}
		ELSE
			LOCALS = K{NO}
		ENDIF
	ELSEIF LOCAL < 60
		LOCALS = PUB{ABL:회화타입}
	ELSE
		TRYCCALLFORM 특수구상조건_SP{LOCAL - 60}
			SIF RESULT
				LOCALS = SP{LOCAL-60}
		CATCH
			CONTINUE
		ENDCATCH
	ENDIF
	SIF LOCAL % 50 != 0 && LOCAL < 60
		LOCALS += @"_{LOCAL%50}"
	TRYCCALLFORM 셀렉트구상설명_%LOCALS%, 1
		SIF RESULT == -1
			CONTINUE
		;[IF_DEBUG]
		;	PRINTFORML 셀렉트구상설명_%LOCALS%
		;[ENDIF]
		リスト:カウント = LOCAL
		カウント ++
	CATCH
	ENDCATCH
NEXT
;[IF_DEBUG]
;	PRINTFORML 구상は{カウント}個見つかりました
;	DRAWLINE
;[ENDIF]
IF カウント > 1 || MAXARRAY(リスト) >= 60
	PRINTFORML 적용할 대사를 선택해주세요
	FOR LOCAL , 0 , カウント
		IF リスト:LOCAL < 50
			IF CFLAG:구상번호 > 0
				LOCALS = K{(CFLAG:구상번호)}
			ELSE
				LOCALS = K{NO}
			ENDIF
		ELSEIF リスト:LOCAL < 60
			LOCALS = PUB{ABL:회화타입}
		ELSE
			LOCALS = SP{リスト:LOCAL-60}
		ENDIF
		SIF リスト:LOCAL % 50 != 0 && リスト:LOCAL < 60
			LOCALS += @"_{リスト:LOCAL%50}"
		PRINTFORM [{リスト:LOCAL}]
		CALLFORM 셀렉트구상설명_%LOCALS%
	NEXT
	PRINTL [99] 적용하지 않는다
	$INPUT_LOOP
	INPUT
	IF RESULT == 99
		CFLAG:구상셀렉트 = -1
	ELSEIF RESULT >= 0 && RESULT < 70 && MATCH(リスト , RESULT)
		CFLAG:구상셀렉트 = RESULT
	ELSE
		GOTO INPUT_LOOP
	ENDIF
ELSEIF カウント == 1
	CFLAG:구상셀렉트 = リスト:0
ELSE
	CFLAG:구상셀렉트 = 0
ENDIF

