		;解析率が50미만の악마は除外
		SIF FLAG:(LCOUNT+20000) < 500
			CONTINUE
		악마테이블:LOCAL = LCOUNT
		LOCAL ++
		LOCAL:1 ++
	NEXT
ENDIF

;랜덤テーブルが10以下の場合に레어枠全てを消す
