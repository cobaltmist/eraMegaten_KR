@RANDAM_LINKS, ARG
#DIM 악마테이블, 1000
#DIM MAXLEVEL, 1
#DIM TABLE_NUM, 1
#DIM LCOUNT
VARSET 악마테이블
LOCAL   = 0
LOCAL:1 = 0 ;레어악마数카운트

;上限を설정
IF 이벤트플래그:88:0 > 2
	;강화フラグがある場合、확률を변경
	SELECTCASE RAND:10
		;3割でLv30以下
		CASE IS < 3
			MAXLEVEL = 30
		;5割でLv60以下
		CASE IS < 8
			MAXLEVEL = 60
		;2割でLv100以下(上限なし扱い)
		CASEELSE
			MAXLEVEL = 100
	ENDSELECT
ELSE
	SELECTCASE RAND:10
		;6割でLv30以下
		CASE IS < 6
			MAXLEVEL = 30
		;3割でLv60以下
		CASE IS < 9
			MAXLEVEL = 60
		;1割でLv100以下(上限なし扱い)
		CASEELSE
			MAXLEVEL = 100
	ENDSELECT
ENDIF

FOR LCOUNT, 1, 1800
	;CSVがあるか확인、なければ弾く
	SIF EXISTCSV(LCOUNT, 0) == 0
		CONTINUE
	;上限레벨を超える場合は除外
	SIF CSVBASE(LCOUNT, GETNUM(BASE, "LV")) > MAXLEVEL
		CONTINUE
	;당신を超える場合も除外
	SIF CSVBASE(LCOUNT, GETNUM(BASE, "LV")) > BASE:MASTER:LV
		CONTINUE
	;女の場合、男を除外
	SIF TALENT:ARG:남자 == 0 && CSVTALENT(LCOUNT, GETNUM(TALENT, "남자")) != 0
		CONTINUE
	;男の場合、女を除外
	SIF TALENT:ARG:남자 == 1 && CSVTALENT(LCOUNT, GETNUM(TALENT, "남자")) != 1
		CONTINUE
	;解析率が50미만の악마は除外
	SIF FLAG:(LCOUNT+20000) < 500
		CONTINUE
	;특수합체만、합체조건있음、전서소환불가は弾く
	SIF CSVCFLAG(LCOUNT, GETNUM(CFLAG, "특수합체만")) || CSVCFLAG(LCOUNT, GETNUM(CFLAG, "합체조건있음")) || CSVCFLAG(LCOUNT, GETNUM(CFLAG, "전서소환불가"))
		CONTINUE
	악마테이블:LOCAL = LCOUNT
	LOCAL ++
NEXT
;레어악마処理
;メガテン系이벤트이외불허가の場合は出現させない
IF GETBIT(FLAG:EXTRA이벤트설정, 0) > 0
	FOR LCOUNT, 5000, 5049
		;CSVがあるか확인、なければ弾く
		SIF EXISTCSV(LCOUNT, 0) == 0
			CONTINUE
		;上限레벨を超える場合は除外
		SIF CSVBASE(LCOUNT, GETNUM(BASE, "LV")) > MAXLEVEL
			CONTINUE
		;당신を超える場合も除外
		SIF CSVBASE(LCOUNT, GETNUM(BASE, "LV")) > BASE:MASTER:LV
			CONTINUE
		;女の場合、男を除外
		SIF TALENT:ARG:남자 == 0 && CSVTALENT(LCOUNT, GETNUM(TALENT, "남자")) != 0
