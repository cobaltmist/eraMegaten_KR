;ARGは生成キャラの등록番号
;軽高生はバリエーションを減らした高校生のような扱い
;레어キャラは식노(아키ラ枠)。ただしガンスリは付かないので주의
;이능자스킬のコンセプトは小学生を参照
@RANDOMCHARA_4902, ARGS, ARG, ARG:1
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "일인칭"
		RESULTS = \@IS_MALE(ARG) ? 나#나\@
	CASE "이인칭"
		RESULTS = %CALLNAME:MASTER%
	CASE "체력"
		IF 이벤트플래그:88:0 > 1
			RETURN RAND(1500, 2800)
		ELSE
			RETURN RAND(1000, 1800)
		ENDIF
	CASE "기력"
		IF 이벤트플래그:88:0 > 1
			RETURN RAND(1500, 2500)
		ELSE
			RETURN RAND(1000, 1500)
		ENDIF
	CASE "속성"
		RETURN RAND(84, 164), RAND(85, 164)
	CASE "종족"
		RETURN 0
	CASE "전투소질"
		;上記이외は1/2で비전투원
		IF RAND:2 > 0
			RESULTS = 비전투원
			IF RAND:3 == 0
				;1/3でフレーバーで좀비を부여
				RESULTS:1 = 좀비
				RETURN 1, 1
			ENDIF
			RETURN 1
		ELSE
			SELECTCASE RAND:10
				CASE IS < 1
					;아키ラ枠用
					RESULTS = 식노
				CASE IS < 5
					;ガー디아ンの代用
					RESULTS = 페르소나구사자
				CASEELSE
					RESULTS = 이능자
			ENDSELECT
			RESULTS:1 = 도구지식
			;강화フラグがある場合、1/2で도구지식2に
			IF 이벤트플래그:88:0 > 3 && RAND:2 > 0
				RETURN 1, 2
			ENDIF
			RETURN 1, 1
		ENDIF
	;戻り値は0:랜덤 それ이외は指定
	CASE "초기페르소나"
		RETURN 0
	;戻り値は0:랜덤 それ이외は指定
	CASE "링크악마"
		RETURN 0
	CASE "초기스테이터스비율"
		RETURN 7, 7, 7, 7, 7, 10
	CASE "스킬"
		SIF TALENT:ARG:이능자 == 0
			RETURN 0
		
		;이능자스킬
		;공격
		SELECTCASE RAND:7
			CASE 0
				RESULT = [[스킬:아기]]
				RESULT:1 = [[스킬:아기라오]]
				RESULT:2 = [[스킬:아기다인]]
				RESULT:3 = [[스킬:데들리번]]
			CASE 1
				RESULT = [[스킬:마그나]]
				RESULT:1 = [[스킬:마그나스]]
				RESULT:2 = [[스킬:마그다인]]
				RESULT:3 = [[스킬:대지의분노]]
			CASE 2
				RESULT = [[스킬:아쿠아]]
				RESULT:1 = [[스킬:아쿠에스]]
				RESULT:2 = [[스킬:아쿠아다인]]
				RESULT:3 = [[스킬:아쿠아리타이드]]
			CASE 3
				RESULT = [[스킬:갈]]
				RESULT:1 = [[스킬:갈라]]
				RESULT:2 = [[스킬:갈다인]]
				RESULT:3 = [[스킬:선풍진]]
			CASE 4
				RESULT = [[스킬:코우하]]
				RESULT:1 = [[스킬:바이코우하]]
				RESULT:2 = [[스킬:마하코우하]]
				RESULT:3 = [[스킬:사마리캄]]
			CASE 5
				RESULT = [[스킬:베어내기]]
				RESULT:1 = [[스킬:히트웨이브]]
				RESULT:2 = [[스킬:무사차]]
				RESULT:3 = [[스킬:산산조각베기]]
			CASE 6
				RESULT = [[스킬:베어내기]]
				RESULT:1 = [[스킬:섬머솔트]]
				RESULT:2 = [[스킬:열진각]]
				RESULT:3 = [[스킬:맹돌진]]
		ENDSELECT
		;カジャ系
		SELECTCASE RAND:4
			CASE 0
				RESULT:4 = [[스킬:타루・카쟈]]
				RESULT:5 = [[스킬:다크브레스]]
			CASE 1
				RESULT:4 = [[스킬:스쿠・카쟈]]
				RESULT:5 = [[스킬:도발]]
			CASE 2
				RESULT:4 = [[스킬:라쿠・카쟈]]
				RESULT:5 = [[스킬:파워브레스]]
			CASE 3
				RESULT:4 = [[스킬:사마・카쟈]]
				RESULT:5 = [[스킬:위협]]
		ENDSELECT
		;魔脈/コンセ
		IF RAND:2 > 0
			RESULT:6 = [[스킬:일할의마맥]]
		ELSE
			RESULT:6 = [[스킬:컨센트레이트]]
		ENDIF
		;만능
		RESULT:7 = [[스킬:메기도]]
		RESULT:8 = [[스킬:메기도라온]]
		
		;강화
		IF 이벤트플래그:88:0 > 3
			RESULT:9 = [[스킬:데・카쟈]]
			RESULT:10 = [[스킬:리캄도라]]
			RESULT:11 = [[스킬:기공(소)]]
		ENDIF
		RETURN RESULT
	CASE "상성"
		SELECTCASE GET_TYPE(ARG:1)
			CASE "파마"
				RETURN 0
			CASEELSE
				RETURN 100
		ENDSELECT
	CASE "소질"
		RETURN GETNUM(TALENT, "건방짐"), GETNUM(TALENT, "반항적"), GETNUM(TALENT, "호기심"), GETNUM(TALENT, "낙관적"), GETNUM(TALENT, "눈에띄고싶어함"), GETNUM(TALENT, "아픔에약함"), GETNUM(TALENT, "쾌감에솔직")
	CASE "제외소질"
		RETURN GETNUM(TALENT, "저항"), GETNUM(TALENT, "억압"), GETNUM(TALENT, "도착적"), GETNUM(TALENT, "도착적"), GETNUM(TALENT, "바늘다루기")
	;처녀は特別 0は랜덤(20%), 1なら처녀, 2なら非처녀
	CASE "처녀"
		RETURN RAND:2 + 1
	;戻り値は0:랜덤 1:소인체형 2:유아체형 4:큰체형 5:거체
	CASE "체형"
		RETURN 0
	;戻り値は0:랜덤 1:절벽　2:빈유　3:並　4:거유　5:폭유
	CASE "가슴"
		RETURN 0
	;추가対応。戻り値は0:랜덤 1:小尻　2:並尻　3:巨尻　4:爆尻
	CASE "尻"
		RETURN 0
	;통상の인간と肉体部位が違う場合はここで直接代入してください
	CASE "육체부위"
		RETURN 0
	CASE "ABL"
		SELECTCASE ABLNAME:(ARG:1)
			CASE "순종", "욕망", "기교"
				RETURN !RAND:5+!RAND:10
			CASE "Ｃ감각", "Ｖ감각", "Ｂ감각"
				RETURN !RAND:4
			CASE "마조끼", "노출증", "봉사정신"
				RETURN !RAND:10
			CASE "새드끼"
				RETURN !RAND:10 * !ABL:ARG:마조끼
			CASE "Ａ감각", "자위중독", "정액중독", "레즈끼", "ＢＬ끼", "섹스중독"
				RETURN !RAND:20
		ENDSELECT
	;EXPはABLが1이상ある場合、ある程度調整される(ただし、ABL0の時は調整が動かないので適当に초기値をきめてください)
	CASE "EXP"
		;全く손付かずの場合
		SIF !GROUPMATCH(1, !TALENT:ARG:처녀, ABL:ARG:Ｃ감각, ABL:ARG:Ｖ감각, ABL:ARG:Ａ감각, ABL:ARG:Ｂ감각, ABL:ARG:기교)
			RETURN 0
		SELECTCASE EXPNAME:(ARG:1)
			CASE "Ｖ경험"
				RETURN RAND(0, 20) * !RAND:3
			CASE "Ａ경험"
				RETURN RAND(0, 20) * !RAND:10
			CASE "절정경험"
				RETURN RAND(0, 20) * RAND:2
			CASE "사정경험"
				RETURN RAND(0, 20) * RAND:2
			CASE "성교경험"
				RETURN 0
			CASE "질사경험"
				RETURN EXP:ARG:사정경험/2*EXP:ARG:성교경험 > 0
			CASE "자위경험"
				RETURN RAND(0, 20)
			CASE "조교자위경험"
				RETURN 0
			CASE "정액경험"
				RETURN RAND(0, 20) * RAND:2
			CASE "봉사쾌락경험"
				RETURN 0
			CASE "펠라경험"
				RETURN RAND(0, 10) * !RAND:4
			CASE "애정경험"
				RETURN 0
			CASE "고통쾌락경험"
				RETURN RAND(0, 20) * !RAND:8
			CASE "방뇨경험"
				RETURN 0
			CASE "가학쾌락경험"
				RETURN RAND(0, 10) * !RAND:8
			CASE "야외노출경험"
				RETURN 0
			CASE "레즈경험"
				RETURN RAND(0, 20) * !RAND:8
			CASE "ＢＬ경험"
				RETURN RAND(0, 20) * !RAND:8
			CASE "이상경험"
				RETURN 0
			CASE "긴박경험"
				RETURN RAND(0, 10) * EXP:ARG:고통쾌락경험 > 0
		ENDSELECT
	CASE "모자"
		IF IS_MALE(ARG)
			SELECTCASE RAND:3
				CASE 0
					RETURN [[衣装:모자]]
				CASE 1
					RETURN [[衣装:반다나]]
				CASEELSE
					RETURN 0
			ENDSELECT
		ELSE
			SELECTCASE RAND:6
				CASE 0
					RETURN [[衣装:모자]]
				CASE 1
					RETURN [[衣装:리본]]
				CASE 2
					RETURN [[衣装:헤어밴드]]
				CASE 3
					RETURN [[衣装:카츄샤]]
				CASE 4
					RETURN [[衣装:머리끈]]
				CASEELSE
					RETURN 0
			ENDSELECT
		ENDIF
	CASE "옷"
		IF IS_MALE(ARG)
			RETURN [[衣装:와이셔츠]]
		ELSE
			RETURN [[衣装:블라우스]]
		ENDIF
	CASE "하의"
		IF IS_MALE(ARG)
			RETURN [[衣装:바지]]
		ELSE
			RETURN [[衣装:스커트]]
		ENDIF
	CASE "전신복"
		RETURN 0
	CASE "손"
		RETURN 0
	CASE "속옷（상）"
		IF IS_MALE(ARG)
			RETURN 0
		ELSE
			SELECTCASE RAND:5
				CASE 0
					RETURN [[衣装:브래지어]]
				CASE 1
					RETURN [[衣装:브래지어(흑)]]
				CASE 2
					RETURN [[衣装:브래지어(적)]]
				CASE 3
					RETURN [[衣装:스포츠브라]]
				CASE 4
					RETURN [[衣装:레이스달린브래지어]]
				CASEELSE
					RETURN 0
			ENDSELECT
		ENDIF
	CASE "속옷（하）"
		IF IS_MALE(ARG)
			IF RAND:5
				RETURN [[衣装:트렁크스]]
			ELSE
				RETURN [[衣装:부메랑팬츠]]
			ENDIF
		ELSE
			SELECTCASE RAND:7
				CASE 0
					RETURN [[衣装:팬티]]
				CASE 1
					RETURN [[衣装:팬티(흑)]]
				CASE 2
					RETURN [[衣装:팬티(적)]]
				CASE 3
					RETURN [[衣装:레이스달린팬티]]
				CASE 4
					RETURN [[衣装:줄무늬팬티]]
				CASE 5
					RETURN [[衣装:스패츠]]
				CASEELSE
					RETURN 0
			ENDSELECT
		ENDIF
	CASE "전신속옷"
		RETURN 0
	CASE "양말"
		RETURN [[衣装:하이삭스]]
	CASE "신발"
		RETURN [[衣装:가죽구두]]
	CASE "겉옷"
		RETURN [[衣装:블레이저교복]]
	CASE "그외"
		RETURN RAND:10 ? 0 # [[衣装:안경]]
	CASE "회화타입"
	;악마汎用사용しています0:랜덤 1:女_아이　2:女_소녀　3:女_若者　4:女_大人　5:女_淑女　6:女_古風　7:男_若者　8:男_大人　9:짐승_ケダモノ
		RETURN 0
	CASE "이름"
		$SET_NAME
		IF TALENT:ARG:남자 == 1 && TALENT:ARG:반항적 == 1
			RESULTS = 불량한 
		ELSEIF (TALENT:ARG:겁쟁이 == 1 || TALENT:ARG:얌전함 == 1) && TALENT:ARG:비전투원 == 1
			RESULTS = 왕따 당하던 
		ELSEIF TALENT:ARG:남자 == 0 && TALENT:ARG:처녀 == 0 && TALENT:ARG:쾌감에솔직 == 1
			RESULTS = 문란한 
		ELSEIF TALENT:ARG:식노 == 1
			RESULTS = 홀린 
		ELSEIF TALENT:ARG:페르소나구사자 >= 1
			RESULTS = 보호받는 
		ELSEIF TALENT:ARG:이능자 == 1
			RESULTS = 이능의 
		ELSE
			RESULTS = 무력한 
		ENDIF
		RESULTS += "카루코자카고 학생"
	CASE "애칭"
		;이름と同じため생략
		GOTO SET_NAME
	CASE "해설"
		RESULTS = 카루코자카고교의 학생
		IF TALENT:ARG:비전투원 == 0
			RESULTS:1 = 이능의 힘을 숨기고 있다
		ELSEIF TALENT:ARG:좀비 == 1
			RESULTS:1 = 일반 학생이며 전투력은 없다. 또, 자신이 죽은 줄 모르고 있다
		ELSE
			RESULTS:1 = 일반 학생이며 전투력은 없다
		ENDIF
		RESULTS:3 = 카루코자카고교는『진・여신전생 if』에 등장하는 가공의 고등학교이며
		RESULTS:4 = 마신황을 자칭하는 하자마의 손에 의해、탈출이 불가능한 마계가 되어버렸다
		RESULTS:5 = 하자마는 학생들을 죽이지 않고、괴롭히려고 했기 때문에、상당수의 학생의 무사가 확인되고、
		RESULTS:6 = 좀비군이나 좀비쨩이라는、학생들이 오염된 결과의 끝도 확인할 수 있다
		RESULTS:8 = 파란 블레이저교복과 줄무늬 양말이 특징으로、『여신이문록 페르소나』나『페르소나２』등에서도
		RESULTS:9 = 그들의 모습을 볼 수 있다
	;最後に呼び出すので何らかの調整が필요한場合はここで
	CASE "最終調整"
		RETURN 0
ENDSELECT
