;=================================================
;촉각상황 체크
;=================================================
@촉각체크,ARG
#DIM 의상부위 , 1
#DIM 조사부위 , 1
#DIM 촉각 , 14 ;17 그외 확장패치 주석처리
#LOCALSIZE 3
#LOCALSSIZE 2

FOR 조사부위 , 0 , 5
	VARSET 촉각 , 1
	SELECTCASE 조사부위
		CASE 0
			LOCALS = Ｃ
			LOCALS:1 = 음순
			LOCAL = 7
			LOCAL:1 = 0
		CASE 1
			LOCALS = Ｖ
			LOCALS:1 = 음순
			LOCAL = 7
			LOCAL:1 = 1
		CASE 2
			LOCALS = Ａ
			LOCALS:1 = 둔부
			LOCAL = 8
			LOCAL:1 = 2
		CASE 3
			LOCALS = 유두
			LOCALS:1 = 유두
			LOCAL = 5
			LOCAL:1 = 3
		CASE 4
			LOCALS:1 = 유방
			LOCALS = 유방
			LOCAL = 4
			LOCAL:1 = 4
	ENDSELECT
	TEQUIP:ARG:(LOCALS + "촉각") = 1
	TEQUIP:ARG:("피복애무" + LOCALS) = 0
	TEQUIP:ARG:("옷내부애무" + LOCALS) = 0

	;노출している部位
	IF (TEQUIP:ARG:(LOCALS:1 + "노출")) == -1
		CONTINUE
	ENDIF

	FOR 의상부위 , 0 , 14 ;17 그외 확장패치 주석처리
		RESULT = 0
		TRYCALLFORM CLOTHES_EXPOSE_{TEQUIP:ARG:GET_CLOTHESNAME(의상부위)},LOCAL
		RESULT:1 = RESULT
		;가슴앞열림
		IF RESULT != 1 && (LOCAL == 4 || LOCAL == 5) && TEQUIP:ARG:가슴앞열림
			RESULT = 0
			TRYCALLFORM CLOTHES_OPENFRONT_{TEQUIP:ARG:GET_CLOTHESNAME(의상부위)}
			SIF RESULT
				RESULT:1 = 1
		ENDIF
		
		;노출
		IF RESULT:1 == 1
			촉각:의상부위 = 1
		;피복
		ELSE
			TRYCCALLFORM CLOTHES_촉각_{TEQUIP:ARG:GET_CLOTHESNAME(의상부위)},LOCAL:1
				IF RESULT == 0
					TEQUIP:ARG:(LOCALS + "촉각") = 0
					BREAK
				ENDIF
				촉각:의상부위 = RESULT
			CATCH
				TEQUIP:ARG:(LOCALS + "촉각") = 0
				BREAK
			ENDCATCH
		ENDIF
	NEXT
	SIF TEQUIP:ARG:(LOCALS + "촉각") == 0
		CONTINUE

	;上から伝わる
	LOCAL:2 = 0
	FOR 의상부위 , 0 ,14 ;17 그외 확장패치 주석처리
		;上から伝わらない옷
		IF 촉각:의상부위 != 1 && (촉각:의상부위 & 2 == 0)
			LOCAL:2 += 2
			BREAK
		ENDIF
		;上から伝わる옷
		SIF 촉각:의상부위 & 2
			LOCAL:2 += 1
	NEXT
	;着込みすぎ
	IF LOCAL:2 > 1
		TEQUIP:ARG:(LOCALS + "촉각") = 0
		CONTINUE
	;上から伝わる옷を一枚だけ着ている
	ELSEIF LOCAL:2 == 1
		TEQUIP:ARG:(LOCALS + "촉각") = 2
		TEQUIP:ARG:("피복애무" + LOCALS) = 1
	ENDIF

	;潜り込ませられる
	LOCAL:2 = 0
	FOR 의상부위 , 0 ,14 ;17 그외 확장패치 주석처리
		;潜り込ませられない
		IF 촉각:의상부위 != 1 && (촉각:의상부위 & 4 == 0)
			TEQUIP:ARG:(LOCALS + "촉각") = 0
			LOCAL:2 = 0
			BREAK
		ENDIF
		;潜り込ませられる
		SIF 촉각:의상부위 != 1 && (촉각:의상부위 & 4)
			LOCAL:2 += 1
	NEXT
	IF LOCAL:2 > 0
		SIF TEQUIP:ARG:(LOCALS + "촉각") == 1
			TEQUIP:ARG:(LOCALS + "촉각") = 0
		TEQUIP:ARG:(LOCALS + "촉각") += 4
		TEQUIP:ARG:("옷내부애무" + LOCALS) = 1
	ENDIF
NEXT

;=================================================
;Ｖ/Ａ비켜놓기가능の체크
;=================================================
@비켜놓기체크,ARG
#DIM 의상부위 , 1
#DIM 조사부위 , 1
#LOCALSIZE 1
#LOCALSSIZE 2
FOR 조사부위 ,0 , 2
	LOCALS = \@ 조사부위 == 0 ? Ｖ # Ａ \@
	LOCALS:1 = \@ 조사부위 == 0 ? 음순 # 둔부 \@
	TEQUIP:ARG:(LOCALS + "비켜놓기가능") = 1
	IF TEQUIP:ARG:(LOCALS:1 + "노출") == -1
		TEQUIP:ARG:(LOCALS + "비켜놓기가능") = 0
		CONTINUE
	ENDIF
	FOR 의상부위 , 0 , 14 ;17 그외 확장패치 주석처리
		RESULT = 0
		TRYCALLFORM CLOTHES_EXPOSE_{TEQUIP:ARG:GET_CLOTHESNAME(의상부위)},7+조사부위
		SIF RESULT == 1
			CONTINUE
		TRYCALLFORM CLOTHES_CROTCH_{TEQUIP:ARG:GET_CLOTHESNAME(의상부위)}
		IF RESULT != 2
			TEQUIP:ARG:(LOCALS + "비켜놓기가능") = 0
			BREAK
		ENDIF
	NEXT
NEXT
