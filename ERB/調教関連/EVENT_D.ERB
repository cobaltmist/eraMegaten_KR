;-------------------------------------------------
;EVENT_D.ERB、EVENT_DEPENDENCE、의존도システムの処理
;의존도はプラスに大きいと主人に対して慕う形で依存し、
;마이ナスに大きいと主人を畏怖する形で依存していく
;의존도ベクトルは各조교コマンドごとで指示されており、증가と減少で処理は異なっている
;-------------------------------------------------
@MASTER_DEPENDENCE_CHECK

;의존도のベクトル処理
;0は関数종료、붕괴も의존도は변화しない
IF TFLAG:33 == 0 || TALENT:9 == 1
	PRINTL <의존도변화없음>
	RETURN 0
;1は의존도が0이상で증가、0미만で減少
ELSEIF TFLAG:33 == 1
	SIF CFLAG:2 >= 0
		CALL MASTER_DEPENDENCE_PLUS
	SIF CFLAG:2 < 0
		CALL MASTER_DEPENDENCE_MINUS
;2は증가、但し복종、예속持ちは減少
ELSEIF TFLAG:33 == 2
	IF TALENT:5 || TALENT:8
		CALL MASTER_DEPENDENCE_MINUS
	ELSE
		CALL MASTER_DEPENDENCE_PLUS
	ENDIF
;3は減少、但し연모、친애持ちは증가
ELSEIF TFLAG:33 == 3
	IF TALENT:3 || TALENT:6
		CALL MASTER_DEPENDENCE_PLUS
	ELSE
		CALL MASTER_DEPENDENCE_MINUS
	ENDIF
;4は強制증가
ELSEIF TFLAG:33 == 4
	CALL MASTER_DEPENDENCE_PLUS
;5は強制減少
ELSEIF TFLAG:33 == 5
	CALL MASTER_DEPENDENCE_MINUS
ENDIF

RETURN 0


;의존도증가処理
@MASTER_DEPENDENCE_PLUS

R = 0

;ABL:순종をみる
R += ABL:0*2

;ABL:봉사정신をみる
R += ABL:7

;난이도を見る
;EASY
IF FLAG:4 == 1
	R += 1
;NORMAL
ELSEIF FLAG:4 == 2
	R += 0
;HARD
ELSEIF FLAG:4 == 3
	R -= 1
ENDIF

;소질による増減
;함락소질
;연모
SIF TALENT:3 && ASSIPLAY == 0
	R += 5
;친애
SIF TALENT:4 && ASSIPLAY == 0
	R += 7
;음란
SIF TALENT:5 && GET_RELATION(TARGET, PLAYER) > 100
	R += 3
;창부
SIF TALENT:6 && GET_RELATION(TARGET, PLAYER) > 100
	R += 5
;복종
SIF TALENT:7
	R += 10
;예속
SIF TALENT:8
	R += 20

;그외소질
;자위광
SIF TALENT:74
	R += 1
;섹스광
SIF TALENT:75
	R += 1
;애널광
SIF TALENT:76
	R += 1
;음유
SIF TALENT:77
	R += 1
;망신
SIF TALENT:86
	R += 2


;主人の매력
SIF TALENT:PLAYER:92
	R += 2
;主人の매혹
SIF TALENT:PLAYER:93
	R += 3
;主人の수수께끼의매력
SIF TALENT:PLAYER:94
	R += 5
;主人の치료
SIF TALENT:PLAYER:135
	R += 2
;主人の고무
SIF TALENT:PLAYER:136
	R += 2
;主人の인기
SIF TALENT:PLAYER:145
	R += 3



;의존도보정を加算
R += TFLAG:30

;결과が0미만の場合は0にする
SIF R < 0
	R = 0
SIF ASSIPLAY == 0
	CFLAG:2 += R
BASE:충성도 += LIMIT(R/2,1,10)
TCVAR:TARGET:획득충성도 += LIMIT(R/2,1,10)
;PRINTFORML 충성도 +{LIMIT(R/2,1,10)}

;好感度処理
CDFLAG:PLAYER:캐릭터간호감도:(CFLAG:TARGET:캐릭터고유번호 + 100) += LIMIT(R/2,1,10)
SIF PLAYER != MASTER && CFLAG:PLAYER:構ったフラグ == 0
	CDFLAG:PLAYER:캐릭터간호감도:(CFLAG:TARGET:캐릭터고유번호 + 100) += LIMIT(R/2,1,10)
CDFLAG:TARGET:캐릭터간호감도:(CFLAG:PLAYER:캐릭터고유번호 + 100) += LIMIT(R/2,1,10)
SIF PLAYER != MASTER && CFLAG:TARGET:構ったフラグ == 0
	CDFLAG:TARGET:캐릭터간호감도:(CFLAG:PLAYER:캐릭터고유번호 + 100) += LIMIT(R/2,1,10)

;IF R > 0
;	PRINTL <의존도증가>
;ELSE
;	PRINTL <의존도변화없음>
;ENDIF

IF ASSIPLAY
	TCVAR:TARGET:획득의존도 = 0
ELSE
	TCVAR:TARGET:획득의존도 = R
ENDIF

R = 0
TFLAG:30 = 0


RETURN 0



;의존도減少処理
@MASTER_DEPENDENCE_MINUS

R = 0

;ABL:순종をみる
R += ABL:0*2

;ABL:마조끼をみる
R += ABL:9

;난이도を見る
;EASY
IF FLAG:4 == 1
	R += 1
;NORMAL
ELSEIF FLAG:4 == 2
	R += 0
;HARD
ELSEIF FLAG:4 == 3
	R -= 1
ENDIF

;소질による増減
;함락소질
;연모
SIF TALENT:3
	R += 10
;친애
SIF TALENT:4
	R += 20
;음란
SIF TALENT:5 && GET_RELATION(TARGET, MASTER) > 100
	R += 3
;창부
SIF TALENT:6 && GET_RELATION(TARGET, MASTER) > 100
	R += 5
;복종
SIF TALENT:7
	R += 5
;예속
SIF TALENT:8
	R += 7

;그외소질
;자위광
SIF TALENT:74
	R += 1
;섹스광
SIF TALENT:75
	R += 1
;애널광
SIF TALENT:76
	R += 1
;음유
SIF TALENT:77
	R += 1
;새드
SIF TALENT:83
	R -= 1
;마조
SIF TALENT:84
	R += 1
;망신
SIF TALENT:86
	R += 2


;主人の매력
SIF TALENT:MASTER:92
	R += 2
;主人の매혹
SIF TALENT:MASTER:93
	R += 3
;主人の수수께끼의매력
SIF TALENT:MASTER:94
	R += 5
;主人の치료
SIF TALENT:MASTER:135
	R += 2
;主人の고무
SIF TALENT:MASTER:136
	R += 2
;主人の인기
SIF TALENT:MASTER:145
	R += 3


;의존도보정を加算
R += TFLAG:30

;결과が0미만の場合は0にする
SIF R < 0
	R = 0
SIF ASSIPLAY == 0 || 함락(TARGET)
	CFLAG:2 -= R
BASE:충성도 += LIMIT(R/2,1,10)
TCVAR:TARGET:획득충성도 += LIMIT(R/2,1,10)
;PRINTFORML 충성도 +{LIMIT(R/2,1,10)}

;好感度処理
IF PLAYER == MASTER && ( ABL:순종 + ABL:마조끼 >= LIMIT(R/2,1,20) || 복종(TARGET) || 예속(TARGET) )
	CDFLAG:PLAYER:캐릭터간호감도:(CFLAG:TARGET:캐릭터고유번호 + 100) += LIMIT(R/2,1,10)
	CDFLAG:TARGET:캐릭터간호감도:(CFLAG:PLAYER:캐릭터고유번호 + 100) += LIMIT(R/2,1,10)
ELSE
	CDFLAG:PLAYER:캐릭터간호감도:(CFLAG:TARGET:캐릭터고유번호 + 100) -= LIMIT(R/2,1,10)
	SIF PLAYER != MASTER && CFLAG:PLAYER:構ったフラグ == 0
		CDFLAG:PLAYER:캐릭터간호감도:(CFLAG:TARGET:캐릭터고유번호 + 100) -= LIMIT(R/2,1,10)
	CDFLAG:TARGET:캐릭터간호감도:(CFLAG:PLAYER:캐릭터고유번호 + 100) -= LIMIT(R/2,1,10)
	SIF PLAYER != MASTER && CFLAG:TARGET:構ったフラグ == 0
		CDFLAG:TARGET:캐릭터간호감도:(CFLAG:PLAYER:캐릭터고유번호 + 100) -= LIMIT(R/2,1,10)
ENDIF


;IF R > 0
;	PRINTL <의존도減少>
;ELSE
;	PRINTL <의존도변화無し>
;ENDIF

IF ASSIPLAY && !함락(TARGET)
	TCVAR:TARGET:획득의존도 = 0
ELSE
	TCVAR:TARGET:획득의존도 = -R
ENDIF

R = 0
TFLAG:30 = 0


RETURN 0



