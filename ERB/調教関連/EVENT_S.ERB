	IF LOCAL != MASTER && TALENT:LOCAL:바람기 == 0 && EXP:LOCAL:바람경험 >= 30 && CFLAG:LOCAL:放置日数 >= 20
		PRINTFORMW %조사처리(CALLNAME:LOCAL,"는")% 불장난에 빠져버린 모양이다
		SETCOLOR COLOR("붉은색")
		PRINTFORMW %조사처리(NAME:LOCAL,"는")% 【바람기】를 얻었다
		RESETCOLOR
		PRINTL 　
		DRAWLINE
		TALENT:LOCAL:바람기 = 1
	ENDIF
	;子宮現在容量が減少する処理
	IF CFLAG:LOCAL:子宮現在容量 <= 0
		
	ELSEIF CFLAG:LOCAL:子宮現在容量 <= 100
		CFLAG:LOCAL:子宮現在容量 = 0
	ELSE
		;一日の終了時、大幅に減る
		;ぽってぽてになってるのはそりゃあぶりゅぶりゅ出るわな。
		SELECTCASE CFLAG:LOCAL:子宮現在容量
			CASE IS <= 5000
				CFLAG:LOCAL:子宮現在容量 -= CFLAG:LOCAL:子宮現在容量 / 2
			CASE IS >= 20000
				CFLAG:LOCAL:子宮現在容量 -= CFLAG:LOCAL:子宮現在容量 / 4
			CASEELSE
				CFLAG:LOCAL:子宮現在容量 -= CFLAG:LOCAL:子宮現在容量 / 3
		ENDSELECT
		;固定で100は減る
		CFLAG:LOCAL:子宮現在容量 -= 100
	ENDIF
	SIF CFLAG:LOCAL:子宮現在容量 < 1
		CFLAG:LOCAL:子宮現在容量 = 0
NEXT

