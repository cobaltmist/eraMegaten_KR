		RETURN 0
ENDSELECT

;==============================
;개별 악기연습 실행 함수
;ARG - 연습자 캐릭번호
;ARG:1 - 연습하는 악기
;==============================
@PERSONAL_PRACTICE_EACH_INSTRUMENT_BY_MANUAL, ARG, ARG:1
#LOCALSIZE 6
#LOCALSSIZE 1
#DIM DYNAMIC 教授役 = -1
#DIM DYNAMIC 上昇量
#DIM DYNAMIC 仮횟수A
#DIM DYNAMIC 仮횟수B
#DIM DYNAMIC 수련횟수
;LOCAL = -1
$INPUT_PRACTICE_EACH_LOOP
IF BASE:ARG:체력 < 1000
	PRINTW 체력이 적어 연습할 수 없습니다
	教授役 = -1
	RETURN 0
ENDIF
IF 教授役 > -1
	IF BASE:教授役:체력 < 1000
		PRINTL 교수의 체력이 적어 교수할 수 없습니다
		教授役 = -1
		LOCAL = -1
	ENDIF
ENDIF
DRAWLINE
PRINT □
SELECTCASE ARG:1
	CASE 0
		LOCALS = 기타숙련도
		PRINTL 기타 연습
	CASE 1
		LOCALS = 베이스숙련도
		PRINTL 베이스 연습
	CASE 2
		LOCALS = 드럼숙련도
		PRINTL 드럼 연습
	CASE 3
		LOCALS = 그림그리기숙련도
		PRINTL 그림 연습
	CASE 4
		LOCALS = 키보드숙련도
		;야시오 루이일 경우 바이올린이다
		IF NO:ARG == 7929
			PRINTL 바이올린 연습
		ELSE
			PRINTL 키보드 연습
		ENDIF		
ENDSELECT
PRINTFORML 숙련도: {CFLAG:ARG:LOCALS}
PRINTFORML 체력 : {BASE:ARG:체력}
PRINTFORM [ 1] 교수선택
PRINTFORM 　교수:
IF 教授役 > -1
	PRINTFORML %CALLNAME:教授役%
ELSE
	PRINTL 없음
ENDIF
PRINTFORML [ 2] 연습실행　　 ※체력100소비
PRINTFORML [ 3] 연습 연속실행
PRINTL 
PRINTFORML [99] 돌아간다
INPUT
SELECTCASE RESULT
	CASE 1
	;교수 선정
		CALL INSTRUMENT_COACH, ARG, ARG:1
		教授役 = RESULT
	CASE 2
	;악기연습 내부공정
		IF BASE:ARG:체력 < 1000
			PRINTW 체력이 적어 연습할 수 없습니다
			教授役 = -1
		ELSEIF 教授役 > -1 && (BASE:教授役:체력 < 1000)
			PRINTL 교수의 체력이 적어 교수할 수 없습니다
			教授役 = -1
		ELSE
			上昇量 = 3
			IF 教授役 > -1
				IF RAND:2 == 0
					TIMES 上昇量, 2.50
				ELSE
					TIMES 上昇量, 2.00
				ENDIF
			ENDIF
			PRINTL □ 연습 실행
			PRINTFORML ○%CALLNAME:ARG%
			PRINTFORML  체력: {BASE:ARG:체력,4}　→　{BASE:ARG:체력 - 100}
			PRINTFORML 숙련도: {CFLAG:ARG:LOCALS,4}　→　{CFLAG:ARG:LOCALS + 上昇量}
			BASE:ARG:체력 -= 100
			CFLAG:ARG:LOCALS += 上昇量
			IF 教授役 > -1
				PRINTFORML ○%CALLNAME:教授役%
				PRINTFORML 체력: {BASE:教授役:체력,4}　→　{BASE:教授役:체력 - 50}
				BASE:教授役:체력 -= 50
				SIF ARG == MASTER
					CALL AFFECTION_BANGDREAM_UP, 教授役, 10
			ENDIF
			SIF CFLAG:ARG:LOCALS > 1000
				CFLAG:ARG:LOCALS = 1000
		ENDIF
		PRINTW
	CASE 3
	;악기연습 내부공정 체력800까지 연속 실행
		IF BASE:ARG:체력 < 1000
			PRINTW 체력이 적어 연습할 수 없습니다
			教授役 = -1
		ELSEIF 教授役 > -1 && (BASE:教授役:체력 < 1000)
			PRINTL 교수의 체력이 적어 교수할 수 없습니다
			教授役 = -1
		ELSE
			上昇量 = 0
			仮횟수A = (BASE:ARG:체력 / 100) - 9
			수련횟수 = 仮횟수A
			IF 教授役 > -1
				仮횟수B = (BASE:教授役:체력 / 50) - 18
				수련횟수 = MIN(仮횟수A, 仮횟수B)
			ENDIF
			FOR LOCAL:5, 0, 수련횟수
				上昇量 += 3
			NEXT
			IF 教授役 > -1
				TIMES 上昇量, 2.00
			ENDIF
			PRINTL □ 연습 실행
			PRINTFORML ○%CALLNAME:ARG%
			PRINTFORML 실행수: {수련횟수}
			PRINTFORML  체력: {BASE:ARG:체력,4}　→　{BASE:ARG:체력 - (100 * 수련횟수)}
			PRINTFORML 숙련도: {CFLAG:ARG:LOCALS,4}　→　{CFLAG:ARG:LOCALS + 上昇量}
			BASE:ARG:체력 -= (100 * 수련횟수)
			CFLAG:ARG:LOCALS += 上昇量
			SIF CFLAG:ARG:LOCALS > 1000
				CFLAG:ARG:LOCALS = 1000
			IF 教授役 > -1
				PRINTFORML ○%CALLNAME:教授役%
				PRINTFORML 체력: {BASE:教授役:체력,4}　→　{BASE:教授役:체력 - (50 * 수련횟수)}
				BASE:教授役:체력 -= (50 * 수련횟수)
				SIF ARG == MASTER
					CALL AFFECTION_BANGDREAM_UP, 教授役, 150
			ENDIF
			SIF CFLAG:ARG:LOCALS > 1000
				CFLAG:ARG:LOCALS = 1000
		ENDIF
		PRINTW
	CASE 99
		教授役 = -1
		RETURN 0
ENDSELECT
GOTO INPUT_PRACTICE_EACH_LOOP


