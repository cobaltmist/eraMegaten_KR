;-------------------------------------------------
;손가락츄파
;コミュ니케ション系コマンド、레벨1
;-------------------------------------------------
@CHECK_COM_ABLE31
SIF !USE_HAND(PLAYER)
	RETURN 0
RETURN 1

@ACT_COM31
PRINTL 손가락츄파
TSTR:0 = 손가락츄파
;CALL KOJO_MESSAGE_COM

;조교者←→조교대상
TFLAG:28 = 3

;-------------------------------------------------
;사정ゲージ체크（후타나리・남자の場合）
;-------------------------------------------------
B = 300

;ABL:조교者の기교をみる
IF ABL:2 == 0
	TIMES B , 1.00
ELSEIF ABL:2 == 1
	TIMES B , 1.20
ELSEIF ABL:2 == 2
	TIMES B , 1.40
ELSEIF ABL:2 == 3
	TIMES B , 1.60
ELSEIF ABL:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
ENDIF

;ABL:순종をみる
IF ABL:0 == 0
	TIMES B , 0.80
ELSEIF ABL:0 == 1
	TIMES B , 0.90
ELSEIF ABL:0 == 2
	TIMES B , 1.00
ELSEIF ABL:0 == 3
	TIMES B , 1.10
ELSEIF ABL:0 == 4
	TIMES B , 1.20
ELSE
	TIMES B , 1.30
ENDIF

;ABL:봉사정신をみる
IF ABL:7 == 0
	TIMES B , 0.50
ELSEIF ABL:7 == 1
	TIMES B , 0.80
ELSEIF ABL:7 == 2
	TIMES B , 1.20
ELSEIF ABL:7 == 3
	TIMES B , 1.50
ELSEIF ABL:7 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.40
ENDIF

;TALENT:혀놀림、고양이혀をみる
SIF TALENT:52 || TALENT:54
	TIMES B , 2.00

	LOCAL:99 = B
;플레이어のABL:Ｃ감각をみる
IF ABL:PLAYER:3 == 0
	TIMES B , 1.00
ELSEIF ABL:PLAYER:3 == 1
	TIMES B , 1.50
ELSEIF ABL:PLAYER:3 == 2
	TIMES B , 2.00
ELSEIF ABL:PLAYER:3 == 3
	TIMES B , 2.50
ELSEIF ABL:PLAYER:3 == 4
	TIMES B , 3.50
ELSE
	TIMES B , 5.00
ENDIF

;再装填処理中は사정ゲージは20分の1に
IF CFLAG:PLAYER:9 > 0
	B /= 20
	LOCAL:99 /= 20
ENDIF

SIF HAVE_PENIS(PLAYER)
	BASE:PLAYER:2 += B
SIF !IS_MALE(PLAYER)
	BASE:PLAYER:99 += LOCAL:99


;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 0
DOWNBASE:TARGET:기력 += 20

SOURCE:TARGET:정애 = 50
SOURCE:TARGET:성행위 = 10
SOURCE:TARGET:굴종 = 10
SOURCE:TARGET:일탈 = 10
SOURCE:TARGET:반감 = 10

;上のほうで計算した불결데이터
SOURCE:TARGET:불결 = Y*20 + 10


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 10

;舌を使う조교では、조교者の혀놀림によって、쾌感のソース증가
IF TALENT:PLAYER:52
	TIMES SOURCE:TARGET:정애 , 1.50
ENDIF

;고양이혀では減少
IF TALENT:PLAYER:54
	TIMES SOURCE:TARGET:정애 , 0.75
ENDIF


;-------------------------------------------------
;사정체크
;-------------------------------------------------

;사정先타입の설정
TCVAR:PLAYER:페니스사용대상 = TARGET
TCVAR:PLAYER:사정개소 = 14
;사정先選択の可・
TFLAG:704 = 1

;-------------------------------------------------
;불결の処理
;-------------------------------------------------
;奴隷の입⇔조교者の입の불결が移動
CALL MOVE_STAIN("입", TARGET, "손", PLAYER)




;-------------------------------------------------
;吸精処理
;-------------------------------------------------
IF CFLAG:PLAYER:ＭＡＧ非被흡수 == 0
	LOCAL = (RAND:7+1) * BASE:LV
	CALL DRAIN_MAG,PLAYER,LOCAL,TARGET
ELSEIF CFLAG:TARGET:ＭＡＧ非被흡수 == 0
	LOCAL = (RAND:7+1) * BASE:LV
	CALL DRAIN_MAG,TARGET,LOCAL,PLAYER
ENDIF


;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 3
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;키스경험
CALL ADDS_EXP("키스경험", 1, TARGET)
CALL ADDS_EXP("키스경험", 1, PLAYER)

;애정경험
IF (TALENT:연모 || TALENT:친애) && ASSIPLAY == 0
;	PRINTS EXPNAME:23
;	PRINTL +1
	CALL ADDS_EXP("애정경험", 1, TARGET)
;	PRINTFORML 애정경험(주인)＋１
	CALL ADDS_EXP("애정경험", 1, MASTER)
ENDIF

;奴隷が고양이혀持ちの場合は、조교者に가학쾌락경험を추가
IF TALENT:TARGET:54
	CALL ADDS_EXP("가학쾌락경험", 1, TARGET)
;	PRINTFORML %EXPNAME:32%＋１
ENDIF

;봉사쾌락フラグ
TFLAG:100 = 1

;의존도ベクトル
TFLAG:33 = 2

;의존도보정値(연모で1、친애で2）
IF TALENT:3 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:6 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1
;-------------------------------------------------
;実行판정処理
;-------------------------------------------------
@COM_ORDER_31, ARG, ARG:1
CALL ADD_COM_ORDER, "ABL", "욕망", 1, ARG, ARG:1
CALL ADD_COM_ORDER, "ABL", "봉사정신", 4, ARG, ARG:1
CALL ADD_COM_ORDER, "MARK", "쾌락각인", 2, ARG, ARG:1
CALL ADD_COM_ORDER, "PALAM", "욕정", 1, ARG, ARG:1
CALL ADD_COM_ORDER, "TALENT", "부끄럼쟁이", -1, ARG, ARG:1
CALL ADD_COM_ORDER, "TALENT", "악취둔감", 1, ARG, ARG:1
CALL ADD_COM_ORDER, "TALENT", "악취민감", -1, ARG, ARG:1
CALL ADD_COM_ORDER, "TALENT", "헌신적", 6, ARG, ARG:1
SIF !TALENT:ARG:음란 && !TALENT:ARG:창부
	CALL ADD_COM_ORDER, "TALENT", "쾌감을부정", -1, ARG, ARG:1
CALL ADD_COM_ORDER, "TALENT", "연모", 5, ARG, ARG:1
CALL ADD_COM_ORDER, "TALENT", "친애", 10, ARG, ARG:1
CALL ADD_COM_ORDER, "RELATION", , , ARG, ARG:1
;-------------------------------------------------
;実行値
;-------------------------------------------------
@COM_ORDER_NUM_31
RETURN 10

