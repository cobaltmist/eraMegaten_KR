;-------------------------------------------------
;사정기능개발
;-------------------------------------------------
@CHECK_COM_ABLE280

;클리가 사용 가능해야함
SIF !USE_CLI(TARGET)
	RETURN 0
;남자 또는 후타나리면 
SIF HAVE_PENIS(TARGET)
    RETURN 0
;Ｃ계 장착구 사용 중에는 
SIF TEQUIP:클리캡 || TEQUIP:오나홀 || TEQUIP:음핵전극 || TEQUIP:전극오나홀
    RETURN 0
;注射セットを持っているか, 아이템なし설정でないとダメ
SIF ITEM:주사기세트 == 0
    RETURN 0
;조교자의 기교가 4이상이 아니면 
SIF ABL:PLAYER:기교 < 4
    RETURN 0
;기교4이하의 ASSI일 경우注射できない(바늘다루기ならＯＫ)
IF ASSIPLAY
    SIF ABL:ASSI:기교 <= 4 && TALENT:ASSI:바늘다루기 == 0
        RETURN 0
ENDIF
;肥大陰核じゃないとダメ
SIF TALENT:비대음핵 == 0
    RETURN 0
;남자 또는 후타나리면 
SIF HAVE_PENIS(TARGET)
    RETURN 0
;기계면 
SIF TALENT:기계의처녀
    RETURN 0
;승마 중에는 
SIF TEQUIP:삼각목마
    RETURN 0
;욕실 플레이 중에는 
SIF TEQUIP:목욕탕
    RETURN 0
;촉수 조교 중에는 
SIF TEQUIP:촉수
    RETURN 0
;야외플레이 중에는 
SIF TEQUIP:야외플레이
    RETURN 0	
	
RETURN 1

@ACT_COM280

PRINTL 사정기능개발
TSTR:0 = 사정기능개발


;조교者→조교대상
TFLAG:28 = 2

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;조제 지식이 있으면 소비를 억제한다
LOCAL:3 = (TALENT:MASTER:조합지식) ?  1 # 0
SIF ASSI >= 0 && TALENT:ASSI:조합지식
    LOCAL:3 = 1

LOCAL:1 = (LOCAL:3) ?  750 # 1000
LOCAL:2 = (LOCAL:3) ?  600 # 800

DOWNBASE:체력 += LOCAL:1
DOWNBASE:기력 += LOCAL:2

SOURCE:중독충족 = 500
SOURCE:불결 = 10000
SOURCE:일탈 = 20000

;ABL:조교자의 기교를 본다
IF ABL:PLAYER:기교 == 4
    SOURCE:쾌Ｃ = 5000
ELSEIF ABL:PLAYER:기교 >= 5
    SOURCE:쾌Ｃ = 2000
ENDIF

;ABL:순종을 본다
IF ABL:Ｃ감각 == 0
    SOURCE:일탈 += 10000
ELSEIF ABL:Ｃ감각 == 1
    SOURCE:일탈 += 8000
ELSEIF ABL:Ｃ감각 == 2
    SOURCE:일탈 += 6000
ELSEIF ABL:Ｃ감각 == 3
    SOURCE:일탈 += 4000
ELSEIF ABL:Ｃ감각 == 4
    SOURCE:일탈 += 2000
ELSE
    SOURCE:일탈 += 500
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------

;-------------------------------------------------
;불결の処理
;-------------------------------------------------
IF TEQUIP:PLAYER:손 == 401 || TEQUIP:PLAYER:손 == 404 || TEQUIP:PLAYER:손 == 405 || TEQUIP:PLAYER:손 == 407 || TEQUIP:PLAYER:손 == 412 || TEQUIP:PLAYER:손 == 414
	CALL MOVE_STAIN("바기나", TARGET, "장갑", PLAYER)
ELSE
	CALL MOVE_STAIN("바기나", TARGET, "손", PLAYER)
ENDIF
;-------------------------------------------------
;吸精処理
;-------------------------------------------------
IF CFLAG:PLAYER:ＭＡＧ비피흡수 == 0
	LOCAL = (RAND:4+1) * BASE:LV
	CALL DRAIN_MAG,PLAYER,LOCAL,TARGET
ELSEIF CFLAG:TARGET:ＭＡＧ비피흡수 == 0
	LOCAL = (RAND:4+1) * BASE:LV
	CALL DRAIN_MAG,TARGET,LOCAL,PLAYER
ENDIF


;-------------------------------------------------
;경험の処理
;-------------------------------------------------

;의존도ベクトル
TFLAG:33 = 3

IF !IS_MALE(TARGET) && !IS_MALE(PLAYER)
    TCVAR:획득레즈경험 += 1
ELSEIF IS_MALE(TARGET) && IS_MALE(PLAYER)
    TCVAR:획득ＢＬ경험 += 1
ENDIF



;-------------------------------------------------
;実行決定
;-------------------------------------------------
IF ABL:PLAYER:기교 >= 5 || ABL:순종 >= 5
	IF TALENT:Ｃ민감
		TFLAG:사정개발실패 = RAND:2
	ELSEIF TALENT:Ｃ둔감
		TFLAG:사정개발실패 = RAND:6
	ELSE
		TFLAG:사정개발실패 = RAND:4
	ENDIF
ELSE
	TFLAG:사정개발실패 = RAND:8
ENDIF
SIF ITEM:14 && (TALENT:PLAYER:새드 || ABL:PLAYER:새드끼 > 2) && TFLAG:사정개발실패 > 0
	TFLAG:사정개발실패 -= 1

IF TFLAG:사정개발실패 == 0
	;이상 경험
	CALL ADDS_ABNORMAL_EXP("사정기능개발", TARGET)
	TALENT:후타나리 = 1
	TALENT:비대음핵 = 0
	BASE:음핵 = 0
	PRINTFORMW %조사선택(CALLNAME:TARGET, "는")% [후타나리]가 되었다.
	IF (CFLAG:음핵성장 & 8) == 0
		CFLAG:음핵성장 |= 8
	ENDIF
	TEQUIP:음핵성장제 = 0
ENDIF
	
RETURN 1

;--------------------------------------------------
;조교시 메시지
;--------------------------------------------------
@MESSAGE_COM280
PRINTL
PRINTFORML %조사선택(CALLNAME:PLAYER, "는")% 이상한 물약이 들어간 주사기로
PRINTFORMW %CALLNAME:TARGET%의 클리토리스로부터 정액이 나오게 했다….
PRINTL
IF TFLAG:사정개발실패 == 0
    PRINTFORMW 이상한 약이 효과가 있었는지 %CALLNAME:TARGET%의 클리토리스로부터 정액이 나오게 되었다.
ELSE
    PRINTFORMW 기교가 부족한 것인지, %CALLNAME:TARGET%의 음핵을 개발 할 수 없었다….
ENDIF

;===================================================
;조교타입
;===================================================
@COMTYPE_280
RETURN COMTYPE("특수커맨드계")

