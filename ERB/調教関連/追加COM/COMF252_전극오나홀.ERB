;-------------------------------------------------
;전극오나홀
;道具사용コマンド、레벨2
;-------------------------------------------------
@CHECK_COM_ABLE252
;오나홀実行판정
;촉수조교中はダメ
SIF TEQUIP:25
	RETURN 0

;해제はいつでも가능
SIF TEQUIP:전극오나홀
	RETURN 1

;奴隷が복종か예속でないとダメ
SIF TALENT:5 == 0 && TALENT:8 == 0 && TALENT:("함락내역(예속)") == 0
	RETURN 0


;아이템を持っているか、아이템なし설정でないとダメ
SIF !EXIST_ITEM(24)
	RETURN 0

;소인체형持ちは、双方が조교자と조교대상ならOK
;それ以外の場合は主人が금단의지식持ちじゃないとダメ
SIF TALENT:142 && (TALENT:MASTER:144 == 0 && TALENT:PLAYER:142 == 0)
	RETURN 0

SIF !USE_PENIS(TARGET)
	RETURN 0

;ASSIの場合、기교3이상じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:2 < 3
		RETURN 0
ENDIF

;새댁플레이中はダメ
SIF TEQUIP:33
	RETURN 0
	
RETURN 1

@COMNAME252
IF TEQUIP:전극오나홀 == 1
	RESULTS = 전극오나홀해제
ELSE
	RESULTS = 전극오나홀부착
ENDIF

@ACT_COM252
#LOCALSSIZE 1
CALL COMNAME252
LOCALS = %RESULTS%
PRINTFORML %LOCALS%



;着脱の処理
IF TEQUIP:전극오나홀 == 0
	TEQUIP:전극오나홀 = 1
ELSE
	TEQUIP:전극오나홀 = 0
ENDIF

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 20
DOWNBASE:TARGET:기력 += 160
SOURCE:노출 = 120
SOURCE:일탈 = 470

;ABL:C감각을 본다
IF ABL:Ｃ감각 == 0
    SOURCE:쾌Ｃ = 500
    SOURCE:아픔 = 1000
ELSEIF ABL:Ｃ감각 == 1
    SOURCE:쾌Ｃ = 1000
    SOURCE:아픔 = 1000
ELSEIF ABL:Ｃ감각 == 2
    SOURCE:쾌Ｃ = 2250
    SOURCE:아픔 = 1000
ELSEIF ABL:Ｃ감각 == 3
    SOURCE:쾌Ｃ = 4000
    SOURCE:아픔 = 1200
ELSEIF ABL:Ｃ감각 == 4
    SOURCE:쾌Ｃ = 6000
    SOURCE:아픔 = 1500
ELSE
    SOURCE:쾌Ｃ = 7500
    SOURCE:아픔 = 1800
ENDIF


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 30

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;의존도ベクトル
TFLAG:33 = 5


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM252
IF TEQUIP:25
	PRINTL ＜전극오나홀 장비중＞
ENDIF


;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:TARGET:체력 += 10
DOWNBASE:TARGET:기력 += 40

;ABL:C감각을 본다
IF ABL:Ｃ감각 == 0
    LOCAL = 100
    LOCAL:1 = 1000
ELSEIF ABL:Ｃ감각 == 1
    LOCAL = 300
    LOCAL:1 = 1000
ELSEIF ABL:Ｃ감각 == 2
    LOCAL = 625
    LOCAL:1 = 1000
ELSEIF ABL:Ｃ감각 == 3
    LOCAL = 1125
    LOCAL:1 = 1200
ELSEIF ABL:Ｃ감각 == 4
    LOCAL = 1500
    LOCAL:1 = 1500
ELSE
    LOCAL = 1875
    LOCAL:1 = 1800
ENDIF

;PALAM:욕정을 본다
IF PALAM:욕정 < PALAMLV:1
    TIMES LOCAL , 0.80
ELSEIF PALAM:욕정 < PALAMLV:2
    TIMES LOCAL , 0.90
ELSEIF PALAM:욕정 < PALAMLV:3
    TIMES LOCAL , 1.00
ELSEIF PALAM:욕정 < PALAMLV:4
    TIMES LOCAL , 1.10
ELSE
    TIMES LOCAL , 1.20
ENDIF

;ABL:순종을 본다
IF ABL:순종 == 0
    TIMES LOCAL , 0.80
ELSEIF ABL:순종 == 1
    TIMES LOCAL , 0.90
ELSEIF ABL:순종 == 2
    TIMES LOCAL , 1.00
ELSEIF ABL:순종 == 3
    TIMES LOCAL , 1.10
ELSEIF ABL:순종 == 4
    TIMES LOCAL , 1.20
ELSE
    TIMES LOCAL , 1.30
ENDIF
RETURN 1

