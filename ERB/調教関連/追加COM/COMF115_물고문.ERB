@ACT_COM115
PRINTL 물고문
TSTR:0 = 물고문
;CALL KOJO_MESSAGE_COM

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 5
DOWNBASE:TARGET:기력 += 50


SOURCE:TARGET:아픔 = 200
SOURCE:TARGET:무서움 = 4000
SOURCE:TARGET:일탈 = 500
SOURCE:TARGET:반감 = 1000

IF EXP:방뇨경험 >= 400 && TALENT:오줌싸개버릇 == 1 && ABL:마조끼 >= 5 && ABL:노출증 >= 4
    SOURCE:욕정 += 500
    SOURCE:노출 *= 2
ELSEIF EXP:방뇨경험 >= 100
    SOURCE:굴종 *= 2
ELSEIF EXP:방뇨경험 >= 10
    SOURCE:굴종 *= 2
    SOURCE:무서움 *= 3
    SOURCE:반감 *= 2
ELSEIF EXP:방뇨경험 >= 1
    SOURCE:노출 *= 2
    SOURCE:아픔 *= 1
    SOURCE:굴종 *= 3
    SOURCE:무서움 *= 4
    SOURCE:반감 *= 2
ELSEIF EXP:방뇨경험 == 0
    SOURCE:노출 *= 3
    SOURCE:굴종 *= 4
    SOURCE:무서움 *= 5
    SOURCE:반감 *= 3
ENDIF
;노예의 입의 더러움이 없어진다
STAIN:입 = 0

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;A경험
CALL ADDS_EXP("Ａ경험", 2, TARGET)
;PRINTL Ａ경험＋２

;레즈경험
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF


;의존도ベクトル
TFLAG:33 = 5

IF TEQUIP:이뇨제 == 1
	TEQUIP:이뇨제 = 2
ELSEIF TEQUIP:이뇨제 == 0
	TEQUIP:이뇨제 = 3
ELSE
	TEQUIP:이뇨제 = 4
ENDIF

RETURN 1


