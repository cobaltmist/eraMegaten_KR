;-------------------------------------------------
;클리로터
;道具사용コマンド、레벨2
;-------------------------------------------------
@CHECK_COM_ABLE256
;기본적으론 클리캡과 같음.
;클리캡 장착중엔 안됨
SIF TEQUIP:클리캡
	RETURN 0

;촉수조교中はダメ
SIF TEQUIP:25
	RETURN 0

;아이템を持っているか、아이템なし설정でないとダメ
SIF !EXIST_ITEM(29)
	RETURN 0

;해제はいつでも가능
SIF TEQUIP:클리로터
	RETURN 1


;소인체형持ちは、双方が조교자と조교대상ならOK
;それ以外の場合は主人が금단의지식持ちじゃないとダメ
SIF TALENT:142 && (TALENT:MASTER:144 == 0 && TALENT:PLAYER:142 == 0)
	RETURN 0

SIF !USE_CLI(TARGET)
	RETURN 0

;ASSIの場合、기교3이상じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:2 < 3
		RETURN 0
ENDIF
;샤워中はダメ
SIF TEQUIP:32
	RETURN 0
RETURN 1

@COMNAME256
IF TEQUIP:클리로터 == 1
	RESULTS = 클리로터해제
ELSE
	RESULTS = 클리로터부착
ENDIF

@ACT_COM256
#LOCALSSIZE 1
CALL COMNAME256
LOCALS = %RESULTS%
PRINTFORML %LOCALS%



;着脱の処理
IF TEQUIP:클리로터 == 0
	TEQUIP:클리로터 = 1
ELSE
	TEQUIP:클리로터 = 0
	SIF TEQUIP:그외 == 1199
		TEQUIP:그외 = 0
	SIF TEQUIP:그외2 == 1199
		TEQUIP:그외2 = 0
	SIF TEQUIP:그외3 == 1199
		TEQUIP:그외3 = 0
	SIF TEQUIP:그외4 == 1199
		TEQUIP:그외4 = 0
	SIF TEQUIP:그외5 == 1199
		TEQUIP:그외5 = 0
	SIF TEQUIP:그외6 == 1199
		TEQUIP:그외6 = 0
ENDIF

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 10
DOWNBASE:TARGET:기력 += 80

SOURCE:TARGET:도구쾌Ｃ = 140
SOURCE:TARGET:노출 = 20
SOURCE:TARGET:일탈 = 30
SOURCE:TARGET:반감 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 30

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;의존도ベクトル
TFLAG:33 = 1


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM256
IF TEQUIP:25
	PRINTL ＜클리에 로터 장비중＞
ENDIF


;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:TARGET:체력 += 5
DOWNBASE:TARGET:기력 += 20

SOURCE:TARGET:도구쾌Ｃ += 66
SOURCE:TARGET:노출 += 10
SOURCE:TARGET:일탈 += 15
SOURCE:TARGET:반감 += 15


RETURN 1

;===================================================
;조교타입
;===================================================
@COMTYPE_256
RETURN COMTYPE("도구계")


@MESSAGE_COM256
;装着時
IF TEQUIP:클리로터
	PRINTFORM %CALLNAME:TARGET%의 
	;욕정のPALAMLV3이상
	IF PALAM:6 >= PALAMLV:3 
		IF TALENT:클리피어스 || TEQUIP:속옷（하） == 620
			PRINT 흥분하여 딱딱하게 솟아오른 클리토리스를 장식하는 피어스에 진동하는 로터를 연결하였다
		ELSEIF PALAM:6 >= PALAMLV:3	&& TALENT:비대음핵
			PRINT 마치 페니스와 같이 딱딱하게 솟아오른 커다란 클리토리스 양쪽에 로터를 대고 테이프로 고정하였다 
		ELSE 
			PRINT 딱딱하게 솟아올라 존재를 주장하는 클리토리스위에 로터를 누른채로 테이프로 고정하였다
		ENDIF
	;욕정 낮음
	ELSE
		IF TALENT:클리피어스 || TEQUIP:속옷（하） == 620
			PRINT 숨어있는 클리토리스를 끄집어 내듯 매달리 피어스에 진동하는 로터를 연결하였다
		ELSEIF TALENT:비대음핵
			PRINT 비순을 가리듯 드리워진 커다란 클리토리스 양쪽에 로터를 대고 테이프로 고정하였다 
		ELSE 
			PRINT 비순에 숨어있는 클리토리스 위에 로터를 지긋이 누른채로 테이프로 고정하였다
		ENDIF
	ENDIF
	PRINTFORML 로터에서 늘어진 줄 끝에 달린 분홍색 스위치의 강도를 올린 뒤 
	IF TEQUIP:로터 || TEQUIP:애널로터
		PRINT 다른 스위치 옆에 나란히 고정시켰다
	ELSEIF TEQUIP:양말 == 803
		PRINT 허벅지까지 올라온 양말에 끼워 넣었다
	ELSEIF TEQUIP:양말 == [[衣装:가터스타킹]]
		PRINT 스타킹에 끼워 넣어 고정시켰다
	ELSE
		PRINT 허벅지에 벨트로 고정시켰다
	ENDIF
ELSE
	PRINTFORM %CALLNAME:TARGET%의 허벅지에서 스위치를 잡아당겨 줄 끝에 
	IF TALENT:클리피어스 || TEQUIP:속옷（하） == 620
		PRINT 피어스에 매달린채 진동하는 로터를 떼어냈다
	ELSEIF TALENT:비대음핵
		PRINT 페니스와 같이 발기한채 흔들리는 커다란 클리토리스에서 테이프채로 로터를 뜯어냈다 
	ELSE 
		PRINT 클리토리스를 자극하는 로터를 테이프 채 떼어냈다
	ENDIF
ENDIF
