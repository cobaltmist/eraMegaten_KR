;-------------------------------------------------
;유두캡
;道具사용コマンド、레벨2
;-------------------------------------------------
@CHECK_COM_ABLE257
;촉수조교中はダメ
SIF TEQUIP:25
	RETURN 0

;해제はいつでも가능
SIF TEQUIP:유두로터
	RETURN 1
	
;아이템を持っているか、아이템なし설정でないとダメ
SIF !EXIST_ITEM(29)
	RETURN 0

SIF !USE_NIPLE(TARGET)
	RETURN 0

	
;ASSIの場合、기교3이상じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:2 < 3
		RETURN 0
ENDIF
;샤워中はダメ
SIF TEQUIP:32
	RETURN 0
RETURN 1

@COMNAME257
IF TEQUIP:유두로터 == 1
	RESULTS = 유두로터해제
ELSE
	IF TALENT:확장유두
		RESULTS = 유두로터삽입
	ELSE
		RESULTS = 유두로터부착
	ENDIF
ENDIF

@ACT_COM257
#LOCALSSIZE 1
CALL COMNAME257
LOCALS = %RESULTS%
PRINTFORML %LOCALS%

;着脱の処理
IF TEQUIP:유두로터 == 0
	TEQUIP:유두로터 = 1
ELSE
	TEQUIP:유두로터 = 0
	SIF TEQUIP:그외 == 1200
		TEQUIP:그외 = 0
	SIF TEQUIP:그외2 == 1200
		TEQUIP:그외2 = 0
	SIF TEQUIP:그외3 == 1200
		TEQUIP:그외3 = 0
	SIF TEQUIP:그외4 == 1200
		TEQUIP:그외4 = 0
	SIF TEQUIP:그외5 == 1200
		TEQUIP:그외5 = 0
	SIF TEQUIP:그외6 == 1200
		TEQUIP:그외6 = 0
ENDIF



;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 10
DOWNBASE:TARGET:기력 += 80

SOURCE:TARGET:도구쾌Ｂ = 140
SOURCE:TARGET:노출 = 20
SOURCE:TARGET:일탈 = 30
SOURCE:TARGET:반감 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 30

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;촉수소환時、촉수경험の리셋をする
;SIF TEQUIP:25 == 1
;	T = 0

;의존도ベクトル
TFLAG:33 = 1


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM257
;유두캡장비中
IF TALENT:확장유두
	PRINTL ＜유두에 로터 삽입중＞
ELSE
	PRINTL ＜유두에 로터 장비중＞
ENDIF

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:TARGET:체력 += 5
DOWNBASE:TARGET:기력 += 20

SOURCE:TARGET:도구쾌Ｂ += 66
SOURCE:TARGET:노출 += 10
SOURCE:TARGET:일탈 += 15
SOURCE:TARGET:반감 += 15

RETURN 1

;===================================================
;조교타입
;===================================================
@COMTYPE_257
RETURN COMTYPE("도구계")

@MESSAGE_COM257
;装着時
IF TEQUIP:클리로터
	PRINTFORM %CALLNAME:TARGET%의 
	PRINT 유두에 
	IF TALENT:유두피어스 || TEQUIP:속옷（상） == [[衣装:니플피어스]]
		PRINT 딱딱하게 솟아올라 클리토리스를 장식하는 피어스에 진동하는 로터를 연결하였다
	ELSEIF TALENT:확장유두
		PRINT 자기도 몰래 뻐끔거리는 듯한 양 유두에 각각 로터를 하나씩 밀어 넣곤 빠지지 않도록 고무줄로 유두를 묶어 고정하였다 
		PRINTL 로터에 연결된 줄이 마치 유두에서 넘쳐 나오는 듯 하다 
	ELSE 
		IF TALENT:모유체질 && EX:분유 > 0
			PRINT 모유가 방울져 떨어지는 
		ELSEIF PALAM:6 >= PALAMLV:3 
			PRINT 딱딱하게 솟아올라 흔들리는 
		ENDIF
		PRINT 각 유두 양쪽에 로터를 테이프로 고정하였다
	ENDIF
	
	PRINTFORML 로터에서 늘어진 줄 끝에 달린 분홍색 스위치의 강도를 올린 뒤 
	IF TEQUIP:손 == [[衣装:소매]]
		PRINT 양팔의 소매 고정부에 끼워 넣었다
	ELSEIF TEQUIP:손 == [[衣装:롱글로브]]
		PRINT 팔까지 이어진 장갑의 입구에 끼워넣었다
	ELSE
		PRINT 팔뚝에 벨트로 고정시켰다
	ENDIF
ELSE
	PRINTFORM %CALLNAME:TARGET%의 
	IF TALENT:유두피어스 || TEQUIP:속옷（상） == [[衣装:니플피어스]]
		PRINT 유두 피어스에 매달린채 진동하는 로터를 떼어냈다
	ELSEIF TALENT:확장유두
		PRINT 고무줄을 풀고는 유두에서 늘어진 줄을 잡아당겨 묘하게 번들거리는 로터를 뽑아 냈다 
	ELSE 
		PRINT 팔에서 스위치를 잡아채어 양유두를 자극하는 로터를 테이프 채 떼어냈다
	ENDIF
ENDIF