A = RAND:2

;CALL KOJO_MESSAGE_COM
;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
;소비체력、기력
LOSEBASE:0 += 10
LOSEBASE:1 += 100

SOURCE:8 = 500
SOURCE:13 = 400
SOURCE:17 = 600
SOURCE:18 = 200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 20

;고통を伴わない마조끼及び마조の伴う処理は先にしておく
;마조끼を見る
IF ABL:9 == 0
	TIMES SOURCE:13 , 0.80
	SOURCE:10 += 0
	SOURCE:11 += 0
ELSEIF ABL:9 == 1
	TIMES SOURCE:13 , 1.00
	SOURCE:10 += 20
	SOURCE:11 += 30
ELSEIF ABL:9 == 2
	TIMES SOURCE:13 , 1.20
	SOURCE:10 += 40
	SOURCE:11 += 70
ELSEIF ABL:9 == 3
	TIMES SOURCE:13 , 1.40
	SOURCE:10 += 70
	SOURCE:11 += 120
ELSEIF ABL:9 == 4
	TIMES SOURCE:13 , 1.50
	SOURCE:10 += 110
	SOURCE:11 += 180
ELSEIF ABL:9 == 5
	TIMES SOURCE:13 , 1.70
	SOURCE:10 += 150
	SOURCE:11 += 250
ELSEIF ABL:9 == 6
	TIMES SOURCE:13 , 1.90
	SOURCE:10 += 200
	SOURCE:11 += 300
ELSEIF ABL:9 == 7
	TIMES SOURCE:13 , 2.10
	SOURCE:10 += 250
	SOURCE:11 += 350
ELSEIF ABL:9 == 8
	TIMES SOURCE:13 , 2.30
	SOURCE:10 += 300
	SOURCE:11 += 400
ELSEIF ABL:9 == 9
	TIMES SOURCE:13 , 2.50
	SOURCE:10 += 350
	SOURCE:11 += 450
ELSEIF ABL:9 >= 10
	TIMES SOURCE:13 , 3.00
	SOURCE:10 += 500
	SOURCE:11 += 500
ENDIF

;마조を見る
IF TALENT:84 == 1
	TIMES SOURCE:13 , 2.50
	TIMES SOURCE:10 , 1.20
	TIMES SOURCE:11 , 1.20
ENDIF


SIF A == 0
	TEQUIP:46 = 1

;의존도ベクトル
TFLAG:33 = 5

RETURN 1

