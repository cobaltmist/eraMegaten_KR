		IF IS_MALE(TARGET)
			LOCAL:2 += SPOILER_PRINT_FLAG("ＢＬ끼3+중독",  (ABL:레즈끼 >= 3 && ABL:레즈중독) || (ABL:ＢＬ끼 >= 3 && ABL:ＢＬ중독))
		ELSE
			LOCAL:2 += SPOILER_PRINT_FLAG("레즈끼3+중독",  (ABL:레즈끼 >= 3 && ABL:레즈중독) || (ABL:ＢＬ끼 >= 3 && ABL:ＢＬ중독))
