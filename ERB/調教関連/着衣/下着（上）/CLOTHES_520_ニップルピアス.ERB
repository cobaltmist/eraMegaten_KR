@CLOTHES_NAME_520
RESULTS = 니플피어스

;노출部位
@CLOTHES_EXPOSE_520,ARG
;ARG = 노출する部位
;1 = 팔노출 2 = 발노출 3 = 다리노출 4 = 유방노출 5 = 유두노출 6 = ヘソ노출 7 = 음순노출 8 = 둔부노출
SELECTCASE ARG
	CASE 0
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;장비部位
@CLOTHES_PART_520
RETURN 5

;옷の前が開くか
;1 開けられる、2 開きっぱなし
@CLOTHES_OPENFRONT_520
RETURN 0

;가랑이の구조
;1 = 바지、2 = ビキニ타입、3 = 스커트、4 = 穴開き、5 앞열림、6 開閉가능
@CLOTHES_CROTCH_520
RETURN 0

;장비時の조교効果
@CLOTHES_SOURCE_520,ARG
IF FLAG:SHOPコマンド == 0
	SOURCE:ARG:아픔 += 25
	IF ARG == TARGET
		DOWNBASE:0 += 10
		DOWNBASE:1 += 10
	ENDIF
	IF SOURCE:ARG:쾌Ｂ > 0
		TIMES SOURCE:ARG:쾌Ｂ , 1.20
		IF ARG == TARGET
			TIMES DOWNBASE:ARG:0 , 1.30
			TIMES DOWNBASE:ARG:1 , 1.10
		ENDIF
	ENDIF
ELSE

ENDIF

;장비時の경험추가
@CLOTHES_EXP_520,ARG
IF FLAG:SHOPコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <니플피어스착용중>\@ ARG == MASTER ? (주인) #\@\@ ARG == ASSI ? (조수) #\@
	IF TCVAR:ARG:획득고통쾌락경험
		TCVAR:ARG:획득고통쾌락경험 += MAX(TCVAR:ARG:획득고통쾌락경험*140/100 , 1)
		SIF ARG == TARGET
			TIMES DOWNBASE:ARG:1 , 1.10
	ENDIF
ELSE

ENDIF


;장비するための조건
@CLOTHES_PREREQUISITE_520,ARG
SIF ARG == MASTER
	RETURN 1
SIF MARK:ARG:고통각인 < 3
	RETURN 0
SIF ABL:ARG:순종 >= 3
	RETURN 1
SIF ABL:ARG:마조끼 >= 2
	RETURN 1
RETURN 0

@CLOTHES_PRICE_520
RETURN 1500
