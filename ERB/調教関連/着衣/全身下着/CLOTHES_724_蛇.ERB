@CLOTHES_NAME_724
RESULTS = 뱀

;노출부위
@CLOTHES_EXPOSE_724,ARG
;ARG = 노출되는부위
;1 = 팔노출 2 = 발노출 3 = 다리노출 4 = 유방노출 5 = 유두노출 6 = 배꼽노출 7 = 음순노출 8 = 둔부노출
SELECTCASE ARG
	CASE 5
		RETURN 0
	CASE 7
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;장비부위
@CLOTHES_PART_724
RETURN 7

;옷의 앞쪽이 열리는가
;1 열 수 있다、2 열린 채
@CLOTHES_OPENFRONT_724
RETURN 1

;胸の構造
; 0:開けられない 1:ボタン式 2:チャック式 4:上からこんにちは 8:たくしあげてこんにちは 16:기모노など、合わせる衣装 32:前から差し込めそうな穴 64:입元-胸元間にペニス入るスペース（ビット演算）
@CLOTHES_BREAST_724
RETURN 12

;고간의구조
;1 = 바지、2 = 비키니타입、3 = 스커트、4 = 구멍뚫림、5 앞열림、6 개폐가능
@CLOTHES_CROTCH_724
RETURN 2

;장비시의 조교효과
@CLOTHES_SOURCE_724,ARG = -1
SIF ARG == -1
	RETURN 0
SOURCE:ARG:무서움 += 100

;장비시의 경험추가
@CLOTHES_EXP_724,ARG = -1
IF FLAG:SHOP커맨드 == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <뱀착용중>\@ ARG == MASTER ? (주인) #\@\@ ARG == ASSI ? (조수) #\@
	CALL ADDS_EXP("긴박경험", 1, ARG)
	IF ARG == TARGET
		DOWNBASE:기력 += 10
	ENDIF
ELSE

ENDIF

;装備するための条件
@CLOTHES_PREREQUISITE_724,ARG
;뱀を体に巻けと言われて従うやつがいるだろうか…
SIF ABL:ARG:순종 >= 3
	RETURN 1
SIF ARG == MASTER
	RETURN 1
RETURN 0

