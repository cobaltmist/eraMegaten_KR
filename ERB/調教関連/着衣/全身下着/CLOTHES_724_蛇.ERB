@CLOTHES_CROTCH_724
RETURN 6

;장비時の조교効果
@CLOTHES_SOURCE_724,ARG = -1
SIF ARG == -1
	RETURN 0
SOURCE:ARG:무서움 += 100

;장비時の경험추가
@CLOTHES_EXP_724,ARG = -1
IF FLAG:SHOP커맨드 == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <蛇着用中>\@ ARG == MASTER ? (主人) #\@\@ ARG == ASSI ? (조수) #\@
	CALL ADDS_EXP("긴박경험", 1, ARG)
	IF ARG == TARGET
		DOWNBASE:기력 += 10
	ENDIF
ELSE

ENDIF

;장비するための조건
@CLOTHES_PREREQUISITE_724,ARG
;蛇を体に巻けと言われて従うやつがいるだろうか…
