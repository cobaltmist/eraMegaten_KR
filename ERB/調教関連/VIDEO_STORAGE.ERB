;==============================
;비디오 행위커맨드 저장 함수
;ARG - 결정된 비디오 슬롯번호(0번 ~ 9번)
;==============================
@VIDEO_SAVING, ARG
#LOCALSIZE 2
#LOCALSSIZE 2
#DIM DYNAMIC V_COUNT

;cdflag
;10번 - 1번 비디오 (0번 슬롯)
;11번 - 2번 비디오 (1번 슬롯)
;12번 - 3번 비디오 (2번 슬롯)
;13번 - 4번 비디오 (3번 슬롯)
;14번 - 5번 비디오 (4번 슬롯)
;15번 - 6번 비디오 (5번 슬롯)
;16번 - 7번 비디오 (6번 슬롯)
;17번 - 8번 비디오 (7번 슬롯)
;18번 - 9번 비디오 (8번 슬롯)
;19번 - 10번 비디오 (9번 슬롯)

;cstr
;100번 - 1번 비디오명
;101번 - 2번 비디오명
;102번 - 3번 비디오명
;103번 - 4번 비디오명
;104번 - 5번 비디오명
;105번 - 6번 비디오명
;106번 - 7번 비디오명
;107번 - 8번 비디오명
;108번 - 9번 비디오명
;109번 - 10번 비디오명

;저장하기 전에 해당 슬롯의 모든 저장공간에 더미 넣기
FOR V_COUNT, 0, 10
	CDFLAG:TARGET:(ARG + 10):V_COUNT = -1
NEXT

;비디오 타이틀명 저장
CSTR:TARGET:(ARG + 100) = %TSTR:4%
;비디오 행위커맨드 저장
FOR V_COUNT, 0, TFLAG:70
	CDFLAG:TARGET:(ARG + 10):V_COUNT = TCVAR:(110 + V_COUNT)
NEXT


;==============================
;비디오 제목(타이틀) 정하는 함수
;==============================
;PRICE_VIDEO 실행(조교중에 실행되거나, 혹은 조교가 끝난 뒤 실행된다) → 【PRICE_VIDEO 함수 내부】TFLAG:39 = 0, TFLAG:48 = 1 변수 조정
;→ 비디오 제목 결정
;==============================
@VIDEO_TITLE_NAMING
#LOCALSIZE 2
#LOCALSSIZE 2

TSTR:4 = 
SELECTCASE RAND:10
	CASE 0
		;朝
		IF TIME == 0
			TSTR:4 += "아침의 "
		;昼
		ELSEIF TIME == 1
			TSTR:4 += "대낮의 "
		;夕
		ELSEIF TIME == 2
			TSTR:4 += "황혼의 "
		;夜
		ELSE
			TSTR:4 += "한밤중의 "
		ENDIF
	CASE 1
		IF TALENT:TARGET:연모 || TALENT:TARGET:친애
			TSTR:4 += "사랑의 "
		ELSEIF TALENT:TARGET:음란 || TALENT:TARGET:창부
			TSTR:4 += "음란 "
		ELSEIF TALENT:TARGET:복종 || TALENT:TARGET:예속
			TSTR:4 += "예속 "
		ELSE
			TSTR:4 += "노예 "
		ENDIF
	CASE 2
		TSTR:4 += "붙잡힌 "
	CASE 3
		TSTR:4 += "음옥의 "
	CASE 4
		TSTR:4 += "더럽혀진 "
	CASE 5
		TSTR:4 += "애수의 "
	CASE 6
		TSTR:4 += "범해진 "
	CASE 7
		TSTR:4 += "속아버린 "
	CASE 8
		TSTR:4 += "함정에 빠진 "
	CASE 9
		TSTR:4 += "초변태 "
ENDSELECT
;타이틀が無ければ종족명
IF CSTR:타이틀 == ""
	TSTR:4 += STR:(ABL:종족)
ELSE
	TSTR:4 += CSTR:타이틀
ENDIF
IF RAND:3 == 0
		TSTR:4 += "ＶＳ"
		IF TALENT:MASTER:서머너 == 5
			TSTR:4 += "다크서머너"
		ELSEIF TALENT:MASTER:페르소나구사자
			TSTR:4 += "어둠의 페르소나구사자"
		ELSEIF TALENT:MASTER:이능자
			TSTR:4 += "이능자"
		ELSEIF TALENT:MASTER:식노
			TSTR:4 += "식노"
		ELSEIF TALENT:MASTER:달인
			TSTR:4 += "달인"
		ELSEIF ABL:MASTER:종족 == 36
			TSTR:4 += "악마 사냥꾼"
		ELSEIF TALENT:MASTER:데빌시프터
			TSTR:4 += "데빌시프터"
		ELSEIF ABL:MASTER:종족 == 73
			TSTR:4 += "악마인"
		ELSEIF ABL:MASTER:종족 == 10
			TSTR:4 += "타케시"
		ELSE
			TSTR:4 += "일반인"
		ENDIF
ENDIF
IF TFLAG:48 == 1
	TSTR:4 += "처녀"
ELSEIF TFLAG:48 == 2
	TSTR:4 += "촉수"
ELSEIF TFLAG:48 == 3
	TSTR:4 += "노출"
ELSEIF TFLAG:48 == 4
	TSTR:4 += "긴박"
ELSEIF TFLAG:48 == 5
	TSTR:4 += "미약"
ELSEIF TFLAG:48 == 6
	TSTR:4 += "봉사"
ELSEIF TFLAG:48 == 7
	TSTR:4 += "피학"
ELSEIF TFLAG:48 == 8
	TSTR:4 += "항학"
ELSEIF TFLAG:48 == 9
	TSTR:4 += "능욕"
ENDIF

TFLAG:48 = 0

SELECTCASE RAND:6
	CASE 0
		TSTR:4 += "조교"
	CASE 1
		TSTR:4 += "의 비밀"
	CASE 2
		TSTR:4 += "의 덫"
	CASE 3
		TSTR:4 += "의 옥션"
	CASE 4
		TSTR:4 += "의 성생활"
	CASEELSE
		TSTR:4 += "의 일상"
ENDSELECT

