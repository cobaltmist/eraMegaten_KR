;-------------------------------------------------
;새댁플레이
;특수커맨드
;-------------------------------------------------
@COMNAME189
RESULTS = 새댁플레이
SIF TEQUIP:33
	RESULTS = 새댁플레이종료
@ACT_COM189
PRINTL 새댁플레이
TSTR:0 = 새댁플레이
;CALL KOJO_MESSAGE_COM

;着脱の処理　장비時はソース、경험の加算は行わない
IF TEQUIP:33 == 1
	TEQUIP:33 = 0
ELSE
	TEQUIP:33 = 1
ENDIF

;의존도ベクトル
TFLAG:33 = 0


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM189
;새댁플레이

;조수조교時は、에이프런を해제して関数종료
IF ASSIPLAY
	TEQUIP:33 = 0
	RETURN 0
ENDIF

PRINTL ＜새댁플레이중＞

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 20
DOWNBASE:TARGET:기력 += 20

SOURCE:TARGET:정애 += 1000
SOURCE:TARGET:복종 += 5000
SOURCE:TARGET:일탈 += 500


;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;애정경험
;PRINTFORML %EXPNAME:23%＋１
CALL ADDS_EXP("애정경험", 1, TARGET)
;PRINTFORML 애정경험(주인)＋１
CALL ADDS_EXP("애정경험", 1, MASTER)


;의존도보정値(主人かつ연모で2、친애で4）
IF TALENT:3 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:6 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF


RETURN 1

;===================================================
;조교타입
;===================================================
@COMTYPE_189
RETURN COMTYPE("특수커맨드계")


