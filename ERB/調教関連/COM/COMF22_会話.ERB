TSTR:0 = 회화
;CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 10
DOWNBASE:TARGET:기력 += 20

SOURCE:TARGET:복종 = 1000
SOURCE:TARGET:일탈 = 100


;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	CALL ADDS_EXP("애정경험", 1, TARGET)
	CALL ADDS_EXP("애정경험", 1, MASTER)
ENDIF

;의존도ベクトル
TFLAG:33 = 4

;의존도보정値(연모で1、친애で2）
IF TALENT:연모 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:친애 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


