;-------------------------------------------------
;유방전극
;ハードな조교コマンド、레벨4
;-------------------------------------------------
@COMNAME150
RESULTS = 유방전극
SIF TEQUIP:24
	RESULTS = 유방전극해제
@ACT_COM150
PRINTL 유방전극
TSTR:0 = 유방전극
;CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:24 == 0
	TEQUIP:24 = 1
ELSE
	TEQUIP:24 = 0
ENDIF

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 300
DOWNBASE:TARGET:기력 += 450

SOURCE:TARGET:도구쾌Ｂ = 500
SOURCE:TARGET:아픔 = 1500
SOURCE:TARGET:노출 = 300
SOURCE:TARGET:굴종 = 800
SOURCE:TARGET:일탈 = 1200
SOURCE:TARGET:반감 = 1200


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:TARGET:울굴 += 1200


;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;이상경험が5미만のとき、이상경험추가
IF EXP:이상경험 < 5
;	EXP:이상경험 += 1
;	PRINTL 이상경험＋１
	CALL ADDS_ABNORMAL_EXP("전극", TARGET)
ENDIF

;레즈경험
A = 1
B = NO:PLAYER + 899
IF IS_LESBIAN(TARGET,PLAYER)
	PRINTFORML %EXPNAME:40%+{A}
	CALL ADDS_EXP("레즈경험", A, TARGET)
ELSEIF IS_GAY(TARGET,PLAYER)
	PRINTFORML %EXPNAME:41%+{A}
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
ENDIF

;의존도ベクトル
TFLAG:33 = 5

;의존도보정値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM150
;유방전극

PRINTL ＜유방전극장착중＞

DOWNBASE:TARGET:체력 += 150
DOWNBASE:TARGET:기력 += 250

SOURCE:TARGET:도구쾌Ｂ += 250
SOURCE:TARGET:아픔 += 750
SOURCE:TARGET:굴종 += 400
SOURCE:TARGET:일탈 += 600
SOURCE:TARGET:반감 += 600


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:TARGET:울굴 += 600


RETURN 1

