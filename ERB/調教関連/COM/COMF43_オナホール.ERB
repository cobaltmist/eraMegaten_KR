;-------------------------------------------------
;오나홀
;道具사용コマンド、레벨2
;-------------------------------------------------
@COMNAME43
IF TEQUIP:12 == 1
	RESULTS = 오나홀해제
ELSE
	RESULTS = 오나홀
ENDIF
@ACT_COM43
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
IF TEQUIP:25
	PRINTL 촉수페니스자극
	TSTR:0 = 촉수페니스자극
	SELECTCOM = 169
ELSE
	PRINTL 오나홀
	TSTR:0 = 오나홀
ENDIF
;CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:12 == 0
	TEQUIP:12 = 1
ELSE
	TEQUIP:12 = 0
ENDIF

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 10
DOWNBASE:TARGET:기력 += 80

SOURCE:TARGET:도구쾌Ｃ = 200
SOURCE:TARGET:노출 = 20
SOURCE:TARGET:일탈 = 30
SOURCE:TARGET:반감 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 30

;-------------------------------------------------
;불결の処理
;-------------------------------------------------
;촉수페니스자극なら、촉수体液が페니스に付く
SIF TEQUIP:25
	CALL SET_STAIN("페니스", "점액", TARGET)

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;촉수소환時、촉수경험の리셋をする
SIF TEQUIP:25 == 1
	T = 0

;의존도ベクトル
TFLAG:33 = 1


RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM43
;오나홀장비中
IF TEQUIP:25
	PRINTL ＜촉수페니스자극중＞
ELSE
	PRINTL ＜오나홀장비중＞
ENDIF

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:TARGET:체력 += 5
DOWNBASE:TARGET:기력 += 20

SOURCE:TARGET:도구쾌Ｃ += 100
SOURCE:TARGET:노출 += 10
SOURCE:TARGET:일탈 += 15
SOURCE:TARGET:반감 += 15


;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;촉수경험加算
SIF TEQUIP:25 == 1
	CALL ADDS_EXP("촉수경험", 1, TARGET)
;	T += 1


RETURN 1

