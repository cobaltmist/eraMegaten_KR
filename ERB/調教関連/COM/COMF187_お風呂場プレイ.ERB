TEQUIP:TARGET:음순노출 = -1
TEQUIP:TARGET:둔부노출 = -1

;전라(주인)
TEQUIP:PLAYER:모자 = 0
TEQUIP:PLAYER:옷 = 0
TEQUIP:PLAYER:하의 = 0
TEQUIP:PLAYER:전신복 = 0
TEQUIP:PLAYER:손 = 0
TEQUIP:PLAYER:속옷（상） = 0
TEQUIP:PLAYER:속옷（하） = 0
TEQUIP:PLAYER:전신속옷 = 0
TEQUIP:PLAYER:양말 = 0
TEQUIP:PLAYER:신발 = 0
TEQUIP:PLAYER:겉옷 = 0
TEQUIP:PLAYER:그외 = 0
TEQUIP:PLAYER:그외2 = 0
TEQUIP:PLAYER:그외3 = 0
TEQUIP:PLAYER:그외4 = 0
TEQUIP:PLAYER:그외5 = 0
TEQUIP:PLAYER:그외6 = 0

;전라(조수)
IF ASSI >= 0
	TEQUIP:ASSI:모자 = 0
	TEQUIP:ASSI:옷 = 0
	TEQUIP:ASSI:하의 = 0
	TEQUIP:ASSI:전신복 = 0
	TEQUIP:ASSI:손 = 0
	TEQUIP:ASSI:속옷（상） = 0
	TEQUIP:ASSI:속옷（하） = 0
	TEQUIP:ASSI:전신속옷 = 0
	TEQUIP:ASSI:양말 = 0
	TEQUIP:ASSI:신발 = 0
	TEQUIP:ASSI:겉옷 = 0
