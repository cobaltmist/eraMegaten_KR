;-------------------------------------------------
;애널핥기
;애무계コマンド、레벨1
;-------------------------------------------------
@ACT_COM4
PRINTL 애널핥기
TSTR:0 = 애널핥기
;CALL KOJO_MESSAGE_COM

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
;소비체력、기력
DOWNBASE:TARGET:체력 += 5
DOWNBASE:TARGET:기력 += 50

SOURCE:TARGET:쾌Ａ = 50
SOURCE:TARGET:액체 = 50
SOURCE:TARGET:일탈 = 40
SOURCE:TARGET:반감 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:TARGET:울굴 += 50

;조교자のTALENT:혀놀림をみる
SIF TALENT:PLAYER:혀놀림
	TIMES SOURCE:TARGET:쾌Ａ , 1.50
	
;조교자のTALENT:고양이혀をみる
SIF TALENT:PLAYER:혀놀림
	TIMES SOURCE:TARGET:쾌Ａ , 0.75


;-------------------------------------------------
;불결の処理
;-------------------------------------------------
;奴隷のＡ⇔조교자の입の불결が移動
CALL MOVE_STAIN("애널", TARGET, "입", PLAYER)

;-------------------------------------------------
;吸精処理
;-------------------------------------------------
IF CFLAG:PLAYER:ＭＡＧ비피흡수 == 0
	LOCAL = (RAND:5+1) * BASE:LV
	CALL DRAIN_MAG,PLAYER,LOCAL,TARGET
ELSEIF CFLAG:TARGET:ＭＡＧ비피흡수 == 0
	LOCAL = (RAND:5+1) * BASE:LV
	CALL DRAIN_MAG,TARGET,LOCAL,PLAYER
ENDIF

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 3
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;조교자が고양이혀持ちの場合は、조교자に가학쾌락경험を추가
IF TALENT:PLAYER:54
	CALL ADDS_EXP("가학쾌락경험", 1, PLAYER)
ENDIF

;의존도ベクトル
TFLAG:33 = 3


RETURN 1

;===================================================
;조교타입
;===================================================
@COMTYPE_4
RETURN COMTYPE("애무계")
