;-------------------------------------------------
;착유기
;道具사용コマンド、레벨3
;-------------------------------------------------
@COMNAME49
IF TEQUIP:착유기
	RESULTS = 착유기해제
ELSE
	RESULTS = 착유기
ENDIF
@ACT_COM49

IF TEQUIP:25
	PRINTL 촉수착유
	TSTR:0 = 촉수착유
	SELECTCOM = 165
ELSE
	PRINTL 착유기
	TSTR:0 = 착유기
ENDIF
;CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:17 == 0
	TEQUIP:17 = 1
	;촉수착유は촉수の불결を추가
	IF TEQUIP:25
		CALL SET_STAIN("가슴", "점액", TARGET)
	ENDIF
ELSE
	TEQUIP:17 = 0
ENDIF

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 50
DOWNBASE:TARGET:기력 += 100

SOURCE:TARGET:도구쾌Ｂ = 200
SOURCE:TARGET:아픔 = 100
SOURCE:TARGET:중독충족 = 100
SOURCE:TARGET:노출 = 30
SOURCE:TARGET:굴종 = 100
SOURCE:TARGET:일탈 = 100
SOURCE:TARGET:반감 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース추가
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:울굴 += 100

;중독による중독충족のソースは先に処理しておく
;분유중독を見る
IF ABL:19 == 0
	TIMES SOURCE:TARGET:중독충족 , 0.00
ELSEIF ABL:19 == 1
	TIMES SOURCE:TARGET:중독충족 , 0.30
ELSEIF ABL:19 == 2
	TIMES SOURCE:TARGET:중독충족 , 0.60
ELSEIF ABL:19 == 3
	TIMES SOURCE:TARGET:중독충족 , 0.90
ELSEIF ABL:19 == 4
	TIMES SOURCE:TARGET:중독충족 , 1.20
ELSEIF ABL:19 == 5
	TIMES SOURCE:TARGET:중독충족 , 1.50
ELSEIF ABL:19 == 6
	TIMES SOURCE:TARGET:중독충족 , 1.80
ELSEIF ABL:19 == 7
	TIMES SOURCE:TARGET:중독충족 , 2.10
ELSEIF ABL:19 == 7
	TIMES SOURCE:TARGET:중독충족 , 2.40
ELSEIF ABL:19 == 9
	TIMES SOURCE:TARGET:중독충족 , 3.00
ELSEIF ABL:19 >= 10
	TIMES SOURCE:TARGET:중독충족 , 5.00
ENDIF

;-------------------------------------------------
;불결の処理
;-------------------------------------------------
;촉수착유なら、촉수体液が가슴に付く
SIF TEQUIP:25
	CALL SET_STAIN("가슴", "점액", TARGET)

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("레즈경험", A, TARGET)
	CALL ADDS_EXP("레즈경험", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ경험", A, TARGET)
	CALL ADDS_EXP("ＢＬ경험", A, PLAYER)
ENDIF

;촉수소환時、촉수경험の리셋をする
;SIF TEQUIP:25 == 1
;	T = 0

;의존도ベクトル
TFLAG:33 = 3


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM49
;착유기장비中
IF TEQUIP:25
	PRINTL ＜촉수착유중＞
ELSE
	PRINTL ＜착유기장비중＞
ENDIF

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:TARGET:체력 += 25
DOWNBASE:TARGET:기력 += 50

SOURCE:TARGET:도구쾌Ｂ += 100
SOURCE:TARGET:아픔 += 50
SOURCE:TARGET:중독충족 += 50
SOURCE:TARGET:노출 += 15
SOURCE:TARGET:굴종 += 50
SOURCE:TARGET:일탈 += 50
SOURCE:TARGET:반감 += 50


;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;촉수경험加算
SIF TEQUIP:25 == 1
	CALL ADDS_EXP("촉수경험", 1, TARGET)
;	T += 1


RETURN 1

;===================================================
;조교타입
;===================================================
@COMTYPE_49
RETURN COMTYPE("도구계")


