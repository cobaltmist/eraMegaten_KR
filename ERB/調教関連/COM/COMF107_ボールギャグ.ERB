;-------------------------------------------------
;볼재갈
;SM系コマンド、레벨2
;-------------------------------------------------
@COMNAME107
RESULTS = 볼재갈
SIF TEQUIP:20
	RESULTS = 볼재갈해제
@ACT_COM107
PRINTL 볼재갈
TSTR:0 = 볼재갈
;CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:20 == 0
	TEQUIP:20 = 1
ELSE
	TEQUIP:20 = 0
ENDIF

;조교자→조교대상
TFLAG:28 = 2
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 0
DOWNBASE:TARGET:기력 += 50

SOURCE:TARGET:무서움 = 500
SOURCE:TARGET:노출 = 200
SOURCE:TARGET:굴종 = 150
SOURCE:TARGET:일탈 = 100
SOURCE:TARGET:반감 = 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;긴박경험が高いと소비減少
IF EXP:51 < EXPLV:3
	TIMES DOWNBASE:TARGET:체력 , 1.00
	TIMES DOWNBASE:TARGET:기력 , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES DOWNBASE:TARGET:체력 , 0.90
	TIMES DOWNBASE:TARGET:기력 , 0.90
ELSE
	TIMES DOWNBASE:TARGET:체력 , 0.70
	TIMES DOWNBASE:TARGET:기력 , 0.70
ENDIF

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
CALL ADDS_EXP("긴박경험", 2, TARGET)
;PRINTL 긴박경험＋２

;의존도ベクトル
TFLAG:33 = 3

;의존도보정値(복종で1、예속で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM107
PRINTL ＜볼재갈장비중＞

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;소비체력、기력
DOWNBASE:TARGET:체력 += 0

SOURCE:TARGET:무서움 += 250
SOURCE:TARGET:노출 += 150
SOURCE:TARGET:굴종 += 75
SOURCE:TARGET:일탈 += 50
SOURCE:TARGET:반감 += 150

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;긴박경험が高いと소비減少
A = 25
IF EXP:51 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
DOWNBASE:TARGET:기력 += A

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
CALL ADDS_EXP("긴박경험", 1, TARGET)
;PRINTL 긴박경험＋１

RETURN 1

