	I |= 1
;굴복의 구슬で上げる
SIF JUEL:7 < C
	I |= 1
;ＢＬ경험が필요
SIF EXP:ＢＬ경험 < B
	I |= 2

IF I == 0
	Z = 1
ENDIF

