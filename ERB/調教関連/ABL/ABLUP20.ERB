;ＢＬ끼のLVUP판정
@DECIDE_ABLUP20
;조건別にＯＫかダメかを記録する
I = 0
J = 0
;능력アップ가능なら1にする
Z = 0

IF ABL:20 == 0
	A = 200
	B = 50
	C = 0
	D = 1000
ELSEIF ABL:20 == 1
	A = 1000
	B = 200
	C = 0
	D = 5000
ELSEIF ABL:20 == 2
	A = 3000
	B = 500
	C = 1000
	D = 0
ELSEIF ABL:20 == 3
	A = 8000
	B = 1000
	C = 2000
	D = 0
ELSEIF ABL:20 == 4
	A = 20000
	B = 2000
	C = 5000
	D = 0
ELSEIF ABL:20 == 5
	A = 25000
	B = 2300
	C = 6000
	D = 0
ELSEIF ABL:20 == 6
	A = 30000
	B = 2600
	C = 8000
	D = 0
ELSEIF ABL:20 == 7
	A = 35000
	B = 3000
	C = 10000
	D = 0
ELSEIF ABL:20 == 8
	A = 40000
	B = 3500
	C = 15000
	D = 0
ELSEIF ABL:20 == 9
	A = 50000
	B = 4000
	C = 20000
	D = 0
ENDIF

