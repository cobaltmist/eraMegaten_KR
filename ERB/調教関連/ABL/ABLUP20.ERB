	;쾌Ｃ의 구슬で上げる
	SIF JUEL:0 < D
		J |= 1
	;ＢＬ경험が필요
	SIF EXP:ＢＬ경험 < B
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ELSE
	J = 256
ENDIF
