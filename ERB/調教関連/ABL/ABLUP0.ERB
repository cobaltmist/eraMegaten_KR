;ＬＶ４から５に上げるときは이상경험필요（소질：[겁쟁이][솔직함][연모][친애]なら無視できる）
IF ABL:0 == 4 && TALENT:10 == 0 && TALENT:13 == 0 && TALENT:3 == 0 && TALENT:6 == 0
	IF EXP:50 == 0
		;이상경험がない
		I |= 2
		J |= 2
		K |= 2
		L |= 2
	ENDIF
;ＬＶ７から８に上げるときは이상경험3이상필요（소질：[겁쟁이][솔직함][연모][친애]なら無視できる）
ELSEIF ABL:0 == 7 && TALENT:10 == 0 && TALENT:13 == 0 && TALENT:3 == 0 && TALENT:6 == 0
	IF EXP:50 < 3
		;이상경험が3미만
		I |= 2
		J |= 2
		K |= 2
		L |= 2
	ENDIF
ENDIF

;공포의 구슬で上げる
SIF JUEL:11 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

;복종의 구슬で上げる
SIF JUEL:5 < B
	J |= 1

IF J == 0
	Z = 1
ENDIF

IF C
	;욕정의 구슬で上げる
	SIF JUEL:6 < C
		K |= 1

	IF K == 0
		Z = 1
	ENDIF
ELSE
	K = 256
ENDIF

IF D
	;굴복의 구슬で上げる
	SIF JUEL:7 < D
		L |= 1

	IF L == 0
		Z = 1
	ENDIF
ELSE
	L = 256
ENDIF
RETURN 1

