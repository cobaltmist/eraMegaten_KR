	A = 10
	B = 10
	C = 150
	D = 100
ELSEIF ABL:0 == 1
	A = 150
	B = 100
	C = 450
	D = 600
ELSEIF ABL:0 == 2
	A = 500
	B = 300
	C = 1000
	D = 1200
ELSEIF ABL:0 == 3
	A = 3000
	B = 3000
	C = 0
	D = 0
ELSEIF ABL:0 == 4
	A = 6000
	B = 6000
	C = 0
	D = 0
ELSEIF ABL:0 == 5
	A = 8000
	B = 10000
	C = 0
	D = 0
ELSEIF ABL:0 == 6
	A = 10000
	B = 15000
	C = 0
	D = 0
ELSEIF ABL:0 == 7
	A = 14000
	B = 20000
	C = 0
	D = 0
