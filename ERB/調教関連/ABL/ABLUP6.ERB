;Ｂ감각LVUP판정
@DECIDE_ABLUP6
;조건別にＯＫかダメかを記録する
I = 0
;능력アップ가능なら1にする
Z = 0

IF ABL:6 == 0
	A = 1
ELSEIF ABL:6 == 1
	A = 20
ELSEIF ABL:6 == 2
	A = 400
ELSEIF ABL:6 == 3
	A = 5000
ELSEIF ABL:6 == 4
	A = 15000
ELSEIF ABL:6 == 5
	A = 30000
ELSEIF ABL:6 == 6
	A = 40000
ELSEIF ABL:6 == 7
	A = 50000
ELSEIF ABL:6 == 8
	A = 60000
ELSEIF ABL:6 == 9
	A = 70000
ENDIF

;음란
SIF TALENT:4
	TIMES A , 0.80
;창부
SIF TALENT:7
	TIMES A , 0.50

;빈유
IF TALENT:109
	TIMES A , 0.80
ENDIF

;절벽
IF TALENT:110
	TIMES A , 0.65
ENDIF

;거유
IF TALENT:111
	TIMES A , 1.10
ENDIF

;폭유
IF TALENT:112 || TALENT:마유
	TIMES A , 1.15
ENDIF

;0になった場合は1にする
SIF A == 0
	A = 1

;쾌Ｂ의 구슬で上げる
SIF JUEL:3 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

