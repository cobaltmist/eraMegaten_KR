;봉사정신LvUP판정
@DECIDE_ABLUP7
;조건別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
;능력アップ가능なら1にする
Z = 0

IF ABL:봉사정신 == 0
	A = 100
	B = 20
	C = 100
	D = 5
	E = 5
ELSEIF ABL:봉사정신 == 1
	A = 1200
	B = 100
	C = 0
	D = 5
	E = 10
ELSEIF ABL:봉사정신 == 2
	A = 5000
	B = 600
	C = 0
	D = 20
	E = 20
ELSEIF ABL:봉사정신 == 3
	A = 10000
	B = 2000
	C = 0
	D = 50
	E = 20
ELSEIF ABL:봉사정신 == 4
	A = 30000
	B = 8000
	C = 0
	D = 100
	E = 30
ELSEIF ABL:봉사정신 == 5
	A = 35000
	B = 8500
	C = 0
	D = 150
	E = 40
ELSEIF ABL:봉사정신 == 6
	A = 40000
	B = 10000
	C = 0
	D = 200
	E = 100
ELSEIF ABL:봉사정신 == 7
	A = 45000
	B = 15000
	C = 0
	D = 250
	E = 150
ELSEIF ABL:봉사정신 == 8
	A = 50000
	B = 20000
	C = 0
	D = 300
	E = 200
ELSEIF ABL:봉사정신 == 9
	A = 60000
	B = 30000
	C = 0
	D = 400
	E = 300
ENDIF

;연모
SIF TALENT:3
	TIMES B , 0.80
;친애
SIF TALENT:친애
	TIMES B , 0.60
;복종
SIF TALENT:5
	TIMES A , 0.70
;예속
SIF TALENT:8
	TIMES A , 0.40
;일선을넘지않음
IF TALENT:27 && (TALENT:연모 == 0 && TALENT:음란 == 0 && TALENT:복종 == 0 && 함락() < 2)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
	TIMES E , 2.00
ENDIF

;순종が봉사정신＋１레벨でないといけない
IF ABL:순종 < ABL:7+1
	;순종が부족
	I |= 4
	J |= 4
	K |= 4
ENDIF

;ＬＶ４から５に上げるときは이상경험이상필요（소질：[연모][친애]なら無視できる）
IF ABL:봉사정신 == 4 && TALENT:연모 == 0 && TALENT:친애 == 0
	IF EXP:이상경험 == 0
		;이상경험が부족
		I |= 2
		J |= 2
		K |= 2
	ENDIF
;ＬＶ８から９に上げるときは이상경험5이상필요（소질：[연모][친애]なら無視できる）
ELSEIF ABL:봉사정신 == 8 && TALENT:연모 == 0 && TALENT:친애 == 0
	IF EXP:이상경험 < 5
		;이상경험が부족
		I |= 2
		J |= 2
		K |= 2
	ENDIF
ENDIF

;굴복의 구슬で上げる
SIF JUEL:7 < A
	I |= 1
;절정경험が필요한場合
SIF EXP:절정경험 < E
	I |= 2
;정액경험が필요한場合
SIF EXP:20 < E
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF B > 0
	;복종의 구슬で上げる
	SIF JUEL:5 < B
		J |= 1
	;この場合봉사쾌락경험が필요한ことあり
	SIF EXP:봉사쾌락경험 < D
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ELSE
	J = 256
ENDIF

IF C > 0
	;습득의 구슬で上げる
	SIF JUEL:8 < C
		K |= 1
	;この場合절정경험が１이상필요
	SIF EXP:절정경험 < 1
		K |= 2

	IF K == 0
		Z = 1
	ENDIF
ELSE
	K = 256
ENDIF
RETURN 1

