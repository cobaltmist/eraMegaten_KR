PRINTL [99] 돌아간다
PRINTL [100] 가게를 나간다 [101] 정렬조건변경

$INPUT_LOOP
INPUT

IF RESULT == 100
	RETURN 0
ELSEIF RESULT == 99
	RETURN -1
ELSEIF RESULT == 101
	CALL CHANGE_CONDITION_EQUIP_SORT
	RESTART
ELSEIF RESULT >= 0 && RESULT < 9
	LOCAL = RESULT

	IF C:111 == 1
		CALL _RPG_ITEMLIST_MAKE_EXCHANGE,RESULT
	ELSE
		CALL _RPG_ITEMLIST_MAKE_NOMAL,RESULT
	ENDIF

	;아이템数保持
	LOCAL:1 = RESULT
ELSE
	GOTO INPUT_LOOP
ENDIF

;아이템구입:受付
CALL RPG_SHOP_COUNTER,LOCAL:1

RESTART

