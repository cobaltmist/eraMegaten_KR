	;CHK:아이템
	IF STRLENS(ARGS:(LOCAL:4)) != 0
		LOCAL:2 = GETNUM(ITEM, ARGS:(LOCAL:4))
		;엘라ーの場合
		IF LOCAL:2 == -1
			PRINTFORML 【ERR!】아이템'%ARGS:(LOCAL:4)%'은(는) ITEM.csv에 존재하지 않으므로、구매에서 제외됩니다。
			E += 1
		ELSE
