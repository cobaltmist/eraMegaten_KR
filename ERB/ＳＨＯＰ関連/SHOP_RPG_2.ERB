;=================================================
;   sub _RPG_ITEMLIST_MAKE_NOMAL
;=================================================
;   구입可能아이템설정:通常
;-------------------------------------------------
;   아이템の内、구입조건を満たす
;   値段1以上の아이템を諸変数に설정する
;-------------------------------------------------
; Input:
;  ARG					아이템カテゴリ
; Output:
;  RESULT				아이템数
;  아이템리스트		配列:아이템番号
;  ITEMSALES			配列:아이템値段
;-------------------------------------------------
@_RPG_ITEMLIST_MAKE_NOMAL,ARG
#LOCALSIZE 3
VARSET 아이템리스트,-1
VARSET ITEMSALES,0
LOCAL:1 = 0

;8未満は장비品・弾薬
IF ARG < 8
	FOR LOCAL,C:103,VARSIZE("ITEM")
		SIF ITEMPRICE:LOCAL == 0
			CONTINUE
		RESULT = 12
		TRYCCALLFORM 장비부위_{LOCAL}
			IF RESULT == ARG
				TRYCCALLFORM 구입조건_{LOCAL}
					IF RESULT == 1
						아이템리스트:(LOCAL:1) = LOCAL
						LOCAL:1 += 1
					ENDIF
				CATCH
					CONTINUE
				ENDCATCH
			ENDIF
		CATCH
		ENDCATCH
	NEXT
;上記以外は아이템
ELSE
	FOR LOCAL,C:102,C:103
		SIF ITEMPRICE:LOCAL == 0
			CONTINUE
		TRYCCALLFORM 도구구입조건_{LOCAL+C:103}
			IF RESULT == 1
				아이템리스트:(LOCAL:1) = LOCAL
				LOCAL:1 += 1
			ENDIF
		CATCH
			CONTINUE
		ENDCATCH
	NEXT
ENDIF
;가격の登録
FOR LOCAL , 0 , FINDELEMENT(아이템리스트 , -1)
	ITEMSALES:(아이템리스트:LOCAL) = ITEMPRICE:(아이템리스트:LOCAL)
NEXT
CALL EQUIP_SORT
RETURN LOCAL:1

;=================================================
;   sub _RPG_ITEMLIST_MAKE_EXCHANGE
;=================================================
;   구입可能아이템설정:交換
;-------------------------------------------------
;   아이템の内、구입조건を満たす
;   値段1以上の아이템を諸変数に설정する
;-------------------------------------------------
; Input:
;  ARG					아이템カテゴリ
; Output:
;  RESULT				아이템数
;  아이템리스트		配列:아이템番号
;  ITEMSALES			配列:아이템値段
;-------------------------------------------------
@_RPG_ITEMLIST_MAKE_EXCHANGE,ARG
#LOCALSIZE 3
VARSET 아이템리스트,-1
VARSET ITEMSALES,0
LOCAL:1 = 0

;8未満は장비品・弾薬
IF ARG < 8
	FOR LOCAL,C:103,VARSIZE("ITEM")
		SIF ITEMPRICE:LOCAL == 0
			CONTINUE
		RESULT = 12
		TRYCCALLFORM 장비부위_{LOCAL}
			IF RESULT == ARG
				RESULT = 0
				TRYCALLFORM EQUIP_EXCHANGE_{LOCAL}
				SIF RESULT == 0
					CONTINUE
				아이템리스트:(LOCAL:1) = LOCAL
				LOCAL:1 += 1
			ENDIF
		CATCH
		ENDCATCH
	NEXT
;上記以外は아이템
ELSE
	FOR LOCAL,C:102,C:103
		SIF ITEMPRICE:LOCAL == 0
			CONTINUE
		RESULT = 0
		TRYCALLFORM ITEM_EXCHANGE_{LOCAL+C:103}
		SIF RESULT == 0
			CONTINUE
		아이템리스트:(LOCAL:1) = LOCAL
		LOCAL:1 += 1
	NEXT
ENDIF
;가격の登録
FOR LOCAL , 0 , FINDELEMENT(아이템리스트 , -1)
	ITEMSALES:(아이템리스트:LOCAL) = ITEMPRICE:(아이템리스트:LOCAL)
NEXT
CALL EQUIP_SORT
RETURN LOCAL:1


