PRINTFORML [1000]돌아간다
INPUT
IF RESULT == 1000
	VARSET T
	RETURN 0
ELSEIF RESULT >= 0 && RESULT < 5
	LOCAL = RESULT
	LOCALS = 누구를 설정합니까？
	CALL INPUT_CHARA_LIST( LOCALS,"CASTING_GATHERING")
	REDRAW 1
	SIF RESULT != 1000
		T:LOCAL = RESULT
	GOTO RET
ELSEIF RESULT >= 10 && RESULT < 15
	T:(RESULT - 10) = -2
	GOTO RET
ELSEIF RESULT == 2000 && N_PEOPLE > 1
	DRAWLINE
	PRINTFORML 이 멤버로 집회를 합니까？
	DRAWLINE
	CALL INPUT_YN
	SIF RESULT == 1
		GOTO RET
ELSE
	CLEARLINE 1
	GOTO RET
ENDIF
DRAWLINE
PRINTFORMW 이 멤버끼리 집회를 하기로 했다。
DRAWLINE
PRINTFORML

;SETBIT FLAG:교류플래그,0
STOCK = TARGET
LOCAL:2 = (5 + RAND:6)
FOR LOCAL:1,0,5
	TARGET = T:(LOCAL:1)
	SIF TARGET < 0
		CONTINUE
	SETBIT CFLAG:TARGET:교류끝플래그,1
	TFLAG:13 = 95
	CALL KOJO_MESSAGE_EVENT
	;KOJO_MESSAGE_EVENT内で MATCH(T,GETCHARA(○○)) > 0 を使うと誰かがいたときに구상を변화させることができる
	EXP:교류경험 ++
	FOR LOCAL,0,5
		CAST = T:LOCAL
		SIF CAST < 1
			CONTINUE
		SIF CAST == TARGET
			CONTINUE
		R = 0
		;ABL:순종をみる
		SIF TARGET == 0
			R += ABL:0*2
		;ABL:봉사정신をみる
		R += ABL:CAST:7
		;난이도を見る
		;EASY
		IF FLAG:4 == 1
			R += 1
		;NORMAL
		ELSEIF FLAG:4 == 2
			R += 0
		;HARD
		ELSEIF FLAG:4 == 3
			R -= 1
		ENDIF
		;소질による増減
		;함락소질
		;연모
		SIF 함락(CAST,TARGET) == 1 && RESULTS == "연모"
			R += 5
		;친애
		SIF 함락(CAST,TARGET) == 2 && RESULTS == "연모"
			R += 7
		;망신
		SIF TALENT:CAST:86
			R += 2
		;主人の매력
		SIF TALENT:TARGET:92
			R += 2
		;主人の매혹
		SIF TALENT:TARGET:93
			R += 3
		;主人の수수께끼의매력
		SIF TALENT:TARGET:94
			R += 5
		SIF R < 1
			R = 1

		LOCAL:3 = LOCAL:2 * GET_RELATION(CAST,TARGET) / 100
		LOCAL:3 = MAX(R/2 * LOCAL:3 / ( N_PEOPLE - 1 ),1)
		;CFLAG:CAST:(CFLAG:TARGET:캐릭터고유번호 + 2100) += LOCAL:3
		CDFLAG:CAST:캐릭터간호감도:(CFLAG:TARGET:캐릭터고유번호 + 100) += LOCAL:3
	NEXT
	
NEXT
TARGET = STOCK

PRINTFORMW 모두는 전보다 친해졌을 것이다。
