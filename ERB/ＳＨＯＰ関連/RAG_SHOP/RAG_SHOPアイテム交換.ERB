#DIM 교환수, 1

VARSET 宝石종류,0
VARSET 宝石필요数,0
VARSET 宝石소지数,0

CALL CHECK_ITEMMAX , ARG
IF RESULT == 1
		PRINTL 라그：
		PRINTW 「더 이상 가질 수 없잖아」
		RETURN 0
ENDIF

FOR LOCAL:2, 1, 13
	LOCAL:1 = 0
	FOR LOCAL, 1, 13
		SIF ARGS:LOCAL == ""
			CONTINUE
		RESULT = GETNUM(ITEM,ARGS:LOCAL)
		IF LOCAL:1 < RESULT
			LOCAL:1 = RESULT
			LOCAL:3 = LOCAL
		ENDIF
	NEXT
	SIF LOCAL:1 == 0
		BREAK
	IF LOCAL:1 > 0
		IF LOCAL:1 == 宝石종류:(LOCAL:2-1)
			LOCAL:2 --
			宝石필요数:(LOCAL:2) += ARG:(LOCAL:3)
			宝石소지数:(LOCAL:2) += ITEM:(ARGS:(LOCAL:3))
		ELSE
			宝石종류:(LOCAL:2) = LOCAL:1
			宝石필요数:(LOCAL:2) = ARG:(LOCAL:3)
			宝石소지数:(LOCAL:2) = ITEM:(ARGS:(LOCAL:3))
		ENDIF
		ARGS:(LOCAL:3) = ""
	ENDIF
NEXT
LOCAL:1 = 99
