#DIM 宝石소지数, 13

VARSET 宝石종류,0
VARSET 宝石필요数,0
VARSET 宝石소지数,0

IF BASE:MASTER:LV < CSVBASE(ARG,GETNUM(BASE,"LV"))
	PRINTL 라그：
	PRINTW 「엇차 당신은 아직 이 녀석을 다룰 수 없어」
	RETURN 0
ENDIF

FOR LOCAL:2, 1, 13
	LOCAL:1 = 0
	FOR LOCAL, 1, 13
		SIF ARGS:LOCAL == ""
			CONTINUE
		RESULT = GETNUM(ITEM,ARGS:LOCAL)
		IF LOCAL:1 < RESULT
			LOCAL:1 = RESULT
			LOCAL:3 = LOCAL
		ENDIF
	NEXT
	SIF LOCAL:1 == 0
		BREAK
	IF LOCAL:1 > 0
		IF LOCAL:1 == 宝石종류:(LOCAL:2-1)
			LOCAL:2 --
			宝石필요数:(LOCAL:2) += ARG:(LOCAL:3)
			宝石소지数:(LOCAL:2) += ITEM:(ARGS:(LOCAL:3))
		ELSE
			宝石종류:(LOCAL:2) = LOCAL:1
			宝石필요数:(LOCAL:2) = ARG:(LOCAL:3)
			宝石소지数:(LOCAL:2) = ITEM:(ARGS:(LOCAL:3))
		ENDIF
		ARGS:(LOCAL:3) = ""
	ENDIF
NEXT
FOR LOCAL, 1, 13
	SIF 宝石종류:LOCAL == 0
		BREAK
	IF 宝石소지数:LOCAL < 宝石필요数:LOCAL
