@RAG_DOREI_EXCHANGE(ARG, ARGS:1, ARG:1, ARGS:2 = "", ARG:2 = 0, ARGS:3 = "", ARG:3 = 0, ARGS:4 = "", ARG:4 = 0, ARGS:5 = "", ARG:5 = 0, ARGS:6 = "", ARG:6 = 0, ARGS:7 = "", ARG:7 = 0, ARGS:8 = "", ARG:8 = 0, ARGS:9 = "", ARG:9 = 0, ARGS:10 = "", ARG:10 = 0, ARGS:11 = "", ARG:11 = 0, ARGS:12 = "", ARG:12 = 0)

#DIM 宝石종류, 13
#DIM 宝石필요数, 13
#DIM 宝石소지数, 13

VARSET 宝石종류,0
VARSET 宝石필요数,0
VARSET 宝石소지数,0

IF GETCHARA(ARG) > 0
	PRINTL 라그：
	PRINTW 「그쪽엔 상품이 없어」
	RETURN 0
ENDIF

FOR LOCAL:2, 1, 13
	LOCAL:1 = 0
	FOR LOCAL, 1, 13
		SIF ARGS:LOCAL == ""
			CONTINUE
		RESULT = GETNUM(ITEM,ARGS:LOCAL)
		IF LOCAL:1 < RESULT
			LOCAL:1 = RESULT
			LOCAL:3 = LOCAL
		ENDIF
	NEXT
	SIF LOCAL:1 == 0
		BREAK
	IF LOCAL:1 > 0
		IF LOCAL:1 == 宝石종류:(LOCAL:2-1)
			LOCAL:2 --
			宝石필요数:(LOCAL:2) += ARG:(LOCAL:3)
			宝石소지数:(LOCAL:2) += ITEM:(ARGS:(LOCAL:3))
		ELSE
			宝石종류:(LOCAL:2) = LOCAL:1
			宝石필요数:(LOCAL:2) = ARG:(LOCAL:3)
			宝石소지数:(LOCAL:2) = ITEM:(ARGS:(LOCAL:3))
		ENDIF
		ARGS:(LOCAL:3) = ""
	ENDIF
NEXT
FOR LOCAL, 1, 13
	SIF 宝石종류:LOCAL == 0
		BREAK
	IF 宝石소지数:LOCAL < 宝石필요数:LOCAL
		PRINTL 라그：
		PRINTW 「보석이 부족하네에」
		RETURN 0
	ENDIF
NEXT

PRINTL 라그：
PRINTFORML 「%CSVCALLNAME(ARG,0)%와 교환할게, 괜찮지？」
FOR LOCAL, 1, 13
	SIF 宝石종류:LOCAL == 0
		BREAK
	PRINTFORML %ITEMNAME:(宝石종류:LOCAL),18,LEFT%　소지수:{宝石소지数:LOCAL,2} → {(宝石소지数:LOCAL-宝石필요数:LOCAL),2}
NEXT
CALL INPUT_YN("예", "아니오")
SIF RESULT == 1
	RETURN 0
CALL ADD_NEW_COMPANION,ARG,0
IF RESULT
	PRINTFORMW ＞%CSVCALLNAME(ARG,0)%가 노예가 되었다
	FOR LOCAL, 1, 13
		SIF 宝石종류:LOCAL == 0
			BREAK
		ITEM:(宝石종류:LOCAL) -= 宝石필요数:LOCAL
	NEXT
	PRINTFORML ＞%CSVCALLNAME(ARG,0)%를 전력으로 삼습니까？
	CALL INPUT_YN("예", "아니오")
	SIF RESULT == 0
		CFLAG:(RESULT:1):전투참가불가능 = -1
ELSE
	PRINTFORMW ＞%CSVCALLNAME(ARG,0)%를 노예로 만들 수 없었다


ENDIF


