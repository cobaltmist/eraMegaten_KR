@SHOPCOMABLE_103
RESULT:1 = 1
IF FLAG:휴식확인플래그 == 2
	RESULTS = 아침까지 휴식
ELSE
	RESULTS = 휴식
ENDIF
RETURN 1

@SHOP_COM_103
IF !FLAG:휴식확인플래그
	PRINTL 휴식합니까? 

	PRINT [0] 휴식한다
	PRINT [1] 아침까지 휴식한다
	IF TIME < 3
		PRINT [2] 밤까지 휴식한다
	ELSE
		SETCOLOR 0x2e2e41
		PRINT [2] 밤까지 휴식한다
		RESETCOLOR
	ENDIF
	PRINTL [3] 휴식하지 않는다

	CALL INPUTINT(0, 1, 2 * (TIME < 3), 3)
	;CALL INPUT_YN,"Yes","No",2

	SELECTCASE RESULT
		CASE 0
			PRINTW 휴식했습니다
			;휴식플래그を立てる（ここは特別）
			FLAG:휴식플래그 = 2
			BEGIN TURNEND
			RETURN 1
		CASE 1
			PRINTW 아침까지 휴식합니다
			FLAG:휴식플래그 = 3
			BEGIN TURNEND
			RETURN 1
		CASE 2
			PRINTW 밤까지 휴식합니다
			;TIME = 2
			FLAG:휴식플래그 = 4
			BEGIN TURNEND
			RETURN 1
		CASE 3
			RETURN 0
	ENDSELECT
ELSE
	PRINTL 휴식했습니다
	;휴식플래그を立てる（ここは特別）
	IF FLAG:휴식확인플래그 == 2
		;朝まで휴식
		FLAG:휴식플래그 = 3
	ELSE
		FLAG:휴식플래그 = 2
	ENDIF
	BEGIN TURNEND
	RETURN 1
ENDIF
