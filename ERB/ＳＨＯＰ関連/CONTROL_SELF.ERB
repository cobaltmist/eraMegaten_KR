;요바이가능なキャラを管理する

@SHOPCOMABLE_212
RESULT:1 = 2
RESULTS = 요바이필터
;一応、マ스타しかいないときは除外
SIF CHARANUM < 2
	RETURN 0
RETURN 1

@SHOP_COM_212
#LOCALSIZE 1
REDRAW 0

CALL INPUT_CHARA_LIST("밤 이벤트 설정을 변경할 캐릭터를 선택해주세요","CASTING_SELF")
IF RESULT == 1000
	REDRAW 1
	RETURN 0
ENDIF
INVERTBIT CFLAG:RESULT:요바이불허가 , 0

CLEARLINE 1 + 3 + 2 + ( (P+1*20) <= A ? 20 # A - P*20 )
RESTART


;================================================================
;요바이제한가능なキャラの조건
;================================================================
@CASTING_SELF(ARG)
;主人公は除外
SIF ARG == MASTER
	RETURN 0
;いないキャラを除外
SIF CFLAG:ARG:이자리에없는플래그 == 1
	RETURN 0
RETURN 1
