;==========================================================
;MANAGEMENT_교회
; 教会での活動処理
;
;<引数>
;	ARG = 점포番号
;<사용変数>
;	속성변동치   = 各活動で変動した数値の保管
;	배치인수     = 教会に配置しているキャラの人数
;	최대참배인수 = 現在の교회규모での최대참배인수、最大値は教会に改装規模による
;	참배인수     = 相手にする人数
;	교회규모     = 참배인수と속성변동치の底上げに影響する
;	경배치       = [[점포:인기]]:ARG に収める数値をまとめて保管する
;<戻り値>
;	なし
;========================================================
@MANAGEMENT_교회, ARG
#DIM 속성변동치
#DIM 배치인수
#DIM 최대참배인수
#DIM 참배인수
#DIM 교회규모
#DIM 경배치
#DIM 입봉사횟수
#DIM Ｖ봉사횟수
#DIM Ａ봉사횟수


;교회の改装레벨を保存
교회규모 = 점포("규모", ARG)
;최대참배인수の설정
SELECTCASE 교회규모
	CASE 1
		최대참배인수 = 5
	CASE 2
		최대참배인수 = 10
	CASE 3
		최대참배인수 = 20
	CASE 4
		최대참배인수 = 40
	CASE 5
		최대참배인수 = 80
ENDSELECT

;配置されているキャラがいるか체크
LOCAL:1 = 0
FOR LOCAL, 0, CHARANUM
	;配置されていないキャラを弾く
	SIF CFLAG:LOCAL:노역플래그 != 10+ARG
		CONTINUE
	배치인수 += 1
NEXT
;誰も配置されていない場合は戻る
SIF 배치인수 == 0
	RETURN

;活動処理
;LOCAL = キャラ番号
;LOCAL:1 = 多목적に사용
FOR LOCAL, 0, CHARANUM
	;配置されていないキャラを弾く
	SIF CFLAG:LOCAL:노역플래그 != 10+ARG
		CONTINUE
	;초기化
	입봉사횟수 = 0
	Ｖ봉사횟수 = 0
	Ａ봉사횟수 = 0

	;봉사別処理
	SELECTCASE CFLAG:LOCAL:개별성적서비스
		;祈り
		CASE 1
			PRINTFORMW %조사처리(CALLNAME:LOCAL,"가")% 기도를 바치고 있다
			;祈りでの変化は0～1(MAX0～4)
			속성변동치 = RAND:(2+교회규모/2)
			경배치 += 1
			;이벤트구상
			T = TARGET
			TARGET = LOCAL
			TFLAG:13 = 65
			CALL KOJO_MESSAGE_EVENT
			TARGET = T
		;입봉사
		CASE 2
			;봉사する人数を決める
			참배인수 = RAND:최대참배인수
			;참배인수が0の場合はお祈りをする
			IF 참배인수 == 0
				PRINTFORMW 참배자가 없었기 때문에, %조사처리(CALLNAME:LOCAL,"는")% 하루종일 기도하였다
				;祈りでの変化は0～1(MAX0～4)
				속성변동치 = RAND:(2+교회규모/2)
				경배치 += 1
				;이벤트구상
				T = TARGET
				TARGET = LOCAL
				TFLAG:13 = 65
				CALL KOJO_MESSAGE_EVENT
				TARGET = T
				GOTO SKIP_1
			ENDIF
			
			;교회の종류によって分ける
			SELECTCASE 점포("종류",ARG)
				;메시아 교회
				CASE 13
					SELECTCASE RAND:(2+교회규모)
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% {참배인수}명의 메시아교 신자들의 페니스에 정중한 봉사를 하였다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 방문한 {참배인수}명의 신자에게 입으로 봉사했다
					ENDSELECT
				;가이아教会
				CASE 14
					SELECTCASE RAND:2
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% {참배인수}명의 가이아교 신자들의 페니스에 정중한 봉사를 하였다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 방문한 {참배인수}명의 신자에게 입으로 봉사했다
					ENDSELECT
				;교회
				CASE 15
					SELECTCASE RAND:2
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 미사로 방문한 {참배인수}명의 신자들의 페니스에 정중한 봉사를 하였다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 방문한 {참배인수}명의 신자에게 입으로 봉사했다
					ENDSELECT
			ENDSELECT
			;이벤트구상
			T = TARGET
			TARGET = LOCAL
			TFLAG:13 = 66
			CALL KOJO_MESSAGE_EVENT
			TARGET = T
			;취득경험計算
			TCVAR:LOCAL:획득펠라경험 = 참배인수
			;TCVAR:LOCAL:획득봉사쾌락경험 = 참배인수
			;혀놀림がある場合は정액경험にボーナス
			LOCAL:1 = 참배인수
			SIF TALENT:LOCAL:혀놀림
				LOCAL:1 += 1 + LOCAL:1 / 2
			TCVAR:LOCAL:획득정액경험 = LOCAL:1
			;崇拝値は1+획득정액경험
			경배치 += 1 + TCVAR:LOCAL:획득정액경험
			;획득경험표시
			CALL SHOW_ADD_EXP, LOCAL
			
			;입봉사での変化は0～2(MAX0～7)
			속성변동치 = RAND:(3+교회규모)

		;性봉사
		CASE 3
			;봉사する人数を決める
			참배인수 = RAND:최대참배인수
			;참배인수が0の場合はお祈りをする
			IF 참배인수 == 0
				PRINTFORMW 참배자가 없었기 때문에, %조사처리(CALLNAME:LOCAL,"는")% 하루종일 기도하였다
				;祈りでの変化は0～1(MAX0～4)
				속성변동치 = RAND:(2+교회규모/2)
				경배치 += 1
				;이벤트구상
				T = TARGET
				TARGET = LOCAL
				TFLAG:13 = 65
				CALL KOJO_MESSAGE_EVENT
				TARGET = T
				GOTO SKIP_1
			ENDIF
			
			;교회の종류によって分ける
			SELECTCASE 점포("종류",ARG)
				;메시아 교회
				CASE 13
					SELECTCASE RAND:2
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% {참배인수}명의 메시아교 신자에게 몸으로 봉사했다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 방문한 {참배인수}명의 참배자에게 몸을 사용하여 봉사했다
					ENDSELECT
				;가이아教会
				CASE 14
					SELECTCASE RAND:2
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% {참배인수}명의 가이아교 신자에게 몸으로 봉사했다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 방문한 {참배인수}명의 참배자에게 몸을 사용하여 봉사했다
					ENDSELECT
				;교회
				CASE 15
					SELECTCASE RAND:2
						CASE 1
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 미사로 방문한 {참배인수}명의 신자에게 자신의 몸으로 봉사했다
						CASEELSE
							PRINTFORML %조사처리(CALLNAME:LOCAL,"는")% 방문한 {참배인수}명의 참배자에게 몸을 사용하여 봉사했다
					ENDSELECT
			ENDSELECT
			
			;이벤트구상
			T = TARGET
			TARGET = LOCAL
			TFLAG:13 = 67
			CALL KOJO_MESSAGE_EVENT
			TARGET = T
			;취득경험計算
			;とりあえず一人に付き一発にしておく
			FOR LOCAL:1, 0, 참배인수
				SELECTCASE RAND:3
					CASE 1
						입봉사횟수 ++
					CASE 2
						Ｖ봉사횟수 ++
					CASEELSE
						Ａ봉사횟수 ++
				ENDSELECT
				
				;키스경험処理：適当に랜덤で
				SIF RAND:2 == 0
					TCVAR:LOCAL:획득키스경험 += 1
				
			NEXT
			TCVAR:LOCAL:획득펠라경험 += 입봉사횟수
			TCVAR:LOCAL:획득Ｖ경험 += Ｖ봉사횟수
			TCVAR:LOCAL:획득Ａ경험 += Ａ봉사횟수
			TCVAR:LOCAL:획득봉사쾌락경험 += Ｖ봉사횟수 + Ａ봉사횟수
			TCVAR:LOCAL:획득정액경험 += 입봉사횟수 + Ｖ봉사횟수 + Ａ봉사횟수
			TCVAR:LOCAL:획득성교경험 += Ｖ봉사횟수 + Ａ봉사횟수
			TCVAR:LOCAL:획득질사경험 += Ｖ봉사횟수
			경배치 += 1 + 입봉사횟수 + 2*(Ｖ봉사횟수 + Ａ봉사횟수)
			IF TALENT:LOCAL:혀놀림
				TCVAR:LOCAL:획득정액경험 += 입봉사횟수 / 2
				경배치 += 입봉사횟수 / 2
			ENDIF
			;妊娠用, SHOW_ADD_EXPの前に置かないと獲得膣射経験が0になる
			IF CFLAG:LOCAL:자궁내피임결계 == 0
				CFLAG:LOCAL:신자의질내사정에의한임신판정 += TCVAR:LOCAL:획득질사경험*2
				;자궁현재용량加算
				IF TALENT:LOCAL:오토코노코
					CFLAG:(LOCAL):자궁현재용량 += Ａ봉사횟수 * 5
				ELSEIF !IS_MALE(LOCAL)
					CFLAG:(LOCAL):자궁현재용량 += Ｖ봉사횟수 * 5
				ENDIF
				
			ENDIF
			;獲得経験表示
			CALL SHOW_ADD_EXP, LOCAL
			;체력の소비
			PRINTFORML 체력 - {참배인수*10}
			BASE:LOCAL:체력 -= 참배인수*10

			;性봉사での変化は1～4(MAX1～9)
			속성변동치 = 1 + RAND:(4+교회규모)

	ENDSELECT
	$SKIP_1
	;数値が1以上なら속성値変動
	IF LOCAL:1
		;교회によって変動が変わる
		SELECTCASE 점포("종류", ARG)
			CASE 13
				LOCAL:2 = 255
			CASE 14
				LOCAL:2 = 0
			CASE 15
				LOCAL:2 = 127
		ENDSELECT
		;キャラの속성値変動
		CALL CHANGE_CHARA_LC, LOCAL, LOCAL:2, 속성변동치
		CALL SYNC_STATUS, LOCAL
	ENDIF

	PRINTW
	DRAWLINE

NEXT
