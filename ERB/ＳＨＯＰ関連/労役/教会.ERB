LOCAL:2 = 500
LOCAL:3 = 1000
LOCAL:4 = 2000
LOCAL:5 = 5000

$LOOP_1
PRINTFORML 권유할 자를 고르세요　　　경배치：{[[점포:인기]]:ARG}

SELECTCASE 점포("종류",ARG)
