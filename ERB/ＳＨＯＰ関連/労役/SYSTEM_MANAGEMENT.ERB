;점포に出る조건
;========================================================
@WORKABLE(ARG,ARG:1)
#FUNCTION
SELECTCASE [[점포:종류]]:ARG
	CASE 0
		RETURNF 1

	CASE 10
		;맹우だとできない
		SIF TALENT:(ARG:1):맹우
			RETURNF 0
		;縛り上げるだけなので、조건は無い
		RETURNF 1
	CASE 11
		;主人は無理をする
		SIF ARG:1 == MASTER
			RETURNF 1
		;신뢰함락はダメ
		SIF TALENT:(ARG:1):신뢰 || TALENT:(ARG:1):동료
			RETURNF 0
		;노출증がないと無理
		SIF ABL:(ARG:1):노출증 <= 0
			RETURNF 0
		;매각가능じゃないと無理
		SIF CFLAG:(ARG:1):매각가능 == 0
			RETURNF 0
		RETURNF 1
	CASE 12
		;主人以外
		SIF ARG:1 == MASTER
			RETURNF 0
		;신뢰함락はダメ
		SIF TALENT:(ARG:1):신뢰 || TALENT:(ARG:1):동료
			RETURNF 0
		SIF IS_LOOKSLIKE_MALE(ARG:1) == 0
			RETURNF 1
		;남자はヤる気がないとダメ
		SIF 함락(ARG:1)
			RETURNF 1
	;教会
	CASE 13, 14, 15
		;신뢰함락はダメ
		SIF TALENT:(ARG:1):신뢰 || TALENT:(ARG:1):동료
			RETURNF 0
		;男はダメ
		SIF IS_MALE(ARG:1)
			RETURNF 0
		;함락していないとダメ
		SIF 함락(ARG:1) == 0
			RETURNF 0
		RETURNF 1

ENDSELECT
