@SHOW_CHARA_SORT
#DIM LCOUNT
LOCAL:3 = 0
FOR LCOUNT, 0, 리스트표시수()
	LOCAL = Q:(LCOUNT + P * 리스트표시수())
	SIF TFLAG:4 == LOCAL
		CONTINUE
	SIF LOCAL < 0
		CONTINUE
	SIF CFLAG:LOCAL:이자리에없는플래그 == 1
		CONTINUE
	IF LOCAL == TARGET
		PRINT ☆
	ELSEIF LOCAL == ASSI
		PRINT ★
	ELSEIF CFLAG:LOCAL:이자리에없는플래그 == 4
		PRINT ◆
		LOCAL:3 |= 1
	ELSEIF CFLAG:LOCAL:이자리에없는플래그 == 8
		PRINT ▲
		LOCAL:3 |= 2
	ELSEIF CFLAG:LOCAL:이자리에없는플래그 & 1024
		PRINT ◇
		LOCAL:3 |= 4
	ELSEIF ISASSI:LOCAL == 1
		PRINT ●
	ELSEIF CFLAG:LOCAL:매각가능 == 2
		PRINT ○
	ELSE
		PRINT 　
	ENDIF
	CALL ARRANGE_CHARALIST, LOCAL
	CALL ARRANGE_CHARALIFE, LOCAL
	CALL ARRANGE_CHARAPOSITION, LOCAL
	
	SIF FLAG:SHOP커맨드 == [[SHOP:동료마강화]]
		PRINTFORM 　　MAG:{BASE:LOCAL:ＭＡＧ,5}/{MAXBASE:LOCAL:ＭＡＧ,5}
