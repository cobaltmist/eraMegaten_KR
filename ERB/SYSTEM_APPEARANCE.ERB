		BASE:ARG:힙사이즈 += RAND:3 +1
	CASE "縮尻"
		BASE:ARG:힙사이즈 -= RAND:3 +1
	CASEELSE
		;身長伸ばす薬とかもアリな気がする。変化の薬(アダルト）とかで……
ENDSELECT




;-------------------------------------------------
;バストサイズのオートセット
;-------------------------------------------------
@SET_INFO_BODYSIZE_AUTO_BUST, ARG
	IF TALENT:ARG:절벽
		;AAA-AA
		LOCAL = RAND:30
		;測定不能절벽にしない慈悲
		SIF LOCAL <= 10
			LOCAL = 10
	ELSEIF TALENT:ARG:빈유
		;A-B
		LOCAL = RAND:40
		LOCAL += 20
		;カップサイズは3-4
		SIF LOCAL >= 40
			LOCAL = 40
		SIF LOCAL <= 30
			LOCAL = 30
	ELSEIF TALENT:ARG:거유
		;D-E
		LOCAL = RAND:30
		LOCAL += 50
		;カップサイズは6-7
		SIF LOCAL >= 70
			LOCAL = 70
		SIF LOCAL <= 60
			LOCAL = 60
	ELSEIF TALENT:ARG:폭유
		;F-K
		LOCAL = RAND:80
		LOCAL += 60
		;カップサイズは8-13
		SIF LOCAL >= 130
			LOCAL = 130
		SIF LOCAL <= 80
			LOCAL = 80
	ELSEIF TALENT:ARG:마유
		;L-魔
		;魔なるものなので凄まじく雑にブレる
		;期待値的には18＝Ｐカップくらい。
		;また、下限カップが出やすい。1/3くらいはＬカップになる。ラージサイズだな。……雑ゥ！！！
		LOCAL = RAND:250
		LOCAL += 60
		;カップサイズは14-30
		SIF LOCAL >= 300
			LOCAL = 300
		SIF LOCAL <= 140
			LOCAL = 140
	;普通乳
	ELSE
		;C
		LOCAL = RAND:10
		LOCAL = 50
	ENDIF

	;身長からおよそのサイズを설정
	;身長から予測されるアンダーバストに、カップ数分の가슴囲をプラスし、1000以下を切り捨てし1000で割る
	;でっかいオパーイは夢なので上限下限を설정しないこととする。
	;ちなみに160センチでB74(AAA)-146(魔)になる。
	RESULT = BASE:ARG:신장 * 432
	RESULT += (LOCAL * 250) + 2500
	RESULT -= S % 1000

	BASE:ARG:바스트 = RESULT / 1000


;-------------------------------------------------
;ウェストサイズのオートセット
;-------------------------------------------------
@SET_INFO_BODYSIZE_AUTO_WAIST, ARG
	;기본は身長/1000*350から410の間だがたまーに油断してる
	;真ん中ちょい上が標準
	LOCAL = 330
	LOCAL += RAND:50 + RAND:50
	SIF LOCAL >= 410
		LOCAL = 410
	SIF LOCAL <= 350
		LOCAL = 350
	;1/5で油断、子どもならイカ腹な感じでしょうかね
	SIF RAND:5 == 0
		LOCAL += RAND:50

	;ウェストを算出し、1000以下を切り捨てし1000で割る
	RESULT = BASE:ARG:신장 * LOCAL
	RESULT -= S % 1000
	BASE:ARG:웨스트 = RESULT / 1000

;-------------------------------------------------
;ヒップサイズのオートセット
;-------------------------------------------------
@SET_INFO_BODYSIZE_AUTO_HIP, ARG
;기본は乳サイズの流用

	IF TALENT:ARG:小尻
		;10-19の範囲
		LOCAL = RAND:20
		SIF LOCAL <= 10
			LOCAL = 10
	ELSEIF TALENT:ARG:巨尻
		;30-39
		LOCAL = RAND:20
		LOCAL += 20
		SIF LOCAL >= 39
			LOCAL = 39
		SIF LOCAL <= 30
			LOCAL = 30
	ELSEIF TALENT:ARG:爆尻
		;40-49
		;ちょっとだけ大きくなりやすい
		LOCAL = RAND:25
		LOCAL += 30
		SIF LOCAL >= 49
			LOCAL = 49
		SIF LOCAL <= 40
			LOCAL = 40
	ELSEIF TALENT:ARG:魔尻
		;50-75
		;大きくなりやすい
		LOCAL = RAND:35
		LOCAL += 45
		SIF LOCAL >= 75
			LOCAL = 75
		SIF LOCAL <= 50
			LOCAL = 50
	;미설정、または普通尻
	ELSE
		;20-29
		;ちょっとおしりは小さめになりがちです。普通ならな。
		LOCAL = RAND:20
		LOCAL += 10
		SIF LOCAL >= 29
			LOCAL = 29
		SIF LOCAL <= 20
			LOCAL = 20
	ENDIF


	;身長からおよそのサイズを설정
	;身長から予測される尻サイズを標準とし、そこから盛ったり削ったりし、1000以下を切り捨てし1000で割る
	;でっかいおしりも夢なので上限下限を설정しないこととする。
	;ちなみに160センチでH79(S)-103(魔)になる。
	;X:標準尻
	;Y:並尻分のプラス
	X = BASE:ARG:신장 * (530 + RAND:13)
	;並尻分の肉加算値
	Y = RAND:20
	Y += 10
	SIF Y >= 29
		Y = 29
	SIF Y <= 20
		Y = 20
	RESULT = X - (Y * 300) + (LOCAL * 300)
	RESULT -= S % 1000

	BASE:ARG:힙사이즈 = RESULT / 1000




