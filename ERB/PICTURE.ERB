			;		LOCAL:1 --
			;		ログ:行 = %REPLACE(ログ:行 , "__" , "_")%
			;		
			;	ENDIF
			;NEXT
			;PRINTFORML {LOCAL:1}
			;IF LOCAL:1
			;	PRINTW hoge
			;ENDIF
			
		ENDIF
ENDSELECT











