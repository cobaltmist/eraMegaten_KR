			;	IF LOCALS:2 != "" && LOCALS:2 == LOCALS:5
			;		
			;		;PRINTW 返還前
			;		ログ:行 = %CHANGE_SPLIT(ログ:行 , "_" , LOCAL , , LOCALS:1+LOCALS:4+LOCALS:2)%
