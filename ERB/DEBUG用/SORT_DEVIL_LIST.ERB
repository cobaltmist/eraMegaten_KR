;====================================
;등록済みの악마をリスト化するための関数です
;레벨順リストは기본的に特殊종족と인간を표시しません。
;雑魚악마等を選択したりする用です。
;====================================



@SHOPCOMABLE_199
[IF_DEBUG]
	RESULTS = 악마리스트화
	RETURN 1
[ENDIF]
IF FLAG:DEBUG
	RESULTS = 악마리스트화
	RETURN 1
ENDIF
RETURN -1

@SHOP_COM_199
CALL INPUT_SELECT, 1 , "레벨순 정렬", 2, "등록번호순 정렬" , 3 , "종족＋레벨순 정렬"
LOCAL = RESULT
PRINTL
CLEARLINE 5000
PRINTFORML ;-------------------------------
PRINTFORML ;%GAMEBASE_TITLE% {GAMEBASE_VERSION/1000},{GAMEBASE_VERSION % 1000}
GETTIME
PRINTFORML ;%RESULTS%
PRINTFORML ;-------------------------------
PRINTFORML ;-------------------------------
PRINTFORML ;この資料は資料フォルダ内にある
PRINTFORML ;SORT_DEVIL_LIST.ERBを利用して作成されています
PRINTFORML ;何か追加する際はコピペするのではなく、
PRINTFORML ;SORT_DEVIL_LIST.ERBを利用して出力してください
PRINTFORML ;-------------------------------
IF LOCAL == 3
	FOR LOCAL:2 , 0 , 18
		FOR LOCAL:3 , 0 , 2
			FOR LOCAL:1,1,100
				FOR LOCAL,LOCAL:2 * 100, LOCAL:2 * 100 + 100
					IF EXISTCSV(LOCAL,0) && CSVBASE(LOCAL,GETNUM(BASE,"LV"),0) == LOCAL:1 && CSVTALENT(LOCAL,GETNUM(TALENT,"남자"),0) == LOCAL:3
						PRINTFORM {LOCAL,4} 
						PRINTFORM \@ CSVCSTR(LOCAL,GETNUM(CSTR,"종족명"),0) != "" ? %CSVCSTR(LOCAL,GETNUM(CSTR,"종족명"),0),10,LEFT% # %STR:(CSVABL(LOCAL,GETNUM(ABL,"종족"),0)),10,LEFT%\@　
						PRINTFORM %CSVCALLNAME(LOCAL,0),20,LEFT%　
						PRINTFORM \@ CSVTALENT(LOCAL,GETNUM(TALENT,"비전투원"),0) ? 비전투원 # LV{CSVBASE(LOCAL,GETNUM(BASE,"LV"),0),6} \@　
						PRINTFORM %SUBSTRING(GET_ALI1(CSVABL(LOCAL,GETNUM(ABL,"속성LD"),0)),0,1)%/%SUBSTRING(GET_ALI2(CSVABL(LOCAL,GETNUM(ABL,"속성LC"),0)),0,1)%　
						SIF CSVABL(LOCAL,GETNUM(ABL,"아이템1"),0)
							PRINTFORM 전리품1：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템1"),0)%　
						SIF CSVABL(LOCAL,GETNUM(ABL,"아이템2"),0)
							PRINTFORM 전리품2：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템2"),0)%　
						SIF CSVABL(LOCAL,GETNUM(ABL,"아이템3"),0)
							PRINTFORM 전리품3：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템3"),0)%　
						SIF CSVABL(LOCAL,GETNUM(ABL,"코딩"),0)
							PRINTFORM %ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"코딩"),0)%　
						SIF CSVABL(LOCAL,GETNUM(ABL,"수태아이템"),0)
							PRINTFORM 수태아이템：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"수태아이템"),0)%　
						SIF CSVCSTR(LOCAL,GETNUM(CSTR,"해설1"),0) != ""
							PRINTFORM 해설　
						SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"특수합체만"),0)
							PRINTFORM 특수합체만　
						SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"합체조건있음"),0)
							PRINTFORM 합체조건있음　
						SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"전서소환불가"),0)
							PRINTFORM 전서소환불가　
						PRINTL
					ENDIF
				NEXT
			NEXT
			PRINTL
		NEXT
		PRINTL
	NEXT
	WAIT
ELSEIF LOCAL == 2
	FOR LOCAL,0,5000
		SIF LOCAL % 100 == 0
			PRINTL
		IF EXISTCSV(LOCAL,0)
			PRINTFORM {LOCAL,4} 
			PRINTFORM \@ CSVCSTR(LOCAL,GETNUM(CSTR,"종족명"),0) != "" ? %CSVCSTR(LOCAL,GETNUM(CSTR,"종족명"),0),10,LEFT% # %STR:(CSVABL(LOCAL,GETNUM(ABL,"종족"),0)),10,LEFT%\@　
			PRINTFORM %CSVCALLNAME(LOCAL,0),20,LEFT%　
			PRINTFORM \@ CSVTALENT(LOCAL,GETNUM(TALENT,"비전투원"),0) ? 비전투원 # LV{CSVBASE(LOCAL,GETNUM(BASE,"LV"),0),6} \@　
			PRINTFORM %SUBSTRING(GET_ALI1(CSVABL(LOCAL,GETNUM(ABL,"속성LD"),0)),0,1)%/%SUBSTRING(GET_ALI2(CSVABL(LOCAL,GETNUM(ABL,"속성LC"),0)),0,1)%　
			SIF CSVABL(LOCAL,GETNUM(ABL,"아이템1"),0)
				PRINTFORM 전리품1：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템1"),0)%　
			SIF CSVABL(LOCAL,GETNUM(ABL,"아이템2"),0)
				PRINTFORM 전리품2：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템2"),0)%　
			SIF CSVABL(LOCAL,GETNUM(ABL,"아이템3"),0)
				PRINTFORM 전리품3：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템3"),0)%　
			SIF CSVABL(LOCAL,GETNUM(ABL,"코딩"),0)
				PRINTFORM %ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"코딩"),0)%　
			SIF CSVABL(LOCAL,GETNUM(ABL,"수태아이템"),0)
				PRINTFORM 수태아이템：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"수태아이템"),0)%　
			SIF CSVCSTR(LOCAL,GETNUM(CSTR,"해설1"),0) != ""
				PRINTFORM 해설　
			SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"특수합체만"),0)
				PRINTFORM 특수합체만　
			SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"합체조건있음"),0)
				PRINTFORM 합체조건 있음　
			SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"전서소환불가"),0)
				PRINTFORM 전서소환불가　
			PRINTL
		ENDIF
	NEXT
	WAIT
ELSE
	PRINTFORML ;特殊종족と인간を除いた악마のリストです
	FOR LOCAL:1,1,100
		SIF LOCAL:1 % 10 == 0
			PRINTL
		FOR LOCAL,0,5000
			IF EXISTCSV(LOCAL,0) && CSVBASE(LOCAL,GETNUM(BASE,"LV"),0) == LOCAL:1 && CSVABL(LOCAL,GETNUM(ABL,"종족"),0) > 0 && CSVABL(LOCAL,GETNUM(ABL,"종족"),0) < 19
				
				PRINTFORM {LOCAL,4} 
				PRINTFORM \@ CSVCSTR(LOCAL,GETNUM(CSTR,"종족명"),0) != "" ? %CSVCSTR(LOCAL,GETNUM(CSTR,"종족명"),0),10,LEFT% # %STR:(CSVABL(LOCAL,GETNUM(ABL,"종족"),0)),10,LEFT%\@　
				PRINTFORM %CSVCALLNAME(LOCAL,0),20,LEFT%　
				PRINTFORM %SUBSTRING(GET_ALI1(CSVABL(LOCAL,GETNUM(ABL,"속성LD"),0)),0,1)%/%SUBSTRING(GET_ALI2(CSVABL(LOCAL,GETNUM(ABL,"속성LC"),0)),0,1)%　
				PRINTFORM \@ CSVTALENT(LOCAL,GETNUM(TALENT,"비전투원"),0) ? 비전투원 # LV{CSVBASE(LOCAL,GETNUM(BASE,"LV"),0),6} \@　
				SIF CSVABL(LOCAL,GETNUM(ABL,"아이템1"),0)
					PRINTFORM 전리품1：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템1"),0)%　
				SIF CSVABL(LOCAL,GETNUM(ABL,"아이템2"),0)
					PRINTFORM 전리품2：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템2"),0)%　
				SIF CSVABL(LOCAL,GETNUM(ABL,"아이템3"),0)
					PRINTFORM 전리품3：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"아이템3"),0)%　
				SIF CSVABL(LOCAL,GETNUM(ABL,"코딩"),0)
					PRINTFORM %ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"코딩"),0)%　
				SIF CSVABL(LOCAL,GETNUM(ABL,"수태아이템"),0)
					PRINTFORM 수태아이템：%ITEMNAME:CSVABL(LOCAL,GETNUM(ABL,"수태아이템"),0)%　
				SIF CSVCSTR(LOCAL,GETNUM(CSTR,"해설1"),0) != ""
					PRINTFORM 해설　
				SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"특수합체만"),0)
					PRINTFORM 특수합체만　
				SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"합체조건있음"),0)
					PRINTFORM 합체조건있음　
				SIF CSVCFLAG(LOCAL,GETNUM(CFLAG,"전서소환불가"),0)
					PRINTFORM 전서소환불가　
				PRINTL
			ENDIF
		NEXT
	NEXT
	WAIT
ENDIF

