;-------------------------------------------------
;2択提示関数　@INPUT_YN
;いちいち、INPUT_LOOP書くのめんどいよ！
;っていうか、2択提示はめちゃめちゃ多いんだから、関数化しちゃえばいいじゃないかときづく
;INPUTINTでもまぁほとんど同じだけど、これほんとよく使う定形だから、別関数として独立させる
;0、1しかこないのでONEINPUTに변경
;-------------------------------------------------
@INPUT_YN,ARGS = "예",ARGS:1 = "아니오",ARG = 1 
REDRAW 0
SELECTCASE ARG
	CASE 1
		PRINTFORML [0] %ARGS%
		PRINTFORML [1] %ARGS:1%
	CASE 2
		PRINTFORM [0] %ARGS% 
		PRINTFORML [1] %ARGS:1%
;한글판 개조 제다이
	CASE 3
		PRINTFORML [0] %ARGS:1%
		PRINTFORML [1] %ARGS%
;한글판 개조 제다이
ENDSELECT
$INPUT_LOOP

ONEINPUTS
IF RESULTS == "0" || RESULTS == " " || (FLAG:YN입력설정 == 1 && (ARGS == "예" || ARGS == "예" || ARGS == "Yes") && (RESULTS == "y" || RESULTS == "Y")) || (FLAG:YN입력설정 == 2 && (RESULTS == "y" || RESULTS == "Y"))
	REDRAW 1
	RETURN 0
ELSEIF RESULTS == "1" || (FLAG:YN입력설정 == 1 && (ARGS:1 == "아니오" || ARGS == "아니오" || ARGS:1 == "No") && (RESULTS == "n" || RESULTS == "N")) || (FLAG:YN입력설정 == 2 && (RESULTS == "n" || RESULTS == "N"))
	REDRAW 1
	RETURN 1
ELSE
	SIF RESULTS != ""
		CLEARLINE 1
	REUSELASTLINE 
	GOTO INPUT_LOOP
ENDIF