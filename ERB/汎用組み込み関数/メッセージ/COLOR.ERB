;----------------------------------------------------------
;@COLOR(ARGS)
;----------------------------------------------------------
@COLOR, ARGS
#FUNCTION
SELECTCASE TOUPPER(ARGS)
	CASE "DEFAULT" , "DEF" , "デフォルト", "디폴트"
		RETURNF GETDEFCOLOR()
	CASE "紅"
		RETURNF 0xB815B8
	CASE "深紅"
		RETURNF 0xEF5445
	CASE "RED", "赤", "붉은색"
		RETURNF 0x990000
	CASE "P-RED", "PASTEL-RED", "パ赤"
		RETURNF 0xC07070
	CASE "P-BLUE", "PASTEL-BLUE", "パ青"
		RETURNF 0x7070C0
	CASE "P-GREEN", "PASTEL-GREEN", "パ緑"
		RETURNF 0x70C070
	CASE "P-PURPLE", "PASTEL-PURPLE", "パ紫"
		RETURNF 0xC070C0
	CASE "P-YELLOW", "PASTEL-YELLOW", "パ黄"
		RETURNF 0x505020
	CASE "P-BGREEN", "P-BLUEGREEN", "PASTEL-BLUEGREEN", "パ青緑"
		RETURNF 0x205050
	CASE "WHITE", "白"
		RETURNF 0xC0C0C0
	CASE "BLACK", "黒"
		RETURNF 0x000000
	CASE "暗水色"
		RETURNF 0xB0CCEF
	CASE "AQUA", "水色", "하늘색"
		RETURNF 0x66FFFF
	CASE "DARK-GRAY", "暗灰色"
		RETURNF 0x404040
	CASE "GRAY", "灰色"
		RETURNF 0x777777
	CASE "LIGHT-GRAY", "明灰色"
		RETURNF 0x909090
	CASE "DARK-PINK", "黒桃"
		RETURNF 0x990099
	CASE "ショッキングピンク"
		RETURNF 0xEF0EEF
	CASE "ピンク"
		RETURNF 0xEF857C
	CASE "PINK", "桃", "桃色"
		RETURNF 0xFF33FF
	CASE "ハートピンク", "明桃色"
		RETURNF 0xFFC0CB
	CASE "BROWN","茶色"
		RETURNF 0x90623C
	CASE "黄色","YELLOW","イエロー"
		RETURNF 0xEFD540
	CASE "暗黄色","DARK-YELLOW"
		RETURNF 0xC4C400
	CASE "明黄色","LIGHT-YELLOW","レモン","レモン色","レモンイエロー"
		RETURNF 0xFFFF00
	CASE "藍色"
		RETURNF 0x165E83
ENDSELECT