;===============================
;특정 스킬을、몇 개 습득하고 있는지
;==============================
;ARG	キャラ
;ARG:1	スキル
;ARG:2	デビルシフターの処理の為
@HAVE_SKILL_OVERLAP(ARG,ARG:1,ARG:2 = 0)
#FUNCTION
#LOCALSIZE 2
LOCAL = 0
IF ARG:2 == 0
	LOCAL:1 = GETNUM(ABL , "스킬1")
	LOCAL += MATCH(ABL:ARG:0, ARG:1, LOCAL:1, LOCAL:1 + CHARA_SKILLCOUNT(ARG)+1)
	LOCAL:1 = GETNUM(ABL , "장비스킬1")
	LOCAL += MATCH(ABL:ARG:0, ARG:1, LOCAL:1, LOCAL:1 + 22)
ELSE
	LOCAL:1 = GETNUM(ABL , "초기변신악마스킬1")
	LOCAL += MATCH(ABL:ARG:0, ARG:1, LOCAL:1, LOCAL:1 + CHARA_SKILLCOUNT(ARG)+1)
	LOCAL:1 = GETNUM(ABL , "장비스킬1")
	LOCAL += MATCH(ABL:ARG:0, ARG:1, LOCAL:1, LOCAL:1 + 22)
ENDIF
RETURNF LOCAL
