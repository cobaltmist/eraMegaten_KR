;===============================
;특정 스킬을 습득하고 있는지
;HAVE_SKILL의 초기변신악마스킬 판
;ARG 対象のキャラ
;ARG:1 対象のスキル
;ARG:2 位置情報を返すかどうか
;==============================
@HAVE_SKILL_C(ARG,ARG:1,ARG:2 = 0)
#FUNCTION
#LOCALSIZE 3
#LOCALSSIZE 1

SIF ARG < 0
	RETURNF 0

LOCAL:1 = GETNUM(ABL , "초기변신악마스킬1")
LOCAL:2 = CHARA_SKILLCOUNT(ARG) + 1
IF MATCH(ABL:ARG:0, ARG:1, LOCAL:1, LOCAL:1 + LOCAL:2)
	IF ARG:2 == 0
		RETURNF 1
	ELSE
		FOR LOCAL,1,LOCAL:2
			LOCALS = スキル{LOCAL}
			SIF ABL:ARG:LOCALS == ARG:1
				RETURNF LOCAL
		NEXT
	ENDIF
ENDIF
LOCAL:1 = GETNUM(ABL , "장비스킬1")
IF MATCH(ABL:ARG:0, ARG:1, LOCAL:1, LOCAL:1 + 22)
	IF ARG:2 == 0
		RETURNF 1
	ELSE
		FOR LOCAL,1,22
			LOCALS = 장비스킬{LOCAL}
			SIF ABL:ARG:LOCALS == ARG:1
				RETURNF 20+LOCAL
		NEXT
	ENDIF
ENDIF
RETURNF 0