;===============================
;ハーモナイザーの出力を計算するために
;パーティのサマナーLVを参照し
;パーセンテージを出す関数
;
;LV5　　+30％
;LV4～3 +20％
;LV2～1 +15％
;
;===============================
@GET_하모나이저출력(ARG = 0)
#FUNCTION
LOCAL:1 = 0
FOR LOCAL,1,7
	LOCALS = 포지션{LOCAL}
	IF FLAG:LOCALS > -1
		SELECTCASE GET_STATE(CFLAG:(FLAG:LOCALS):상태이상)
			CASE "DYING","STONE","FLY","PALYZE","BIND","CHARM","SLEEP","PANIC"
				CONTINUE
			CASEELSE
				;5 30%
				IF TALENT:(FLAG:LOCALS):서머너 > 4
					LOCAL:1 += 30
				;3 20％
				ELSEIF TALENT:(FLAG:LOCALS):서머너 > 2
					LOCAL:1 += 20
				;1 15％
				ELSEIF TALENT:(FLAG:LOCALS):서머너 > 0
					LOCAL:1 += 15
					
				ENDIF
		ENDSELECT
	ENDIF
NEXT
;60％を天井に
SIF LOCAL:1 > 60
	LOCAL:1 = 60
;ゼロ以下で掛け算しないように
SIF LOCAL:1 < 1
	LOCAL:1 = 1
RETURNF LOCAL:1