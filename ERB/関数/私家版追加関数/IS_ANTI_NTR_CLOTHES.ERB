@IS_ANTI_NTR_CLOTHES,ARG
#FUNCTION
#DIM NTR_CHK
;NTRを防ぐ着衣を着用しているか
;基本的には防ぐ方を優先
;専有奴隷の首輪などNTR防御系をつけている場合は「１」
;背徳の指輪などNTR誘発系をつけている場合は「-1」
;どちらもないなら「０」を返す


;おまじないの初期化
NTR_CHK = 0

;ARG番のキャラが存在しない場合はゼロを返す
SIF ARG > (CHARANUM - 1) || ARG < 0
	RETURNF NTR_CHK


;着衣はCFLAGの場合とTEQUIPで見ている場合があるので、両方でチェック
{
IF 
	CFLAG:ARG:모자       == [[衣装:정절의귀걸이]] || 
	CFLAG:ARG:속옷（하） == [[衣装:정조의마에바리]] || 
	CFLAG:ARG:하의       == [[衣装:철벽스커트]] || 
	CFLAG:ARG:손         == [[衣装:순결의커프스]] || 
	CFLAG:ARG:그외     == [[衣装:전속노예의목걸이]] || 
	CFLAG:ARG:그외2    == [[衣装:전속노예의목걸이]] || 
	CFLAG:ARG:그외3    == [[衣装:전속노예의목걸이]]
}
	NTR_CHK = 1
{
ELSEIF 
	TEQUIP:ARG:모자       == [[衣装:정절의귀걸이]] || 
	TEQUIP:ARG:속옷（하） == [[衣装:정조의마에바리]] || 
	TEQUIP:ARG:하의       == [[衣装:철벽스커트]] || 
	TEQUIP:ARG:손         == [[衣装:순결의커프스]] || 
	TEQUIP:ARG:그외     == [[衣装:전속노예의목걸이]] || 
	TEQUIP:ARG:그외2    == [[衣装:전속노예의목걸이]] || 
	TEQUIP:ARG:그외3    == [[衣装:전속노예의목걸이]]
}
	NTR_CHK = 1

{
ELSEIF 
	CFLAG:ARG:모자        == [[衣装:번식예찬귀표]] || 
	CFLAG:ARG:속옷（하）  == [[衣装:생식환영표]] || 
	CFLAG:ARG:하의        == [[衣装:콘돔허리미노]] || 
	CFLAG:ARG:손          == [[衣装:음탕의염주]] || 
	CFLAG:ARG:그외      == [[衣装:배덕의반지]] || 
	CFLAG:ARG:그외2     == [[衣装:배덕의반지]] || 
	CFLAG:ARG:그외3     == [[衣装:배덕의반지]]
}
	NTR_CHK = -1
{
ELSEIF 
	TEQUIP:ARG:모자        == [[衣装:번식예찬귀표]] || 
	TEQUIP:ARG:속옷（하）  == [[衣装:생식환영표]] || 
	TEQUIP:ARG:하의        == [[衣装:콘돔허리미노]] || 
	TEQUIP:ARG:손          == [[衣装:음탕의염주]] || 
	TEQUIP:ARG:그외      == [[衣装:배덕의반지]] || 
	TEQUIP:ARG:그외2     == [[衣装:배덕의반지]] || 
	TEQUIP:ARG:그외3     == [[衣装:배덕의반지]]
}
	NTR_CHK = -1

ELSE
	;いずれにも当てはまらなければゼロです
	NTR_CHK = 0

ENDIF




RETURNF NTR_CHK

