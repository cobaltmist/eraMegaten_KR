;----------------------------------------------------------
;@COLOR(ARG)
;----------------------------------------------------------
@STATE_COLOR, ARG
#FUNCTION
SELECTCASE ARG
	CASE 0
		RETURNF GETDEFCOLOR()
	CASE 1
		;HAPPY
		;ピンク(薄い桃)
		RETURNF 0xffcccc
	CASE 2
		;SHOCK
		;黄(薄い黄)
		RETURNF 0xffff99
	CASE 3
		;PANIC
		;青(薄い蒼)
		RETURNF 0x99ccff
	CASE 4
		;SLEEP
		;青(暗い青)
		RETURNF 0x009999
	CASE 5
		;FREEZE
		;青(薄い蒼)
		RETURNF 0x0099cc
	CASE 6
		;BIND
		;黄(暗い黄)
		RETURNF 0xcccc00
	CASE 7
		;CLOSE
		;紫(薄い紫)
		RETURNF 0xcc99ff
	CASE 8
		;POISON
		;紫
		RETURNF 0xcc00cc
	CASE 9
		;BOMB
		RETURNF GETDEFCOLOR()
	CASE 10
		;CHARM
		;ピンク
		RETURNF 0xff00ff
	CASE 11
		;PALYZE
		;緑
		RETURNF 0x66cc99
	CASE 12
		;CURSE
		;濃い紫
		RETURNF 0x6600ff
	CASE 13
		;FLY
		;濃い黄
		RETURNF 0xffff00
	CASE 14
		;STONE
		;緑
		RETURNF 0x66cc99
	CASE 15
		;DYING
		;赤(暗い赤)
		RETURNF 0x990000
	CASE 16
		;ORGY
		;オレンジ
		RETURNF 0xffaa11
	CASE 17
		;HEAT
		;やや暗い赤
		RETURNF 0xaa0000
	CASE 18
		;FLAME
		;鮮やかな紫みの赤
		RETURNF 0xff1e86
	CASE 19
		;SLIP
		;明るい黄みの橙
		RETURNF 0xffde86
	CASE 20
		;BRAND
		;濃い橙
		RETURNF 0xff6400
ENDSELECT
RETURNF GETDEFCOLOR()