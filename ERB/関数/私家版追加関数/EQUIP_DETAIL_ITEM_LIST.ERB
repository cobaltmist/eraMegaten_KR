@EQUIP_DETAIL_ITEM_LIST,ARG,ARG:1
#DIM リスト数
リスト数 = FINDELEMENT(아이템리스트 , -1)
LOCAL:1 = 0
LOCAL:2 = -1
P = 0
$PRINT_LIST
DRAWLINE
IF LOCAL:1 == 0 && ARG:1 > -1
	FOR LOCAL , 0 , 7
		SIF 변경예정장비:LOCAL != -1
			SWAP EQUIP:(ARG:1):GET_EQUIP(LOCAL) , 변경예정장비:LOCAL
	NEXT
ENDIF
CALL PRINT_RPGITEMLIST_2,リスト数,ARG,ARG:1,LOCAL:1
IF LOCAL:1 == 0 && ARG:1 > -1
	FOR LOCAL , 0 , 7
		SIF 변경예정장비:LOCAL != -1
			SWAP EQUIP:(ARG:1):GET_EQUIP(LOCAL) , 변경예정장비:LOCAL
	NEXT
ENDIF
$INPUT_LOOP2
INPUT

IF RESULT == 100
	ARG:1 = MAX(ARG:1,LOCAL:2)
	CALL SYNC_STATUS(ARG:1)
	RETURN 100
ELSEIF RESULT == 6
	SWAP ARG:1,LOCAL:2
	GOTO PRINT_LIST
ELSEIF RESULT == 8
	LOCAL:1 = 1 - LOCAL:1
	GOTO PRINT_LIST
ELSEIF RESULT == 7 && P > 0
	P -= 1
	GOTO PRINT_LIST
ELSEIF RESULT == 9 && P < (リスト数 - 1)/10
	P += 1
	GOTO PRINT_LIST
ELSEIF MATCH(아이템리스트,RESULT,0)> 0
	LOCAL:1 = RESULT
	ARG:1 = MAX(ARG:1,LOCAL:2)
	CALL SYNC_STATUS(ARG:1)
	RETURN LOCAL:1
ELSE
	CLEARLINE 1
	GOTO INPUT_LOOP2
ENDIF
	


