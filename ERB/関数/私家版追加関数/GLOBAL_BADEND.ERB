;배드엔드기록1　No.0～63用
;배드엔드기록2　No.64～127用
;
;No. 0～　RPG系全滅エンドを想定(闘技場含む)
;No.30～　조교系バットエンドを想定
;No.40～　シナリオ上のバットエンドを想定
;No.50～　EXTRA系のバットエンドを想定
;
;バットエンド메시지は以下みたいな感じで
;	PRINTW 
;	PRINTW 　　　　　　　　――  Bad Ending No.006 ( 전멸 END -ソウルハッカーズ편- )
;	CALL GLOBAL_BADEND_SET(6)
;=================================================================


;-----------------------------------------------------------------
;@GLOBAL_BADEND_INIT
;BADエンド関係の変数値を초기化
;　引数、戻り値は特になし
;-----------------------------------------------------------------
@GLOBAL_BADEND_INIT
	GLOBAL:배드엔드기록1 = 0
	GLOBAL:배드엔드기록2 = 0
	SAVEGLOBAL
	RETURN 1

;-----------------------------------------------------------------
;@SHOPCOMABLE_700, @SHOP_COM_700
;BADエンド関係デバック用리셋SHOP메뉴(700)
;　引数、戻り値は特になし
;-----------------------------------------------------------------
@SHOPCOMABLE_700
	[IF_DEBUG]
		RESULTS = 배드 엔드 기록 리셋
		RETURN 1
	[ENDIF]
	IF FLAG:DEBUG
		RESULTS = 배드 엔드 기록 리셋
		RETURN 1
	ENDIF
	RETURN -1

@SHOP_COM_700
;KR판 임의수정, 실수에 의한 클릭 방지를 위한 선택지 추가
PRINTL 실행 후에는 복구가 불가능합니다. 정말로 실행하시겠습니까?	
CALL INPUT_YN, "실행한다", "그만둔다"

SELECTCASE RESULT
	CASE 0
		CALL GLOBAL_BADEND_INIT
		PRINTL 배드 엔드 기록을 리셋하였습니다
	CASE 1
ENDSELECT

;-----------------------------------------------------------------
;@GLOBAL_BADEND_SET
;指定されたBADエンドNo.を記録する
;　ARG:0 記録するBADエンドのNo.
;　戻り値は特になし
;-----------------------------------------------------------------
@GLOBAL_BADEND_SET, ARG
	LOADGLOBAL
	
	IF ARG < 64
		SETBIT GLOBAL:배드엔드기록1, ARG
	ELSE
		LOCAL = ARG - 64
		SETBIT GLOBAL:배드엔드기록2, LOCAL
	ENDIF
	
	SAVEGLOBAL
	RETURN 1

;-----------------------------------------------------------------
;@GLOBAL_BADEND_GET
;指定されたBADエンドNo.が記録済か返す
;　ARG:0 記録済か판정するBADエンドのNo.
;　RESULT 마코토(페르소나5):記録済 偽:記録なし
;-----------------------------------------------------------------
@GLOBAL_BADEND_GET, ARG
	LOADGLOBAL

	IF ARG < 64
		LOCAL = GETBIT(GLOBAL:배드엔드기록1, ARG)
	ELSE
		LOCAL = ARG - 64
		LOCAL = GETBIT(GLOBAL:배드엔드기록2, LOCAL)
		LOCAL = LOCAL + 64
	ENDIF
	
	RETURN LOCAL


