			SIF LOCAL:4 >= 24
			RETURN 5834
		;24以下、코마노 아운
			RETURN 5820
	;요조
	CASE 10
		;庭渡 쿠타카
			RETURN 5830
	;외도
	CASE 11
		;27以上、조온
			SIF LOCAL:4 >= 27
			RETURN 5826
		;20以上26以下、시온(TH)
			SIF LOCAL:4 >= 20
			RETURN 5827
