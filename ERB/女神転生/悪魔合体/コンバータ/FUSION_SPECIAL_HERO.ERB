
;FUSION_SPECIAL_RESULTに処理を依存しています。

;コンバーターの有無確認
@FUSION_SPECIAL_4402,ARG,ARG:1
;まどマギコンバーターの有無確認
IF EQUIP:MASTER:인큐베이터
	;主人がグリーフシード装備時は魔女にコンバート
	IF EQUIP:MASTER:악세서리 == 5498
		;조마×지모신 = ホムリリィ
		SIF ABL:(ARG:1):종족 == 1 
			RETURN 3392
		;조마×귀신 = 발푸르기스의밤
		SIF ABL:(ARG:1):종족 == 15
			RETURN 3396
		;조마×요마 = キャンデロロ
		IF ABL:(ARG:1):종족 == 5
		;平均レベルが10未満ならマタサブロー、10以上ならキャンデロロ
			IF (BASE:ARG:LV + BASE:(ARG:1):LV)/2 >= 10
				RETURN 3394
			ELSE
				RETURN 3403
			ENDIF
		ENDIF
		;조마×요귀 = オフィーリア
		SIF ABL:(ARG:1):종족 == 7
			RETURN 3393
		;조마×용왕 = オクタヴィア
		SIF ABL:(ARG:1):종족 == 8
			RETURN 3399
		;조마×마수 = シャルロッテ
		SIF ABL:(ARG:1):종족 == 9
			RETURN 3398
		;조마×외도 = ゲルトルート
		SIF ABL:(ARG:1):종족 == 11
			RETURN 3395
	;장비してない場合は마법소녀にコンバート
	ELSE
		;조마×지모신/귀신 = 아케미호무라
		IF ABL:(ARG:1):종족 == 1 || ABL:(ARG:1):종족 == 15
			;平均レベルが10未満ならメガネほむら、10以上ならノーマルほむら
			IF (BASE:ARG:LV + BASE:(ARG:1):LV)/2 >= 10
				RETURN 4398
			ELSE
				RETURN 4390
			ENDIF
		ELSE
			;조마×여신/마신 = 鹿눈まどか
			SIF ABL:(ARG:1):종족 == 2 || ABL:(ARG:1):종족 == 16
				RETURN 4399
			;조마×마왕 = 美国織莉子
			SIF ABL:(ARG:1):종족 == 3
				RETURN 4393
			;조마×요마 = 巴マミ
			IF ABL:(ARG:1):종족 == 5
				;平均レベルが10未満なら匿名希望、10以上ならマミさん
				IF (BASE:ARG:LV + BASE:(ARG:1):LV)/2 >= 10
					RETURN 4397
				ELSE
					RETURN 3402
				ENDIF
			ENDIF
			;조마×요정 = 千歳ゆま
			SIF ABL:(ARG:1):종족 == 6
				RETURN 4394
			;조마×요귀 = 佐倉杏子
			SIF ABL:(ARG:1):종족 == 7
				RETURN 4395
			;조마×용왕 = 美樹さやか
			SIF ABL:(ARG:1):종족 == 8
				RETURN 4396
			;조마×마수 = 呉キ리카
			SIF ABL:(ARG:1):종족 == 9
				RETURN 4392
			;조마×천사 = 百江나기사
			SIF ABL:(ARG:1):종족 == 4
				RETURN 4389
		ENDIF
	ENDIF
ELSEIF EQUIP:MASTER:컬라이더스코프
		;조마×요마 = 시온
		SIF ABL:(ARG:1):종족 == 5
			RETURN 5050
		;조마×괴이 = 유미즈카 사츠키
		SIF ABL:(ARG:1):종족 == 32
			RETURN 5051
		;조마×지모신 = 토오노 아키하
		SIF ABL:(ARG:1):종족 == 1
			RETURN 5052
		;조마×귀신 = 키시마 코우마
		SIF ABL:(ARG:1):종족 == 15
			RETURN 5066
		;조마×마왕 = 알퀘이드
		SIF ABL:(ARG:1):종족 == 3
			RETURN 5053
		;조마×천사 = 시엘
		SIF ABL:(ARG:1):종족 == 4
			RETURN 5054
		;조마×정령 = 히스이
		SIF ABL:(ARG:1):종족 == 13
			RETURN 5056
		;조마×외도 = 코하쿠
		SIF ABL:(ARG:1):종족 == 11
			RETURN 5057
		;조마×마인 = 토오노 시키
		SIF ABL:(ARG:1):종족 == 42
			RETURN 5055
		;조마×마신 = 아오자키 아오코
		SIF ABL:(ARG:1):종족 == 16
			RETURN 5063

ENDIF

