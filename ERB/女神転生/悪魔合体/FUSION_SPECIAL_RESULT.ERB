;================================================================
;特殊合体の結果を出힘するための関数群です
;================================================================

;=====================================================
;@FUSION_SPESIAL , ARG , ARG:1 ,ARG:2
;ARG同士での特殊合体となる組み合わせが存在するかどうかを調べ、結果を返す
;=====================================================
@FUSION_SPECIAL , ARG , ARG:1 , ARG:2 = -1
#DIM CHARA , 3
#DIM NUM , 3
#LOCALSIZE 2
VARSET CHARA , -1
IF ARG:2 == -1
;２身合体
	;二体とも악마指定のある合体
	;引数として渡す악마の登録番号の설정
	;NOの小さい악마の登録番号が第一引数として渡されるように調整
	IF MIN(NO:(ARG),NO:(ARG:1)) == NO:ARG
		CHARA   = ARG
		CHARA:1 = ARG:1
	ELSE
		CHARA   = ARG:1
		CHARA:1 = ARG
	ENDIF
	;NUM配列にキャラ番号を설정
	NUM   = NO:(CHARA)
	NUM:1 = NO:(CHARA:1)

	TRYCCALLFORM FUSION_SPECIAL_{NUM}_{NUM:1}, CHARA, CHARA:1
		SIF CSVCFLAG(RESULT , GETNUM(CFLAG, "합체조건있음"),0) && FLAG:(10000+RESULT) == 0
			RESULT = 0
		SIF RESULT > 0
			RETURN RESULT
	CATCH
	ENDCATCH
	;一体だけ악마指定のある合体
	FOR LOCAL , 0 , 2
		;指定のある악마の登録番号を第一引数として渡すようにCHARAを설정
		CHARA = ARG:LOCAL
		CHARA:1 = ARG:(!LOCAL)
		TRYCCALLFORM FUSION_SPECIAL_{NO:(CHARA)}, CHARA, CHARA:1
			SIF CSVCFLAG(RESULT , GETNUM(CFLAG, "합체조건있음"),0) && FLAG:(10000+RESULT) == 0
				RESULT = 0
			SIF RESULT > 0
				RETURN RESULT
		CATCH
		ENDCATCH
	NEXT
ELSE
;３身合体
	;三体とも악마指定のある合体
	;引数として渡す악마の登録番号の설정
	;NOの小さい악마の登録番号から引数として渡されるように調整
	;まずはNUM配列にキャラ番号を小さい順に설정
	NUM = MIN(NO:(ARG) , NO:(ARG:1) , NO:(ARG:2))
	NUM:2 = MAX(NO:(ARG) , NO:(ARG:1) , NO:(ARG:2))
	FOR LOCAL , 0 , 3
		SIF NO:(ARG:LOCAL) == NUM || NO:(ARG:LOCAL) == NUM:2
			CONTINUE
		NUM:1 = NO:(ARG:LOCAL)
	NEXT
	;NUM配列のキャラ番号に従ってCHARA配列に登録番号を설정
	FOR LOCAL, 0, 3
		FOR LOCAL:1, 0, 3
			IF NUM:LOCAL == NO:(ARG:(LOCAL:1))
				CHARA:LOCAL = ARG:(LOCAL:1)
				BREAK
			ENDIF
		NEXT
	NEXT

	TRYCCALLFORM FUSION_SPECIAL_{NUM}_{NUM:1}_{NUM:2},CHARA,CHARA:1,CHARA:2
		SIF CSVCFLAG(RESULT , GETNUM(CFLAG, "합체조건있음"),0) && FLAG:(10000+RESULT) == 0
			RESULT = 0
		SIF RESULT > 0
			RETURN RESULT
	CATCH
	ENDCATCH
	;一体だけ악마指定のある合体
	FOR LOCAL , 0 , 3
		;指定のある악마の登録番号を第一引数として渡すようにCHARAを설정
		CHARA = ARG:LOCAL
		CHARA:1 = ARG:((LOCAL+1)%3)
		CHARA:2 = ARG:((LOCAL+2)%3)
		TRYCCALLFORM FUSION_SPECIAL_T_{NO:(CHARA)}, CHARA, CHARA:1 , CHARA:2
			SIF CSVCFLAG(RESULT , GETNUM(CFLAG, "합체조건있음"),0) && FLAG:(10000+RESULT) == 0
				RESULT = 0
			SIF RESULT > 0
				RETURN RESULT
		CATCH
		ENDCATCH
	NEXT
ENDIF

