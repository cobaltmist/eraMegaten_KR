@MAKE_MASHO2
#DIM LCOUNT
FLAG:합체예정악마1 = -1
;LOCAL ループ用
;LOCAL:1 소재の등록번호
LOCAL:1 = -1
;LOCAL:2 悪魔の表示用変数
;LOCAL:3 合体結果の剣枠
;LOCAL:4 作成する魔晶装備の種類
;G 合体剣のフラグを管理する変数 20-25:バッドステータス村正用

$START_MAKE
LOCAL:6 = 0

;キャラリストを표시・選択
CALL INPUT_CHARA_LIST("소체로 쓸 악마를 선택해주십시오","CASTING_MASHO2")
SIF RESULT == 1000
	JUMP SELECT_MASHO2
LOCAL:1 = RESULT


LOCAL:3 = -1
;空いている合体검枠を参照
FOR LOCAL,0,50
	IF DC:LOCAL:49 == 0
		LOCAL:3 = LOCAL
		BREAK
	ENDIF
NEXT
IF LOCAL:3 == -1
	PRINTW 더 이상의 합체검을 가질 수 없습니다
	RETURN 0
ENDIF

;合体검の종류を決める
;습득스킬によってGを설정
VARSET G,-1
G:0 = 1
FOR LOCAL,1,FLAG:스킬수+1
	LOCALS = 스킬{LOCAL}
	IF ABL:(LOCAL:1):LOCALS > 0
		RESULT = 0
		;相性による조건
		TRYCALLFORM SKILL_TYPE_{ABL:(LOCAL:1):LOCALS},LOCAL:1
		G:RESULT = 1
	ENDIF
NEXT
;검격以外の물리は無し
G:1 = -1
G:2 = -1
G:3 = -1


;신경・정신は特殊
G:8 = -1
G:9 = -1
FOR LOCAL,1,FLAG:스킬수+1
	LOCALS = 스킬{LOCAL}
	IF ABL:(LOCAL:1):LOCALS > 0
		RESULT = 0
		;相性による조건
		TRYCCALLFORM SKILL_ADDTIONAL_STATE_{ABL:(LOCAL:1):LOCALS},LOCAL:1
			SELECTCASE GET_STATE(RESULT)
				CASE "POISON"
					G:20 = 1
				CASE "SLEEP"
					G:21 = 1
				CASE "PANIC"
					G:22 = 1
				CASE "HAPPY"
					G:23 = 1
				CASE "BIND"
					G:24 = 1
				CASE "CHARM"
					G:25 = 1
			ENDSELECT
		CATCH
		ENDCATCH
	ENDIF
NEXT

;검の타입を選択
$PRINT_TYPE
DRAWLINE
PRINTL 검의 공격상성을 선택해주세요
FOR LOCAL,0,FLAG:상성수
	SIF G:LOCAL > 0
		PRINTFORM [{LOCAL}] 【%GET_TYPE(LOCAL)%】
	SIF G:LOCAL > 0 && LOCAL == 5
		PRINT & FREEZE ２０％
	SIF G:LOCAL > 0 && LOCAL == 6
		PRINT & SHOCK ２０％
	SIF G:LOCAL > 0
		PRINTL
NEXT
SIF G:20 > 0
	PRINTL [20] 【검격】& POISON ２０％
SIF G:21 > 0
	PRINTL [21] 【검격】& SLEEP ２５％
SIF G:22 > 0
	PRINTL [22] 【검격】& PANIC ２５％
SIF G:23 > 0
	PRINTL [23] 【검격】& HAPPY ３５％
SIF G:24 > 0
	PRINTL [24] 【검격】& BIND ２５％
SIF G:25 > 0
	PRINTL [25] 【검격】& CHARM ２０％
DRAWLINE
PRINTL [100] 취소

$INPUT_TYPE
INPUT

IF RESULT == 100
