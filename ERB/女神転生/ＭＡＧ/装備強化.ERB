		CALL 적정상성_강화용, LOCAL
		PRINTFORM 　[%GET_TYPE(RESULT)%] 
		스킬상성 = RESULT
		스킬평가 = 0
		FOR LCOUNT:1, 1, FLAG:스킬수 + 1
			LOCALS = 스킬{LCOUNT:1}
			SIF ABL:LOCAL:LOCALS == 0
				CONTINUE
			CALLFORM SKILL_SUCCESSION_TYPE_{ABL:LOCAL:LOCALS}
			SIF GET_SUCCESSION(RESULT) != GET_TYPE(스킬상성)
				CONTINUE
			CALLFORM SKILL_RANK_{ABL:LOCAL:LOCALS}
			SIF RESULT > 4
				스킬평가 += 1
			SIF RESULT > 9
				스킬평가 += 1
			스킬평가 += 1
		NEXT
		;PRINTFORM ({MIN (10 + (15 * 強化:2), 95)})    
		확률표시 = 5
		FOR LCOUNT:1, 0, 스킬평가
			SELECTCASE LCOUNT:1
				CASE 0 TO 1
