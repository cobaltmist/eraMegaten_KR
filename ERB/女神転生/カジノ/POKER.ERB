		PRINTFORM [{LOCAL:6}]
		PRINT  RAIZE 
		RESETCOLOR
	NEXT
	PRINTL 
	SETCOLOR COLOR("gray")
	PRINTL [9] ＴＡＫＥ ＯＵＴ
	RESETCOLOR
	WAIT
	;山札が切れたら재생成
	IF MATCH(DECK, 0) > 46
		CALL MESSAGE_B, 2, "ＤＥＣＫ ＯＵＴ！", "ＭＡＫＥ ＮＥＷ ＤＥＣＫ！"
		;山札の作成
		FOR LOCAL, 0, 53
			DECK:LOCAL = (LOCAL/13 * 100)+LOCAL % 13+2
		NEXT
		;53枚눈の山札はJOKER(9999)にする
		DECK:52 = 9999
		;山札をシャッフルする
		FOR LOCAL, 0, 53
			LOCAL:1 = RAND:53
			SWAP DECK:LOCAL, DECK:(LOCAL:1)
		NEXT
	ENDIF
