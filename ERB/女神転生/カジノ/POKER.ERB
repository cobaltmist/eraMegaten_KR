			CALL MESSAGE_BL, 2, "ＤＲＡＷＮ　ＭＡＴＣＨ！", "ＲＥＴＲＹ"
		ELSE
			CALL MESSAGE_BL, 2, "ＹＯＵ ＬＯＳＥ", "ＥＸＴＲＡ ＧＡＭＥ ＥＮＤ"
			WIN = 0
		ENDIF
