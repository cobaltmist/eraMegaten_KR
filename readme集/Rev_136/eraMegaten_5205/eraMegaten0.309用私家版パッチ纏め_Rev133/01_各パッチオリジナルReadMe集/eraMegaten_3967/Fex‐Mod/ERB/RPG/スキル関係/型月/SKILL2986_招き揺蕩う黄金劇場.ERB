;スキル及び行動の実行
;====================================================
@ACTION_2986,ARG,ARG:1
#LOCALSIZE 3

LOCAL = POS(ARG:1)
CALL ATTACK_SINGLE,ARG,LOCAL,2986

IF CFLAG:(ARG):PTフラグ == 0
	LOCAL:1 = 1
	LOCAL:2 = 7
ELSE
	LOCAL:1 = 7
	LOCAL:2 = 17
ENDIF

FOR LOCAL,LOCAL:1,LOCAL:2
	SIF POS(LOCAL) < 0
		CONTINUE
	CFLAG:POS(LOCAL):攻撃強化 = MAX(-16, CFLAG:POS(LOCAL):攻撃強化 - 4)
	CFLAG:POS(LOCAL):防御強化 = MAX(-16, CFLAG:POS(LOCAL):防御強化 - 4)
NEXT
PRINTFORMW \@ CFLAG:ARG:PTフラグ == 2 ? 敵 # 味方 \@の攻撃力,防御力を下げた！




