;テンプレート用、追加効果シリーズ
;追加効果ステータス
@SKILL_ADDTIONAL_STATE_2086,ARG
A = RAND:5
IF A == 0
	RETURN GET_STATE_NUM("PALYZE")
ELSEIF A == 1
	RETURN GET_STATE_NUM("PANIC")
ELSEIF A == 2
	RETURN GET_STATE_NUM("SLEEP")
ELSEIF A == 3
	RETURN GET_STATE_NUM("BIND")
ELSEIF A == 4
	RETURN GET_STATE_NUM("CLOSE")
ELSE
	RETURN GET_STATE_NUM("CHARM")
ENDIF

;追加効果相性
@SKILL_ADDTIONAL_TYPE_2086,ARG
RETURN RAND:2 + 8

